down before my Maker:",["a.scriptureRef",{"href":"/scriptures/bofm/enos/1.4"},"Enos 1:4"],";"],["li","began to feel a",["i","desire"],"for the welfare of my brethren:",["a.scriptureRef",{"href":"/scriptures/bofm/enos/1.9"},["span.padWord","Enos"],"1:9"],";"],["li","no more",["i","disposition"],"to do evil:",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/5.2"},"Mosiah 5:2"],";"],["li","our",["i","thoughts"],"will also condemn us:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/12.14"},"Alma 12:14"],";"],["li","he granteth unto men according to their",["i","desire"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/29.4"},["span.padWord","Alma"],"29:4"],";"],["li","let all thy",["i","thoughts"],"be directed unto the Lord:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/37.36"},["span.padWord","Alma"],"37:36"],";"],["li","raised to happiness according to his",["i","desires"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/41.5"},["span.padWord","Alma"],"41:5"],";"],["li","except he shall do it with real",["i","intent"],"it profiteth him nothing:",["a.scriptureRef",{"href":"/scriptures/bofm/moro/7.6"},"Moro. 7:6"],";"],["li","they who have",["i","faith"],"in him will cleave unto every good thing:",["a.scriptureRef",{"href":"/scriptures/bofm/moro/7.28"},["span.padWord","Moro."],"7:28"],";"]]],["div",{"id":"f5","uri":"/scriptures/tg/motivations.f5","order":".000.6863"},["ul.index",["li","have gone on in the",["i","persuasions"],"of men:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/3.6"},"D&C 3:6"],";"],["li","eye single to the",["i","glory"],"of God, qualify him:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/4.5"},["span.padWord","D&C"],"4:5"],";"],["li","God … knowest thy thoughts and the",["i","intents"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/6.16"},["span.padWord","D&C"],"6:16"],";"],["li","Look unto me in every",["i","thought"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/6.36"},["span.padWord","D&C"],"6:36"],";"],["li","by their",["i","desires"],"and their works you shall know them:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/18.38"},["span.padWord","D&C"],"18:38"],";"],["li","have taken the Holy Spirit for their",["i","guide"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/45.57"},["span.padWord","D&C"],"45:57"],";"],["li","ye may not be",["i","seduced"],"by evil spirits:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/46.7"},["span.padWord","D&C"],"46:7"],";"],["li","do many things of their own",["i","free"],"will:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/58.27"},["span.padWord","D&C"],"58:27"],";"],["li","doing all things with an eye",["i","single"],"to the glory of God:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/82.19"},["span.padWord","D&C"],"82:19"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.67"},["span.padWord","D&C"],"88:67"],"; )"],["li","treasure up in your",["i","minds"],"continually the words of life:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/84.85"},["span.padWord","D&C"],"84:85"],";"],["li","hearts are set so much upon the things of this world, and",["i","aspire"],"to the honors of men:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/121.35"},["span.padWord","D&C"],"121:35"],";"],["li","let",["i","virtue"],"garnish thy thoughts unceasingly:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/121.45"},["span.padWord","D&C"],"121:45"],";"],["li","who",["i","would"],"have received it with all their hearts:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/137.8"},["span.padWord","D&C"],"137:8"],";"]]]]],"refs":null}
