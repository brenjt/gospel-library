the instruction of wisdom,",["i","justice"],", and judgment:",["a.scriptureRef",{"href":"/scriptures/ot/prov/1.3"},"Prov. 1:3"],";"],["li",["i","fall"],"himself into his own pit:",["a.scriptureRef",{"href":"/scriptures/ot/prov/28.10"},["span.padWord","Prov."],"28:10"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/109.25"},"D&C 109:25"],"; )"],["li","to establish it with judgment and with",["i","justice"],":",["a.scriptureRef",{"href":"/scriptures/ot/isa/9.7"},"Isa. 9:7"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/19.7"},"2 Ne. 19:7"],"; )"],["li","saith the Lord, Keep ye judgment, and do",["i","justice"],":",["a.scriptureRef",{"href":"/scriptures/ot/isa/56.1"},["span.padWord","Isa."],"56:1"],";"],["li","give every man according to his",["i","ways"],":",["a.scriptureRef",{"href":"/scriptures/ot/jer/17.10"},"Jer. 17:10"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/jer/32.19"},["span.padWord","Jer."],"32:19"],"; )"],["li","Execute ye",["i","judgment"],"and righteousness:",["a.scriptureRef",{"href":"/scriptures/ot/jer/22.3"},["span.padWord","Jer."],"22:3"],";"],["li","execute judgment and",["i","justice"],"in the earth:",["a.scriptureRef",{"href":"/scriptures/ot/jer/23.5"},["span.padWord","Jer."],"23:5"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/ezek/45.9"},"Ezek. 45:9"],"; )"],["li","every one shall die for his",["i","own"],"iniquity:",["a.scriptureRef",{"href":"/scriptures/ot/jer/31.30"},["span.padWord","Jer."],"31:30"],";"],["li","wicked man shall",["i","die"],"in his iniquity:",["a.scriptureRef",{"href":"/scriptures/ot/ezek/3.18"},"Ezek. 3:18"],";"],["li","the soul that",["i","sinneth"],", it shall die:",["a.scriptureRef",{"href":"/scriptures/ot/ezek/18.4"},["span.padWord","Ezek."],"18:4"],";"],["li","as for them, their way is not",["i","equal"],":",["a.scriptureRef",{"href":"/scriptures/ot/ezek/33.17"},["span.padWord","Ezek."],"33:17"],";"],["li","what doth the Lord require of thee, but to do",["i","justly"],":",["a.scriptureRef",{"href":"/scriptures/ot/micah/6.8"},"Micah 6:8"],";"],["li","Execute true",["i","judgment"],", and shew mercy and compassions:",["a.scriptureRef",{"href":"/scriptures/ot/zech/7.9"},"Zech. 7:9"],";"],["li","execute the",["i","judgment"],"of truth and peace:",["a.scriptureRef",{"href":"/scriptures/ot/zech/8.16"},["span.padWord","Zech."],"8:16"],";"]]],["div",{"id":"f3","uri":"/scriptures/tg/justice.f3","order":".000.5644"},["ul.index",["li","he will",["i","avenge"],"them speedily:",["a.scriptureRef",{"href":"/scriptures/nt/luke/18.8"},"Luke 18:8"],";"],["li",["i","judged"],"according to men in the flesh:",["a.scriptureRef",{"href":"/scriptures/nt/1-pet/4.6"},"1 Pet. 4:6"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.99"},"D&C 88:99"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/138.34"},["span.padWord","D&C"],"138:34"],"; )"],["li","he is faithful and",["i","just"],"to forgive us our sins:",["a.scriptureRef",{"href":"/scriptures/nt/1-jn/1.9"},"1 Jn. 1:9"],";"]]],["div",{"id":"f4","uri":"/scriptures/tg/justice.f4","order":".000.5645"},["ul.index",["li",["i","justice"],"of God did also divide the wicked:",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/15.30"},"1 Ne. 15:30"],";"],["li","greatness and the",["i","justice"],"of our God:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/9.17"},"2 Ne. 9:17"],";"],["li","the atonement satisfieth the demands of his",["i","justice"],":",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/9.26"},["span.padWord","2 Ne."],"9:26"],";"],["li","he",["i","denieth"],"none that come unto him, black and white:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/26.33"},["span.padWord","2 Ne."],"26:33"],";"],["li","he counseleth in wisdom, and in",["i","justice"],":",["a.scriptureRef",{"href":"/scriptures/bofm/jacob/4.10"},"Jacob 4:10"],";"],["li",["i","justice"],"cannot be denied:",["a.scriptureRef",{"href":"/scriptures/bofm/jacob/6.10"},["span.padWord","Jacob"],"6:10"],";"],["li","demands of divine",["i","justice"],"do awaken his immortal soul:",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/2.38"},"Mosiah 2:38"],";"],["li",["i","justice"],", and mercy of him who created:",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/5.15"},["span.padWord","Mosiah"],"5:15"],";"],["li","confess before God that his",["i","judgments"],"are",["i","just"],":",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/16.1"},["span.padWord","Mosiah"],"16:1"],";"],["li","works of",["i","justice"],"could not be destroyed:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/12.32"},"Alma 12:32"],";"],["li",["i","justice"],"of God that men should be judged according to their works:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/41.3"},["span.padWord","Alma"],"41:3"],";"],["li","atonement … to appease the demands of",["i","justice"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/42.15"},["span.padWord","Alma"],"42:15"],";"],["li","do ye suppose that mercy can rob",["i","justice"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/42.25"},["span.padWord","Alma"],"42:25"],";"],["li","ye should deny the",["i","justice"],"of God no more:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/42.30"},["span.padWord","Alma"],"42:30"],";"],["li",["i","justice"],"and judgment may come upon the wicked:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/60.13"},["span.padWord","Alma"],"60:13"],";"],["li","according to the …",["i","justice"],"… which is in Christ:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/26.5"},"3 Ne. 26:5"],";"],["li","to be",["i","judged"],"of their works, whether they be good:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/27.14"},["span.padWord","3 Ne."],"27:14"],";"],["li","sword of his",["i","justice"],"is in his right hand:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/29.4"},["span.padWord","3 Ne."],"29:4"],";"]]],["div",{"id":"f5","uri":"/scriptures/tg/justice.f5","order":".000.5646"},["ul.index",["li","that lieth to deceive … not exempt from the",["i","justice"],"of God:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/10.28"},"D&C 10:28"],";"],["li","that Spirit which leadeth to do good—yea, to do",["i","justly"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/11.12"},["span.padWord","D&C"],"11:12"],";"],["li",["i","judging"],"every man according to his works:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/19.3"},["span.padWord","D&C"],"19:3"],";"],["li",["i","justice"],"and judgment are the penalty which is affixed:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/82.4"},["span.padWord","D&C"],"82:4"],";"],["li",["i","justice"],"continueth its course and claimeth its own:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.40"},["span.padWord","D&C"],"88:40"],";"],["li","none shall be exempted from the",["i","justice"],"and the laws:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/107.84"},["span.padWord","D&C"],"107:84"],";"],["li",["i","judge"],"all men … according to the desire of their hearts:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/137.9"},["span.padWord","D&C"],"137:9"],";"],["li",["i","reward"],"according to their works:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/138.59"},["span.padWord","D&C"],"138:59"],";"]]]]],"refs":null}
