{"id":848,"parent_id":0,"book_id":7,"content_id":1,"language_id":1,"display_order":848,"title":"Doctrine","subtitle":"","short_title":"Doctrine","uri":"/scriptures/tg/doctrine","content":[["div",{"id":"t1","uri":"/scriptures/tg/doctrine.t1","order":".000.2595"},[".title",["b","Doctrine"]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/tg/gospel"},"Gospel"],";",["a.scriptureRef",{"href":"/scriptures/tg/teaching"},"Teaching"],";",["a.scriptureRef",{"href":"/scriptures/tg/truth"},"Truth"]],["div",{"id":"f2","uri":"/scriptures/tg/doctrine.f2","order":".000.2596"},["ul.index",["li","My",["i","doctrine"],"shall drop as the rain:",["a.scriptureRef",{"href":"/scriptures/ot/deut/32.2"},"Deut. 32:2"],";"],["li","I give you good",["i","doctrine"],":",["a.scriptureRef",{"href":"/scriptures/ot/prov/4.2"},"Prov. 4:2"],";"],["li","whom shall he make to understand",["i","doctrine"],":",["a.scriptureRef",{"href":"/scriptures/ot/isa/28.9"},"Isa. 28:9"],";"],["li","they that murmured shall learn",["i","doctrine"],":",["a.scriptureRef",{"href":"/scriptures/ot/isa/29.24"},["span.padWord","Isa."],"29:24"],";"]]],["div",{"id":"f3","uri":"/scriptures/tg/doctrine.f3","order":".000.2597"},["ul.index",["li","astonished at his",["i","doctrine"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/7.28"},"Matt. 7:28"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/matt/22.33"},["span.padWord","Matt."],"22:33"],";",["a.scriptureRef",{"href":"/scriptures/nt/mark/1.22"},"Mark 1:22"],";",["a.scriptureRef",{"href":"/scriptures/nt/luke/4.32"},"Luke 4:32"],"; )"],["li","teaching for",["i","doctrines"],"the commandments of men:",["a.scriptureRef",{"href":"/scriptures/nt/matt/15.9"},["span.padWord","Matt."],"15:9"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/mark/7.7"},"Mark 7:7"],"; )"],["li",["i","doctrine"],"of the Pharisees and of the Sadducees:",["a.scriptureRef",{"href":"/scriptures/nt/matt/16.12"},["span.padWord","Matt."],"16:12"],";"],["li","what new",["i","doctrine"],"is this:",["a.scriptureRef",{"href":"/scriptures/nt/mark/1.27"},"Mark 1:27"],";"],["li","My",["i","doctrine"],"is not mine, but his that sent me:",["a.scriptureRef",{"href":"/scriptures/nt/john/7.16"},"John 7:16"],";"],["li","high priest then asked Jesus … of his",["i","doctrine"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/18.19"},["span.padWord","John"],"18:19"],";"],["li","continued steadfastly in the apostles’",["i","doctrine"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/2.42"},"Acts 2:42"],";"],["li","ye have filled Jerusalem with your",["i","doctrine"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/5.28"},["span.padWord","Acts"],"5:28"],";"],["li","obeyed from the heart that form of",["i","doctrine"],"which was delivered you:",["a.scriptureRef",{"href":"/scriptures/nt/rom/6.17"},"Rom. 6:17"],";"],["li","offences contrary to the",["i","doctrine"],"which ye have learned:",["a.scriptureRef",{"href":"/scriptures/nt/rom/16.17"},["span.padWord","Rom."],"16:17"],";"],["li","speak to you … by",["i","doctrine"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/14.6"},"1 Cor. 14:6"],";"],["li","carried about with every wind of",["i","doctrine"],":",["a.scriptureRef",{"href":"/scriptures/nt/eph/4.14"},"Eph. 4:14"],";"],["li","after the commandments and",["i","doctrines"],"of men:",["a.scriptureRef",{"href":"/scriptures/nt/col/2.22"},"Col. 2:22"],";"],["li","charge some that they teach no other",["i","doctrine"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-tim/1.3"},"1 Tim. 1:3"],";"],["li","any other thing that is contrary to sound",["i","doctrine"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-tim/1.10"},["span.padWord","1 Tim."],"1:10"],";"],["li","giving heed to …",["i","doctrines"],"of devils:",["a.scriptureRef",{"href":"/scriptures/nt/1-tim/4.1"},["span.padWord","1 Tim."],"4:1"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/46.7"},"D&C 46:7"],"; )"],["li","nourished up in the words … of good",["i","doctrine"],":",["a.scriptureRef",{