."],["div",{"id":"15a","uri":"/scriptures/nt/2-cor/4.15a","order":"03.10.004.18673"},["b","15a"],["a.scriptureRef",{"href":"/scriptures/tg/thanksgiving"},"TG Thanksgiving"],"."],["div",{"id":"16a","uri":"/scriptures/nt/2-cor/4.16a","order":"03.10.004.18675"},["b","16a"],["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/4.20"},"2 Ne. 4:20"],";",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/24.15"},"Mosiah 24:15"],"."],["div",{"id":"17a","uri":"/scriptures/nt/2-cor/4.17a","order":"03.10.004.18677"},["b","17a"],["a.scriptureRef",{"href":"/scriptures/nt/rom/5.3"},"Rom. 5:3"],".",["a.scriptureRef",{"href":"/scriptures/tg/persecution"},"TG Persecution"],";",["a.scriptureRef",{"href":"/scriptures/tg/suffering"},"Suffering"],"."],["div",{"id":"17b","uri":"/scriptures/nt/2-cor/4.17b","order":"03.10.004.18679"},["b","17b"],["a.scriptureRef",{"href":"/scriptures/tg/eternal-life"},"TG Eternal Life"],"."],["div",{"id":"17c","uri":"/scriptures/nt/2-cor/4.17c","order":"03.10.004.18681"},["b","17c"],["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/63.66"},"D&C 63:66"],"."],["div",{"id":"18a","uri":"/scriptures/nt/2-cor/4.18a","order":"03.10.004.18683"},["b","18a"],["a.scriptureRef",{"href":"/scriptures/nt/rom/8.24"},"Rom. 8:24"],"."],["div",{"id":"18b","uri":"/scriptures/nt/2-cor/4.18b","order":"03.10.004.18685"},["b","18b"],["a.scriptureRef",{"href":"/scriptures/bofm/ether/12.6"},"Ether 12:6"],"."],["div",{"id":"18c","uri":"/scriptures/nt/2-cor/4.18c","order":"03.10.004.18687"},["b","18c"],["a.scriptureRef",{"href":"/scriptures/tg/eternity"},"TG Eternity"],"."]]}
