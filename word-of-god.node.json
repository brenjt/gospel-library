{"id":3465,"parent_id":0,"book_id":7,"content_id":1,"language_id":1,"display_order":3465,"title":"Word of God","subtitle":"","short_title":"Word of God","uri":"/scriptures/tg/word-of-god","content":[["div",{"id":"t1","uri":"/scriptures/tg/word-of-god.t1","order":".000.12156"},[".title",["b","Word of God"]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/tg/guidance-divine"},"Guidance, Divine"],";",["a.scriptureRef",{"href":"/scriptures/tg/revelation"},"Revelation"],";",["a.scriptureRef",{"href":"/scriptures/tg/word"},"Word"],";",["a.scriptureRef",{"href":"/scriptures/tg/word-of-the-lord"},"Word of the Lord"]],["div",{"id":"f2","uri":"/scriptures/tg/word-of-god.f2","order":".000.12157"},["ul.index",["li",["i","word of God"],"came unto Shemaiah:",["a.scriptureRef",{"href":"/scriptures/ot/1-kgs/12.22"},"1 Kgs. 12:22"],";"],["li","Every",["i","word of God"],"is pure:",["a.scriptureRef",{"href":"/scriptures/ot/prov/30.5"},"Prov. 30:5"],";"]]],["div",{"id":"f3","uri":"/scriptures/tg/word-of-god.f3","order":".000.12158"},["ul.index",["li","Making the",["i","word of God"],"of none effect:",["a.scriptureRef",{"href":"/scriptures/nt/mark/7.13"},"Mark 7:13"],";"],["li",["i","word of God"],"came unto John:",["a.scriptureRef",{"href":"/scriptures/nt/luke/3.2"},"Luke 3:2"],";"],["li","people pressed upon him to hear the",["i","word of God"],":",["a.scriptureRef",{"href":"/scriptures/nt/luke/5.1"},["span.padWord","Luke"],"5:1"],";"],["li","seed is the",["i","word of God"],":",["a.scriptureRef",{"href":"/scriptures/nt/luke/8.11"},["span.padWord","Luke"],"8:11"],";"],["li","my brethren are these which hear the",["i","word of God"],":",["a.scriptureRef",{"href":"/scriptures/nt/luke/8.21"},["span.padWord","Luke"],"8:21"],";"],["li","they spake the",["i","word of God"],"with boldness:",["a.scriptureRef",{"href":"/scriptures/nt/acts/4.31"},"Acts 4:31"],";"],["li","not reason that we should leave the",["i","word of God"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/6.2"},["span.padWord","Acts"],"6:2"],";"],["li","heard that Samaria had received the",["i","word of God"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/8.14"},["span.padWord","Acts"],"8:14"],";"],["li","Gentiles had also received the",["i","word of God"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/11.1"},["span.padWord","Acts"],"11:1"],";"],["li",["i","word of God"],"grew and multiplied:",["a.scriptureRef",{"href":"/scriptures/nt/acts/12.24"},["span.padWord","Acts"],"12:24"],";"],["li","Sergius Paulus … desired to hear the",["i","word of God"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/13.7"},["span.padWord","Acts"],"13:7"],";"],["li","mightily grew the",["i","word of God"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/19.20"},["span.padWord","Acts"],"19:20"],";"],["li","Not as though the",["i","word of God"],"hath taken none effect:",["a.scriptureRef",{"href":"/scriptures/nt/rom/9.6"},"Rom. 9:6"],";"],["li","faith cometh by hearing, and hearing by the",["i","word of God"],":",["a.scriptureRef",{"href":"/scriptures/nt/rom/10.17"},["span.padWord","Rom."],"10:17"],";"],["li","not as many, which corrupt the",["i","word of God"],":",["a.scriptureRef",{"href":"/scriptures/nt/2-cor/2.17"},"2 Cor. 2:17"],";"],["li","nor handling the",["i","word of God"],"deceitfully:",["a.scriptureRef",{"href":"/scriptures/nt/2-cor/4.2"},["span.padWord","2 Cor."],"4:2"],";"],["li","sword of the Spirit, which is the",["i","word of God"],":",["a.scriptureRef",{"href":"/scriptures/nt/eph/6.17"},"Eph. 6:17"],";"],["li",["i","word of God"],"is not bound:",["a.scriptureRef",{"href":"/scriptures/nt/2-tim/2.9"},"2 Tim. 2:9"],";"],["li",["i","word of God"],"be not blasphemed:",["a.scriptureRef",{"href":"/scriptures/nt/titus/2.5"},"Titus 2:5"],";"],["li",["i","word of God"],"is quick, and powerful:",["a.scriptureRef",{"href":"/scriptures/nt/heb/4.12"},"Heb. 4:12"],";"],["li","have tasted the good",["i","word of God"],":",["a.scriptureRef",{"href":"/scriptures/nt/heb/6.5"},["span.padWord","Heb."],"6:5"],";"],["li","worlds were framed by the",["i","word of God"],":",["a.scriptureRef",{"href":"/scriptures/nt/heb/11.3"},["span.padWord","Heb."],"11:3"],";"],["li","born again … by the",["i","word of God"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-pet/1.23"},"1 Pet. 1:23"],";"],["li","by the",["i","word of God"],"the heavens were of old:",["a.scriptureRef",{"href":"/scriptures/nt/2-pet/3.5"},"2 Pet. 3:5"],";"],["li","Who bare record of the",["i","word of God"],":",["a.scriptureRef",{"href":"/scriptures/nt/rev/1.2"},"Rev. 1:2"],";"],["li","souls of them that were slain for the",["i","word of God"],":",["a.scriptureRef",{"href":"/scriptures/nt/rev/6.9"},["span.padWord","Rev."],"6:9"],";"],["li","until the",["i","words of God"],"shall be fulfilled:",["a.scriptureRef",{"href":"/scriptures/nt/rev/17.17"},["span.padWord","Rev."],"17:17"],";"],["li","his name is called The",["i","Word of God"],":",["a.scriptureRef",{"href":"/scriptures/nt/rev/19.13"},["span.padWord","Rev."],"19:13"],";"],["li","witness of Jesus, and for the",["i","word of God"],":",["a.scriptureRef",{"href":"/scriptures/nt/rev/20.4"},["span.padWord","Rev."],"20:4"],";"]]],["div",{"id":"f4","uri":"/scriptures/tg/word-of-god.f4","order":".000.12159"},["ul.index",["li","hearken unto the",["i","word of God"],", and would hold fast unto it:",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/15.24"},"1 Ne. 15:24"],";"],["li","this people had rejected every",["i","word of God"],":",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/17.35"},["span.padWord","1 Ne."],"17:35"],";"],["li","sharpness of the power of the",["i","word of God"],":",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/1.26"},"2 Ne. 1:26"],";"],["li","We have received the",["i","word of God"],", and we need no more of the",["i","word of God"],":",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/28.29"},["span.padWord","2 Ne."],"28:29"],";"],["li","nourished by the good",["i","word of God"],":",["a.scriptureRef",{"href":"/scriptures/bofm/jacob/6.7"},"Jacob 6:7"],";"],["li","Amlicites knew not that they were fulfilling the",["i","words of God"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/3.18"},"Alma 3:18"],";"],["li","go forth among his people … that he might preach the",["i","word of God"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/4.19"},["span.padWord","Alma"],"4:19"],";"],["li","try the virtue of the",["i","word of God"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/31.5"},["span.padWord","Alma"],"31:5"],";"],["li","lay hold upon the",["i","word of God"],":",["a.scriptureRef",{"href":"/scriptures/bofm/hel/3.29"},"Hel. 3:29"],";"],["li","Why have ye transfigured the holy",["i","word of God"],":",["a.scriptureRef",{"href":"/scriptures/bofm/morm/8.33"},"Morm. 8:33"],";"]]],["div",{"id":"f5","uri":"/scriptures/tg/word-of-god.f5","order":".000.12160"},["ul.index",["li","Book of Mormon, which contains … the",["i","word of God"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/19.26"},"D&C 19:26"],";"]]],["div",{"id":"f6","uri":"/scriptures/tg/word-of-god.f6","order":".000.12161"},["ul.index",["li","We believe the Bible to be the",["i","word of God"],":",["a.scriptureRef",{"href":"/scriptures/pgp/a-of-f/1.8"},"A of F 1:8"],";"]]]]],"refs":null}
