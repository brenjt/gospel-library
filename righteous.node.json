{"id":2621,"parent_id":0,"book_id":7,"content_id":1,"language_id":1,"display_order":2621,"title":"Righteous","subtitle":"","short_title":"Righteous","uri":"/scriptures/tg/righteous","content":[["div",{"id":"t1","uri":"/scriptures/tg/righteous.t1","order":".000.8962"},[".title",["b","Righteous"]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/tg/just"},"Just"],";",["a.scriptureRef",{"href":"/scriptures/tg/righteously"},"Righteously"],";",["a.scriptureRef",{"href":"/scriptures/tg/righteousness"},"Righteousness"],";",["a.scriptureRef",{"href":"/scriptures/tg/upright"},"Upright"]],["div",{"id":"f2","uri":"/scriptures/tg/righteous.f2","order":".000.8963"},["ul.index",["li","Come thou … into the ark; for thee have I seen",["i","righteous"],":",["a.scriptureRef",{"href":"/scriptures/ot/gen/7.1"},"Gen. 7:1"],";"],["li","If I find in Sodom fifty",["i","righteous"],":",["a.scriptureRef",{"href":"/scriptures/ot/gen/18.26"},["span.padWord","Gen."],"18:26"],";"],["li","She hath been more",["i","righteous"],"than I:",["a.scriptureRef",{"href":"/scriptures/ot/gen/38.26"},["span.padWord","Gen."],"38:26"],";"],["li","innocent and",["i","righteous"],"slay thou not:",["a.scriptureRef",{"href":"/scriptures/ot/ex/23.7"},"Ex. 23:7"],";"],["li","Let me die the death of the",["i","righteous"],":",["a.scriptureRef",{"href":"/scriptures/ot/num/23.10"},"Num. 23:10"],";"],["li","judges … shall justify the",["i","righteous"],":",["a.scriptureRef",{"href":"/scriptures/ot/deut/25.1"},"Deut. 25:1"],";"],["li","reason with you … of all the",["i","righteous"],"acts of the Lord:",["a.scriptureRef",{"href":"/scriptures/ot/1-sam/12.7"},"1 Sam. 12:7"],";"],["li","God of Israel, thou art",["i","righteous"],":",["a.scriptureRef",{"href":"/scriptures/ot/ezra/9.15"},"Ezra 9:15"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/neh/9.8"},"Neh. 9:8"],";",["a.scriptureRef",{"href":"/scriptures/nt/rev/16.5"},"Rev. 16:5"],"; )"],["li","Lord knoweth the way of the",["i","righteous"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/1.6"},"Ps. 1:6"],";"],["li","Lord, wilt bless the",["i","righteous"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/5.12"},["span.padWord","Ps."],"5:12"],";"],["li","Lord trieth the",["i","righteous"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/11.5"},["span.padWord","Ps."],"11:5"],";"],["li","judgments of the Lord are true and",["i","righteous"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/19.9"},["span.padWord","Ps."],"19:9"],";"],["li","eyes of the Lord are upon the",["i","righteous"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/34.15"},["span.padWord","Ps."],"34:15"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/1-pet/3.12"},"1 Pet. 3:12"],"; )"],["li",["i","righteous"],"cry, and the Lord heareth:",["a.scriptureRef",{"href":"/scriptures/ot/ps/34.17"},["span.padWord","Ps."],"34:17"],";"],["li","little that a",["i","righteous"],"man hath is better than the riches:",["a.scriptureRef",{"href":"/scriptures/ot/ps/37.16"},["span.padWord","Ps."],"37:16"],";"],["li","yet have I not seen the",["i","righteous"],"forsaken:",["a.scriptureRef",{"href":"/scriptures/ot/ps/37.25"},["span.padWord","Ps."],"37:25"],";"],["li","mouth of the",["i","righteous"],"speaketh wisdom:",["a.scriptureRef",{"href":"/scriptures/ot/ps/37.30"},["span.padWord","Ps."],"37:30"],";"],["li","he shall never suffer the",["i","righteous"],"to be moved:",["a.scriptureRef",{"href":"/scriptures/ot/ps/55.22"},["span.padWord","Ps."],"55:22"],";"],["li","In his days shall the",["i","righteous"],"flourish:",["a.scriptureRef",{"href":"/scriptures/ot/ps/72.7"},["span.padWord","Ps."],"72:7"],";"],["li","salvation is in the tabernacles of the",["i","righteous"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/118.15"},["span.padWord","Ps."],"118:15"],";"],["li","Thy testimonies that thou hast commanded are",["i","righteous"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/119.138"},["span.padWord","Ps."],"119:138"],";"],["li","Lord is",["i","righteous"],"in all his ways:",["a.scriptureRef",{"href":"/scriptures/ot/ps/145.17"},["span.padWord","Ps."],"145:17"],";"],["li","mouth of a",["i","righteous"],"man is a well of life:",["a.scriptureRef",{"href":"/scriptures/ot/prov/10.11"},"Prov. 10:11"],";"],["li","labour of the",["i","righteous"],"tendeth to life:",["a.scriptureRef",{"href":"/scriptures/ot/prov/10.16"},["span.padWord","Prov."],"10:16"],";"],["li","lips of the",["i","righteous"],"feed many:",["a.scriptureRef",{"href":"/scriptures/ot/prov/10.21"},["span.padWord","Prov."],"10:21"],";"],["li",["i","righteous"],"shall never be removed:",["a.scriptureRef",{"href":"/scriptures/ot/prov/10.30"},["span.padWord","Prov."],"10:30"],";"],["li",["i","righteous"],"is delivered out of trouble:",["a.scriptureRef",{"href":"/scriptures/ot/prov/11.8"},["span.padWord","Prov."],"11:8"],";"],["li",["i","righteous"],"man regardeth the life of his beast:",["a.scriptureRef",{"href":"/scriptures/ot/prov/12.10"},["span.padWord","Prov."],"12:10"],";"],["li",["i","righteous"],"man hateth lying:",["a.scriptureRef",{"href":"/scriptures/ot/prov/13.5"},["span.padWord","Prov."],"13:5"],";"],["li","wicked shall be a ransom for the",["i","righteous"],":",["a.scriptureRef",{"href":"/scriptures/ot/prov/21.18"},["span.padWord","Prov."],"21:18"],";"],["li",["i","righteous"],"are bold as a lion:",["a.scriptureRef",{"href":"/scriptures/ot/prov/28.1"},["span.padWord","Prov."],"28:1"],";"],["li","When the",["i","righteous"],"are in authority, the people rejoice:",["a.scriptureRef",{"href":"/scriptures/ot/prov/29.2"},["span.padWord","Prov."],"29:2"],";"],["li","Say ye to the",["i","righteous"],", that it shall be well:",["a.scriptureRef",{"href":"/scriptures/ot/isa/3.10"},"Isa. 3:10"],";"],["li","raised up the",["i","righteous"],"man from the east:",["a.scriptureRef",{"href":"/scriptures/ot/isa/41.2"},["span.padWord","Isa."],"41:2"],";"],["li","shall my",["i","righteous"],"servant justify many:",["a.scriptureRef",{"href":"/scriptures/ot/isa/53.11"},["span.padWord","Isa."],"53:11"],";"],["li","Thy people also shall be all",["i","righteous"],":",["a.scriptureRef",{"href":"/scriptures/ot/isa/60.21"},["span.padWord","Isa."],"60:21"],";"],["li","I will raise unto David a",["i","righteous"],"Branch:",["a.scriptureRef",{"href":"/scriptures/ot/jer/23.5"},"Jer. 23:5"],";"],["li","When a",["i","righteous"],"man doth turn from his righteousness … he shall die:",["a.scriptureRef",{"href":"/scriptures/ot/ezek/3.20"},"Ezek. 3:20"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/ezek/18.24,26"},["span.padWord","Ezek."],"18:24, 26"],";",["a.scriptureRef",{"href":"/scriptures/ot/ezek/33.18"},["span.padWord","Ezek."],"33:18"],"; )"],["li","warn the",["i","righteous"],"man, that the",["i","righteous"],"sin not:",["a.scriptureRef",{"href":"/scriptures/ot/ezek/3.21"},["span.padWord","Ezek."],"3:21"],";"],["li","God is",["i","righteous"],"in all his works:",["a.scriptureRef",{"href":"/scriptures/ot/dan/9.14"},"Dan. 9:14"],";"],["li","they sold the",["i","righteous"],"for silver:",["a.scriptureRef",{"href":"/scriptures/ot/amos/2.6"},"Amos 2:6"],";"],["li","discern between the",["i","righteous"],"and the wicked:",["a.scriptureRef",{"href":"/scriptures/ot/mal/3.18"},"Mal. 3:18"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/24.18"},"3 Ne. 24:18"],"; )"]]],["div",{"id":"f3","uri":"/scriptures/tg/righteous.f3","order":".000.8964"},["ul.index",["li","not come to call the",["i","righteous"],", but sinners to repentance:",["a.scriptureRef",{"href":"/scriptures/nt/matt/9.13"},"Matt. 9:13"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/mark/2.17"},"Mark 2:17"],";",["a.scriptureRef",{"href":"/scriptures/nt/luke/5.32"},"Luke 5:32"],";",["a.scriptureRef",{"href":"/scriptures/bofm/moro/8.8"},"Moro. 8:8"],"; )"],["li","he that receiveth a",["i","righteous"],"man in the name of a",["i","righteous"],"man:",["a.scriptureRef",{"href":"/scriptures/nt/matt/10.41"},["span.padWord","Matt."],"10:41"],";"],["li",["i","righteous"],"men have desired to see those things which ye see:",["a.scriptureRef",{"href":"/scriptures/nt/matt/13.17"},["span.padWord","Matt."],"13:17"],";"],["li",["i","righteous"],"shine forth as the sun:",["a.scriptureRef",{"href":"/scriptures/nt/matt/13.43"},["span.padWord","Matt."],"13:43"],";"],["li","outwardly appear",["i","righteous"],"unto men:",["a.scriptureRef",{"href":"/scriptures/nt/matt/23.28"},["span.padWord","Matt."],"23:28"],";"],["li","upon you may come all the",["i","righteous"],"blood:",["a.scriptureRef",{"href":"/scriptures/nt/matt/23.35"},["span.padWord","Matt."],"23:35"],";"],["li","shall go away … the",["i","righteous"],"into life eternal:",["a.scriptureRef",{"href":"/scriptures/nt/matt/25.46"},["span.padWord","Matt."],"25:46"],";"],["li","trusted in themselves that they were",["i","righteous"],":",["a.scriptureRef",{"href":"/scriptures/nt/luke/18.9"},"Luke 18:9"],";"],["li","Certainly this was a",["i","righteous"],"man:",["a.scriptureRef",{"href":"/scriptures/nt/luke/23.47"},["span.padWord","Luke"],"23:47"],";"],["li","judge",["i","righteous"],"judgment:",["a.scriptureRef",{"href":"/scriptures/nt/john/7.24"},"John 7:24"],";"],["li","There is none",["i","righteous"],", no, not one:",["a.scriptureRef",{"href":"/scriptures/nt/rom/3.10"},"Rom. 3:10"],";"],["li","scarcely for a",["i","righteous"],"man will one die:",["a.scriptureRef",{"href":"/scriptures/nt/rom/5.7"},["span.padWord","Rom."],"5:7"],";"],["li","by the obedience of one shall many be made",["i","righteous"],":",["a.scriptureRef",{"href":"/scriptures/nt/rom/5.19"},["span.padWord","Rom."],"5:19"],";"],["li","law is not made for a",["i","righteous"],"man:",["a.scriptureRef",{"href":"/scriptures/nt/1-tim/1.9"},"1 Tim. 1:9"],";"],["li","Abel … obtained witness that he was",["i","righteous"],":",["a.scriptureRef",{"href":"/scriptures/nt/heb/11.4"},"Heb. 11:4"],";"],["li","fervent prayer of a",["i","righteous"],"man availeth much:",["a.scriptureRef",{"href":"/scriptures/nt/james/5.16"},"James 5:16"],";"],["li","if the",["i","righteous"],"scarcely be saved:",["a.scriptureRef",{"href":"/scriptures/nt/1-pet/4.18"},"1 Pet. 4:18"],";"],["li","seeing and hearing, vexed his",["i","righteous"],"soul:",["a.scriptureRef",{"href":"/scriptures/nt/2-pet/2.8"},"2 Pet. 2:8"],";"],["li","we have an advocate … Jesus Christ the",["i","righteous"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-jn/2.1"},"1 Jn. 2:1"],";"],["li","he that doeth righteousness is",["i","righteous"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-jn/3.7"},["span.padWord","1 Jn."],"3:7"],";"],["li","his own works were evil, and his brother’s",["i","righteous"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-jn/3.12"},["span.padWord","1 Jn."],"3:12"],";"],["li","he that is",["i","righteous"],", let him be",["i","righteous"],"still:",["a.scriptureRef",{"href":"/scriptures/nt/rev/22.11"},"Rev. 22:11"],";"]]],["div",{"id":"f4","uri":"/scriptures/tg/righteous.f4","order":".000.8965"},["ul.index",["li","he that is",["i","righteous"],"is favored of God:",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/17.35"},"1 Ne. 17:35"],";"],["li","he will preserve the",["i","righteous"],":",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/22.17"},["span.padWord","1 Ne."],"22:17"],";"],["li",["i","righteous"],"… inherit the kingdom:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/9.18"},"2 Ne. 9:18"],";"],["li","words of truth are hard … but the",["i","righteous"],"fear them not:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/9.40"},["span.padWord","2 Ne."],"9:40"],";"],["li","raise up unto me a",["i","righteous"],"branch:",["a.scriptureRef",{"href":"/scriptures/bofm/jacob/2.25"},"Jacob 2:25"],";"],["li","names of the",["i","righteous"],"shall be written in the book of life:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/5.58"},"Alma 5:58"],";"],["li","plans to pervert the ways of the",["i","righteous"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/10.18"},["span.padWord","Alma"],"10:18"],";"],["li","in the hearts of the",["i","righteous"],"doth he dwell:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/34.36"},["span.padWord","Alma"],"34:36"],";"],["li","spirits of …",["i","righteous"],"are received into a state of happiness:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/40.12"},["span.padWord","Alma"],"40:12"],";"],["li","ye shall have a",["i","righteous"],"judgment restored unto you:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/41.14"},["span.padWord","Alma"],"41:14"],";"],["li","Lord suffereth the",["i","righteous"],"to be slain:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/60.13"},["span.padWord","Alma"],"60:13"],";"],["li","Condemning the",["i","righteous"],"because of their righteousness:",["a.scriptureRef",{"href":"/scriptures/bofm/hel/7.5"},"Hel. 7:5"],";"],["li","if it were not for the",["i","righteous"],"… fire should come down:",["a.scriptureRef",{"href":"/scriptures/bofm/hel/13.13"},["span.padWord","Hel."],"13:13"],";"],["li",["i","righteous"],"judgment might come upon them:",["a.scriptureRef",{"href":"/scriptures/bofm/hel/14.29"},["span.padWord","Hel."],"14:29"],";"],["li","more",["i","righteous"],"part of the people had nearly all become wicked:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/7.7"},"3 Ne. 7:7"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/9.13"},["span.padWord","3 Ne."],"9:13"],";",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/10.12"},["span.padWord","3 Ne."],"10:12"],"; )"],["li","he that is",["i","righteous"],"shall be",["i","righteous"],"still:",["a.scriptureRef",{"href":"/scriptures/bofm/morm/9.14"},"Morm. 9:14"],";"]]],["div",{"id":"f5","uri":"/scriptures/tg/righteous.f5","order":".000.8966"},["ul.index",["li","cannot always judge the",["i","righteous"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/10.37"},"D&C 10:37"],";"],["li",["i","righteous"],"shall be gathered on my right hand:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/29.27"},["span.padWord","D&C"],"29:27"],";"],["li",["i","righteous"],"shall be gathered out from among all nations:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/45.71"},["span.padWord","D&C"],"45:71"],";"],["li","cometh an entire separation of the",["i","righteous"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/63.54"},["span.padWord","D&C"],"63:54"],";"],["li","that which is",["i","righteous"],"cometh down from above:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/67.9"},["span.padWord","D&C"],"67:9"],";"],["li","by this you may know the",["i","righteous"],"from the wicked:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/84.53"},["span.padWord","D&C"],"84:53"],";"],["li",["i","righteous"],"shall inherit it:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.26"},["span.padWord","D&C"],"88:26"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.16-26"},["span.padWord","D&C"],"88:16–26"],"; )"],["li","ordained … and were",["i","righteous"],"and holy men:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/107.29"},["span.padWord","D&C"],"107:29"],";"],["li","among the",["i","righteous"],"there was peace:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/138.22"},["span.padWord","D&C"],"138:22"],";"],["li","among the",["i","righteous"],", he organized his forces:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/138.30"},["span.padWord","D&C"],"138:30"],";"]]],["div",{"id":"f6","uri":"/scriptures/tg/righteous.f6","order":".000.8967"},["ul.index",["li","Jesus Christ, a",["i","righteous"],"Judge:",["a.scriptureRef",{"href":"/scriptures/pgp/moses/6.57"},"Moses 6:57"],";"],["li","The",["i","Righteous"],"is lifted up:",["a.scriptureRef",{"href":"/scriptures/pgp/moses/7.47"},["span.padWord","Moses"],"7:47"],";"],["li","he saw the day of the",["i","righteous"],":",["a.scriptureRef",{"href":"/scriptures/pgp/moses/7.67"},["span.padWord","Moses"],"7:67"],";"],["li","Pharaoh, being a",["i","righteous"],"man, established his kingdom:",["a.scriptureRef",{"href":"/scriptures/pgp/abr/1.26"},"Abr. 1:26"],";"]]]]],"refs":null}
