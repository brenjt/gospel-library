21:15"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/101.7.7-9"},"D&C 101:7 (7–9)"],"."],["div",{"id":"19a","uri":"/scriptures/ot/1-sam/8.19a","order":"02.10.008.21116"},["b","19a"],["a.scriptureRef",{"href":"/scriptures/tg/disobedience"},"TG Disobedience"],"."],["div",{"id":"20a","uri":"/scriptures/ot/1-sam/8.20a","order":"02.10.008.21118"},["b","20a"],["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/1.16"},"D&C 1:16"],"."]]}
