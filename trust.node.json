29"},["ul.index",["li","He",["i","trusted"],"in God; let him deliver him:",["a.scriptureRef",{"href":"/scriptures/nt/matt/27.43"},"Matt. 27:43"],";"],["li","hard is it for them that",["i","trust"],"in riches to enter:",["a.scriptureRef",{"href":"/scriptures/nt/mark/10.24"},"Mark 10:24"],";"],["li","who will commit to your",["i","trust"],"the true riches:",["a.scriptureRef",{"href":"/scriptures/nt/luke/16.11"},"Luke 16:11"],";"],["li","which",["i","trusted"],"in themselves that they were righteous:",["a.scriptureRef",{"href":"/scriptures/nt/luke/18.9"},["span.padWord","Luke"],"18:9"],";"],["li","one that accuseth you, even Moses, in whom ye",["i","trust"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/5.45"},"John 5:45"],";"],["li","we should not",["i","trust"],"in ourselves:",["a.scriptureRef",{"href":"/scriptures/nt/2-cor/1.9"},"2 Cor. 1:9"],";"],["li","we were … put in",["i","trust"],"with the gospel:",["a.scriptureRef",{"href":"/scriptures/nt/1-thes/2.4"},"1 Thes. 2:4"],";"],["li","gospel … which was committed to my",["i","trust"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-tim/1.11"},"1 Tim. 1:11"],";"]]],["div",{"id":"f4","uri":"/scriptures/tg/trust.f4","order":".000.11230"},["ul.index",["li",["i","trust"],"no one to be your teacher … except he be a man of God:",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/23.14"},"Mosiah 23:14"],";"]]]]],"refs":null}
