,"there is no guile:",["a.scriptureRef",{"href":"/scriptures/ot/ps/32.2"},["span.padWord","Ps."],"32:2"],";"],["li","Lord … saveth such as be of a contrite",["i","spirit"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/34.18"},["span.padWord","Ps."],"34:18"],";"],["li","renew a right",["i","spirit"],"within me:",["a.scriptureRef",{"href":"/scriptures/ot/ps/51.10"},["span.padWord","Ps."],"51:10"],";"],["li","sacrifices of God are a broken",["i","spirit"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/51.17"},["span.padWord","Ps."],"51:17"],";"],["li","generation … whose",["i","spirit"],"was not steadfast with God:",["a.scriptureRef",{"href":"/scriptures/ot/ps/78.8"},["span.padWord","Ps."],"78:8"],";"],["li","Who maketh his angels",["i","spirits"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/104.4"},["span.padWord","Ps."],"104:4"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/heb/1.7"},"Heb. 1:7"],"; )"],["li","Whither shall I go from thy",["i","spirit"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/139.7"},["span.padWord","Ps."],"139:7"],";"],["li","my God: thy",["i","spirit"],"is good:",["a.scriptureRef",{"href":"/scriptures/ot/ps/143.10"},["span.padWord","Ps."],"143:10"],";"],["li","I will pour out my",["i","spirit"],"unto you:",["a.scriptureRef",{"href":"/scriptures/ot/prov/1.23"},"Prov. 1:23"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/isa/32.15"},"Isa. 32:15"],";",["a.scriptureRef",{"href":"/scriptures/ot/isa/44.3"},["span.padWord","Isa."],"44:3"],";",["a.scriptureRef",{"href":"/scriptures/ot/joel/2.28"},"Joel 2:28"],";",["a.scriptureRef",{"href":"/scriptures/nt/acts/2.17"},"Acts 2:17"],";",["a.scriptureRef",{"href":"/scriptures/bofm/jacob/7.8"},"Jacob 7:8"],";",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/4.20"},"Mosiah 4:20"],";",["a.scriptureRef",{"href":"/scriptures/bofm/alma/8.10"},"Alma 8:10"],"; )"],["li","Lord weigheth the",["i","spirits"],":",["a.scriptureRef",{"href":"/scriptures/ot/prov/16.2"},["span.padWord","Prov."],"16:2"],";"],["li","he that ruleth his",["i","spirit"],":",["a.scriptureRef",{"href":"/scriptures/ot/prov/16.32"},["span.padWord","Prov."],"16:32"],";"],["li","man of understanding is of an excellent",["i","spirit"],":",["a.scriptureRef",{"href":"/scriptures/ot/prov/17.27"},["span.padWord","Prov."],"17:27"],";"],["li",["i","spirit"],"of a man will sustain his infirmity:",["a.scriptureRef",{"href":"/scriptures/ot/prov/18.14"},["span.padWord","Prov."],"18:14"],";"],["li",["i","spirit"],"of man is the candle of the Lord:",["a.scriptureRef",{"href":"/scriptures/ot/prov/20.27"},["span.padWord","Prov."],"20:27"],";"],["li","He that hath no rule over his own",["i","spirit"],":",["a.scriptureRef",{"href":"/scriptures/ot/prov/25.28"},["span.padWord","Prov."],"25:28"],";"],["li","no man that hath power over the",["i","spirit"],"to retain the",["i","spirit"],":",["a.scriptureRef",{"href":"/scriptures/ot/eccl/8.8"},"Eccl. 8:8"],";"],["li","thou knowest not what is the way of the",["i","spirit"],":",["a.scriptureRef",{"href":"/scriptures/ot/eccl/11.5"},["span.padWord","Eccl."],"11:5"],";"],["li",["i","spirit"],"shall return unto God who gave it:",["a.scriptureRef",{"href":"/scriptures/ot/eccl/12.7"},["span.padWord","Eccl."],"12:7"],";"],["li",["i","spirit"],"of the Lord shall rest upon him:",["a.scriptureRef",{"href":"/scriptures/ot/isa/11.2"},"Isa. 11:2"],";"],["li","Who hath directed the",["i","Spirit"],"of the Lord, or … taught:",["a.scriptureRef",{"href":"/scriptures/ot/isa/40.13"},["span.padWord","Isa."],"40:13"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/isa/40.7"},["span.padWord","Isa."],"40:7"],"; )"],["li","I have put my",["i","spirit"],"upon him:",["a.scriptureRef",{"href":"/scriptures/ot/isa/42.1"},["span.padWord","Isa."],"42:1"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/matt/12.18"},"Matt. 12:18"],"; )"],["li","I will pour my",["i","spirit"],"upon thy seed:",["a.scriptureRef",{"href":"/scriptures/ot/isa/44.3"},["span.padWord","Isa."],"44:3"],";"],["li","whither the",["i","spirit"],"was to go, they went:",["a.scriptureRef",{"href":"/scriptures/ot/ezek/1.12"},"Ezek. 1:12"],";"],["li",["i","spirit"],"of the living creature was in the wheels:",["a.scriptureRef",{"href":"/scriptures/ot/ezek/1.20"},["span.padWord","Ezek."],"1:20"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/ezek/1.21"},["span.padWord","Ezek."],"1:21"],";",["a.scriptureRef",{"href":"/scriptures/ot/ezek/10.17"},["span.padWord","Ezek."],"10:17"],"; )"],["li",["i","spirit"],"entered into me when he spake unto me:",["a.scriptureRef",{"href":"/scriptures/ot/ezek/2.2"},["span.padWord","Ezek."],"2:2"],";"],["li",["i","spirit"],"took me up, and I heard:",["a.scriptureRef",{"href":"/scriptures/ot/ezek/3.12"},["span.padWord","Ezek."],"3:12"],";"],["li",["i","spirit"],"lifted me up between the earth:",["a.scriptureRef",{"href":"/scriptures/ot/ezek/8.3"},["span.padWord","Ezek."],"8:3"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/ezek/11.1,24"},["span.padWord","Ezek."],"11:1, 24"],";",["a.scriptureRef",{"href":"/scriptures/ot/ezek/43.5"},["span.padWord","Ezek."],"43:5"],"; )"],["li","I will put a new",["i","spirit"],"within you:",["a.scriptureRef",{"href":"/scriptures/ot/ezek/11.19"},["span.padWord","Ezek."],"11:19"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/ezek/36.26-27"},["span.padWord","Ezek."],"36:26–27"],";",["a.scriptureRef",{"href":"/scriptures/ot/ezek/37.14"},["span.padWord","Ezek."],"37:14"],"; )"],["li","in whom is the",["i","spirit"],"of the holy gods:",["a.scriptureRef",{"href":"/scriptures/ot/dan/4.8"},"Dan. 4:8"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/dan/5.11"},["span.padWord","Dan."],"5:11"],"; )"],["li","Daniel was preferred … because an excellent",["i","spirit"],"was in him:",["a.scriptureRef",{"href":"/scriptures/ot/dan/6.3"},["span.padWord","Dan."],"6:3"],";"],["li",["i","spirit"],"of whoredoms hath caused them to err:",["a.scriptureRef",{"href":"/scriptures/ot/hosea/4.12"},"Hosea 4:12"],";"],["li","I will pour out my",["i","spirit"],"upon all flesh:",["a.scriptureRef",{"href":"/scriptures/ot/joel/2.28"},"Joel 2:28"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/acts/2.17"},"Acts 2:17"],"; )"],["li","my",["i","spirit"],"remaineth among you:",["a.scriptureRef",{"href":"/scriptures/ot/hag/2.5"},"Hag. 2:5"],";"],["li","Not by might … but by my",["i","spirit"],":",["a.scriptureRef",{"href":"/scriptures/ot/zech/4.6"},"Zech. 4:6"],";"],["li","the four",["i","spirits"],"of the heavens:",["a.scriptureRef",{"href":"/scriptures/ot/zech/6.5"},["span.padWord","Zech."],"6:5"],";"]]],["div",{"id":"f3","uri":"/scriptures/tg/spirit.f3","order":".000.10075"},["ul.index",["li","Jesus led up of the",["i","Spirit"],"into the wilderness:",["a.scriptureRef",{"href":"/scriptures/nt/matt/4.1"},"Matt. 4:1"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/mark/1.12"},"Mark 1:12"],";",["a.scriptureRef",{"href":"/scriptures/nt/luke/4.1"},"Luke 4:1"],"; )"],["li","Blessed are the poor in",["i","spirit"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/5.3"},["span.padWord","Matt."],"5:3"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/12.3"},"3 Ne. 12:3"],"; )"],["li","he cast out the",["i","spirits"],"with his word:",["a.scriptureRef",{"href":"/scriptures/nt/matt/8.16"},["span.padWord","Matt."],"8:16"],";"],["li","he gave them power against unclean",["i","spirits"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/10.1"},["span.padWord","Matt."],"10:1"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/mark/6.7"},"Mark 6:7"],"; )"],["li","it is not ye that speak, but the",["i","Spirit"],"of your Father:",["a.scriptureRef",{"href":"/scriptures/nt/matt/10.20"},["span.padWord","Matt."],"10:20"],";"],["li","When the unclean",["i","spirit"],"is gone out of a man:",["a.scriptureRef",{"href":"/scriptures/nt/matt/12.43"},["span.padWord","Matt."],"12:43"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/luke/11.24"},"Luke 11:24"],"; )"],["li","taketh with himself seven other",["i","spirits"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/12.45"},["span.padWord","Matt."],"12:45"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/luke/11.26"},"Luke 11:26"],"; )"],["li","saying, It is a",["i","spirit"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/14.26"},["span.padWord","Matt."],"14:26"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/mark/6.49"},"Mark 6:49"],"; )"],["li",["i","Spirit"],"like a dove descending upon him:",["a.scriptureRef",{"href":"/scriptures/nt/mark/1.10"},"Mark 1:10"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/john/1.32"},"John 1:32"],"; )"],["li","Come out of the man, thou unclean",["i","spirit"],":",["a.scriptureRef",{"href":"/scriptures/nt/mark/5.8"},["span.padWord","Mark"],"5:8"],";"],["li","my",["i","spirit"],"hath rejoiced in God:",["a.scriptureRef",{"href":"/scriptures/nt/luke/1.47"},"Luke 1:47"],";"],["li","commandeth the unclean",["i","spirits"],", and they come out:",["a.scriptureRef",{"href":"/scriptures/nt/luke/4.36"},["span.padWord","Luke"],"4:36"],";"],["li","Ye know not what manner of",["i","spirit"],"ye are of:",["a.scriptureRef",{"href":"/scriptures/nt/luke/9.55"},["span.padWord","Luke"],"9:55"],";"],["li","into thy hands I commend my",["i","spirit"],":",["a.scriptureRef",{"href":"/scriptures/nt/luke/23.46"},["span.padWord","Luke"],"23:46"],";"],["li","supposed that they had seen a",["i","spirit"],":",["a.scriptureRef",{"href":"/scriptures/nt/luke/24.37"},["span.padWord","Luke"],"24:37"],";"],["li",["i","spirit"],"hath not flesh and bones, as ye see me:",["a.scriptureRef",{"href":"/scriptures/nt/luke/24.39"},["span.padWord","Luke"],"24:39"],";"],["li","born of water and of the",["i","Spirit"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/3.5"},"John 3:5"],";"],["li","that which is born of the",["i","Spirit"],"is",["i","spirit"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/3.6"},["span.padWord","John"],"3:6"],";"],["li","canst not tell whence it cometh … that is born of the",["i","Spirit"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/3.8"},["span.padWord","John"],"3:8"],";"],["li","God is a",["i","Spirit"],": and they that worship him must worship him in",["i","spirit"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/4.24"},["span.padWord","John"],"4:24"],";"],["li","It is the",["i","spirit"],"that quickeneth:",["a.scriptureRef",{"href":"/scriptures/nt/john/6.63"},["span.padWord","John"],"6:63"],";"],["li","this spake he of the",["i","Spirit"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/7.39"},["span.padWord","John"],"7:39"],";"],["li",["i","Spirit"],"of truth; whom the world cannot receive:",["a.scriptureRef",{"href":"/scriptures/nt/john/14.17"},["span.padWord","John"],"14:17"],";"],["li",["i","Spirit"],"of truth, which proceedeth from the Father:",["a.scriptureRef",{"href":"/scriptures/nt/john/15.26"},["span.padWord","John"],"15:26"],";"],["li","when he, the",["i","Spirit"],"of truth, is come:",["a.scriptureRef",{"href":"/scriptures/nt/john/16.13"},["span.padWord","John"],"16:13"],";"],["li","speak with other tongues, as the",["i","Spirit"],"gave them utterance:",["a.scriptureRef",{"href":"/scriptures/nt/acts/2.4"},"Acts 2:4"],";"],["li","Stephen … saying, Lord Jesus, receive my",["i","spirit"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/7.59"},["span.padWord","Acts"],"7:59"],";"],["li",["i","Spirit"],"said unto Philip, Go near:",["a.scriptureRef",{"href":"/scriptures/nt/acts/8.29"},["span.padWord","Acts"],"8:29"],";"],["li",["i","Spirit"],"said unto him, Behold, three men seek thee:",["a.scriptureRef",{"href":"/scriptures/nt/acts/10.19"},["span.padWord","Acts"],"10:19"],";"],["li","signified by the",["i","Spirit"],"that there should be great dearth:",["a.scriptureRef",{"href":"/scriptures/nt/acts/11.28"},["span.padWord","Acts"],"11:28"],";"],["li","I go bound in the",["i","spirit"],"unto Jerusalem:",["a.scriptureRef",{"href":"/scriptures/nt/acts/20.22"},["span.padWord","Acts"],"20:22"],";"],["li","Sadducees say that there is no resurrection, neither angel, nor",["