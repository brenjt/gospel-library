law:",["a.scriptureRef",{"href":"/scriptures/ot/josh/8.32"},"Josh. 8:32"],";"],["li","acts of Uzziah … did Isaiah …",["i","write"],":",["a.scriptureRef",{"href":"/scriptures/ot/2-chr/26.22"},"2 Chr. 26:22"],";"],["li","volume of the book it is",["i","written"],"of me:",["a.scriptureRef",{"href":"/scriptures/ot/ps/40.7"},"Ps. 40:7"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/heb/10.7"},"Heb. 10:7"],"; )"],["li",["i","written"],"for the generation to come:",["a.scriptureRef",{"href":"/scriptures/ot/ps/102.18"},["span.padWord","Ps."],"102:18"],";"],["li",["i","write"],"them upon the table of thine heart:",["a.scriptureRef",{"href":"/scriptures/ot/prov/3.3"},"Prov. 3:3"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/prov/7.3"},["span.padWord","Prov."],"7:3"],"; )"],["li","every one that is",["i","written"],"among the living:",["a.scriptureRef",{"href":"/scriptures/ot/isa/4.3"},"Isa. 4:3"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/14.3"},"2 Ne. 14:3"],"; )"],["li","Take thee a great roll, and",["i","write"],"in it:",["a.scriptureRef",{"href":"/scriptures/ot/isa/8.1"},["span.padWord","Isa."],"8:1"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/18.1"},"2 Ne. 18:1"],"; )"],["li",["i","write"],"it … and note it in a book:",["a.scriptureRef",{"href":"/scriptures/ot/isa/30.8"},["span.padWord","Isa."],"30:8"],";"],["li",["i","Write"],"thee all the words that I have spoken:",["a.scriptureRef",{"href":"/scriptures/ot/jer/30.2"},"Jer. 30:2"],";"],["li","law …",["i","write"],"it in their hearts:",["a.scriptureRef",{"href":"/scriptures/ot/jer/31.33"},["span.padWord","Jer."],"31:33"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/heb/8.10"},"Heb. 8:10"],";",["a.scriptureRef",{"href":"/scriptures/nt/heb/10.16"},["span.padWord","Heb."],"10:16"],"; )"],["li",["i","write"],"in it all the former words that … hath burned:",["a.scriptureRef",{"href":"/scriptures/ot/jer/36.28"},["span.padWord","Jer."],"36:28"],";"],["li","take thee one stick, and",["i","write"],"upon it:",["a.scriptureRef",{"href":"/scriptures/ot/ezek/37.16"},"Ezek. 37:16"],";"],["li","came forth fingers of a man’s hand, and",["i","wrote"],":",["a.scriptureRef",{"href":"/scriptures/ot/dan/5.5"},"Dan. 5:5"],";"],["li","this writing was",["i","written"],":",["a.scriptureRef",{"href":"/scriptures/ot/dan/5.24"},["span.padWord","Dan."],"5:24"],";"],["li",["i","Write"],"the vision, and make it plain upon tables:",["a.scriptureRef",{"href":"/scriptures/ot/hab/2.2"},"Hab. 2:2"],";"]]],["div",{"id":"f3","uri":"/scriptures/tg/write.f3","order":".000.12269"},["ul.index",["li","rejoice, because your names are",["i","written"],"in heaven:",["a.scriptureRef",{"href":"/scriptures/nt/luke/10.20"},"Luke 10:20"],";"],["li","all things that are",["i","written"],"by the prophets … accomplished:",["a.scriptureRef",{"href":"/scriptures/nt/luke/18.31"},["span.padWord","Luke"],"18:31"],";"],["li","Thus it is",["i","written"],", and thus it behoved Christ to suffer:",["a.scriptureRef",{"href":"/scriptures/nt/luke/24.46"},["span.padWord","Luke"],"24:46"],";"],["li","We have found him, of whom Moses … did",["i","write"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/1.45"},"John 1:45"],";"],["li","believed Moses … for he",["i","wrote"],"of me:",["a.scriptureRef",{"href":"/scriptures/nt/john/5.46"},["span.padWord","John"],"5:46"],";"],["li","Jesus … with his finger",["i","wrote"],"on the ground:",["a.scriptureRef",{"href":"/scriptures/nt/john/8.6"},["span.padWord","John"],"8:6"],";"],["li","What I have",["i","written"],"I have",["i","written"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/19.22"},["span.padWord","John"],"19:22"],";"],["li","many other signs … not",["i","written"],"in this book:",["a.scriptureRef",{"href":"/scriptures/nt/john/20.30"},["span.padWord","John"],"20:30"],";"],["li","these are",["i","written"],", that ye might believe:",["a.scriptureRef",{"href":"/scriptures/nt/john/20.31"},["span.padWord","John"],"20:31"],";"],["li","they",["i","wrote"],"letters by them after this manner:",["a.scriptureRef",{"href":"/scriptures/nt/acts/15.23"},"Acts 15:23"],";"],["li","things were",["i","written"],"aforetime were",["i","written"],"for our learning:",["a.scriptureRef",{"href":"/scriptures/nt/rom/15.4"},"Rom. 15:4"],";"],["li",["i","written"],"for our admonition:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/10.11"},"1 Cor. 10:11"],";"],["li","we",["i","write"],"none other things unto you, than what ye read:",["a.scriptureRef",{"href":"/scriptures/nt/2-cor/1.13"},"2 Cor. 1:13"],";"],["li",["i","written"],"not with ink, but with the Spirit:",["a.scriptureRef",{"href":"/scriptures/nt/2-cor/3.3"},["span.padWord","2 Cor."],"3:3"],";"],["li","church of the firstborn, which are",["i","written"],"in heaven:",["a.scriptureRef",{"href":"/scriptures/nt/heb/12.23"},"Heb. 12:23"],";"],["li","I",["i","write"],"no new commandment unto you:",["a.scriptureRef",{"href":"/scriptures/nt/1-jn/2.7"},"1 Jn. 2:7"],";"],["li","These things have I",["i","written"],"unto you that believe:",["a.scriptureRef",{"href":"/scriptures/nt/1-jn/5.13"},["span.padWord","1 Jn."],"5:13"],";"],["li","I would not",["i","write"],"with paper and ink:",["a.scriptureRef",{"href":"/scriptures/nt/2-jn/1.12"},"2 Jn. 1:12"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/3-jn/1.13"},"3 Jn. 1:13"],"; )"],["li",["i","Write"],"the things which thou hast seen:",["a.scriptureRef",{"href":"/scriptures/nt/rev/1.19"},"Rev. 1:19"],";"],["li","I will",["i","write"],"upon him the name of my God:",["a.scriptureRef",{"href":"/scriptures/nt/rev/3.12"},["span.padWord","Rev."],"3:12"],";"],["li","book",["i","written"],"within and on the backside:",["a.scriptureRef",{"href":"/scriptures/nt/rev/5.1"},["span.padWord","Rev."],"5:1"],";"],["li",["i","Write"],": for these words are true and faithful:",["a.scriptureRef",{"href":"/scriptures/nt/rev/21.5"},["span.padWord","Rev."],"21:5"],";"]]],["div",{"id":"f4","uri":"/scriptures/tg/write.f4","order":".000.12270"},["ul.index",["li","in them shall be",["i","written"],"my gospel:",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/13.36"},"1 Ne. 13:36"],";"],["li","apostle of the Lamb … should",["i","write"],"them:",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/14.25"},["span.padWord","1 Ne."],"14:25"],";"],["li","do not",["i","write"],"anything upon plates save it be … sacred:",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/19.6"},["span.padWord","1 Ne."],"19:6"],";"],["li","fruit of thy loins shall",["i","write"],":",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/3.12"},"2 Ne. 3:12"],";"],["li","I will",["i","write"],"unto him my law:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/3.17"},["span.padWord","2 Ne."],"3:17"],";"],["li","upon these I",["i","write"],"the things of my soul … and",["i","writeth"],"them for … my children:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/4.15"},["span.padWord","2 Ne."],"4:15"],";"],["li","spoken unto you concerning all things which are",["i","written"],":",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/6.3"},["span.padWord","2 Ne."],"6:3"],";"],["li","labor diligently to",["i","write"],", to persuade our children:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/25.23"},["span.padWord","2 Ne."],"25:23"],";"],["li","command all men …",["i","write"],"the words which I speak:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/29.11"},["span.padWord","2 Ne."],"29:11"],";"],["li","shall speak unto the Jews and they shall",["i","write"],"it … unto all nations of the earth and they shall",["i","write"],"it:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/29.12"},["span.padWord","2 Ne."],"29:12"],";"],["li","have",["i","written"],"what I have",["i","written"],", and I esteem it as of great worth:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/33.3"},["span.padWord","2 Ne."],"33:3"],";"],["li","commandment that I should",["i","write"],"upon these plates:",["a.scriptureRef",{"href":"/scriptures/bofm/jacob/1.2"},"Jacob 1:2"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/jarom/1.1"},"Jarom 1:1"],";",["a.scriptureRef",{"href":"/scriptures/bofm/omni/1.1"},"Omni 1:1"],";",["a.scriptureRef",{"href":"/scriptures/bofm/w-of-m/1.2"},"W of M 1:2"],"; )"],["li",["i","written"],"for … benefit of our brethren:",["a.scriptureRef",{"href":"/scriptures/bofm/jarom/1.2"},"Jarom 1:2"],";"],["li","commandments … are not",["i","written"],"in your hearts:",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/13.11"},"Mosiah 13:11"],";"],["li","taught them … that they might",["i","write"],"one to another:",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/24.6"},["span.padWord","Mosiah"],"24:6"],";"],["li","many things did Nephi speak which cannot be",["i","written"],":",["a.scriptureRef",{"href":"/scriptures/bofm/hel/8.3"},"Hel. 8:3"],";"],["li","ye shall",["i","write"],"these sayings:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/16.4"},"3 Ne. 16:4"],";"],["li",["i","write"],"the things which I have told you:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/23.4"},["span.padWord","3 Ne."],"23:4"],";"],["li","How be it that ye have not",["i","written"],"this thing:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/23.11"},["span.padWord","3 Ne."],"23:11"],";"],["li",["i","Write"],"the things which ye have seen and heard:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/27.23"},["span.padWord","3 Ne."],"27:23"],";"],["li","all things are",["i","written"],"by the Father:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/27.26"},["span.padWord","3 Ne."],"27:26"],";"],["li","I",["i","write"],"a small abridgment:",["a.scriptureRef",{"href":"/scriptures/bofm/morm/5.9"},"Morm. 5:9"],";"],["li","these things are",["i","written"],"unto the remnant … of Jacob:",["a.scriptureRef",{"href":"/scriptures/bofm/morm/5.12"},["span.padWord","Morm."],"5:12"],";"],["li","I will",["i","write"],"and hide up the records in the earth:",["a.scriptureRef",{"href":"/scriptures/bofm/morm/8.4"},["span.padWord","Morm."],"8:4"],";"],["li","ye shall",["i","write"],"them and shall seal them up:",["a.scriptureRef",{"href":"/scriptures/bofm/ether/3.22"},"Ether 3:22"],";"],["li","brother of Jared …",["i","write"],"the things which he had seen:",["a.scriptureRef",{"href":"/scriptures/bofm/ether/4.1"},["span.padWord","Ether"],"4:1"],";"],["li","thou hast made us that we could",["i","write"],"but little:",["a.scriptureRef",{"href":"/scriptures/bofm/ether/12.24"},["span.padWord","Ether"],"12:24"],";"],["li","seek this Jesus of whom the prophets and apostles have",["i","written"],":",["a.scriptureRef",{"href":"/scriptures/bofm/ether/12.41"},["span.padWord","Ether"],"12:41"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/52.9"},"D&C 52:9"],"; )"]]],["div",{"id":"f5","uri":"/scriptures/tg/write.f5","order":".000.12271"},["ul.index",["li","you are called … to",["i","write"],"for my servant Joseph:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/9.4"},"D&C 9:4"],";"],["li","in them are all things",["i","written"],"concerning the foundation of my church:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/18.4"},["span.padWord","D&C"],"18:4"],";"],["li","not",["i","written"],"that there shall be no end to this torment:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/19.6"},["span.padWord","D&C"],"19:6"],";"],["li","thou wast … chosen to",["i","write"],"the Book of Mormon:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/24.1"},["span.padWord","D&C"],"24:1"],";"],["li","things which he hath",["i","written"],"from that stone are not of me:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/28.11"},["span.padWord","D&C"],"28:11"],";"],["li",["i","write"],"and keep a regular history:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/47.1"},["span.padWord","D&C"],"47:1"],";"],["li","for this cause the apostle",["i","wrote"],"… a commandment:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/74.5"},["span.padWord","D&C"],"74:5"],";"],["li","they whose names are",["i","written"],"in heaven:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/76.68"},["span.padWord","D&C"],"76:68"],";"],["li","Lord commanded us to",["i","write"],"while we were yet in the Spirit:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/76.80"},["span.padWord","D&C"],"76:80"],";"],["li","not found",["i","written"],"in the book of remembrance shall find none inheritance:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/85.9"},["span.padWord","D&C"],"85:9"],";"],["li","ye shall",["i","write"],"this commandment:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/90.32"},["span.padWord","D&C"],"90:32"],";"],["li","things were all",["i","written"],"in the book of Enoch:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/107.57"},["span.padWord","D&C"],"107:57"],";"],["li",["i","written"],"… by the power of the Holy Ghost:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/124.4"},["span.padWord","D&C"],"124:4"],";"],["li","things which were",["i","written"],"in the books:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/128.6"},["span.padWord","D&C"],"128:6"],";"],["li","white stone … whereon is a new name",["i","written"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/130.11"},["span.padWord","D&C"],"130:11"],";"],["li","having his Father’s name",["i","written"],"on their foreheads:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/133.18"},["span.padWord","D&C"],"133:18"],";"],["li","pondered over these things which are",["i","written"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/138.11"},["span.padWord","D&C"],"138:11"],";"]]],["div",{"id":"f6","uri":"/scriptures/tg/write.f6","order":".000.12272"},["ul.index",["li",["i","write"],"the things which I shall speak:",["a.scriptureRef",{"href":"/scriptures/pgp/moses/1.40"},"Moses 1:40"],"; (",["a.scriptureRef",{"href":"/scriptures/pgp/moses/2.1"},["span.padWord","Moses"],"2:1"],"; )"],["li","called upon God to",["i","write"],"by the spirit of inspiration:",["a.scriptureRef",{"href":"/scriptures/pgp/moses/6.5"},["span.padWord","Moses"],"6:5"],";"],["li","book of remembrance we have",["i","written"],"among us:",["a.scriptureRef",{"href":"/scriptures/pgp/moses/6.46"},["span.padWord","Moses"],"6:46"],";"],["li","he began to",["i","write"],"for me:",["a.scriptureRef",{"href":"/scriptures/pgp/js-h/1.67"},"JS—H 1:67"],";"]]]]],"refs":null}
