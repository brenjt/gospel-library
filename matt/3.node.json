cations for"],"."],["div",{"id":"11d","uri":"/scriptures/nt/matt/3.11d","order":"03.03.003.258"},["b","11d"],"See",["a.scriptureRef",{"href":"/scriptures/jst/jst-john/1.27-34"},["span.small","JST"],"John 1:27–34 (Appendix)"],"."],["div",{"id":"11e","uri":"/scriptures/nt/matt/3.11e","order":"03.03.003.260"},["b","11e"],["a.scriptureRef",{"href":"/scriptures/tg/worthiness"},"TG Worthiness"],"."],["div",{"id":"11f","uri":"/scriptures/nt/matt/3.11f","order":"03.03.003.262"},["b","11f"],["a.scriptureRef",{"href":"/scriptures/tg/holy-ghost-baptism-of"},"TG Holy Ghost, Baptism of"],"."],["div",{"id":"11g","uri":"/scriptures/nt/matt/3.11g","order":"03.03.003.264"},["b","11g"],["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/19.31"},"D&C 19:31"],"."],["div",{"id":"12a","uri":"/scriptures/nt/matt/3.12a","order":"03.03.003.266"},["b","12a"],["a.scriptureRef",{"href":"/scriptures/ot/jer/51.2"},"Jer. 51:2"],"."],["div",{"id":"12b","uri":"/scriptures/nt/matt/3.12b","order":"03.03.003.268"},["b","12b"],["span.small","GR"],"storehouse."],["div",{"id":"12c","uri":"/scriptures/nt/matt/3.12c","order":"03.03.003.270"},["b","12c"],["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/43.32"},"D&C 43:32"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/63.34.33-34"},"63:34 (33–34)"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/101.66"},"101:66"],"."],["div",{"id":"13a","uri":"/scriptures/nt/matt/3.13a","order":"03.03.003.272"},["b","13a"],["a.scriptureRef",{"href":"/scriptures/tg/jesus-christ-baptism-of"},"TG Jesus Christ, Baptism of"],"."],["div",{"id":"15a","uri":"/scriptures/nt/matt/3.15a","order":"03.03.003.274"},["b","15a"],["a.scriptureRef",{"href":"/scriptures/jst/jst-matt/3.43-46"},["span.small","JST"],"Matt. 3:43–46 (Appendix)"],"."],["div",{"id":"15b","uri":"/scriptures/nt/matt/3.15b","order":"03.03.003.276"},["b","15b"],["span.small","GR"],"Permit it now."],["div",{"id":"15c","uri":"/scriptures/nt/matt/3.15c","order":"03.03.003.278"},["b","15c"],["span.small","GR"],"is fitting for us."],["div",{"id":"15d","uri":"/scriptures/nt/matt/3.15d","order":"03.03.003.280"},["b","15d"],["a.scriptureRef",{"href":"/scriptures/tg/baptism-essential"},"TG Baptism, Essential"],"."],["div",{"id":"15e","uri":"/scriptures/nt/matt/3.15e","order":"03.03.003.282"},["b","15e"],["a.scriptureRef",{"href":"/scriptures/tg/jesus-christ-mission-of"},"TG Jesus Christ, Mission of"],";",["a.scriptureRef",{"href":"/scriptures/tg/righteousness"},"Righteousness"],"."],["div",{"id":"16a","uri":"/scriptures/nt/matt/3.16a","order":"03.03.003.284"},["b","16a"],["a.scriptureRef",{"href":"/scriptures/tg/baptism"},"TG Baptism"],";",["a.scriptureRef",{"href":"/scriptures/tg/baptism-immersion"},"Baptism, Immersion"],"."],["div",{"id":"16b","uri":"/scriptures/nt/matt/3.16b","order":"03.03.003.286"},["b","16b"],["span.small","GR"],"immediately."],["div",{"id":"16c","uri":"/scriptures/nt/matt/3.16c","order":"03.03.003.288"},["b","16c"],["a.scriptureRef",{"href":"/scriptures/tg/god-spirit-of"},"TG God, Spirit of"],"."],["div",{"id":"16d","uri":"/scriptures/nt/matt/3.16d","order":"03.03.003.290"},["b","16d"],["a.scriptureRef",{"href":"/scriptures/tg/holy-ghost-dove-sign-of"},"TG Holy Ghost, Dove, Sign of"],"."],["div",{"id":"17a","uri":"/scriptures/nt/matt/3.17a","order":"03.03.003.292"},["b","17a"],["a.scriptureRef",{"href":"/scriptures/nt/mark/9.7"},"Mark 9:7"],";",["a.scriptureRef",{"href":"/scriptures/nt/luke/9.35.34-36"},"Luke 9:35 (34–36)"],".",["a.scriptureRef",{"href":"/scriptures/tg/god-body-of-corporeal-nature"},"TG God, Body of, Corporeal Nature"],";",["a.scriptureRef",{"href":"/scriptures/tg/god-manifestations-of"},"God, Manifestations of"],"."],["div",{"id":"17b","uri":"/scriptures/nt/matt/3.17b","order":"03.03.003.294"},["b","17b"],["a.scriptureRef",{"href":"/scriptures/nt/matt/17.5"},"Matt. 17:5"],";",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/11.7"},"3 Ne. 11:7"],";",["a.scriptureRef",{"href":"/scriptures/pgp/js-h/1.17"},"JS—H 1:17"]