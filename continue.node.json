{"id":613,"parent_id":0,"book_id":7,"content_id":1,"language_id":1,"display_order":613,"title":"Continue","subtitle":"","short_title":"Continue","uri":"/scriptures/tg/continue","content":[["div",{"id":"t1","uri":"/scriptures/tg/continue.t1","order":".000.1864"},[".title",["b","Continue"]],["div",{"id":"f1","uri":"/scriptures/tg/continue.f1","order":".000.1865"},["ul.index",["li",["i","continue"],"a day or two, he shall not be punished:",["a.scriptureRef",{"href":"/scriptures/ot/ex/21.21"},"Ex. 21:21"],";"],["li",["i","continue"],"thy lovingkindness unto them:",["a.scriptureRef",{"href":"/scriptures/ot/ps/36.10"},"Ps. 36:10"],";"]]],["div",{"id":"f2","uri":"/scriptures/tg/continue.f2","order":".000.1866"},["ul.index",["li","they",["i","continue"],"with me now three days:",["a.scriptureRef",{"href":"/scriptures/nt/matt/15.32"},"Matt. 15:32"],";"],["li","into a mountain to pray, and",["i","continued"],"all night:",["a.scriptureRef",{"href":"/scriptures/nt/luke/6.12"},"Luke 6:12"],";"],["li",["i","continued"],"with me in my temptations:",["a.scriptureRef",{"href":"/scriptures/nt/luke/22.28"},["span.padWord","Luke"],"22:28"],";"],["li","If ye",["i","continue"],"in my word, then are ye my disciples:",["a.scriptureRef",{"href":"/scriptures/nt/john/8.31"},"John 8:31"],";"],["li",["i","continue"],"ye in my love:",["a.scriptureRef",{"href":"/scriptures/nt/john/15.9"},["span.padWord","John"],"15:9"],";"],["li","These all",["i","continued"],"with one accord in prayer:",["a.scriptureRef",{"href":"/scriptures/nt/acts/1.14"},"Acts 1:14"],";"],["li","they",["i","continued"],"steadfastly in the apostles’ doctrine:",["a.scriptureRef",{"href":"/scriptures/nt/acts/2.42"},["span.padWord","Acts"],"2:42"],";"],["li",["i","continue"],"in the grace of God:",["a.scriptureRef",{"href":"/scriptures/nt/acts/13.43"},["span.padWord","Acts"],"13:43"],";"],["li",["i","continue"],"in the faith:",["a.scriptureRef",{"href":"/scriptures/nt/acts/14.22"},["span.padWord","Acts"],"14:22"],";"],["li","Shall