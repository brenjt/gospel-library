{"id":331,"parent_id":0,"book_id":7,"content_id":1,"language_id":1,"display_order":331,"title":"Boast, Boasting","subtitle":"","short_title":"Boast, Boasting","uri":"/scriptures/tg/boast","content":[["div",{"id":"t1","uri":"/scriptures/tg/boast.t1","order":".000.935"},[".title",["b","Boast, Boasting"]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/tg/haughtiness"},"Haughtiness"],";",["a.scriptureRef",{"href":"/scriptures/tg/pride"},"Pride"]],["div",{"id":"f2","uri":"/scriptures/tg/boast.f2","order":".000.936"},["ul.index",["li","Let not him …",["i","boast"],"himself:",["a.scriptureRef",{"href":"/scriptures/ot/1-kgs/20.11"},"1 Kgs. 20:11"],";"],["li","wicked",["i","boasteth"],"of his heart’s desire:",["a.scriptureRef",{"href":"/scriptures/ot/ps/10.3"},"Ps. 10:3"],";"],["li","when he is gone his way, then he",["i","boasteth"],":",["a.scriptureRef",{"href":"/scriptures/ot/prov/20.14"},"Prov. 20:14"],";"],["li","Whoso",["i","boasteth"],"himself of a false gift:",["a.scriptureRef",{"href":"/scriptures/ot/prov/25.14"},["span.padWord","Prov."],"25:14"],";"],["li",["i","Boast"],"not thyself of to morrow:",["a.scriptureRef",{"href":"/scriptures/ot/prov/27.1"},["span.padWord","Prov."],"27:1"],";"],["li","Let another man",["i","praise"],"thee, and not thine own mouth:",["a.scriptureRef",{"href":"/scriptures/ot/prov/27.2"},["span.padWord","Prov."],"27:2"],";"],["li","Shall the axe",["i","boast"],"itself against him that heweth:",["a.scriptureRef",{"href":"/scriptures/ot/isa/10.15"},"Isa. 10:15"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/20.15"},"2 Ne. 20:15"],"; )"]]],["div",{"id":"f3","uri":"/scriptures/tg/boast.f3","order":".000.937"},["ul.index",["li","haters of God, despiteful, proud,",["i","boasters"],":",["a.scriptureRef",{"href":"/scriptures/nt/rom/1.30"},"Rom. 1:30"],";"],["li",["i","Boast"],"not against the branches:",["a.scriptureRef",{"href":"/scriptures/nt/rom/11.18"},["span.padWord","Rom."],"11:18"],";"],["li","our",["i","boasting"],"