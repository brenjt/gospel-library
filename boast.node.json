t ye may",["i","boast"],":",["a.scriptureRef",{"href":"/scriptures/bofm/hel/5.8"},"Hel. 5:8"],";"],["li","how quick to",["i","boast"],", and do all manner of … iniquity:",["a.scriptureRef",{"href":"/scriptures/bofm/hel/12.5"},["span.padWord","Hel."],"12:5"],";"],["li","swell with great pride, unto",["i","boasting"],":",["a.scriptureRef",{"href":"/scriptures/bofm/hel/13.22"},["span.padWord","Hel."],"13:22"],";"],["li","some were lifted up unto pride and",["i","boastings"],":",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/6.10"},"3 Ne. 6:10"],";"]]],["div",{"id":"f5","uri":"/scriptures/tg/boast.f5","order":".000.939"},["ul.index",["li","neither with",["i","boasting"],"nor rejoicing, lest you be seized:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/50.33"},"D&C 50:33"],";"],["li","they shall not",["i","boast"],"themselves:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/84.73"},["span.padWord","D&C"],"84:73"],";"],["li","neither",["i","boast"],"of faith nor of mighty works:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/105.24"},["span.padWord","D&C"],"105:24"],";"]]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/ot/ps/49.6"},"Ps. 49:6"],";",["a.scriptureRef",{"href":"/scriptures/ot/prov/10.19"},"Prov. 10:19"],";",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/3.18"},"1 Cor. 3:18"],";",["a.scriptureRef",{"href":"/scriptures/nt/2-cor/12.1-11"},"2 Cor. 12:1–11"],";",["a.scriptureRef",{"href":"/scriptures/nt/2-pet/2.10"},"2 Pet. 2:10"],";",["a.scriptureRef",{"href":"/scriptures/pgp/moses/5.33"},"Moses 5:33"]]]],"refs":null}
