"],";"],["li","evil spirit teaches man that he must not",["i","pray"],":",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/32.8"},["span.padWord","2 Ne."],"32:8"],";"],["li",["i","pray"],"always:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/32.9"},["span.padWord","2 Ne."],"32:9"],";"],["li","Nephi",["sup","1"],["i","prays"],"that many may be saved in God’s kingdom:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/33.12"},["span.padWord","2 Ne."],"33:12"],";"],["li","the Father has answered",["i","prayer"],"of Jacob",["sup","2"],":",["a.scriptureRef",{"href":"/scriptures/bofm/jacob/7.22"},"Jacob 7:22"],";"],["li","Enos",["sup","2"],"cries unto his Maker in mighty",["i","prayer"],":",["a.scriptureRef",{"href":"/scriptures/bofm/enos/1.4"},"Enos 1:4"],";"],["li","continue in fasting and",["i","praying"],":",["a.scriptureRef",{"href":"/scriptures/bofm/omni/1.26"},"Omni 1:26"],";"],["li","Alma",["sup","1"],"has",["i","prayed"],"much concerning Alma",["sup","2"],":",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/27.14"},"Mosiah 27:14"],";"],["li","Alma",["sup","1"],"has priests",["i","pray"],"that the Lord will open mouth of Alma",["sup","2"],":",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/27.22-23"},["span.padWord","Mosiah"],"27:22–23"],";"],["li","Alma",["sup","2"],"has fasted and",["i","prayed"],"many days to know these things:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/5.46"},"Alma 5:46"],";"],["li","Alma",["sup","2"],"wrestles with God in mighty",["i","prayer"],"that he might pour out his Spirit:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/8.10"},["span.padWord","Alma"],"8:10"],";"],["li","people of Ammonihah are spared because of",["i","prayers"],"of righteous:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/10.22-23"},["span.padWord","Alma"],"10:22–23"],";"],["li","sons of Mosiah",["sup","2"],"teach with power because they have given themselves to much fasting and",["i","prayer"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/17.3"},["span.padWord","Alma"],"17:3"],";"],["li","to know mysteries of God, men must",["i","pray"],"without ceasing:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/26.22"},["span.padWord","Alma"],"26:22"],";"],["li","following tremendous slaughter is time of much fasting and",["i","prayer"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/28.6"},["span.padWord","Alma"],"28:6"],";"],["li","every Zoramite",["sup","2"],"offers selfsame",["i","prayer"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/31.15-22"},["span.padWord","Alma"],"31:15–22"],";"],["li","continue in",["i","prayer"],"unto God:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/34.19"},["span.padWord","Alma"],"34:19"],";"],["li","when ye do not cry unto the Lord, let your hearts be drawn out in",["i","prayer"],"unto him continually:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/34.27"},["span.padWord","Alma"],"34:27"],";"],["li","Zoramites",["sup","2"],["i","pray"],"to be heard of men:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/38.13"},["span.padWord","Alma"],"38:13"],";"],["li","Nephites fast and",["i","pray"],"much to give God thanks:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/45.1"},["span.padWord","Alma"],"45:1"],";"],["li","Nephites",["i","pray"],"unto the Lord continually:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/62.51"},["span.padWord","Alma"],"62:51"],";"],["li","members of Church fast and",["i","pray"],"oft:",["a.scriptureRef",{"href":"/scriptures/bofm/hel/3.35"},"Hel. 3:35"],";"],["li",["i","pray"],"for them that despitefully use you:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/12.44"},"3 Ne. 12:44"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/matt/5.44"},"Matt. 5:44"],"; )"],["li","when thou",["i","pray"],", do not as hypocrites:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/13.5"},["span.padWord","3 Ne."],"13:5"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/matt/6.5"},"Matt. 6:5"],"; )"],["li","after this manner therefore",["i","pray"],"ye:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/13.9"},["span.padWord","3 Ne."],"13:9"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/matt/6.9"},"Matt. 6:9"],"; )"],["li","Jesus",["i","prayed"],"unto the Father:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/17.15"},["span.padWord","3 Ne."],"17:15"],";"],["li","watch and",["i","pray"],"always:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/18.15"},["span.padWord","3 Ne."],"18:15"],";"],["li","as Jesus has",["i","prayed"],"among them, so should Saints",["i","pray"],"in Church:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/18.16"},["span.padWord","3 Ne."],"18:16"],";"],["li",["i","pray"],"in your families:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/18.21"},["span.padWord","3 Ne."],"18:21"],";"],["li","twelve disciples cause multitude to kneel and",["i","pray"],"to the Father:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/19.6"},["span.padWord","3 Ne."],"19:6"],";"],["li","disciples",["i","pray"],"unto Jesus because he is with them:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/19.17-18,22-30"},["span.padWord","3 Ne."],"19:17–18, 22–30"],";"],["li","disciples",["i","pray"],"without multiplying words:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/19.24"},["span.padWord","3 Ne."],"19:24"],";"],["li","Jesus commands multitude to cease to",["i","pray"],", but not to cease to",["i","pray"],"in hearts:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/20.1"},["span.padWord","3 Ne."],"20:1"],";"],["li","disciples are united in mighty",["i","prayer"],"and fasting when Jesus appears again:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/27.1"},["span.padWord","3 Ne."],"27:1"],";"],["li","those baptized are numbered among people of Church, to keep them watchful unto",["i","prayer"],":",["a.scriptureRef",{"href":"/scriptures/bofm/moro/6.4"},"Moro. 6:4"],";"],["li","Church meets together oft to fast and",["i","pray"],":",["a.scriptureRef",{"href":"/scriptures/bofm/moro/6.5"},["span.padWord","Moro."],"6:5"],";"],["li","if man",["i","prays"],"without real intent, it profits him nothing:",["a.scriptureRef",{"href":"/scriptures/bofm/moro/7.6,9"},["span.padWord","Moro."],"7:6, 9"],";"],["li",["i","pray"],"unto the Father with all energy of heart:",["a.scriptureRef",{"href":"/scriptures/bofm/moro/7.48"},["span.padWord","Moro."],"7:48"],";"],["li","perfect love endures by diligence unto",["i","prayer"],":",["a.scriptureRef",{"href":"/scriptures/bofm/moro/8.26"},["span.padWord","Moro."],"8:26"],";"]]],["div",{"id":"f3","uri":"/scriptures/triple-index/prayer.f3","order":".000.5181"},["ul.index",["li",["i","prayers"],"answered by peace of mind:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/6.22-24"},"D&C 6:22–24"],";"],["li",["i","pray"],"always:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/10.5"},["span.padWord","D&C"],"10:5"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/19.38"},["span.padWord","D&C"],"19:38"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/20.33"},["span.padWord","D&C"],"20:33"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/31.12"},["span.padWord","D&C"],"31:12"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/32.4"},["span.padWord","D&C"],"32:4"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/33.17"},["span.padWord","D&C"],"33:17"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/61.39"},["span.padWord","D&C"],"61:39"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/75.11"},["span.padWord","D&C"],"75:11"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/81.3"},["span.padWord","D&C"],"81:3"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.126"},["span.padWord","D&C"],"88:126"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/90.24"},["span.padWord","D&C"],"90:24"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/93.49"},["span.padWord","D&C"],"93:49"],"; )"],["li",["i","pray"],"to the Father in Chr