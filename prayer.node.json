,["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/42.44"},["span.padWord","D&C"],"42:44"],";"],["li","do all things with",["i","prayer"],"and thanksgiving:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/46.7"},["span.padWord","D&C"],"46:7"],";"],["li","he who asks in the Spirit asks according to will of God:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/46.30"},["span.padWord","D&C"],"46:30"],";"],["li","teach through",["i","prayer"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/52.9"},["span.padWord","D&C"],"52:9"],";"],["li","he who",["i","prays"],"is accepted:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/52.15"},["span.padWord","D&C"],"52:15"],";"],["li","go to house of",["i","prayer"],"and offer up sacraments:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/59.9"},["span.padWord","D&C"],"59:9"],";"],["li","this is fasting and",["i","prayer"],", or rejoicing and",["i","prayer"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/59.14"},["span.padWord","D&C"],"59:14"],";"],["li","revelation on",["i","prayer"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/65.intro"},["span.padWord","D&C"],"65: Intro."],";"],["li",["i","pray"],"unto the Lord, call upon his name:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/65.4"},["span.padWord","D&C"],"65:4"],";"],["li",["i","pray"],"that kingdom may go forth:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/65.5"},["span.padWord","D&C"],"65:5"],";"],["li","parents to teach children to",["i","pray"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/68.28"},["span.padWord","D&C"],"68:28"],";"],["li","he who observes not",["i","prayers"],"shall be judged:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/68.33"},["span.padWord","D&C"],"68:33"],";"],["li",["i","praying"],"that ye faint not:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/75.11"},["span.padWord","D&C"],"75:11"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.126"},["span.padWord","D&C"],"88:126"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/101.81"},["span.padWord","D&C"],"101:81"],"; )"],["li","remain steadfast in your minds in spirit of",["i","prayer"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/84.61"},["span.padWord","D&C"],"84:61"],";"],["li","Saints’ alms of",["i","prayers"],"have come up into ears of the Lord:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.2"},["span.padWord","D&C"],"88:2"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/98.2"},["span.padWord","D&C"],"98:2"],"; )"],["li","continue in",["i","prayer"],"and fasting:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.76"},["span.padWord","D&C"],"88:76"],";"],["li","establish a house of",["i","prayer"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.119"},["span.padWord","D&C"],"88:119"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/109.8"},["span.padWord","D&C"],"109:8"],"; )"],["li","by your",["i","prayer"],"of faith with one consent I will uphold him:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/93.51-52"},["span.padWord","D&C"],"93:51–52"],";"],["li","Saints’",["i","prayers"],"have entered ears of the Lord and are recorded with seal and testament:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/98.2"},["span.padWord","D&C"],"98:2"],";"],["li","the Lord is slow to hearken unto",["i","prayers"],"of those who are slow to hearken unto him:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/101.7"},["span.padWord","D&C"],"101:7"],";"],["li","victory and glory brought by",["i","prayers"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/103.36"},["span.padWord","D&C"],"103:36"],";"],["li","I have heard their",["i","prayers"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/105.19"},["span.padWord","D&C"],"105:19"],";"],["li","First Presidency to be upheld by",["i","prayer"],"of Church:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/107.22"},["span.padWord","D&C"],"107:22"],";"],["li","strengthen your brethren in your",["i","prayers"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/108.7"},["span.padWord","D&C"],"108:7"],";"],["li","dedicatory",["i","prayer"],"of Kirtland Temple:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/109"},["span.padWord","D&C"],"109"],";"],["li","be humble and the Lord will give thee answers to",["i","prayers"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/112.10"},["span.padWord","D&C"],"112:10"],";"],["li","Joseph Smith receives revelation on wars while",["i","praying"],"to know time of the Son’s coming:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/130.13-14"},["span.padWord","D&C"],"130:13–14"],";"],["li","praise the Lord with a",["i","prayer"],"of praise:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/136.28"},["span.padWord","D&C"],"136:28"],";"]]],["div",{"id":"f4","uri":"/scriptures/triple-index/prayer.f4","order":".000.5182"},["ul.index",["li","Abraham and Lot",["i","prayed"],"unto the Lord:",["a.scriptureRef",{"href":"/scriptures/pgp/abr/2.6"},"Abr. 2:6"],";"],["li","Abraham",["i","prayed"],"that the Lord will turn famine away:",["a.scriptureRef",{"href":"/scriptures/pgp/abr/2.17"},["span.padWord","Abr."],"2:17"],";"]]]]],"refs":null}
