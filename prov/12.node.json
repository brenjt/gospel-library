13a"],["a.scriptureRef",{"href":"/scriptures/tg/transgress"},"TG Transgress"],"."],["div",{"id":"13b","uri":"/scriptures/ot/prov/12.13b","order":"02.21.012.42237"},["b","13b"],["a.scriptureRef",{"href":"/scriptures/nt/james/3.13.2-14"},"James 3:13 (2–14)"],".",["a.scriptureRef",{"href":"/scriptures/tg/communication"},"TG Communication"],"."],["div",{"id":"14a","uri":"/scriptures/ot/prov/12.14a","order":"02.21.012.42239"},["b","14a"],["a.scriptureRef",{"href":"/scriptures/tg/communication"},"TG Communication"],"."],["div",{"id":"15a","uri":"/scriptures/ot/prov/12.15a","order":"02.21.012.42241"},["b","15a"],["a.scriptureRef",{"href":"/scriptures/tg/problem-solving"},"TG Problem-Solving"],"."],["div",{"id":"15b","uri":"/scriptures/ot/prov/12.15b","order":"02.21.012.42243"},["b","15b"],["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/124.90.89-90"},"D&C 124:90 (89–90)"],"."],["div",{"id":"16a","uri":"/scriptures/ot/prov/12.16a","order":"02.21.012.42245"},["b","16a"],["a.scriptureRef",{"href":"/scriptures/tg/prudence"},"TG Prudence"],"."],["div",{"id":"22a","uri":"/scriptures/ot/prov/12.22a","order":"02.21.012.42247"},["b","22a"],["a.scriptureRef",{"href":"/scriptures/tg/lying"},"TG Lying"],"."],["div",{"id":"22b","uri":"/scriptures/ot/prov/12.22b","order":"02.21.012.42249"},["b","22b"],["a.scriptureRef",{"href":"/scriptures/tg/honesty"},"TG Honesty"],"."],["div",{"id":"22c","uri":"/scriptures/ot/prov/12.22c","order":"02.21.012.42251"},["b","22c"],["a.scriptureRef",{"href":"/scriptures/tg/god-the-standard-of-righteousness"},"TG God, the Standard of Righteousness"],"."],["div",{"id":"23a","uri":"/scriptures/ot/prov/12.23a","order":"02.21.012.42253"},["b","23a"],["a.scriptureRef",{"href":"/scriptures/tg/prudence"},"TG Prudence"],"."],["div",{"id":"23b","uri":"/scriptures/ot/prov/12.23b","order":"02.21.012.42255"},["b","23b"],["a.scriptureRef",{"href":"/scriptures/tg/knowledge"},"TG Knowledge"],"."],["div",{"id":"23c","uri":"/scriptures/ot/prov/12.23c","order":"02.21.012.42257"},["b","23c"],["a.scriptureRef",{"href":"/scriptures/tg/foolishness"},"TG Foolishness"],"."],["div",{"id":"24a","uri":"/scriptures/ot/prov/12.24a","order":"02.21.012.42259"},["b","24a"],["a.scriptureRef",{"href":"/scriptures/tg/diligence"},"TG Diligence"],"."],["div",{"id":"24b","uri":"/scriptures/ot/prov/12.24b","order":"02.21.012.42261"},["b","24b"],["a.scriptureRef",{"href":"/scriptures/tg/laziness"},"TG Laziness"],"."],["div",{"id":"27a","uri":"/scriptures/ot/prov/12.27a","order":"02.21.012.42263"},["b","27a"],["a.scriptureRef",{"href":"/scriptures/tg/laziness"},"TG Laziness"],"."],["div",{"id":"27b","uri":"/scriptures/ot/prov/12.27b","order":"02.21.012.42265"},["b","27b"],["a.scriptureRef",{"href":"/scriptures/tg/diligence"},"TG Diligence"],"."],["div",{"id":"28a","uri":"/scriptures/ot/prov/12.28a","order":"02.21.012.42267"},["b","28a"],["a.scriptureRef",{"href":"/scriptures/tg/righteousness"},"TG Righteousness"],"."]]}
