{"id":2519,"parent_id":0,"book_id":7,"content_id":1,"language_id":1,"display_order":2519,"title":"Record Keeping","subtitle":"","short_title":"Record Keeping","uri":"/scriptures/tg/record-keeping","content":[["div",{"id":"t1","uri":"/scriptures/tg/record-keeping.t1","order":".000.8570"},[".title",["b","Record Keeping"]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/tg/write"},"Write"]],["div",{"id":"f2","uri":"/scriptures/tg/record-keeping.f2","order":".000.8571"},["ul.index",["li","Moses",["i","wrote"],"all the words of the Lord:",["a.scriptureRef",{"href":"/scriptures/ot/ex/24.4"},"Ex. 24:4"],";"],["li","in the ark thou shalt put the",["i","testimony"],":",["a.scriptureRef",{"href":"/scriptures/ot/ex/25.21"},["span.padWord","Ex."],"25:21"],";"],["li","Whosoever hath sinned … will I blot out of my",["i","book"],":",["a.scriptureRef",{"href":"/scriptures/ot/ex/32.33"},["span.padWord","Ex."],"32:33"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/ps/69.28"},"Ps. 69:28"],";",["a.scriptureRef",{"href":"/scriptures/nt/rev/3.5"},"Rev. 3:5"],"; )"],["li","appointed certain of the Levites … to",["i","record"],":",["a.scriptureRef",{"href":"/scriptures/ot/1-chr/16.4"},"1 Chr. 16:4"],";"],["li","search may be made in the book of the",["i","records"],"of thy fathers:",["a.scriptureRef",{"href":"/scriptures/ot/ezra/4.15"},"Ezra 4:15"],";"],["li","every one … found written in the",["i","book"],":",["a.scriptureRef",{"href":"/scriptures/ot/dan/12.1"},"Dan. 12:1"],";"]]],["div",{"id":"f3","uri":"/scriptures/tg/record-keeping.f3","order":".000.8572"},["ul.index",["li","this is the",["i","record"],"of John:",["a.scriptureRef",{"href":"/scriptures/nt/john/1.19"},"John 1:19"],";"],["li",["i","Write"],"the things which thou hast seen:",["a.scriptureRef",{"href":"/scriptures/nt/rev/1.19"},"Rev. 1:19"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/27.23"},"3 Ne. 27:23"],"; )"]]],["div",{"id":"f4","uri":"/scriptures/tg/record-keeping.f4","order":".000.8573"},["ul.index",["li","I make a",["i","record"],"of my proceedings:",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/1.1"},"1 Ne. 1:1"],";"],["li","obtain these",["i","records"],", that we may preserve … language of our fathers:",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/3.19"},["span.padWord","1 Ne."],"3:19"],";"],["li",["i","record"],"of the Jews from the beginning:",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/5.12"},["span.padWord","1 Ne."],"5:12"],";"],["li","he and his fathers had kept the",["i","records"],":",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/5.16"},["span.padWord","1 Ne."],"5:16"],";"],["li","words of the Lamb shall be made known in the",["i","records"],":",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/13.41"},["span.padWord","1 Ne."],"13:41"],";"],["li","Nephi, had kept the",["i","records"],":",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/5.29"},"2 Ne. 5:29"],";"],["li","after this manner we keep the",["i","records"],":",["a.scriptureRef",{"href":"/scriptures/bofm/omni/1.9"},"Omni 1:9"],";"],["li","they had brought no",["i","records"],"with them:",["a.scriptureRef",{"href":"/scriptures/bofm/omni/1.17"},["span.padWord","Omni"],"1:17"],";"],["li","keep a",["i","record"],"of this people:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/37.2"},"Alma 37:2"],";"],["li","have the",["i","records"],"of the holy scriptures upon them:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/37.3"},["span.padWord","Alma"],"37:3"],";"],["li","Jesus commanded that it should be",["i","written"],":",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/23.13"},"3 Ne. 23:13"],";"],["li","hid up in the hill Cumorah all the",["i","records"],":",["a.scriptureRef",{"href":"/scriptures/bofm/morm/6.6"},"Morm. 6:6"],";"],["li","Moroni, do finish the",["i","record"],"of my father:",["a.scriptureRef",{"href":"/scriptures/bofm/morm/8.1"},["span.padWord","Morm."],"8:1"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/ether/13.1"},"Ether 13:1"],"; )"],["li","brother of Jared …",["i","write"],"the things which he had seen:",["a.scriptureRef",{"href":"/scriptures/bofm/ether/4.1"},"Ether 4:1"],";"]]],["div",{"id":"f5","uri":"/scriptures/tg/record-keeping.f5","order":".000.8574"},["ul.index",["li",["i","records"],"which contain much of my gospel:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/6.26"},"D&C 6:26"],";"],["li",["i","record"],"of a fallen people:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/20.9"},["span.padWord","D&C"],"20:9"],";"],["li","names may be blotted out of …",["i","record"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/20.83"},["span.padWord","D&C"],"20:83"],";"],["li","a",["i","record"],"kept among you:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/21.1"},["span.padWord","D&C"],"21:1"],";"],["li",["i","record"],"of the stick of Ephraim:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/27.5"},["span.padWord","D&C"],"27:5"],";"],["li","appointed … to keep the church",["i","record"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/47.3"},["span.padWord","D&C"],"47:3"],";"],["li","testimony … is",["i","recorded"],"in heaven:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/62.3"},["span.padWord","D&C"],"62:3"],";"],["li","These things shall be had on",["i","record"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/72.6"},["span.padWord","D&C"],"72:6"],";"],["li","Lord commanded us to",["i","write"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/76.80"},["span.padWord","D&C"],"76:80"],";"],["li","keep a history, and a general church",["i","record"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/85.1"},["span.padWord","D&C"],"85:1"],";"],["li","your prayers … are",["i","recorded"],"in the book:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.2"},["span.padWord","D&C"],"88:2"],";"],["li",["i","write"],"this commandment:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/90.32"},["span.padWord","D&C"],"90:32"],";"],["li","let all the",["i","records"],"be had in order:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/127.9"},["span.padWord","D&C"],"127:9"],";"],["li",["i","record"],"on earth shall be recorded in heaven:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/128.8"},["span.padWord","D&C"],"128:8"],";"]]],["div",{"id":"f6","uri":"/scriptures/tg/record-keeping.f6","order":".000.8575"},["ul.index",["li",["i","write"],"the words which I speak:",["a.scriptureRef",{"href":"/scriptures/pgp/moses/2.1"},"Moses 2:1"],";"],["li","book of remembrance was kept, in … which was",["i","recorded"],":",["a.scriptureRef",{"href":"/scriptures/pgp/moses/6.5"},["span.padWord","Moses"],"6:5"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/mal/3.16"},"Mal. 3:16"],"; )"],["li","the",["i","records"],"of the fathers … have I kept:",["a.scriptureRef",{"href":"/scriptures/pgp/abr/1.31"},"Abr. 1:31"],";"]]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/107.57"},"D&C 107:57"],";",["a.scriptureRef",{"href":"/scriptures/pgp/moses/1.23"},"Moses 1:23"]]]],"refs":null}
