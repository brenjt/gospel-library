{"id":2071,"parent_id":0,"book_id":7,"content_id":1,"language_id":1,"display_order":2071,"title":"Name of the Lord","subtitle":"","short_title":"Name of the Lord","uri":"/scriptures/tg/name-of-the-lord","content":[["div",{"id":"t1","uri":"/scriptures/tg/name-of-the-lord.t1","order":".000.6968"},[".title",["b","Name of the Lord"]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/tg/name"},"Name"]],["div",{"id":"f2","uri":"/scriptures/tg/name-of-the-lord.f2","order":".000.6969"},["ul.index",["li","began men to call upon the",["i","name of the Lord"],":",["a.scriptureRef",{"href":"/scriptures/ot/gen/4.26"},"Gen. 4:26"],";"],["li","an altar … and called upon the",["i","name of the Lord"],":",["a.scriptureRef",{"href":"/scriptures/ot/gen/12.8"},["span.padWord","Gen."],"12:8"],";"],["li","this is my",["i","name"],"for ever:",["a.scriptureRef",{"href":"/scriptures/ot/ex/3.15"},"Ex. 3:15"],";"],["li","by my",["i","name"],"Jehovah was I not known to them:",["a.scriptureRef",{"href":"/scriptures/ot/ex/6.3"},["span.padWord","Ex."],"6:3"],";"],["li","that my",["i","name"],"may be declared throughout all the earth:",["a.scriptureRef",{"href":"/scriptures/ot/ex/9.16"},["span.padWord","Ex."],"9:16"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/rom/9.17"},"Rom. 9:17"],"; )"],["li","not take the",["i","name of the Lord"],"thy God in vain:",["a.scriptureRef",{"href":"/scriptures/ot/ex/20.7"},["span.padWord","Ex."],"20:7"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/13.15"},"Mosiah 13:15"],"; )"],["li","neither shalt thou profane the",["i","name"],"of thy God:",["a.scriptureRef",{"href":"/scriptures/ot/lev/18.21"},"Lev. 18:21"],";"],["li","he that blasphemeth the",["i","name of the Lord"],":",["a.scriptureRef",{"href":"/scriptures/ot/lev/24.16"},["span.padWord","Lev."],"24:16"],";"],["li","put my",["i","name"],"upon the children of Israel:",["a.scriptureRef",{"href":"/scriptures/ot/num/6.27"},"Num. 6:27"],";"],["li","stand to minister in the",["i","name of the Lord"],":",["a.scriptureRef",{"href":"/scriptures/ot/deut/18.5"},"Deut. 18:5"],";"],["li","glorious and fearful",["i","name"],", The",["i","Lord"],"Thy God:",["a.scriptureRef",{"href":"/scriptures/ot/deut/28.58"},["span.padWord","Deut."],"28:58"],";"],["li","I will publish the",["i","name of the Lord"],":",["a.scriptureRef",{"href":"/scriptures/ot/deut/32.3"},["span.padWord","Deut."],"32:3"],";"],["li","I come to thee in the",["i","name of the Lord"],"of hosts:",["a.scriptureRef",{"href":"/scriptures/ot/1-sam/17.45"},"1 Sam. 17:45"],";"],["li","ark of God, whose",["i","name"],"is called by the",["i","name of the Lord"],":",["a.scriptureRef",{"href":"/scriptures/ot/2-sam/6.2"},"2 Sam. 6:2"],";"],["li","He shall build an house for my",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/ot/2-sam/7.13"},["span.padWord","2 Sam."],"7:13"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/1-kgs/8.19"},"1 Kgs. 8:19"],";",["a.scriptureRef",{"href":"/scriptures/ot/2-chr/6.9"},"2 Chr. 6:9"],"; )"],["li","In Jerusalem will I put my",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/ot/2-kgs/21.4"},"2 Kgs. 21:4"],";"],["li","Give unto the",["i","Lord"],"the glory due unto his",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/ot/1-chr/16.29"},"1 Chr. 16:29"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/ps/29.2"},"Ps. 29:2"],";",["a.scriptureRef",{"href":"/scriptures/ot/ps/96.8"},["span.padWord","Ps."],"96:8"],"; )"],["li","prophesied … in the",["i","name"],"of the God of Israel:",["a.scriptureRef",{"href":"/scriptures/ot/ezra/5.1"},"Ezra 5:1"],";"],["li","they that know thy",["i","name"],"will put their trust in thee:",["a.scriptureRef",{"href":"/scriptures/ot/ps/9.10"},"Ps. 9:10"],";"],["li","I will declare thy",["i","name"],"unto my brethren:",["a.scriptureRef",{"href":"/scriptures/ot/ps/22.22"},["span.padWord","Ps."],"22:22"],";"],["li","His",["i","name"],"shall endure for ever:",["a.scriptureRef",{"href":"/scriptures/ot/ps/72.17"},["span.padWord","Ps."],"72:17"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/ps/135.13"},["span.padWord","Ps."],"135:13"],"; )"],["li","thou, whose",["i","name"],"alone is Jehovah, art the most high:",["a.scriptureRef",{"href":"/scriptures/ot/ps/83.18"},["span.padWord","Ps."],"83:18"],";"],["li","give thanks … call upon his",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/105.1"},["span.padWord","Ps."],"105:1"],";"],["li","holy and reverend is his",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/111.9"},["span.padWord","Ps."],"111:9"],";"],["li","Blessed be he that cometh in the",["i","name of the Lord"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/118.26"},["span.padWord","Ps."],"118:26"],";"],["li","a virgin shall … bear a son, and shall call his",["i","name"],"Immanuel:",["a.scriptureRef",{"href":"/scriptures/ot/isa/7.14"},"Isa. 7:14"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/matt/1.23"},"Matt. 1:23"],";",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/17.14"},"2 Ne. 17:14"],"; )"],["li","his",["i","name"],"shall be called Wonderful, Counsellor:",["a.scriptureRef",{"href":"/scriptures/ot/isa/9.6"},["span.padWord","Isa."],"9:6"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/19.6"},"2 Ne. 19:6"],"; )"],["li","they shall sanctify my",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/ot/isa/29.23"},["span.padWord","Isa."],"29:23"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/27.34"},"2 Ne. 27:34"],"; )"],["li","I am the",["i","Lord"],": that is my",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/ot/isa/42.8"},["span.padWord","Isa."],"42:8"],";"],["li","Even every one that is called by my",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/ot/isa/43.7"},["span.padWord","Isa."],"43:7"],";"],["li","let him trust in the",["i","name of the Lord"],":",["a.scriptureRef",{"href":"/scriptures/ot/isa/50.10"},["span.padWord","Isa."],"50:10"],";"],["li","they were not called by thy",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/ot/isa/63.19"},["span.padWord","Isa."],"63:19"],";"],["li","a nation that was not called by my",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/ot/isa/65.1"},["span.padWord","Isa."],"65:1"],";"],["li","nations … gathered unto it, to the",["i","name of the Lord"],":",["a.scriptureRef",{"href":"/scriptures/ot/jer/3.17"},"Jer. 3:17"],";"],["li","shall call on the",["i","name of the Lord"],":",["a.scriptureRef",{"href":"/scriptures/ot/joel/2.32"},"Joel 2:32"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/rom/10.13"},"Rom. 10:13"],"; )"],["li","heathen, which are called by my",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/ot/amos/9.12"},"Amos 9:12"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/acts/15.17"},"Acts 15:17"],"; )"],["li","we will walk in the",["i","name of the Lord"],":",["a.scriptureRef",{"href":"/scriptures/ot/micah/4.5"},"Micah 4:5"],";"],["li","in that day shall there be one",["i","Lord"],", and his",["i","name"],"one:",["a.scriptureRef",{"href":"/scriptures/ot/zech/14.9"},"Zech. 14:9"],";"],["li","my",["i","name"],"shall be great among the Gentiles:",["a.scriptureRef",{"href":"/scriptures/ot/mal/1.11"},"Mal. 1:11"],";"]]],["div",{"id":"f3","uri":"/scriptures/tg/name-of-the-lord.f3","order":".000.6970"},["ul.index",["li","thou shalt call his",["i","name"],"Jesus:",["a.scriptureRef",{"href":"/scriptures/nt/matt/1.21"},"Matt. 1:21"],";"],["li","Hallowed be thy",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/6.9"},["span.padWord","Matt."],"6:9"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/luke/11.2"},"Luke 11:2"],";",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/13.9"},"3 Ne. 13:9"],"; )"],["li","in thy",["i","name"],"have cast out devils:",["a.scriptureRef",{"href":"/scriptures/nt/matt/7.22"},["span.padWord","Matt."],"7:22"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/14.22"},"3 Ne. 14:22"],"; )"],["li","hated of all men for my",["i","name’s"],"sake:",["a.scriptureRef",{"href":"/scriptures/nt/matt/10.22"},["span.padWord","Matt."],"10:22"],";"],["li","in his",["i","name"],"shall the Gentiles trust:",["a.scriptureRef",{"href":"/scriptures/nt/matt/12.21"},["span.padWord","Matt."],"12:21"],";"],["li","receive … child in my",["i","name"],"receiveth me:",["a.scriptureRef",{"href":"/scriptures/nt/matt/18.5"},["span.padWord","Matt."],"18:5"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/luke/9.48"},"Luke 9:48"],"; )"],["li","gathered together in my",["i","name"],", there am I:",["a.scriptureRef",{"href":"/scriptures/nt/matt/18.20"},["span.padWord","Matt."],"18:20"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/6.32"},"D&C 6:32"],"; )"],["li","forsaken … for my",["i","name’s"],"sake, shall receive an hundredfold:",["a.scriptureRef",{"href":"/scriptures/nt/matt/19.29"},["span.padWord","Matt."],"19:29"],";"],["li","many shall come in my",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/24.5"},["span.padWord","Matt."],"24:5"],"; (",["a.scriptureRef",{"href":"/scriptures/pgp/js-m/1.6"},"JS—M 1:6"],"; )"],["li","teach all nations, baptizing them in the",["i","name"],"of the Father:",["a.scriptureRef",{"href":"/scriptures/nt/matt/28.19"},["span.padWord","Matt."],"28:19"],";"],["li","no man which shall do a miracle in my",["i","name"],"… speak evil of me:",["a.scriptureRef",{"href":"/scriptures/nt/mark/9.39"},"Mark 9:39"],";"],["li","In my",["i","name"],"shall they cast out devils:",["a.scriptureRef",{"href":"/scriptures/nt/mark/16.17"},["span.padWord","Mark"],"16:17"],";"],["li","Jesus … so",["i","named"],"of the angel before he was conceived:",["a.scriptureRef",{"href":"/scriptures/nt/luke/2.21"},"Luke 2:21"],";"],["li","to them that believe on his",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/1.12"},"John 1:12"],";"],["li","many believed in his",["i","name"],", when they saw the miracles:",["a.scriptureRef",{"href":"/scriptures/nt/john/2.23"},["span.padWord","John"],"2:23"],";"],["li","works that I do in my Father’s",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/10.25"},["span.padWord","John"],"10:25"],";"],["li","whatsoever ye shall ask in my",["i","name"],", that will I do:",["a.scriptureRef",{"href":"/scriptures/nt/john/14.13"},["span.padWord","John"],"14:13"],";"],["li","Holy Ghost … Father will send in my",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/14.26"},["span.padWord","John"],"14:26"],";"],["li","ask of the Father in my",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/15.16"},["span.padWord","John"],"15:16"],";"],["li","I have declared unto them thy",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/17.26"},["span.padWord","John"],"17:26"],";"],["li","believing ye might have life through his",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/20.31"},["span.padWord","John"],"20:31"],";"],["li","be baptized … in the",["i","name"],"of Jesus Christ:",["a.scriptureRef",{"href":"/scriptures/nt/acts/2.38"},"Acts 2:38"],";"],["li","In the",["i","name"],"of Jesus Christ of Nazareth rise up and walk:",["a.scriptureRef",{"href":"/scriptures/nt/acts/3.6"},["span.padWord","Acts"],"3:6"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/acts/4.10"},["span.padWord","Acts"],"4:10"],"; )"],["li","By what power, or by what",["i","name"],", have ye done this:",["a.scriptureRef",{"href":"/scriptures/nt/acts/4.7"},["span.padWord","Acts"],"4:7"],";"],["li","there is none other",["i","name"],"… whereby we must be saved:",["a.scriptureRef",{"href":"/scriptures/nt/acts/4.12"},["span.padWord","Acts"],"4:12"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/25.20"},"2 Ne. 25:20"],";",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/31.21"},["span.padWord","2 Ne."],"31:21"],";",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/3.17"},"Mosiah 3:17"],"; )"],["li","that ye should not teach in this",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/5.28"},["span.padWord","Acts"],"5:28"],";"],["li","worthy to suffer shame for his",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/5.41"},["span.padWord","Acts"],"5:41"],";"],["li","chosen vessel unto me, to bear my",["i","name"],"before the Gentiles:",["a.scriptureRef",{"href":"/scriptures/nt/acts/9.15"},["span.padWord","Acts"],"9:15"],";"],["li","through his",["i","name"],"whosoever believeth … receive remission of sins:",["a.scriptureRef",{"href":"/scriptures/nt/acts/10.43"},["span.padWord","Acts"],"10:43"],";"],["li","Gentiles, to take out of them a people for his",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/15.14"},["span.padWord","Acts"],"15:14"],";"],["li","do many things contrary to the",["i","name"],"of Jesus:",["a.scriptureRef",{"href":"/scriptures/nt/acts/26.9"},["span.padWord","Acts"],"26:9"],";"],["li",["i","name"],"of God is blasphemed among the Gentiles:",["a.scriptureRef",{"href":"/scriptures/nt/rom/2.24"},"Rom. 2:24"],";"],["li","Far above … every",["i","name"],"that is",["i","named"],":",["a.scriptureRef",{"href":"/scriptures/nt/eph/1.21"},"Eph. 1:21"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/philip/2.9"},"Philip. 2:9"],"; )"],["li","do all in the",["i","name of the Lord"],":",["a.scriptureRef",{"href":"/scriptures/nt/col/3.17"},"Col. 3:17"],";"],["li","he hath by inheritance obtained a more excellent",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/nt/heb/1.4"},"Heb. 1:4"],";"],["li","I will declare thy",["i","name"],"unto my brethren:",["a.scriptureRef",{"href":"/scriptures/nt/heb/2.12"},["span.padWord","Heb."],"2:12"],";"],["li","love, which ye have shewed toward his",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/nt/heb/6.10"},["span.padWord","Heb."],"6:10"],";"],["li","Do not they blaspheme that worthy",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/nt/james/2.7"},"James 2:7"],";"],["li","If ye be reproached for the",["i","name"],"of Christ, happy are ye:",["a.scriptureRef",{"href":"/scriptures/nt/1-pet/4.14"},"1 Pet. 4:14"],";"],["li","believe on the",["i","name"],"of his Son Jesus Christ:",["a.scriptureRef",{"href":"/scriptures/nt/1-jn/3.23"},"1 Jn. 3:23"],";"],["li","thou holdest fast my",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/nt/rev/2.13"},"Rev. 2:13"],";"],["li","to blaspheme his",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/nt/rev/13.6"},["span.padWord","Rev."],"13:6"],";"],["li","having his Father’s",["i","name"],"written in their foreheads:",["a.scriptureRef",{"href":"/scriptures/nt/rev/14.1"},["span.padWord","Rev."],"14:1"],";"],["li","a",["i","name"],"written, that no man knew, but he himself:",["a.scriptureRef",{"href":"/scriptures/nt/rev/19.12"},["span.padWord","Rev."],"19:12"],";"],["li","his",["i","name"],"is called The Word of God:",["a.scriptureRef",{"href":"/scriptures/nt/rev/19.13"},["span.padWord","Rev."],"19:13"],";"],["li","his",["i","name"],"shall be in their foreheads:",["a.scriptureRef",{"href":"/scriptures/nt/rev/22.4"},["span.padWord","Rev."],"22:4"],";"]]],["div",{"id":"f4","uri":"/scriptures/tg/name-of-the-lord.f4","order":".000.6971"},["ul.index",["li","In the",["i","name"],"of the Almighty God, I command you:",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/17.48"},"1 Ne. 17:48"],";"],["li","I will not suffer my",["i","name"],"to be polluted:",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/20.11"},["span.padWord","1 Ne."],"20:11"],";"],["li","he cannot be deceived, for the",["i","Lord"],"God is his",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/9.41"},"2 Ne. 9:41"],";"],["li","Christ— … angel spake unto me that this should be his",["i","name"],":",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/10.3"},["span.padWord","2 Ne."],"10:3"],";"],["li","his",["i","name"],"shall be Jesus Christ:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/25.19"},["span.padWord","2 Ne."],"25:19"],";"],["li","take upon you the",["i","name"],"of Christ:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/31.13"},["spa