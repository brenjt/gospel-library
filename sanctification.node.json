{"id":2686,"parent_id":0,"book_id":7,"content_id":1,"language_id":1,"display_order":2686,"title":"Sanctification, Sanctify","subtitle":"","short_title":"Sanctification, Sanctify","uri":"/scriptures/tg/sanctification","content":[["div",{"id":"t1","uri":"/scriptures/tg/sanctification.t1","order":".000.9223"},[".title",["b","Sanctification, Sanctify"]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/tg/consecrate"},"Consecrate"],";",["a.scriptureRef",{"href":"/scriptures/tg/consecration"},"Consecration"],";",["a.scriptureRef",{"href":"/scriptures/tg/earth-destiny-of"},"Earth, Destiny of"],";",["a.scriptureRef",{"href":"/scriptures/tg/earth-purpose-of"},"Earth, Purpose of"],";",["a.scriptureRef",{"href":"/scriptures/tg/hallow"},"Hallow"],";",["a.scriptureRef",{"href":"/scriptures/tg/holiness"},"Holiness"],";",["a.scriptureRef",{"href":"/scriptures/tg/holy-ghost-baptism-of"},"Holy Ghost, Baptism of"],";",["a.scriptureRef",{"href":"/scriptures/tg/jesus-christ-atonement-through"},"Jesus Christ, Atonement through"],";",["a.scriptureRef",{"href":"/scriptures/tg/justification"},"Justification"],";",["a.scriptureRef",{"href":"/scriptures/tg/man-new-spiritually-reborn"},"Man, New, Spiritually Reborn"],";",["a.scriptureRef",{"href":"/scriptures/tg/purification"},"Purification"],";",["a.scriptureRef",{"href":"/scriptures/tg/righteousness"},"Righteousness"],";",["a.scriptureRef",{"href":"/scriptures/tg/sacred"},"Sacred"],";",["a.scriptureRef",{"href":"/scriptures/tg/separation"},"Separation"]],["div",{"id":"f2","uri":"/scriptures/tg/sanctification.f2","order":".000.9224"},["ul.index",["li","God blessed the seventh day, and",["i","sanctified"],"it:",["a.scriptureRef",{"href":"/scriptures/ot/gen/2.3"},"Gen. 2:3"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/77.12"},"D&C 77:12"],";",["a.scriptureRef",{"href":"/scriptures/pgp/moses/3.3"},"Moses 3:3"],"; )"],["li",["i","Sanctify"],"unto me all the firstborn:",["a.scriptureRef",{"href":"/scriptures/ot/ex/13.2"},"Ex. 13:2"],";"],["li","Go unto the people, and",["i","sanctify"],"them:",["a.scriptureRef",{"href":"/scriptures/ot/ex/19.10"},["span.padWord","Ex."],"19:10"],";"],["li","I will be",["i","sanctified"],"in them that come nigh me:",["a.scriptureRef",{"href":"/scriptures/ot/lev/10.3"},"Lev. 10:3"],";"],["li",["i","sanctify"],"yourselves, and ye shall be holy:",["a.scriptureRef",{"href":"/scriptures/ot/lev/11.44"},["span.padWord","Lev."],"11:44"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/lev/20.7"},["span.padWord","Lev."],"20:7"],"; )"],["li","when a man shall",["i","sanctify"],"his house to be holy:",["a.scriptureRef",{"href":"/scriptures/ot/lev/27.14"},["span.padWord","Lev."],"27:14"],";"],["li","firstborn … I",["i","sanctified"],"them for myself:",["a.scriptureRef",{"href":"/scriptures/ot/num/8.17"},"Num. 8:17"],";"],["li","believed me not, to",["i","sanctify"],"me:",["a.scriptureRef",{"href":"/scriptures/ot/num/20.12"},["span.padWord","Num."],"20:12"],";"],["li","Keep the sabbath day to",["i","sanctify"],"it:",["a.scriptureRef",{"href":"/scriptures/ot/deut/5.12"},"Deut. 5:12"],";"],["li","firstling males … thou shalt",["i","sanctify"],"unto the Lord:",["a.scriptureRef",{"href":"/scriptures/ot/deut/15.19"},["span.padWord","Deut."],"15:19"],";"],["li","ye",["i","sanctified"],"me not in the midst of … Israel:",["a.scriptureRef",{"href":"/scriptures/ot/deut/32.51"},["span.padWord","Deut."],"32:51"],";"],["li","they",["i","sanctified"],"the house of the Lord in eight days:",["a.scriptureRef",{"href":"/scriptures/ot/2-chr/29.17"},"2 Chr. 29:17"],";"],["li","they shall",["i","sanctify"],"my name, and",["i","sanctify"],"the Holy One:",["a.scriptureRef",{"href":"/scriptures/ot/isa/29.23"},"Isa. 29:23"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/27.34"},"2 Ne. 27:34"],"; )"],["li","before thou camest forth out of the womb I",["i","sanctified"],"thee:",["a.scriptureRef",{"href":"/scriptures/ot/jer/1.5"},"Jer. 1:5"],";"],["li","I am the Lord that",["i","sanctify"],"them:",["a.scriptureRef",{"href":"/scriptures/ot/ezek/20.12"},"Ezek. 20:12"],";"],["li","I will be",["i","sanctified"],"in you before the heathen:",["a.scriptureRef",{"href":"/scriptures/ot/ezek/20.41"},["span.padWord","Ezek."],"20:41"],";"],["li","I shall be",["i","sanctified"],"in you before their eyes:",["a.scriptureRef",{"href":"/scriptures/ot/ezek/36.23"},["span.padWord","Ezek."],"36:23"],";"],["li","heathen shall know that I the Lord do",["i","sanctify"],":",["a.scriptureRef",{"href":"/scriptures/ot/ezek/37.28"},["span.padWord","Ezek."],"37:28"],";"],["li","Thus will I …",["i","sanctify"],"myself:",["a.scriptureRef",{"href":"/scriptures/ot/ezek/38.23"},["span.padWord","Ezek."],"38:23"],";"],["li",["i","Sanctify"],"ye a fast:",["a.scriptureRef",{"href":"/scriptures/ot/joel/1.14"},"Joel 1:14"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/joel/2.15"},["span.padWord","Joel"],"2:15"],"; )"]]],["div",{"id":"f3","uri":"/scriptures/tg/sanctification.f3","order":".000.9225"},["ul.index",["li","whom the Father hath",["i","sanctified"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/10.36"},"John 10:36"],";"],["li",["i","Sanctify"],"them through thy truth:",["a.scriptureRef",{"href":"/scriptures/nt/john/17.17"},["span.padWord","John"],"17:17"],";"],["li","them which are",["i","sanctified"],"by faith that is in me:",["a.scriptureRef",{"href":"/scriptures/nt/acts/26.18"},"Acts 26:18"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/ether/4.7"},"Ether 4:7"],"; )"],["li","them that are",["i","sanctified"],"in Christ Jesus:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/1.2"},"1 Cor. 1:2"],";"],["li","Jesus, who of God is made unto us …",["i","sanctification"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/1.30"},["span.padWord","1 Cor."],"1:30"],";"],["li",["i","sanctified"],"… by the Spirit of our God:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/6.11"},["span.padWord","1 Cor."],"6:11"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/alma/5.54"},"Alma 5:54"],";",["a.scriptureRef",{"href":"/scriptures/bofm/alma/13.12"},["span.padWord","Alma"],"13:12"],";",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/27.20"},"3 Ne. 27:20"],"; )"],["li","unbelieving husband is",["i","sanctified"],"by the wife:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/7.14"},["span.padWord","1 Cor."],"7:14"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/74.1"},"D&C 74:1"],"; )"],["li",["i","sanctify"],"and cleanse it with the washing of water:",["a.scriptureRef",{"href":"/scriptures/nt/eph/5.26"},"Eph. 5:26"],";"],["li","possess his vessel in",["i","sanctification"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-thes/4.4"},"1 Thes. 4:4"],";"],["li","God of peace",["i","sanctify"],"you wholly:",["a.scriptureRef",{"href":"/scriptures/nt/1-thes/5.23"},["span.padWord","1 Thes."],"5:23"],";"],["li","salvation through",["i","sanctification"],"of the Spirit:",["a.scriptureRef",{"href":"/scriptures/nt/2-thes/2.13"},"2 Thes. 2:13"],";"],["li",["i","sanctified"],"by the word of God and prayer:",["a.scriptureRef",{"href":"/scriptures/nt/1-tim/4.5"},"1 Tim. 4:5"],";"],["li","who are",["i","sanctified"],"are all of one:",["a.scriptureRef",{"href":"/scriptures/nt/heb/2.11"},"Heb. 2:11"],";"],["li",["i","sanctified"],"through the offering of the body of Jesus:",["a.scriptureRef",{"href":"/scriptures/nt/heb/10.10"},["span.padWord","Heb."],"10:10"],";"],["li",["i","sanctify"],"the people with his own blood:",["a.scriptureRef",{"href":"/scriptures/nt/heb/13.12"},["span.padWord","Heb."],"13:12"],";"],["li","Elect … through",["i","sanctification"],"of the Spirit:",["a.scriptureRef",{"href":"/scriptures/nt/1-pet/1.2"},"1 Pet. 1:2"],";"],["li",["i","sanctify"],"the Lord God in your hearts:",["a.scriptureRef",{"href":"/scriptures/nt/1-pet/3.15"},["span.padWord","1 Pet."],"3:15"],";"],["li","to them that are",["i","sanctified"],"by God the Father:",["a.scriptureRef",{"href":"/scriptures/nt/jude/1.1"},"Jude 1:1"],";"]]],["div",{"id":"f4","uri":"/scriptures/tg/sanctification.f4","order":".000.9226"},["ul.index",["li","God … shall be",["i","sanctified"],"in righteousness:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/15.16"},"2 Ne. 15:16"],";"],["li",["i","sanctification"],"cometh because of their yielding their hearts unto God:",["a.scriptureRef",{"href":"/scriptures/bofm/hel/3.35"},"Hel. 3:35"],";"],["li","they were",["i","sanctified"],"in the flesh:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/28.39"},"3 Ne. 28:39"],";"],["li","bless and",["i","sanctify"],"this bread:",["a.scriptureRef",{"href":"/scriptures/bofm/moro/4.3"},"Moro. 4:3"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/20.77"},"D&C 20:77"],"; )"],["li","bless and",["i","sanctify"],"this wine:",["a.scriptureRef",{"href":"/scriptures/bofm/moro/5.2"},["span.padWord","Moro."],"5:2"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/20.79"},"D&C 20:79"],"; )"],["li",["i","sanctified"],"… unto the remission of your sins:",["a.scriptureRef",{"href":"/scriptures/bofm/moro/10.33"},["span.padWord","Moro."],"10:33"],";"]]],["div",{"id":"f5","uri":"/scriptures/tg/sanctification.f5","order":".000.9227"},["ul.index",["li",["i","sanctification"],"through the grace of our Lord:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/20.31"},"D&C 20:31"],";"],["li","let those who are",["i","sanctified"],"take heed:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/20.34"},["span.padWord","D&C"],"20:34"],";"],["li",["i","sanctified"],"… to act in all holiness:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/43.9"},["span.padWord","D&C"],"43:9"],";"],["li",["i","Sanctify"],"yourselves and ye shall be endowed with power:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/43.16"},["span.padWord","D&C"],"43:16"],";"],["li",["i","sanctified"],"before his throne:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/76.21"},["span.padWord","D&C"],"76:21"],";"],["li","he came … to",["i","sanctify"],"the world:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/76.41"},["span.padWord","D&C"],"76:41"],";"],["li","earth, in its",["i","sanctified"],"… state:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/77.1"},["span.padWord","D&C"],"77:1"],";"],["li","beginning of the seventh thousand years …",["i","sanctify"],"the earth:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/77.12"},["span.padWord","D&C"],"77:12"],";"],["li",["i","sanctify"],"his people that they might behold the face of God:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/84.23"},["span.padWord","D&C"],"84:23"],";"],["li",["i","sanctified"],"by the Spirit unto the renewing of their bodies:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/84.33"},["span.padWord","D&C"],"84:33"],";"],["li","book of the names of the",["i","sanctified"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.2"},["span.padWord","D&C"],"88:2"],";"],["li",["i","sanctified"],"through … the law of Christ:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.21"},["span.padWord","D&C"],"88:21"],";"],["li",["i","sanctify"],"yourselves that your minds become single to God:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.68"},["span.padWord","D&C"],"88:68"],";"],["li","glory of God, and the",["i","sanctified"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.116"},["span.padWord","D&C"],"88:116"],";"],["li","those who … deny me, cannot be",["i","sanctified"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/101.5"},["span.padWord","D&C"],"101:5"],";"],["li","let my army … be",["i","sanctified"],"before me:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/105.31"},["span.padWord","D&C"],"105:31"],";"],["li","those that are chosen … shall be",["i","sanctified"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/105.36"},["span.padWord","D&C"],"105:36"],";"],["li","unto him that repenteth and",["i","sanctifieth"],"himself … eternal life:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/133.62"},["span.padWord","D&C"],"133:62"],";"]]],["div",{"id":"f6","uri":"/scriptures/tg/sanctification.f6","order":".000.9228"},["ul.index",["li","by the blood ye are",["i","sanctified"],":",["a.scriptureRef",{"href":"/scriptures/pgp/moses/6.60"},"Moses 6:60"],";"],["li","they that mourn may be",["i","sanctified"],":",["a.scriptureRef",{"href":"/scriptures/pgp/moses/7.45"},["span.padWord","Moses"],"7:45"],";"],["li","the Gods concluded upon the seventh time … and",["i","sanctified"],"it:",["a.scriptureRef",{"href":"/scriptures/pgp/abr/5.3"},"Abr. 5:3"],";"]]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/5.7"},"Mosiah 5:7"],";",["a.scriptureRef",{"href":"/scriptures/bofm/alma/5.14"},"Alma 5:14"]]]],"refs":null}
