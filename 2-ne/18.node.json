,{"id":"20a","uri":"/scriptures/bofm/2-ne/18.20a","order":"05.13.018.5212"},["b","20a"],["a.scriptureRef",{"href":"/scriptures/nt/luke/16.29.29-31"},"Luke 16:29 (29–31)"],"."],["div",{"id":"22a","uri":"/scriptures/bofm/2-ne/18.22a","order":"05.13.018.5214"},["b","22a"],["a.scriptureRef",{"href":"/scriptures/ot/isa/5.30"},"Isa. 5:30"],"."]]}
