div",{"id":"10c","uri":"/scriptures/bofm/3-ne/16.10c","order":"05.22.016.22183"},["b","10c"],["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/30.2"},"3 Ne. 30:2"],";",["a.scriptureRef",{"href":"/scriptures/bofm/morm/8.31"},"Morm. 8:31"],"."],["div",{"id":"10d","uri":"/scriptures/bofm/3-ne/16.10d","order":"05.22.016.22185"},["b","10d"],["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/26.29"},"2 Ne. 26:29"],".",["a.scriptureRef",{"href":"/scriptures/tg/priestcraft"},"TG Priestcraft"],"."],["div",{"id":"10e","uri":"/scriptures/bofm/3-ne/16.10e","order":"05.22.016.22187"},["b","10e"],["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/20.28.27-28"},"3 Ne. 20:28 (27–28)"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/6.31"},"D&C 6:31"],"."],["div",{"id":"11a","uri":"/scriptures/bofm/3-ne/16.11a","order":"05.22.016.22189"},["b","11a"],["a.scriptureRef",{"href":"/scriptures/ot/isa/44.21"},"Isa. 44:21"],";",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/20.29.28-31"},"3 Ne. 20:29 (28–31)"],";",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/21.4.1-11"},"21:4 (1–11)"],";",["a.scriptureRef",{"href":"/scriptures/bofm/morm/5.20"},"Morm. 5:20"],"."],["div",{"id":"12a","uri":"/scriptures/bofm/3-ne/16.12a","order":"05.22.016.22191"},["b","12a"],["a.scriptureRef",{"href":"/scriptures/bofm/hel/15.13"},"Hel. 15:13"],".",["a.scriptureRef",{"href":"/scriptures/tg/israel-restoration-of"},"TG Israel, Restoration of"],";",["a.scriptureRef",{"href":"/scriptures/tg/knowledge"},"Knowledge"],"."],["div",{"id":"13a","uri":"/scriptures/bofm/3-ne/16.13a","order":"05.22.016.22193"},["b","13a"],["a.scriptureRef",{"href":"/scriptures/nt/gal/3.7.7,29"},"Gal. 3:7 (7, 29)"],";",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/15.13.13-17"},"1 Ne. 15:13 (13–17)"],";",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/22.9.5-10"},"22:9 (5–10)"],";",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/10.18.18-19"},"2 Ne. 10:18 (18–19)"],";",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/30.2"},"3 Ne. 30:2"],";",["a.scriptureRef",{"href":"/scriptures/pgp/abr/2.10.9-11"},"Abr. 2:10 (9–11)"],"."],["div",{"id":"15a","uri":"/scriptures/bofm/3-ne/16.15a","order":"05.22.016.22195"},["b","15a"],["a.scriptureRef",{"href":"/scriptures/ot/micah/5.8.8-15"},"Micah 5:8 (8–15)"],";",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/20.16"},"3 Ne. 20:16"],";",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/21.12.12-21"},"21:12 (12–21)"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/87.5"},"D&C 87:5"],"."],["div",{"id":"16a","uri":"/scriptures/bofm/3-ne/16.16a","order":"05.22.016.22197"},["b","16a"],["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/15.13"},"3 Ne. 15:13"],"."],["div",{"id":"17a","uri":"/scriptures/bofm/3-ne/16.17a","order":"05.22.016.22199"},["b","17a"],["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/20.11"},"3 Ne. 20:11"],"."],["div",{"id":"18a","uri":"/scriptures/bofm/3-ne/16.18a","order":"05.22.016.22201"},["b","18a"],["a.scriptureRef",{"href":"/scriptures/ot/isa/52.8.8-10"},"Isa. 52:8 (8–10)"],";",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/20.32"},"3 Ne. 20:32"],"."],["div",{"id":"18b","uri":"/scriptures/bofm/3-ne/16.18b","order":"05.22.016.22203"},["b","18b"],["a.scriptureRef",{"href":"/scriptures/ot/ezek/33.2.2,7"},"Ezek. 33:2 (2, 7)"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/101.45.45,53-54"},"D&C 101:45 (45, 53–54)"],".",["a.scriptureRef",{"href":"/scriptures/tg/watchman"},"TG Watchman"],"."]]}
