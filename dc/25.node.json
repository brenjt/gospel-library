of"],";",["a.scriptureRef",{"href":"/scriptures/tg/revelation"},"Revelation"],"."],["div",{"id":"10a","uri":"/scriptures/dc-testament/dc/25.10a","order":"06.05.025.3163"},["b","10a"],["a.scriptureRef",{"href":"/scriptures/tg/covet"},"TG Covet"],"."],["div",{"id":"10b","uri":"/scriptures/dc-testament/dc/25.10b","order":"06.05.025.3165"},["b","10b"],["a.scriptureRef",{"href":"/scriptures/nt/2-cor/6.17"},"2 Cor. 6:17"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/30.2"},"D&C 30:2"],".",["a.scriptureRef",{"href":"/scriptures/tg/treasure"},"TG Treasure"],";",["a.scriptureRef",{"href":"/scriptures/tg/world"},"World"],"."],["div",{"id":"10c","uri":"/scriptures/dc-testament/dc/25.10c","order":"06.05.025.3167"},["b","10c"],["a.scriptureRef",{"href":"/scriptures/bofm/ether/12.4"},"Ether 12:4"],"."],["div",{"id":"10d","uri":"/scriptures/dc-testament/dc/25.10d","order":"06.05.025.3169"},["b","10d"],["a.scriptureRef",{"href":"/scriptures/tg/reward"},"TG Reward"],"."],["div",{"id":"11a","uri":"/scriptures/dc-testament/dc/25.11a","order":"06.05.025.3171"},["b","11a"],["a.scriptureRef",{"href":"/scriptures/tg/sacred"},"TG Sacred"],"."],["div",{"id":"11b","uri":"/scriptures/dc-testament/dc/25.11b","order":"06.05.025.3173"},["b","11b"],["a.scriptureRef",{"href":"/scriptures/nt/eph/5.19.19-20"},"Eph. 5:19 (19–20)"],"."],["div",{"id":"12a","uri":"/scriptures/dc-testament/dc/25.12a","order":"06.05.025.3175"},["b","12a"],["a.scriptureRef",{"href":"/scriptures/tg/god-the-standard-of-righteousness"},"TG God, the Standard of Righteousness"],"."],["div",{"id":"12b","uri":"/scriptures/dc-testament/dc/25.12b","order":"06.05.025.3177"},["b","12b"],["a.scriptureRef",{"href":"/scriptures/tg/communication"},"TG Communication"],"."],["div",{"id":"12c","uri":"/scriptures/dc-testament/dc/25.12c","order":"06.05.025.3179"},["b","12c"],["a.scriptureRef",{"href":"/scriptures/tg/heart"},"TG Heart"],"."],["div",{"id":"12d","uri":"/scriptures/dc-testament/dc/25.12d","order":"06.05.025.3181"},["b","12d"],["a.scriptureRef",{"href":"/scriptures/ot/1-chr/16.9"},"1 Chr. 16:9"],";",["a.scriptureRef",{"href":"/scriptures/ot/ps/33.3"},"Ps. 33:3"],";",["a.scriptureRef",{"href":"/scriptures/ot/ps/96.1"},"96:1"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/25.11"},"D&C 25:11"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/136.28"},"136:28"],".",["a.scriptureRef",{"href":"/scriptures/tg/prayer"},"TG Prayer"],";",["a.scriptureRef",{"href":"/scriptures/tg/singing"},"Singing"],"."],["div",{"id":"13a","uri":"/scriptures/dc-testament/dc/25.13a","order":"06.05.025.3183"},["b","13a"],["a.scriptureRef",{"href":"/scriptures/ot/lam/3.41"},"Lam. 3:41"],"."],["div",{"id":"13b","uri":"/scriptures/dc-testament/dc/25.13b","order":"06.05.025.3185"},["b","13b"],["a.scriptureRef",{"href":"/scriptures/tg/joy"},"TG Joy"],"."],["div",{"id":"14a","uri":"/scriptures/dc-testament/dc/25.14a","order":"06.05.025.3187"},["b","14a"],["a.scriptureRef",{"href":"/scriptures/tg/meek"},"TG Meek"],";",["a.scriptureRef",{"href":"/scriptures/tg/pride"},"Pride"],"."],["div",{"id":"14b","uri":"/scriptures/dc-testament/dc/25.14b","order":"06.05.025.3189"},["b","14b"],["a.scriptureRef",{"href":"/scriptures/tg/family-love-within"},"TG Family, Love within"],";",["a.scriptureRef",{"href":"/scriptures/tg/marriage-continuing-courtship-in"},"Marriage, Continuing Courtship in"],"."],["div",{"id":"14c","uri":"/scriptures/dc-testament/dc/25.14c","order":"06.05.025.3191"},["b","14c"],["a.scriptureRef",{"href":"/scriptures/tg/glory"},"TG Glory"],"."],["div",{"id":"15a","uri":"/scriptures/dc-testament/dc/25.15a","order":"06.05.025.3193"},["b","15a"],["a.scriptureRef",{"href":"/scriptures/tg/exaltation"},"TG Exaltation"],"."],["div",{"id":"15b","uri":"/scriptures/dc-testament/dc/25.15b","order":"06.05.025.3195"},["b","15b"],["a.scriptureRef",{"href":"/scriptures/tg/righteousness"},"TG Righteousness"],"."],["div",{"id":"15c","uri":"/scriptures/dc-testament/dc/25.15c","order":"06.05.025.3197"},["b","15c"],["a.scriptureRef",{"href":"/scriptures/nt/john/7.34"},"John 7:34"],"."],["div",{"id":"16a","uri":"/scriptures/dc-testament/dc/25.16a","order":"06.05.025.3199"},["b","16a"],["a.scriptureRef",{"href":"/scriptures/ot/jer/42.6"},"Jer. 42:6"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/1.38"},"D&C 1:38"],"."]]}
