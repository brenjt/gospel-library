n"],"."],["div",{"id":"19a","uri":"/scriptures/nt/1-cor/3.19a","order":"03.09.003.17009"},["b","19a"],["a.scriptureRef",{"href":"/scriptures/tg/god-wisdom-of"},"TG God, Wisdom of"],";",["a.scriptureRef",{"href":"/scriptures/tg/knowledge"},"Knowledge"],";",["a.scriptureRef",{"href":"/scriptures/tg/wisdom"},"Wisdom"],"."],["div",{"id":"19b","uri":"/scriptures/nt/1-cor/3.19b","order":"03.09.003.17011"},["b","19b"],["a.scriptureRef",{"href":"/scriptures/tg/world"},"TG World"],";",["a.scriptureRef",{"href":"/scriptures/tg/worldliness"},"Worldliness"],"."],["div",{"id":"19c","uri":"/scriptures/nt/1-cor/3.19c","order":"03.09.003.17013"},["b","19c"],["a.scriptureRef",{"href":"/scriptures/tg/foolishness"},"TG Foolishness"],"."],["div",{"id":"19d","uri":"/scriptures/nt/1-cor/3.19d","order":"03.09.003.17015"},["b","19d"],["span.small","GR"],"cunning, villainy."],["div",{"id":"20a","uri":"/scriptures/nt/1-cor/3.20a","order":"03.09.003.17017"},["b","20a"],["a.scriptureRef",{"href":"/scriptures/tg/god-omniscience-of"},"TG God, Omniscience of"],"."],["div",{"id":"20b","uri":"/scriptures/nt/1-cor/3.20b","order":"03.09.003.17019"},["b","20b"],["span.small","GR"],"deceptive, fruitless."],["div",{"id":"21a","uri":"/scriptures/nt/1-cor/3.21a","order":"03.09.003.17021"},["b","21a"],["a.scriptureRef",{"href":"/scriptures/nt/1-cor/5.6"},"1 Cor. 5:6"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/76.61.58-62"},"D&C 76:61 (58–62)"],"."],["div",{"id":"22a","uri":"/scriptures/nt/1-cor/3.22a","order":"03.09.003.17023"},["b","22a"],["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/76.99"},"D&C 76:99"],"."],["div",{"id":"22b","uri":"/scriptures/nt/1-cor/3.22b","order":"03.09.003.17025"},["b","22b"],["a.scriptureRef",{"href":"/scriptures/nt/luke/12.44"},"Luke 12:44"],"."],["div",{"id":"23a","uri":"/scriptures/nt/1-cor/3.23a","order":"03.09.003.17027"},["b","23a"],["a.scriptureRef",{"href":"/scriptures/nt/2-cor/10.7"},"2 Cor. 10:7"],"."]]}
