":",["a.scriptureRef",{"href":"/scriptures/ot/1-sam/12.23"},["span.padWord","1 Sam."],"12:23"],";"],["li","his",["i","way"],"is perfect:",["a.scriptureRef",{"href":"/scriptures/ot/2-sam/22.31"},"2 Sam. 22:31"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/ps/18.30"},"Ps. 18:30"],"; )"],["li","Teach me thy",["i","way"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/27.11"},"Ps. 27:11"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/ps/86.11"},["span.padWord","Ps."],"86:11"],"; )"],["li","Commit thy",["i","way"],"unto the Lord:",["a.scriptureRef",{"href":"/scriptures/ot/ps/37.5"},["span.padWord","Ps."],"37:5"],";"],["li","will I teach transgressors thy",["i","ways"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/51.13"},["span.padWord","Ps."],"51:13"],";"],["li","That thy",["i","way"],"may be known upon earth:",["a.scriptureRef",{"href":"/scriptures/ot/ps/67.2"},["span.padWord","Ps."],"67:2"],";"],["li","they have not known my",["i","ways"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/95.10"},["span.padWord","Ps."],"95:10"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/jer/5.4"},"Jer. 5:4"],";",["a.scriptureRef",{"href":"/scriptures/nt/heb/3.10"},"Heb. 3:10"],"; )"],["li",["i","ways"],"of man are before the eyes of the Lord:",["a.scriptureRef",{"href":"/scriptures/ot/prov/5.21"},"Prov. 5:21"],";"],["li",["i","way"],"of the Lord is strength:",["a.scriptureRef",{"href":"/scriptures/ot/prov/10.29"},["span.padWord","Prov."],"10:29"],";"],["li",["i","way"],"of transgressors is hard:",["a.scriptureRef",{"href":"/scriptures/ot/prov/13.15"},["span.padWord","Prov."],"13:15"],";"],["li",["i","way"],"of the slothful man is as an hedge of thorns:",["a.scriptureRef",{"href":"/scriptures/ot/prov/15.19"},["span.padWord","Prov."],"15:19"],";"],["li",["i","way"],"of life is above to the wise:",["a.scriptureRef",{"href":"/scriptures/ot/prov/15.24"},["span.padWord","Prov."],"15:24"],";"],["li","Train up a child in the",["i","way"],"he should go:",["a.scriptureRef",{"href":"/scriptures/ot/prov/22.6"},["span.padWord","Prov."],"22:6"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/4.5"},"2 Ne. 4:5"],"; )"],["li","he will teach us of his",["i","ways"],":",["a.scriptureRef",{"href":"/scriptures/ot/isa/2.3"},"Isa. 2:3"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/micah/4.2"},"Micah 4:2"],";",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/12.3"},"2 Ne. 12:3"],"; )"],["li","This is the",["i","way"],", walk ye in it:",["a.scriptureRef",{"href":"/scriptures/ot/isa/30.21"},["span.padWord","Isa."],"30:21"],";"],["li","called The",["i","way"],"of holiness:",["a.scriptureRef",{"href":"/scriptures/ot/isa/35.8"},["span.padWord","Isa."],"35:8"],";"],["li","Prepare ye the",["i","way"],"of the Lord:",["a.scriptureRef",{"href":"/scriptures/ot/isa/40.3"},["span.padWord","Isa."],"40:3"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/matt/3.3"},"Matt. 3:3"],";",["a.scriptureRef",{"href":"/scriptures/nt/mark/1.3"},"Mark 1:3"],";",["a.scriptureRef",{"href":"/scriptures/nt/luke/3.4"},"Luke 3:4"],";",["a.scriptureRef",{"href":"/scriptures/nt/john/1.23"},"John 1:23"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/84.28"},"D&C 84:28"],"; )"],["li","My",["i","way"],"is hid from the Lord:",["a.scriptureRef",{"href":"/scriptures/ot/isa/40.27"},["span.padWord","Isa."],"40:27"],";"],["li","I will direct all his",["i","ways"],":",["a.scriptureRef",{"href":"/scriptures/ot/isa/45.13"},["span.padWord","Isa."],"45:13"],";"],["li","sea a",["i","way"],"for the ransomed to pass over:",["a.scriptureRef",{"href":"/scriptures/ot/isa/51.10"},["span.padWord","Isa."],"51:10"],";"],["li","we have turned every one to his own",["i","way"],":",["a.scriptureRef",{"href":"/scriptures/ot/isa/53.6"},["span.padWord","Isa."],"53:6"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/14.6"},"Mosiah 14:6"],"; )"],["li","neither are your",["i","ways"],"my",["i","ways"],":",["a.scriptureRef",{"href":"/scriptures/ot/isa/55.8"},["span.padWord","Isa."],"55:8"],";"],