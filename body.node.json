elestial",["i","bodies"],", and",["i","bodies"],"terrestrial:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/15.40"},["span.padWord","1 Cor."],"15:40"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/76.70,78"},"D&C 76:70, 78"],"; )"],["li","sown a natural",["i","body"],"; it is raised a spiritual",["i","body"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/15.44"},["span.padWord","1 Cor."],"15:44"],";"],["li","whether in the",["i","body"],", or out of the",["i","body"],", I cannot tell:",["a.scriptureRef",{"href":"/scriptures/nt/2-cor/12.3"},"2 Cor. 12:3"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/137.1"},"D&C 137:1"],"; )"],["li","bear in my",["i","body"],"the marks of the Lord Jesus:",["a.scriptureRef",{"href":"/scriptures/nt/gal/6.17"},"Gal. 6:17"],";"],["li","reconcile both unto God in one",["i","body"],"by the cross:",["a.scriptureRef",{"href":"/scriptures/nt/eph/2.16"},"Eph. 2:16"],";"],["li","There is one",["i","body"],", and one Spirit:",["a.scriptureRef",{"href":"/scriptures/nt/eph/4.4"},["span.padWord","Eph."],"4:4"],";"],["li","he is the saviour of the",["i","body"],":",["a.scriptureRef",{"href":"/scriptures/nt/eph/5.23"},["span.padWord","Eph."],"5:23"],";"],["li","men to love their wives as their own",["i","bodies"],":",["a.scriptureRef",{"href":"/scriptures/nt/eph/5.28"},["span.padWord","Eph."],"5:28"],";"],["li","change our vile",["i","body"],"… like unto his glorious",["i","body"],":",["a.scriptureRef",{"href":"/scriptures/nt/philip/3.21"},"Philip. 3:21"],";"],["li","he is the head of the",["i","body"],":",["a.scriptureRef",{"href":"/scriptures/nt/col/1.18"},"Col. 1:18"],";"],["li","spirit and soul and",["i","body"],"be preserved blameless:",["a.scriptureRef",{"href":"/scriptures/nt/1-thes/5.23"},"1 Thes. 5:23"],";"],["li","sanctified through the offering of the",["i","body"],"of Jesus:",["a.scriptureRef",{"href":"/scriptures/nt/heb/10.10"},"Heb. 10:10"],";"],["li","as the",["i","body"],"without the spirit is dead:",["a.scriptureRef",{"href":"/scriptures/nt/james/2.26"},"James 2:26"],";"],["li","perfect man, and able also to bridle the whole",["i","body"],":",["a.scriptureRef",{"href":"/scriptures/nt/james/3.2"},["span.padWord","James"],"3:2"],";"],["li","bare our sins in his own",["i","body"],"on the tree:",["a.scriptureRef",{"href":"/scriptures/nt/1-pet/2.24"},"1 Pet. 2:24"],";"],["li","devil he disputed about the",["i","body"],"of Moses:",["a.scriptureRef",{"href":"/scriptures/nt/jude/1.9"},"Jude 1:9"],";"],["li","dead",["i","bodies"],"shall lie in the street:",["a.scriptureRef",{"href":"/scriptures/nt/rev/11.8"},"Rev. 11:8"],";"]]],["div",{"id":"f4","uri":"/scriptures/tg/body.f4","order":".000.945"},["ul.index",["li","in remembrance of my",["i","body"],":",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/18.7"},"3 Ne. 18:7"],";"]]],["div",{"id":"f5","uri":"/scriptures/tg/body.f5","order":".000.946"},["ul.index",["li","In the image of his own",["i","body"],"… created:",["a.scriptureRef",{"href":"/scriptures/pgp/moses/6.9"},"Moses 6:9"],";"]]]]],"refs":null}
