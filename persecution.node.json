{"id":2256,"parent_id":0,"book_id":7,"content_id":1,"language_id":1,"display_order":2256,"title":"Persecution, Persecute","subtitle":"","short_title":"Persecution, Persecute","uri":"/scriptures/tg/persecution","content":[["div",{"id":"t1","uri":"/scriptures/tg/persecution.t1","order":".000.7614"},[".title",["b","Persecution, Persecute"]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/tg/adversity"},"Adversity"],";",["a.scriptureRef",{"href":"/scriptures/tg/affliction"},"Affliction"],";",["a.scriptureRef",{"href":"/scriptures/tg/apostasy-of-israel"},"Apostasy of Israel"],";",["a.scriptureRef",{"href":"/scriptures/tg/chastening"},"Chastening"],";",["a.scriptureRef",{"href":"/scriptures/tg/cruelty"},"Cruelty"],";",["a.scriptureRef",{"href":"/scriptures/tg/despise"},"Despise"],";",["a.scriptureRef",{"href":"/scriptures/tg/enemies"},"Enemies"],";",["a.scriptureRef",{"href":"/scriptures/tg/hate"},"Hate"],";",["a.scriptureRef",{"href":"/scriptures/tg/malice"},"Malice"],";",["a.scriptureRef",{"href":"/scriptures/tg/oppression"},"Oppression"],";",["a.scriptureRef",{"href":"/scriptures/tg/prophets-rejection-of"},"Prophets, Rejection of"],";",["a.scriptureRef",{"href":"/scriptures/tg/reviling"},"Reviling"],";",["a.scriptureRef",{"href":"/scriptures/tg/suffering"},"Suffering"],";",["a.scriptureRef",{"href":"/scriptures/tg/tribulation"},"Tribulation"]],["div",{"id":"f2","uri":"/scriptures/tg/persecution.f2","order":".000.7615"},["ul.index",["li","The wicked in his pride doth",["i","persecute"],"the poor:",["a.scriptureRef",{"href":"/scriptures/ot/ps/10.2"},"Ps. 10:2"],";"],["li","brought as a lamb to the",["i","slaughter"],":",["a.scriptureRef",{"href":"/scriptures/ot/isa/53.7"},"Isa. 53:7"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/jer/11.19"},"Jer. 11:19"],";",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/14.7"},"Mosiah 14:7"],"; )"]]],["div",{"id":"f3","uri":"/scriptures/tg/persecution.f3","order":".000.7616"},["ul.index",["li","they which are",["i","persecuted"],"for righteousness’ sake:",["a.scriptureRef",{"href":"/scriptures/nt/matt/5.10"},"Matt. 5:10"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/12.10"},"3 Ne. 12:10"],"; )"],["li","so",["i","persecuted"],"they the prophets:",["a.scriptureRef",{"href":"/scriptures/nt/matt/5.12"},["span.padWord","Matt."],"5:12"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/12.12"},"3 Ne. 12:12"],"; )"],["li","pray for them which despitefully use you, and",["i","persecute"],"you:",["a.scriptureRef",{"href":"/scriptures/nt/matt/5.44"},["span.padWord","Matt."],"5:44"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/12.44"},"3 Ne. 12:44"],"; )"],["li",["i","persecution"],"ariseth because of the word:",["a.scriptureRef",{"href":"/scriptures/nt/matt/13.21"},["span.padWord","Matt."],"13:21"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/mark/4.17"},"Mark 4:17"],"; )"],["li",["i","persecute"],"them from city to city:",["a.scriptureRef",{"href":"/scriptures/nt/matt/23.34"},["span.padWord","Matt."],"23:34"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/luke/11.49"},"Luke 11:49"],"; )"],["li","men shall hate you …",["i","separate"],"you from their company:",["a.scriptureRef",{"href":"/scriptures/nt/luke/6.22"},"Luke 6:22"],";"],["li","Jerusalem, which",["i","killest"],"the prophets:",["a.scriptureRef",{"href":"/scriptures/nt/luke/13.34"},["span.padWord","Luke"],"13:34"],";"],["li","lay their hands on you, and",["i","persecute"],"you:",["a.scriptureRef",{"href":"/scriptures/nt/luke/21.12"},["span.padWord","Luke"],"21:12"],";"],["li","therefore did the Jews",["i","persecute"],"Jesus:",["a.scriptureRef",{"href":"/scriptures/nt/john/5.16"},"John 5:16"],";"],["li","If they have",["i","persecuted"],"me, they will also",["i","persecute"],"you:",["a.scriptureRef",{"href":"/scriptures/nt/john/15.20"},["span.padWord","John"],"15:20"],";"],["li","whosoever",["i","killeth"],"you will think that he doeth God service:",["a.scriptureRef",{"href":"/scriptures/nt/john/16.2"},["span.padWord","John"],"16:2"],";"],["li","Which of the prophets have not your fathers",["i","persecuted"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/7.52"},"Acts 7:52"],";"],["li","they",["i","stoned"],"Stephen:",["a.scriptureRef",{"href":"/scriptures/nt/acts/7.59"},["span.padWord","Acts"],"7:59"],";"],["li","great",["i","persecution"],"against the church:",["a.scriptureRef",{"href":"/scriptures/nt/acts/8.1"},["span.padWord","Acts"],"8:1"],";"],["li","Saul, why",["i","persecutest"],"thou me:",["a.scriptureRef",{"href":"/scriptures/nt/acts/9.4"},["span.padWord","Acts"],"9:4"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/acts/22.7"},["span.padWord","Acts"],"22:7"],";",["a.scriptureRef",{"href":"/scriptures/nt/acts/26.14"},["span.padWord","Acts"],"26:14"],"; )"],["li","scattered abroad upon the",["i","persecution"],"that arose:",["a.scriptureRef",{"href":"/scriptures/nt/acts/11.19"},["span.padWord","Acts"],"11:19"],";"],["li","commanded that they should be put to",["i","death"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/12.19"},["span.padWord","Acts"],"12:19"],";"],["li","Jews stirred up …",["i","persecution"],"against Paul:",["a.scriptureRef",{"href":"/scriptures/nt/acts/13.50"},["span.padWord","Acts"],"13:50"],";"],["li","having",["i","stoned"],"Paul, drew him out of the city:",["a.scriptureRef",{"href":"/scriptures/nt/acts/14.19"},["span.padWord","Acts"],"14:19"],";"],["li","Who shall separate us from the love of Christ? shall …",["i","persecution"],":",["a.scriptureRef",{"href":"/scriptures/nt/rom/8.35"},"Rom. 8:35"],";"],["li","Bless them which",["i","persecute"],"you:",["a.scriptureRef",{"href":"/scriptures/nt/rom/12.14"},["span.padWord","Rom."],"12:14"],";"],["li","being",["i","persecuted"],", we suffer it:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/4.12"},"1 Cor. 4:12"],";"],["li",["i","Persecuted"],", but not forsaken:",["a.scriptureRef",{"href":"/scriptures/nt/2-cor/4.9"},"2 Cor. 4:9"],";"],["li","Thrice was I",["i","beaten"],"with rods:",["a.scriptureRef",{"href":"/scriptures/nt/2-cor/11.25"},["span.padWord","2 Cor."],"11:25"],";"],["li","take pleasure … in",["i","persecutions"],":",["a.scriptureRef",{"href":"/scriptures/nt/2-cor/12.10"},["span.padWord","2 Cor."],"12:10"],";"],["li","he which",["i","persecuted"],"us in times past now preacheth the faith:",["a.scriptureRef",{"href":"/scriptures/nt/gal/1.23"},"Gal. 1:23"],";"],["li","born after the flesh",["i","persecuted"],"him that was born after the Spirit:",["a.scriptureRef",{"href":"/scriptures/nt/gal/4.29"},["span.padWord","Gal."],"4:29"],";"],["li","lest they should suffer",["i","persecution"],"for the cross:",["a.scriptureRef",{"href":"/scriptures/nt/gal/6.12"},["span.padWord","Gal."],"6:12"],";"],["li","your patience and faith in all your",["i","persecutions"],":",["a.scriptureRef",{"href":"/scriptures/nt/2-thes/1.4"},"2 Thes. 1:4"],";"],["li","live godly in Christ Jesus shall suffer",["i","persecution"],":",["a.scriptureRef",{"href":"/scriptures/nt/2-tim/3.12"},"2 Tim. 3:12"],";"],["li","souls of them that were",["i","slain"],"for the word:",["a.scriptureRef",{"href":"/scriptures/nt/rev/6.9"},"Rev. 6:9"],";"],["li","was cast unto the earth, he",["i","persecuted"],"the woman:",["a.scriptureRef",{"href":"/scriptures/nt/rev/12.13"},["span.padWord","Rev."],"12:13"],";"]]],["div",{"id":"f4","uri":"/scriptures/tg/persecution.f4","order":".000.7617"},["ul.index",["li","they did treat me with much",["i","harshness"],":",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/18.11"},"1 Ne. 18:11"],";"],["li","because they are rich … they",["i","persecute"],"the meek:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/9.30"},"2 Ne. 9:30"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/28.13"},["span.padWord","2 Ne."],"28:13"],"; )"],["li","steadfastness … notwithstanding all",["i","persecution"],":",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/26.8"},["span.padWord","2 Ne."],"26:8"],";"],["li","should not any unbeliever",["i","persecute"],"any … who belonged to the church:",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/27.2"},"Mosiah 27:2"],";"],["li","why",["i","persecutest"],"thou the church of God:",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/27.13"},["span.padWord","Mosiah"],"27:13"],";"],["li","there should be no",["i","persecution"],"among themselves:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/1.21"},"Alma 1:21"],";"],["li","carried them forth to the place of",["i","martyrdom"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/14.9"},["span.padWord","Alma"],"14:9"],";"],["li","lifted up in pride, even to the",["i","persecution"],"of many of their brethren:",["a.scriptureRef",{"href":"/scriptures/bofm/hel/3.34"},"Hel. 3:34"],";"],["li","while others would receive railing and",["i","persecution"],":",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/6.13"},"3 Ne. 6:13"],";"],["li","they who are",["i","persecuted"],"for my name’s sake:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/12.10"},["span.padWord","3 Ne."],"12:10"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/matt/10.22"},"Matt. 10:22"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/101.35"},"D&C 101:35"],"; )"],["li","they did",["i","persecute"],"the true church of Christ:",["a.scriptureRef",{"href":"/scriptures/bofm/4-ne/1.29"},"4 Ne. 1:29"],";"]]],["div",{"id":"f5","uri":"/scriptures/tg/persecution.f5","order":".000.7618"},["ul.index",["li","fear of",["i","persecution"],"and the cares of the world:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/40.2"},"D&C 40:2"],";"],["li","shall they lament because they",["i","persecuted"],"their king:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/45.53"},["span.padWord","D&C"],"45:53"],";"],["li","that",["i","persecuteth"],"the saints of God:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.94"},["span.padWord","D&C"],"88:94"],";"],["li","if men will",["i","smite"],"you, or your families:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/98.23"},["span.padWord","D&C"],"98:23"],";"],["li","proclaim … gospel … in the midst of",["i","persecution"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/99.1"},["span.padWord","D&C"],"99:1"],";"],["li","your brethren who have been afflicted, and",["i","persecuted"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/101.1"},["span.padWord","D&C"],"101:1"],";"],["li","left unto himself … to",["i","persecute"],"the saints:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/121.38"},["span.padWord","D&C"],"121:38"],";"],["li","if thou shouldst be cast … into the hands of",["i","murderers"],"… these things shall give thee experience:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/122.7"},["span.padWord","D&C"],"122:7"],";"],["li","nation that has",["i","driven"],"you out:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/136.34"},["span.padWord","D&C"],"136:34"],";"]]],["div",{"id":"f6","uri":"/scriptures/tg/persecution.f6","order":".000.7619"},["ul.index",["li","the most bitter",["i","persecution"],"and reviling:",["a.scriptureRef",{"href":"/scriptures/pgp/js-h/1.23"},"JS—H 1:23"],";"]]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/nt/acts/28.22"},"Acts 28:22"],";",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/8.33"},"1 Ne. 8:33"]]]],"refs":null}
