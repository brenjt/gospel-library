order":"05.13.032.6925"},["b","8b"],["a.scriptureRef",{"href":"/scriptures/tg/prayer"},"TG Prayer"],"."],["div",{"id":"8c","uri":"/scriptures/bofm/2-ne/32.8c","order":"05.13.032.6927"},["b","8c"],["a.scriptureRef",{"href":"/scriptures/bofm/jacob/3.1"},"Jacob 3:1"],"."],["div",{"id":"8d","uri":"/scriptures/bofm/2-ne/32.8d","order":"05.13.032.6929"},["b","8d"],["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/9.39"},"2 Ne. 9:39"],";",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/28.21.20-22"},"28:21 (20–22)"],";",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/2.32"},"Mosiah 2:32"],";",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/4.14"},"4:14"],";",["a.scriptureRef",{"href":"/scriptures/bofm/alma/30.42.42,53"},"Alma 30:42 (42, 53)"],".",["a.scriptureRef",{"href":"/scriptures/tg/spirits-evil-or-unclean"},"TG Spirits, Evil or Unclean"],"."],["div",{"id":"9a","uri":"/scriptures/bofm/2-ne/32.9a","order":"05.13.032.6931"},["b","9a"],["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/26.39"},"Mosiah 26:39"],";",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/20.1"},"3 Ne. 20:1"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/75.11"},"D&C 75:11"],"."],["div",{"id":"9b","uri":"/scriptures/bofm/2-ne/32.9b","order":"05.13.032.6933"},["b","9b"],["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/18.19"},"3 Ne. 18:19"],"."],["div",{"id":"9c","uri":"/scriptures/bofm/2-ne/32.9c","order":"05.13.032.6935"},["b","9c"],["a.scriptureRef",{"href":"/scriptures/nt/col/3.17"},"Col. 3:17"],";",["a.scriptureRef",{"href":"/scriptures/pgp/moses/5.8"},"Moses 5:8"],"."],["div",{"id":"9d","uri":"/scriptures/bofm/2-ne/32.9d","order":"05.13.032.6937"},["b","9d"],["a.scriptureRef",{"href":"/scriptures/ot/micah/4.13"},"Micah 4:13"],";",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/2.2"},"2 Ne. 2:2"],"."],["div",{"id":"9e","uri":"/scriptures/bofm/2-ne/32.9e","order":"05.13.032.6939"},["b","9e"],["a.scriptureRef",{"href":"/scriptures/bofm/alma/34.27"},"Alma 34:27"],"."]]}
