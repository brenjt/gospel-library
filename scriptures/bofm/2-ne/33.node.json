,{"id":"9c","uri":"/scriptures/bofm/2-ne/33.9c","order":"05.13.033.6996"},["b","9c"],["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/9.41"},"2 Ne. 9:41"],";",["a.scriptureRef",{"href":"/scriptures/bofm/hel/3.29.29-30"},"Hel. 3:29 (29–30)"],"."],["div",{"id":"9d","uri":"/scriptures/bofm/2-ne/33.9d","order":"05.13.033.6998"},["b","9d"],["a.scriptureRef",{"href":"/scriptures/nt/matt/7.14"},"Matt. 7:14"],"."],["div",{"id":"9e","uri":"/scriptures/bofm/2-ne/33.9e","order":"05.13.033.7000"},["b","9e"],["a.scriptureRef",{"href":"/scriptures/tg/walking-with-god"},"TG Walking with God"],"."],["div",{"id":"9f","uri":"/scriptures/bofm/2-ne/33.9f","order":"05.13.033.7002"},["b","9f"],["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/132.22"},"D&C 132:22"],"."],["div",{"id":"9g","uri":"/scriptures/bofm/2-ne/33.9g","order":"05.13.033.7004"},["b","9g"],["a.scriptureRef",{"href":"/scriptures/tg/probation"},"TG Probation"],"."],["div",{"id":"10a","uri":"/scriptures/bofm/2-ne/33.10a","order":"05.13.033.7006"},["b","10a"],["a.scriptureRef",{"href":"/scriptures/tg/israel-judah-people-of"},"TG Israel, Judah, People of"],"."],["div",{"id":"10b","uri":"/scriptures/bofm/2-ne/33.10b","order":"05.13.033.7008"},["b","10b"],["a.scriptureRef",{"href":"/scriptures/tg/believe"},"TG Believe"],"."],["div",{"id":"10c","uri":"/scriptures/bofm/2-ne/33.10c","order":"05.13.033.7010"},["b","10c"],["a.scriptureRef",{"href":"/scriptures/nt/john/8.47"},"John 8:47"],"."],["div",{"id":"10d","uri":"/scriptures/bofm/2-ne/33.10d","order":"05.13.033.7012"},["b","10d"],["a.scriptureRef",{"href":"/scriptures/tg/book-of-mormon"},"TG Book of Mormon"],"."],["div",{"id":"10e","uri":"/scriptures/bofm/2-ne/33.10e","order":"05.13.033.7014"},["b","10e"],["a.scriptureRef",{"href":"/scriptures/ot/isa/51.16"},"Isa. 51:16"],";",["a.scriptureRef",{"href":"/scriptures/bofm/moro/10.27.27-29"},"Moro. 10:27 (27–29)"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/1.24"},"D&C 1:24"],"."],["div",{"id":"10f","uri":"/s