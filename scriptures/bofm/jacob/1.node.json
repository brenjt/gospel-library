["div",{"id":"19c","uri":"/scriptures/bofm/jacob/1.19c","order":"05.14.001.7132"},["b","19c"],["a.scriptureRef",{"href":"/scriptures/ot/1-sam/8.9"},"1 Sam. 8:9"],";",["a.scriptureRef",{"href":"/scriptures/bofm/moro/9.6"},"Moro. 9:6"],"."],["div",{"id":"19d","uri":"/scriptures/bofm/jacob/1.19d","order":"05.14.001.7134"},["b","19d"],["a.scriptureRef",{"href":"/scriptures/ot/lev/20.27"},"Lev. 20:27"],";",["a.scriptureRef",{"href":"/scriptures/nt/acts/20.26"},"Acts 20:26"],";",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/9.44"},"2 Ne. 9:44"],";",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/2.27"},"Mosiah 2:27"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.85"},"D&C 88:85"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/112.33"},"112:33"],"."]]}
