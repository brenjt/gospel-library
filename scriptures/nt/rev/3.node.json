"},["b","18b"],["a.scriptureRef",{"href":"/scriptures/nt/matt/13.46.44-46"},"Matt. 13:46 (44–46)"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/6.7"},"D&C 6:7"],"."],["div",{"id":"19a","uri":"/scriptures/nt/rev/3.19a","order":"03.29.003.27393"},["b","19a"],["span.small","GR"],"instruct, admonish.",["a.scriptureRef",{"href":"/scriptures/tg/chastening"},"TG Chastening"],"."],["div",{"id":"20a","uri":"/scriptures/nt/rev/3.20a","order":"03.29.003.27395"},["b","20a"],["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.63"},"D&C 88:63"],"."],["div",{"id":"20b","uri":"/scriptures/nt/rev/3.20b","order":"03.29.003.27397"},["b","20b"],["a.scriptureRef",{"href":"/scriptures/nt/john/14.23.23-25"},"John 14:23 (23–25)"],"."],["div",{"id":"21a","uri":"/scriptures/nt/rev/3.21a","order":"03.29.003.27399"},["b","21a"],["a.scriptureRef",{"href":"/scriptures/nt/1-jn/5.4.4-5"},"1 Jn. 5:4 (4–5)"],"."],["div",{"id":"21b","uri":"/scriptures/nt/rev/3.21b","order":"03.29.003.27401"},["b","21b"],["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/6.30"},"D&C 6:30"],"."],["div",{"id":"21c","uri":"/scriptures/nt/rev/3.21c","order":"03.29.003.27403"},["b","21c"],["a.scriptureRef",{"href":"/scriptures/nt/matt/25.21"},"Matt. 25:21"],".",["a.scriptureRef",{"href":"/scriptures/tg/exaltation"},"TG Exaltation"],";",["a.scriptureRef",{"href":"/scriptures/tg/man-potential-to-become-like-heavenly-father"},"Man, Potential to Become like Heavenly Father"],";",["a.scriptureRef",{"href":"/scriptures/tg/salvation-plan-of"},"Salvation, Plan of"],"."]]}
