],"."],["div",{"id":"13a","uri":"/scriptures/nt/1-tim/5.13a","order":"03.17.005.22470"},["b","13a"],["a.scriptureRef",{"href":"/scriptures/tg/idleness"},"TG Idleness"],"."],["div",{"id":"13b","uri":"/scriptures/nt/1-tim/5.13b","order":"03.17.005.22472"},["b","13b"],["a.scriptureRef",{"href":"/scriptures/tg/gossip"},"TG Gossip"],"."],["div",{"id":"14a","uri":"/scriptures/nt/1-tim/5.14a","order":"03.17.005.22474"},["b","14a"],["span.small","GR"],"desire."],["div",{"id":"14b","uri":"/scriptures/nt/1-tim/5.14b","order":"03.17.005.22476"},["b","14b"],["a.scriptureRef",{"href":"/scriptures/tg/marriage-wives"},"TG Marriage, Wives"],";",["a.scriptureRef",{"href":"/scriptures/tg/woman"},"Woman"],"."],["div",{"id":"14c","uri":"/scriptures/nt/1-tim/5.14c","order":"03.17.005.22478"},["b","14c"],["a.scriptureRef",{"href":"/scriptures/tg/children"},"TG Children"],"."],["div",{"id":"14d","uri":"/scriptures/nt/1-tim/5.14d","order":"03.17.005.22480"},["b","14d"],["a.scriptureRef",{"href":"/scriptures/nt/titus/2.5.4-5"},"Titus 2:5 (4–5)"],"."],["div",{"id":"16a","uri":"/scriptures/nt/1-tim/5.16a","order":"03.17.005.22482"},["b","16a"],["a.scriptureRef",{"href":"/scriptures/tg/welfare"},"TG Welfare"],"."],["div",{"id":"16b","uri":"/scriptures/nt/1-tim/5.16b","order":"03.17.005.22484"},["b","16b"],["span.small","GR"],"burdened down, troubled."],["div",{"id":"17a","uri":"/scriptures/nt/1-tim/5.17a","order":"03.17.005.22486"},["b","17a"],["a.scriptureRef",{"href":"/scriptures/tg/elder-melchizedek-priesthood"},"TG Elder, Melchizedek Priesthood"],"."],["div",{"id":"18a","uri":"/scriptures/nt/1-tim/5.18a","order":"03.17.005.22488"},["b","18a"],["a.scriptureRef",{"href":"/scriptures/ot/deut/25.4"},"Deut. 25:4"],"."],["div",{"id":"18b","uri":"/scriptures/nt/1-tim/5.18b","order":"03.17.005.22490"},["b","18b"],["a.scriptureRef",{"href":"/scriptures/tg/labor"},"TG Labor"],"."],["div",{"id":"18c","uri":"/scriptures/nt/1-tim/5.18c","order":"03.17.005.22492"},["b","18c"],["span.small","GR"],"wage.",["a.scriptureRef",{"href":"/scriptures/tg/wages"},"TG Wages"],"."],["div",{"id":"19a","uri":"/scriptures/nt/1-tim/5.19a","order":"03.17.005.22494"},["b","19a"],["a.scriptureRef",{"href":"/scriptures/ot/deut/19.15"},"Deut. 19:15"],"."],["div",{"id":"20a","uri":"/scriptures/nt/1-tim/5.20a","order":"03.17.005.22496"},["b","20a"],["a.scriptureRef",{"href":"/scriptures/tg/chastening"},"TG Chastening"],"."],["div",{"id":"21a","uri":"/scriptures/nt/1-tim/5.21a","order":"03.17.005.22498"},["b","21a"],["a.scriptureRef",{"href":"/scriptures/tg/angels"},"TG Angels"],"."],["div",{"id":"21b","uri":"/scriptures/nt/1-tim/5.21b","order":"03.17.005.22500"},["b","21b"],["span.small","GR"],"apart from prejudice."],["div",{"id":"22a","uri":"/scriptures/nt/1-tim/5.22a","order":"03.17.005.22502"},["b","22a"],["a.scriptureRef",{"href":"/scriptures/tg/setting-apart"},"TG Setting Apart"],"."],["div",{"id":"22b","uri":"/scriptures/nt/1-tim/5.22b","order":"03.17.005.22504"},["b","22b"],["a.scriptureRef",{"href":"/scriptures/tg/hands-laying-on-of"},"TG Hands, Laying on of"],"."],["div",{"id":"22c","uri":"/scriptures/nt/1-tim/5.22c","order":"03.17.005.22506"},["b","22c"],["a.scriptureRef",{"href":"/scriptures/nt/1-tim/3.10"},"1 Tim. 3:10"],"."],["div",{"id":"22d","uri":"/scriptures/nt/1-tim/5.22d","order":"03.17.005.22508"},["b","22d"],["a.scriptureRef",{"href":"/scriptures/nt/2-jn/1.11"},"2 Jn. 1:11"],"."],["div",{"id":"22e","uri":"/scriptures/nt/1-tim/5.22e","order":"03.17.005.22510"},["b","22e"],["a.scriptureRef",{"href":"/scriptures/nt/james/1.27.22-27"},"James 1:27 (22–27)"],"."],["div",{"id":"24a","uri":"/scriptures/nt/1-tim/5.24a","order":"03.17.005.22512"},["b","24a"],["span.small","GR"],"appear later."]]}
