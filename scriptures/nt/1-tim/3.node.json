"},["b","16b"],["a.scriptureRef",{"href":"/scriptures/ot/ps/1.3.2-3"},"Ps. 1:3 (2–3)"],";",["a.scriptureRef",{"href":"/scriptures/nt/john/10.33.30-33"},"John 10:33 (30–33)"],";",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/3.5"},"Mosiah 3:5"],";",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/15.1.1-5"},"15:1 (1–5)"],".",["a.scriptureRef",{"href":"/scriptures/tg/jesus-christ-jehovah"},"TG Jesus Christ, Jehovah"],"."],["div",{"id":"16c","uri":"/scriptures/nt/1-tim/3.16c","order":"03.17.003.22305"},["b","16c"],["a.scriptureRef",{"href":"/scriptures/tg/god-manifestations-of"},"TG God, Manifestations of"],"."],["div",{"id":"16d","uri":"/scriptures/nt/1-tim/3.16d","order":"03.17.003.22307"},["b","16d"],["a.scriptureRef",{"href":"/scriptures/tg/jesus-christ-condescension-of"},"TG Jesus Christ, Condescension of"],"."],["div",{"id":"16e","uri":"/scriptures/nt/1-tim/3.16e","order":"03.17.003.22309"},["b","16e"],["span.small","GR"],"approved by the."],["div",{"id":"16f","uri":"/scriptures/nt/1-tim/3.16f","order":"03.17.003.22311"},["b","16f"],["a.scriptureRef",{"href":"/scriptures/tg/jesus-christ-ascension-of"},"TG Jesus Christ, Ascension of"],"."]]}
