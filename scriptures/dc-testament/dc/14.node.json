ight [noun]"],";",["a.scriptureRef",{"href":"/scriptures/tg/light-of-christ"},"Light of Christ"],"."],["div",{"id":"9g","uri":"/scriptures/dc-testament/dc/14.9g","order":"06.05.014.1902"},["b","9g"],["a.scriptureRef",{"href":"/scriptures/tg/darkness-spiritual"},"TG Darkness, Spiritual"],"."],["div",{"id":"10a","uri":"/scriptures/dc-testament/dc/14.10a","order":"06.05.014.1904"},["b","10a"],["a.scriptureRef",{"href":"/scriptures/nt/rom/15.29"},"Rom. 15:29"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/20.9.8-9"},"D&C 20:9 (8–9)"],";",["a.scriptureRef",{"href":"/scriptures/pgp/js-h/1.34"},"JS—H 1:34"],"."],["div",{"id":"10b","uri":"/scriptures/dc-testament/dc/14.10b","order":"06.05.014.1906"},["b","10b"],["a.scriptureRef",{"href":"/scriptures/tg/israel-restoration-of"},"TG Israel, Restoration of"],"."],["div",{"id":"10c","uri":"/scriptures/dc-testament/dc/14.10c","order":"06.05.014.1908"},["b","10c"],["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/10.14"},"1 Ne. 10:14"],";",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/13.42"},"13:42"],";",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/15.13.13-20"},"15:13 (13–20)"],"."]]}
