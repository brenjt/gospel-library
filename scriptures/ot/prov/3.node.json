div",{"id":"9a","uri":"/scriptures/ot/prov/3.9a","order":"02.21.003.41476"},["b","9a"],["a.scriptureRef",{"href":"/scriptures/tg/honor"},"TG Honor"],"."],["div",{"id":"9b","uri":"/scriptures/ot/prov/3.9b","order":"02.21.003.41478"},["b","9b"],["a.scriptureRef",{"href":"/scriptures/tg/tithing"},"TG Tithing"],"."],["div",{"id":"9c","uri":"/scriptures/ot/prov/3.9c","order":"02.21.003.41480"},["b","9c"],["a.scriptureRef",{"href":"/scriptures/ot/ex/22.29"},"Ex. 22:29"],"."],["div",{"id":"10a","uri":"/scriptures/ot/prov/3.10a","order":"02.21.003.41482"},["b","10a"],["a.scriptureRef",{"href":"/scriptures/tg/abundant-life"},"TG Abundant Life"],";",["a.scriptureRef",{"href":"/scriptures/tg/blessing"},"Blessing"],"."],["div",{"id":"11a","uri":"/scriptures/ot/prov/3.11a","order":"02.21.003.41484"},["b","11a"],["a.scriptureRef",{"href":"/scriptures/tg/chastening"},"TG Chastening"],"."],["div",{"id":"12a","uri":"/scriptures/ot/prov/3.12a","order":"02.21.003.41486"},["b","12a"],["a.scriptureRef",{"href":"/scriptures/bofm/hel/15.3"},"Hel. 15:3"],"."],["div",{"id":"12b","uri":"/scriptures/ot/prov/3.12b","order":"02.21.003.41488"},["b","12b"],["a.scriptureRef",{"href":"/scriptures/tg/marriage-fatherhood"},"TG Marriage, Fatherhood"],"."],["div",{"id":"13a","uri":"/scriptures/ot/prov/3.13a","order":"02.21.003.41490"},["b","13a"],["a.scriptureRef",{"href":"/scriptures/tg/happiness"},"TG Happiness"],"."],["div",{"id":"13b","uri":"/scriptures/ot/prov/3.13b","order":"02.21.003.41492"},["b","13b"],["a.scriptureRef",{"href":"/scriptures/tg/wisdom"},"TG Wisdom"],"."],["div",{"id":"13c","uri":"/scriptures/ot/prov/3.13c","order":"02.21.003.41494"},["b","13c"],["a.scriptureRef",{"href":"/scriptures/tg/study"},"TG Study"],";",["a.scriptureRef",{"href":"/scriptures/tg/understanding"},"Understanding"],"."],["div",{"id":"16a","uri":"/scriptures/ot/prov/3.16a","order":"02.21.003.41496"},["b","16a"],["a.scriptureRef",{"href":"/scriptures/ot/prov/8.18.12-18"},"Prov. 8:18 (12–18)"],"."],["div",{"id":"18a","uri":"/scriptures/ot/prov/3.18a","order":"02.21.003.41498"},["b","18a"],["a.scriptureRef",{"href":"/scriptures/ot/eccl/7.12"},"Eccl. 7:12"],"."],["div",{"id":"19a","uri":"/scriptures/ot/prov/3.19a","order":"02.21.003.41500"},["b","19a"],["a.scriptureRef",{"href":"/scriptures/pgp/abr/4.1"},"Abr. 4:1"],"."],["div",{"id":"19b","uri":"/scriptures/ot/prov/3.19b","order":"02.21.003.41502"},["b","19b"],["a.scriptureRef",{"href":"/scriptures/tg/understanding"},"TG Understanding"],"."],["div",{"id":"20a","uri":"/scriptures/ot/prov/3.20a","order":"02.21.003.41504"},["b","20a"],["a.scriptureRef",{"href":"/scriptures/ot/gen/7.11"},"Gen. 7:11"],"."],["div",{"id":"22a","uri":"/scriptures/ot/prov/3.22a","order":"02.21.003.41506"},["b","22a"],["a.scriptureRef",{"href":"/scriptures/ot/prov/1.9"},"Prov. 1:9"],"."],["div",{"id":"26a","uri":"/scriptures/ot/prov/3.26a","order":"02.21.003.41508"},["b","26a"],["a.scriptureRef",{"href":"/scriptures/ot/job/4.6"},"Job 4:6"],";",["a.scriptureRef",{"href":"/scriptures/bofm/alma/7.27.26-27"},"Alma 7:27 (26–27)"],".",["a.scriptureRef",{"href":"/scriptures/tg/dependability"},"TG Dependability"],"."],["div",{"id":"27a","uri":"/scriptures/ot/prov/3.27a","order":"02.21.003.41510"},["b","27a"],["a.scriptureRef",{"href":"/scriptures/ot/prov/21.26.25-26"},"Prov. 21:26 (25–26)"],";",["a.scriptureRef",{"href":"/scriptures/nt/luke/6.30"},"Luke 6:30"],"."],["div",{"id":"27b","uri":"/scriptures/ot/prov/3.27b","order":"02.21.003.41512"},["b","27b"],["a.scriptureRef",{"href":"/scriptures/nt/gal/6.10.9-10"},"Gal. 6:10 (9–10)"],"."],["div",{"id":"29a","uri":"/scriptures/ot/prov/3.29a","order":"02.21.003.41514"},["b","29a"],["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/42.27"},"D&C 42:27"],"."],["div",{"id":"29b","uri":"/scriptures/ot/prov/3.29b","order":"02.21.003.41516"},["b","29b"],["a.scriptureRef",{"href":"/scriptures/ot/prov/21.10"},"Prov. 21:10"],"."],["div",{"id":"30a","uri":"/scriptures/ot/prov/3.30a","order":"02.21.003.41518"},["b","30a"],["a.scriptureRef",{"href":"/scriptures/ot/prov/25.8"},"Prov. 25:8"],";",["a.scriptureRef",{"href":"/scriptures/nt/rom/12.18.17-18"},"Rom. 12:18 (17–18)"],"."],["div",{"id":"31a","uri":"/scriptures/ot/prov/3.31a","order":"02.21.003.41520"},["b","31a"],["a.scriptureRef",{"href":"/scriptures/tg/oppression"},"TG Oppression"],"."],["div",{"id":"32a","uri":"/scriptures/ot/prov/3.32a","order":"02.21.003.41522"},["b","32a"],["span.small","OR"],"perverse."],["div",{"id":"33a","uri":"/scriptures/ot/prov/3.33a","order":"02.21.003.41524"},["b","33a"],["a.scriptureRef",{"href":"/scriptures/tg/curse"},"TG Curse"],"."],["div",{"id":"34a","uri":"/scriptures/ot/prov/3.34a","order":"02.21.003.41526"},["b","34a"],["a.scriptureRef",{"href":"/scriptures/tg/grace"},"TG Grace"],"."],["div",{"id":"34b","uri":"/scriptures/ot/prov/3.34b","order":"02.21.003.41528"},["b","34b"],["span.small","OR"],"humble."],["div",{"id":"35a","uri":"/scriptures/ot/prov/3.35a","order":"02.21.003.41530"},["b","35a"],["a.scriptureRef",{"href":"/scriptures/tg/wisdom"},"TG Wisdom"],"."],["div",{"id":"35b","uri":"/scriptures/ot/prov/3.35b","order":"02.21.003.41532"},["b","35b"],["a.scriptureRef",{"href":"/scriptures/tg/shame"},"TG Shame"],"."]]}
