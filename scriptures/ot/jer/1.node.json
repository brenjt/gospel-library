6.1"},"6:1"],";",["a.scriptureRef",{"href":"/scriptures/ot/jer/10.22"},"10:22"],";",["a.scriptureRef",{"href":"/scriptures/ot/ezek/26.7"},"Ezek. 26:7"],"."],["div",{"id":"15a","uri":"/scriptures/ot/jer/1.15a","order":"02.25.001.50678"},["b","15a"],["a.scriptureRef",{"href":"/scriptures/ot/jer/39.3"},"Jer. 39:3"],"."],["div",{"id":"16a","uri":"/scriptures/ot/jer/1.16a","order":"02.25.001.50680"},["b","16a"],["a.scriptureRef",{"href":"/scriptures/ot/jer/19.4"},"Jer. 19:4"],"."],["div",{"id":"16b","uri":"/scriptures/ot/jer/1.16b","order":"02.25.001.50682"},["b","16b"],["a.scriptureRef",{"href":"/scriptures/tg/idolatry"},"TG Idolatry"],"."],["div",{"id":"18a","uri":"/scriptures/ot/jer/1.18a","order":"02.25.001.50684"},["b","18a"],["span.small","OR"],"rulers, or officers."],["div",{"id":"19a","uri":"/scriptures/ot/jer/1.19a","order":"02.25.001.50686"},["b","19a"],["a.scriptureRef",{"href":"/scriptures/tg/prophets-rejection-of"},"TG Prophets, Rejection of"],"."],["div",{"id":"19b","uri":"/scriptures/ot/jer/1.19b","order":"02.25.001.50688"},["b","19b"],["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/22.16"},"1 Ne. 22:16"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/121.11.7-15"},"D&C 121:11 (7–15)"],"."]]}
