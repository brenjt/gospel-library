25.19a","order":"02.20.025.35834"},["b","19a"],["a.scriptureRef",{"href":"/scriptures/tg/cruelty"},"TG Cruelty"],"."],["div",{"id":"20a","uri":"/scriptures/ot/ps/25.20a","order":"02.20.025.35836"},["b","20a"],["a.scriptureRef",{"href":"/scriptures/tg/shame"},"TG Shame"],"."],["div",{"id":"20b","uri":"/scriptures/ot/ps/25.20b","order":"02.20.025.35838"},["b","20b"],["a.scriptureRef",{"href":"/scriptures/tg/trust-in-god"},"TG Trust in God"],"."],["div",{"id":"22a","uri":"/scriptures/ot/ps/25.22a","order":"02.20.025.35840"},["b","22a"],["a.scriptureRef",{"href":"/scriptures/ot/deut/21.8"},"Deut. 21:8"],";",["a.scriptureRef",{"href":"/scriptures/ot/ps/130.8"},"Ps. 130:8"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/84.99.99-100"},"D&C 84:99 (99–100)"],"."]]}
