{"id":857,"parent_id":0,"book_id":7,"content_id":1,"language_id":1,"display_order":857,"title":"Doubt, Doubtful","subtitle":"","short_title":"Doubt, Doubtful","uri":"/scriptures/tg/doubt","content":[["div",{"id":"t1","uri":"/scriptures/tg/doubt.t1","order":".000.2623"},[".title",["b","Doubt, Doubtful"]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/tg/believe"},"Believe"],";",["a.scriptureRef",{"href":"/scriptures/tg/faith"},"Faith"],";",["a.scriptureRef",{"href":"/scriptures/tg/unbelief"},"Unbelief"]],["div",{"id":"f2","uri":"/scriptures/tg/doubt.f2","order":".000.2624"},["ul.index",["li","they will not",["i","believe"],"me:",["a.scriptureRef",{"href":"/scriptures/ot/ex/4.1"},"Ex. 4:1"],";"],["li","ye did not",["i","believe"],"the Lord:",["a.scriptureRef",{"href":"/scriptures/ot/deut/1.32"},"Deut. 1:32"],";"],["li","thy life shall hang in",["i","doubt"],":",["a.scriptureRef",{"href":"/scriptures/ot/deut/28.66"},["span.padWord","Deut."],"28:66"],";"]]],["div",{"id":"f3","uri":"/scriptures/tg/doubt.f3","order":".000.2625"},["ul.index",["li","thou of little faith, wherefore didst thou",["i","doubt"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/14.31"},"Matt. 14:31"],";"],["li","Jesus said … Because of your",["i","unbelief"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/17.20"},["span.padWord","Matt."],"17:20"],";"],["li","If ye have faith, and",["i","doubt"],"not:",["a.scriptureRef",{"href":"/scriptures/nt/matt/21.21"},["span.padWord","Matt."],"21:21"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/matt/21.17-22"},["span.padWord","Matt."],"21:17–22"],"; )"],["li","saw him, they worshipped him: but some",["i","doubted"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/28.17"},["span.padWord","Matt."],"28:17"],";"],["li","I believe; help thou mine",["i","unbelief"],":",["a.scriptureRef",{"href":"/scriptures/nt/mark/9.24"},"Mark 9:24"],";"],["li","shall not",["i","doubt"],"in his heart:",["a.scriptureRef",{"href":"/scriptures/nt/mark/11.23"},["span.padWord","Mark"],"11:23"],";"],["li","neither be ye of",["i","doubtful"],"mind:",["a.scriptureRef",{"href":"/scriptures/nt/luke/12.29"},"Luke 12:29"],";"],["li","How long dost thou make us to",["i","doubt"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/10.24"},"John 10:24"],";"],["li","while Peter",["i","doubted"],"in himself:",["a.scriptureRef",{"href":"/scriptures/nt/acts/10.17"},"Acts 10:17"],";"],["li","faith receive ye, but not to",["i","doubtful"],":",["a.scriptureRef",{"href":"/scriptures/nt/rom/14.1"},"Rom. 14:1"],";"],["li","he that",["i","doubteth"],"is damned if he eat:",["a.scriptureRef",{"href":"/scriptures/nt/rom/14.23"},["span.padWord","Rom."],"14:23"],";"],["li","pray every where … without wrath and",["i","doubting"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-tim/2.8"},"1 Tim. 2:8"],";"],["li","ask in faith, nothing",["i","wavering"],":",["a.scriptureRef",{"href":"/scriptures/nt/james/1.6"},"James 1:6"],";"]]],["div",{"id":"f4","uri":"/scriptures/tg/doubt.f4","order":".000.2626"},["ul.index",["li","wherefore can ye",["i","doubt"],":",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/4.3"},"1 Ne. 4:3"],";"],["li","dwindling of the Jews in",["i","unbelief"],":",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/10.11"},["span.padWord","1 Ne."],"10:11"],";"],["li","many … shall perish in the flesh because of",["i","unbelief"],":",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/10.2"},"2 Ne. 10:2"],";"],["li","mourn because of the",["i","unbelief"],":",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/32.7"},["span.padWord","2 Ne."],"32:7"],";"],["li","their",["i","unbelief"],"and their hatred towards you:",["a.scriptureRef",{"href":"/scriptures/bofm/jacob/3.7"},"Jacob 3:7"],";"],["li","because of …",["i","unbelief"],"they could not understand:",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/26.3"},"Mosiah 26:3"],";"],["li","trust that ye are not in a state of …",["i","unbelief"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/7.6"},"Alma 7:6"],";"],["li","dark veil of",["i","unbelief"],"was being cast away:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/19.6"},["span.padWord","Alma"],"19:6"],";"],["li","a good seed … do not cast it out by your",["i","unbelief"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/32.28"},["span.padWord","Alma"],"32:28"],";"],["li","would ye rather harden your hearts in",["i","unbelief"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/33.21"},["span.padWord","Alma"],"33:21"],";"],["li","people were",["i","doubtful"],"concerning the justice:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/46.29"},["span.padWord","Alma"],"46:29"],";"],["li","if they did not",["i","doubt"],", God would deliver them:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/56.47"},["span.padWord","Alma"],"56:47"],";"],["li","did not",["i","doubt"],", that they should be preserved:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/57.26"},["span.padWord","Alma"],"57:26"],";"],["li","Moroni … began to",["i","doubt"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/59.11"},["span.padWord","Alma"],"59:11"],";"],["li","marvel not, neither should they",["i","doubt"],":",["a.scriptureRef",{"href":"/scriptures/bofm/hel/5.49"},"Hel. 5:49"],";"],["li","began to fear because of their …",["i","unbelief"],":",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/1.18"},"3 Ne. 1:18"],";"],["li","not a living soul … who did",["i","doubt"],"in the least:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/5.1"},["span.padWord","3 Ne."],"5:1"],";"],["li","there began to be great",["i","doubtings"],":",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/8.4"},["span.padWord","3 Ne."],"8:4"],";"],["li","could not show … miracles, because of their",["i","unbelief"],":",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/19.35"},["span.padWord","3 Ne."],"19:35"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/moro/7.37"},"Moro. 7:37"],"; )"],["li",["i","Doubt"],"not, but be believing:",["a.scriptureRe