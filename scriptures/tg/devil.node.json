{"id":793,"parent_id":0,"book_id":7,"content_id":1,"language_id":1,"display_order":793,"title":"Devil","subtitle":"","short_title":"Devil","uri":"/scriptures/tg/devil","content":[["div",{"id":"t1","uri":"/scriptures/tg/devil.t1","order":".000.2429"},[".title",["b","Devil"]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/tg/adversary"},"Adversary"],";",["a.scriptureRef",{"href":"/scriptures/tg/evil"},"Evil"],";",["a.scriptureRef",{"href":"/scriptures/tg/hell"},"Hell"],";",["a.scriptureRef",{"href":"/scriptures/tg/lucifer"},"Lucifer"],";",["a.scriptureRef",{"href":"/scriptures/tg/satan"},"Satan"],";",["a.scriptureRef",{"href":"/scriptures/bd/devil"},"BD Devil"]],["div",{"id":"f2","uri":"/scriptures/tg/devil.f2","order":".000.2430"},["ul.index",["li",["i","serpent"],"was more subtil than any beast:",["a.scriptureRef",{"href":"/scriptures/ot/gen/3.1"},"Gen. 3:1"],"; (",["a.scriptureRef",{"href":"/scriptures/pgp/moses/4.5"},"Moses 4:5"],"; )"],["li","no more offer their sacrifices unto",["i","devils"],":",["a.scriptureRef",{"href":"/scriptures/ot/lev/17.7"},"Lev. 17:7"],";"],["li","sacrificed unto",["i","devils"],":",["a.scriptureRef",{"href":"/scriptures/ot/deut/32.17"},"Deut. 32:17"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/10.20"},"1 Cor. 10:20"],"; )"],["li","sacrificed their sons and their daughters unto",["i","devils"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/106.37"},"Ps. 106:37"],";"],["li","rebuke the",["i","devourer"],"for your sakes:",["a.scriptureRef",{"href":"/scriptures/ot/mal/3.11"},"Mal. 3:11"],";"]]],["div",{"id":"f3","uri":"/scriptures/tg/devil.f3","order":".000.2431"},["ul.index",["li","wilderness to be tempted of the",["i","devil"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/4.1"},"Matt. 4:1"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/luke/4.2"},"Luke 4:2"],"; )"],["li","when the",["i","tempter"],"came to him:",["a.scriptureRef",{"href":"/scriptures/nt/matt/4.3"},["span.padWord","Matt."],"4:3"],";"],["li","possessed with",["i","devils"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/4.24"},["span.padWord","Matt."],"4:24"],";"],["li","in thy name have cast out",["i","devils"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/7.22"},["span.padWord","Matt."],"7:22"],";"],["li","brought unto him many that were possessed with",["i","devils"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/8.16"},["span.padWord","Matt."],"8:16"],";"],["li",["i","devils"],"besought him:",["a.scriptureRef",{"href":"/scriptures/nt/matt/8.31"},["span.padWord","Matt."],"8:31"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/mark/5.12"},"Mark 5:12"],"; )"],["li","dumb man possessed with a",["i","devil"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/9.32"},["span.padWord","Matt."],"9:32"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/luke/11.14"},"Luke 11:14"],"; )"],["li","casteth out",["i","devils"],"through the prince of the",["i","devils"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/9.34"},["span.padWord","Matt."],"9:34"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/matt/12.24"},["span.padWord","Matt."],"12:24"],";",["a.scriptureRef",{"href":"/scriptures/nt/mark/3.22"},"Mark 3:22"],";",["a.scriptureRef",{"href":"/scriptures/nt/luke/11.15"},"Luke 11:15"],"; )"],["li","they say, He hath a",["i","devil"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/11.18"},["span.padWord","Matt."],"11:18"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/luke/7.33"},"Luke 7:33"],"; )"],["li","if I cast out",["i","devils"],"by the Spirit of God:",["a.scriptureRef",{"href":"/scriptures/nt/matt/12.28"},["span.padWord","Matt."],"12:28"],";"],["li","my daughter is … vexed with a",["i","devil"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/15.22"},["span.padWord","Matt."],"15:22"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/mark/7.26"},"Mark 7:26"],"; )"],["li","Jesus rebuked the",["i","devil"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/17.18"},["span.padWord","Matt."],"17:18"],";"],["li","fire, prepared for the",["i","devil"],"and his angels:",["a.scriptureRef",{"href":"/scriptures/nt/matt/25.41"},["span.padWord","Matt."],"25:41"],";"],["li","suffered not the",["i","devils"],"to speak:",["a.scriptureRef",{"href":"/scriptures/nt/mark/1.34"},"Mark 1:34"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/luke/4.41"},"Luke 4:41"],"; )"],["li","power to … cast out",["i","devils"],":",["a.scriptureRef",{"href":"/scriptures/nt/mark/3.15"},["span.padWord","Mark"],"3:15"],";"],["li","the",["i","devil"],"is gone out of thy daughter:",["a.scriptureRef",{"href":"/scriptures/nt/mark/7.29"},["span.padWord","Mark"],"7:29"],";"],["li","we saw one casting out",["i","devils"],"in thy name:",["a.scriptureRef",{"href":"/scriptures/nt/mark/9.38"},["span.padWord","Mark"],"9:38"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/luke/9.49"},"Luke 9:49"],"; )"],["li","Mary Magdalene, out of whom he had cast seven",["i","devils"],":",["a.scriptureRef",{"href":"/scriptures/nt/mark/16.9"},["span.padWord","Mark"],"16:9"],";"],["li","In my name shall they cast out",["i","devils"],":",["a.scriptureRef",{"href":"/scriptures/nt/mark/16.17"},["span.padWord","Mark"],"16:17"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/morm/9.24"},"Morm. 9:24"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/35.9"},"D&C 35:9"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/84.67"},["span.padWord","D&C"],"84:67"],"; )"],["li","a man, which had a spirit of an unclean",["i","devil"],":",["a.scriptureRef",{"href":"/scriptures/nt/luke/4.33"},"Luke 4:33"],";"],["li","gave them power and authority over all",["i","devils"],":",["a.scriptureRef",{"href":"/scriptures/nt/luke/9.1"},["span.padWord","Luke"],"9:1"],";"],["li",["i","devil"],"threw him down:",["a.scriptureRef",{"href":"/scriptures/nt/luke/9.42"},["span.padWord","Luke"],"9:42"],";"],["li","if I with the finger of God cast out",["i","devils"],":",["a.scriptureRef",{"href":"/scriptures/nt/luke/11.20"},["span.padWord","Luke"],"11:20"],";"],["li","you twelve, and one of you is a",["i","devil"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/6.70"},"John 6:70"],";"],["li","Ye are of your father the",["i","devil"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/8.44"},["span.padWord","John"],"8:44"],";"],["li","thou art a Samaritan, and hast a",["i","devil"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/8.48"},["span.padWord","John"],"8:48"],";"],["li","He hath a",["i","devil"],", and is mad:",["a.scriptureRef",{"href":"/scriptures/nt/john/10.20"},["span.padWord","John"],"10:20"],";"],["li",["i","prince"],"of this world be cast out:",["a.scriptureRef",{"href":"/scriptures/nt/john/12.31"},["span.padWord","John"],"12:31"],";"],["li",["i","devil"],"having now put into the heart of Judas … to betray him:",["a.scriptureRef",{"href":"/scriptures/nt/john/13.2"},["span.padWord","John"],"13:2"],";"],["li",["i","prince"],"of this world cometh:",["a.scriptureRef",{"href":"/scriptures/nt/john/14.30"},["span.padWord","John"],"14:30"],";"],["li","healing all that were oppressed of the",["i","devil"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/10.38"},"Acts 10:38"],";"],["li",["i","god"],"of this world hath blinded the minds:",["a.scriptureRef",{"href":"/scriptures/nt/2-cor/4.4"},"2 Cor. 4:4"],";"],["li",["i","serpent"],"beguiled Eve through his subtilty:",["a.scriptureRef",{"href":"/scriptures/nt/2-cor/11.3"},["span.padWord","2 Cor."],"11:3"],";"],["li","Neither give place to the",["i","devil"],":",["a.scriptureRef",{"href":"/scriptures/nt/eph/4.27"},"Eph. 4:27"],";"],["li","able to stand against the wiles of the",["i","devil"],":",["a.scriptureRef",{"href":"/scriptures/nt/eph/6.11"},["span.padWord","Eph."],"6:11"],";"],["li","man of sin be revealed, the son of",["i","perdition"],":",["a.scriptureRef",{"href":"/scriptures/nt/2-thes/2.3"},"2 Thes. 2:3"],";"],["li","heed to seducing spirits, and doctrines of",["i","devils"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-tim/4.1"},"1 Tim. 4:1"],";"],["li","recover themselves out of the snare of the",["i","devil"],":",["a.scriptureRef",{"href":"/scriptures/nt/2-tim/2.26"},"2 Tim. 2:26"],";"],["li","power of death, that is, the",["i","devil"],":",["a.scriptureRef",{"href":"/scriptures/nt/heb/2.14"},"Heb. 2:14"],";"],["li",["i","devils"],"also believe, and tremble:",["a.scriptureRef",{"href":"/scriptures/nt/james/2.19"},"James 2:19"],";"],["li","Resist the",["i","devil"],", and he will flee from you:",["a.scriptureRef",{"href":"/scriptures/nt/james/4.7"},["span.padWord","James"],"4:7"],";"],["li",["i","devil"],", as a roaring lion … seeking whom he may devour:",["a.scriptureRef",{"href":"/scriptures/nt/1-pet/5.8"},"1 Pet. 5:8"],";"],["li","committeth sin is of the",["i","devil"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-jn/3.8"},"1 Jn. 3:8"],";"],["li",["i","angels"],"which kept not their first estate:",["a.scriptureRef",{"href":"/scriptures/nt/jude/1.6"},"Jude 1:6"],";"],["li","archangel, when contending with the",["i","devil"],":",["a.scriptureRef",{"href":"/scriptures/nt/jude/1.9"},["span.padWord","Jude"],"1:9"],";"],["li",["i","devil"],"shall cast some of you into prison:",["a.scriptureRef",{"href":"/scriptures/nt/rev/2.10"},"Rev. 2:10"],";"],["li","they should not worship",["i","devils"],":",["a.scriptureRef",{"href":"/scriptures/nt/rev/9.20"},["span.padWord","Rev."],"9:20"],";"],["li",["i","dragon"],"fought and his angels:",["a.scriptureRef",{"href":"/scriptures/nt/rev/12.7"},["span.padWord","Rev."],"12:7"],";"],["li","that old serpent, called the",["i","Devil"],", and Satan:",["a.scriptureRef",{"href":"/scriptures/nt/rev/12.9"},["span.padWord","Rev."],"12:9"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/76.28"},"D&C 76:28"],"; )"],["li","spirits of",["i","devils"],", working miracles:",["a.scriptureRef",{"href":"/scriptures/nt/rev/16.14"},["span.padWord","Rev."],"16:14"],";"],["li","Babylon … is become the habitation of",["i","devils"],":",["a.scriptureRef",{"href":"/scriptures/nt/rev/18.2"},["span.padWord","Rev."],"18:2"],";"],["li","laid hold on … the",["i","Devil"],"… and bound him a thousand years:",["a.scriptureRef",{"href":"/scriptures/nt/rev/20.2"},["span.padWord","Rev."],"20:2"],";"],["li",["i","devil"],"that deceived them was cast into the lake of fire:",["a.scriptureRef",{"href":"/scriptures/nt/rev/20.10"},["span.padWord","Rev."],"20:10"],";"]]],["div",{"id":"f4","uri":"/scriptures/tg/devil.f4","order":".000.2432"},["ul.index",["li","people … afflicted … with",["i","devils"],"and unclean spirits:",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/11.31"},"1 Ne. 11:31"],";"],["li","led according to the will and captivity of the",["i","devil"],":",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/1.18"},"2 Ne. 1:18"],";"],["li","fallen from heaven … that old serpent, who is the",["i","devil"],", … father of all lies:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/2.18"},["span.padWord","2 Ne."],"2:18"],";"],["li",["i","devil"],"… transformeth himself nigh unto an angel of light:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/9.9"},["span.padWord","2 Ne."],"9:9"],";"],["li","they who are filthy are the",["i","devil"],"and his angels:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/9.16"},["span.padWord","2 Ne."],"9:16"],";"],["li","combinations of the",["i","devil"],":",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/26.22"},["span.padWord","2 Ne."],"26:22"],";"],["li","deceived by the power of the",["i","devil"],":",["a.scriptureRef",{"href":"/scriptures/bofm/jacob/7.18"},"Jacob 7:18"],";"],["li","evil cometh from the",["i","devil"],":",["a.scriptureRef",{"href":"/scriptures/bofm/omni/1.25"},"Omni 1:25"],";"],["li","beware lest … ye list to obey the",["i","evil spirit"],":",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/2.32"},"Mosiah 2:32"],";"],["li","he shall cast out",["i","devils"],":",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/3.6"},["span.padWord","Mosiah"],"3:6"],";"],["li","they shall … say that he hath a",["i","devil"],":",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/3.9"},["span.padWord","Mosiah"],"3:9"],";"],["li",["i","devil"],"hath all power …",["i","devil"],"an enemy to God:",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/16.5"},["span.padWord","Mosiah"],"16:5"],";"],["li",["i","devil"],"is your shepherd:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/5.39"},"Alma 5:39"],";"],["li",["i","devil"],"will not support his children:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/30.60"},["span.padWord","Alma"],"30:60"],";"],["li",["i","devil"],", who is an enemy to all righteousness:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/34.23"},["span.padWord","Alma"],"34:23"],";"],["li","not be led away by the temptations of the",["i","devil"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/34.39"},["span.padWord","Alma"],"34:39"],";"],["li","chose evil works …",["i","devil"],"did enter into them:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/40.13"},["span.padWord","Alma"],"40:13"],";"],["li",["i","devil"],"would never have power:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/48.17"},["span.padWord","Alma"],"48:17"],";"],["li","when the",["i","devil"],"shall send forth his mighty winds:",["a.scriptureRef",{"href":"/scriptures/bofm/hel/5.12"},"Hel. 5:12"],";"],["li",["i","author"],"of all sin:",["a.scriptureRef",{"href":"/scriptures/bofm/hel/6.30"},["span.padWord","Hel."],"6:30"],";"],["li","secret band, whose author is … the",["i","evil one"],":",["a.scriptureRef",{"href":"/scriptures/bofm/hel/8.28"},["span.padWord","Hel."],"8:28"],";"],["li",["i","devil"],"… is the father of contention:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/11.29"},"3 Ne. 11:29"],";"],["li",["i","devil"],"is an enemy unto God:",["a.scriptureRef",{"href":"/scriptures/bofm/moro/7.12"},"Moro. 7:12"],";"]]],["div",{"id":"f5","uri":"/scriptures/tg/devil.f5","order":".000.2433"},["ul.index",["li",["i","devil"],"shall have power over his own dominion:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/1.35"},"D&C 1:35"],";"],["li",["i","devil"],"has sought to lay a cunning plan:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/10.12"},["span.padWord","D&C"],"10:12"],";"],["li","Require not miracles … except casting out",["i","devils"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/24.13"},["span.padWord","D&C"],"24:13"],";"],["li","everlasting fire, prepared for the",["i","devil"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/29.28"},["span.padWord","D&C"],"29:28"],";"],["li","Adam, being tempted of the",["i","devil"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/29.36"},["span.padWord","D&C"],"29:36"],";"],["li","thrust down, and thus came the",["i","devil"],"and his angels:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/29.37"},["span.padWord","D&C"],"29:37"],";"],["li","must needs be that the",["i","devil"],"should tempt:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/29.39"},["span.padWord","D&C"],"29:39"],";"],["li","to reign with the",["i","devil"],"and his angels in eternity:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/76.44"},["span.padWord","D&C"],"76:44"],";"],["li","who shall not be redeemed from the",["i","devil"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/76.85"},["span.padWord","D&C"],"76:85"],";"],["li",["i","wicked one"],"… taketh away light and truth:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/93.39"},["span.padWord","D&C"],"93:39"],";"],["li","detecting the",["i","devil"],"when he appeared as an angel of light:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/128.20"},["span.padWord","D&C"],"128:20"],";"]]],["div",{"id":"f6","uri":"/scriptures/tg/devil.f6","order":".000.2434"},["ul.index",["li","became Satan, yea, even the",["i","devil"],":",["a.scriptureRef",{"href":"/scriptures/pgp/moses/4.4"},"Moses 4:4"],";"],["li",["i","second"],"was angry, and kept not his first estate:",["a.scriptureRef",{"href":"/scriptures/pgp/abr/3.28"},"Abr. 3:28"],";"]]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/nt/matt/10.28"},"Matt. 10:28"],";",["a.scriptureRef",{"href":"/scriptures/nt/luke/12.5"},"Luke 12:5"]]]],"refs":null}
