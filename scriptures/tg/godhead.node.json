19"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/11.25"},"3 Ne. 11:25"],"; )"],["li","called the",["i","Son"],"of the Highest:",["a.scriptureRef",{"href":"/scriptures/nt/luke/1.32"},"Luke 1:32"],";"],["li",["i","Holy Ghost"],"descended in a bodily shape like a dove:",["a.scriptureRef",{"href":"/scriptures/nt/luke/3.22"},["span.padWord","Luke"],"3:22"],";"],["li",["i","Son"],"can do nothing … but what he seeth the",["i","Father"],"do:",["a.scriptureRef",{"href":"/scriptures/nt/john/5.19"},"John 5:19"],";"],["li",["i","Father"],"that sent me beareth witness of me:",["a.scriptureRef",{"href":"/scriptures/nt/john/8.18"},["span.padWord","John"],"8:18"],";"],["li","I and my Father are",["i","one"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/10.30"},["span.padWord","John"],"10:30"],";"],["li","believe the works … that the",["i","Father"],"is in me:",["a.scriptureRef",{"href":"/scriptures/nt/john/10.38"},["span.padWord","John"],"10:38"],";"],["li","a",["i","voice"],"from heaven, saying, I have … glorified it:",["a.scriptureRef",{"href":"/scriptures/nt/john/12.28"},["span.padWord","John"],"12:28"],";"],["li","my",["i","Father"],"is greater than I:",["a.scriptureRef",{"href":"/scriptures/nt/john/14.28"},["span.padWord","John"],"14:28"],";"],["li","that they might know thee the only true",["i","God"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/17.3"},["span.padWord","John"],"17:3"],";"],["li","That they all may be",["i","one"],"; as thou, Father, art in me:",["a.scriptureRef",{"href":"/scriptures/nt/john/17.21"},["span.padWord","John"],"17:21"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/35.2"},"D&C 35:2"],"; )"],["li","I ascend unto my",["i","Father"],", and your Father:",["a.scriptureRef",{"href":"/scriptures/nt/john/20.17"},["span.padWord","John"],"20:17"],";"],["li","being by the",["i","right"],"hand of God exalted:",["a.scriptureRef",{"href":"/scriptures/nt/acts/2.33"},"Acts 2:33"],";"],["li","saw the glory of",["i","God"],", and 