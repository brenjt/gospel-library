s Christ:",["a.scriptureRef",{"href":"/scriptures/nt/philip/1.6"},"Philip. 1:6"],";"],["li","Ye are all … children of the",["i","day"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-thes/5.5"},"1 Thes. 5:5"],";"],["li",["i","day"],"dawn, and the",["i","day"],"star arise:",["a.scriptureRef",{"href":"/scriptures/nt/2-pet/1.19"},"2 Pet. 1:19"],";"],["li","one",["i","day"],"is with the Lord as a thousand years:",["a.scriptureRef",{"href":"/scriptures/nt/2-pet/3.8"},["span.padWord","2 Pet."],"3:8"],";"],["li","I was in the Spirit on the Lord’s",["i","day"],":",["a.scriptureRef",{"href":"/scriptures/nt/rev/1.10"},"Rev. 1:10"],";"],["li","rest not",["i","day"],"and night:",["a.scriptureRef",{"href":"/scriptures/nt/rev/4.8"},["span.padWord","Rev."],"4:8"],";"]]],["div",{"id":"f4","uri":"/scriptures/tg/day.f4","order":".000.2172"},["ul.index",["li",["i","days"],"of the children of men were prolonged:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/2.21"},"2 Ne. 2:21"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/hel/15.4"},"Hel. 15:4"],"; )"],["li","When the",["i","day"],"cometh that they shall believe in me:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/10.7"},["span.padWord","2 Ne."],"10:7"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/25.16"},["span.padWord","2 Ne."],"25:16"],"; )"],["li","now is the …",["i","day"],"of your salvation:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/34.31"},"Alma 34:31"],";"],["li","plain … as the",["i","daylight"],"is from the dark night:",["a.scriptureRef",{"href":"/scriptures/bofm/moro/7.15"},"Moro. 7:15"],";"]]],["div",{"id":"f5","uri":"/scriptures/tg/day.f5","order":".000.2173"},["ul.index",["li","the",["i","day"],"cometh that they who will not hear:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/1.14"},"D&C 1:14"],";"],["li","a",["i","day"],"of righteousness shall come:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/45.12"},["span.padWord","D&C"],"45:12"],";"],["li","the",["i","day"],"cometh that you shall hear my voice:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/50.45"},["span.padWord","D&C"],"50:45"],";"],["li","offer up thy sacraments upon my holy",["i","day"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/59.9"},["span.padWord","D&C"],"59:9"],";"],["li","a",["i","day"],"appointed unto you to rest:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/59.10"},["span.padWord","D&C"],"59:10"],";"]]],["div",{"id":"f6","uri":"/scriptures/tg/day.f6","order":".000.2174"},["ul.index",["li","one revolution was a",["i","day"],"unto the Lord:",["a.scriptureRef",{"href":"/scriptures/pgp/abr/3.4"},"Abr. 3:4"],";"]]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/ot/obad/1.15"},"Obad. 1:15"]]]],"refs":null}
