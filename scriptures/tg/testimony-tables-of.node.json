ant and his",["i","testimonies"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/25.10"},"Ps. 25:10"],";"],["li","he established a",["i","testimony"],"in Jacob:",["a.scriptureRef",{"href":"/scriptures/ot/ps/78.5"},["span.padWord","Ps."],"78:5"],";"],["li","they … kept not his",["i","testimonies"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/78.56"},["span.padWord","Ps."],"78:56"],";"],["li","they kept his",["i","testimonies"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/99.7"},["span.padWord","Ps."],"99:7"],";"],["li","Blessed are they that keep his",["i","testimonies"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/119.2"},["span.padWord","Ps."],"119:2"],";"],["li","Thy",["i","testimonies"],"… are my delight:",["a.scriptureRef",{"href":"/scriptures/ot/ps/119.24"},["span.padWord","Ps."],"119:24"],";"],["li","Incline my heart unto thy",["i","testimonies"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/119.36"},["span.padWord","Ps."],"119:36"],";"],["li","I will speak of thy",["i","testimonies"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/119.46"},["span.padWord","Ps."],"119:46"],";"],["li","thy",["i","testimonies"],"are my meditation:",["a.scriptureRef",{"href":"/scriptures/ot/ps/119.99"},["span.padWord","Ps."],"119:99"],";"],["li","Thy",["i","testimonies"],"have I taken as an heritage for ever:",["a.scriptureRef",{"href":"/scriptures/ot/ps/119.111"},["span.padWord","Ps."],"119:111"],";"],["li","If thy children will keep my covenant and my",["i","testimony"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/132.12"},["span.padWord","Ps."],"132:12"],";"],["li","Bind up the",["i","testimony"],", seal the law:",["a.scriptureRef",{"href":"/scriptures/ot/isa/8.16"},"Isa. 8:16"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/18.16"},"2 Ne. 18:16"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/109.46"},"D&C 109:46"],"; )"]]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/ot/ex/24.12"},"Ex. 24:12"],";",["a.scriptureRef",