Jews only:",["a.scriptureRef",{"href":"/scriptures/nt/acts/11.19"},["span.padWord","Acts"],"11:19"],";"],["li","this Jesus, whom I",["i","preach"],"unto you, is Christ:",["a.scriptureRef",{"href":"/scriptures/nt/acts/17.3"},["span.padWord","Acts"],"17:3"],";"],["li","how shall they",["i","preach"],", except they be sent:",["a.scriptureRef",{"href":"/scriptures/nt/rom/10.15"},"Rom. 10:15"],";"],["li",["i","preaching"],"of the cross is to them that perish:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/1.18"},"1 Cor. 1:18"],";"],["li","pleased God by the foolishness of",["i","preaching"],"to save:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/1.21"},["span.padWord","1 Cor."],"1:21"],";"],["li","we",["i","preach"],"Christ crucified:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/1.23"},["span.padWord","1 Cor."],"1:23"],";"],["li","woe is unto me, if I",["i","preach"],"not the gospel:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/9.16"},["span.padWord","1 Cor."],"9:16"],";"],["li",["i","preach"],"among the Gentiles the unsearchable riches:",["a.scriptureRef",{"href":"/scriptures/nt/eph/3.8"},"Eph. 3:8"],";"],["li","Whom we",["i","preach"],", warning every man:",["a.scriptureRef",{"href":"/scriptures/nt/col/1.28"},"Col. 1:28"],";"],["li",["i","Preach"],"the word:",["a.scriptureRef",{"href":"/scriptures/nt/2-tim/4.2"},"2 Tim. 4:2"],";"],["li","by me the",["i","preaching"],"might be fully known:",["a.scriptureRef",{"href":"/scriptures/nt/2-tim/4.17"},["span.padWord","2 Tim."],"4:17"],";"],["li","manifested his word through",["i","preaching"],":",["a.scriptureRef",{"href":"/scriptures/nt/titus/1.3"},"Titus 1:3"],";"],["li","he went and",["i","preached"],"unto the spirits in prison:",["a.scriptureRef",{"href":"/scriptures/nt/1-pet/3.19"},"1 Pet. 3:19"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/138.8,28"},"D&C 138:8, 28"],"; )"],["li","gospel",["i","preached"],"also to them that are dead:",["a.scriptureRef",{"href":"/scriptures/nt/1-pet/4.6"},["sp