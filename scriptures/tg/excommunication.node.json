{"id":1012,"parent_id":0,"book_id":7,"content_id":1,"language_id":1,"display_order":1012,"title":"Excommunication","subtitle":"","short_title":"Excommunication","uri":"/scriptures/tg/excommunication","content":[["div",{"id":"t1","uri":"/scriptures/tg/excommunication.t1","order":".000.3115"},[".title",["b","Excommunication"]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/tg/book-of-life"},"Book of Life"]],["div",{"id":"f2","uri":"/scriptures/tg/excommunication.f2","order":".000.3116"},["ul.index",["li","eateth leavened bread … shall be",["i","cut off"],":",["a.scriptureRef",{"href":"/scriptures/ot/ex/12.15"},"Ex. 12:15"],";"],["li","touch any unclean thing … shall be",["i","cut off"],":",["a.scriptureRef",{"href":"/scriptures/ot/lev/7.21"},"Lev. 7:21"],";"],["li","commit any of these abominations … shall be",["i","cut off"],":",["a.scriptureRef",{"href":"/scriptures/ot/lev/18.29"},["span.padWord","Lev."],"18:29"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/lev/18.6-30"},["span.padWord","Lev."],"18:6–30"],"; )"],["li","turneth after … familiar spirits …",["i","cut"],"him",["i","off"],":",["a.scriptureRef",{"href":"/scriptures/ot/lev/20.6"},["span.padWord","Lev."],"20:6"],";"],["li","soul that doeth ought presumptuously … shall be",["i","cut off"],":",["a.scriptureRef",{"href":"/scriptures/ot/num/15.30"},"Num. 15:30"],";"],["li","defileth the tabernacle … shall be",["i","cut off"],":",["a.scriptureRef",{"href":"/scriptures/ot/num/19.13"},["span.padWord","Num."],"19:13"],";"],["li","polluted,",["i","put from"],"the priesthood:",["a.scriptureRef",{"href":"/scriptures/ot/ezra/2.62"},"Ezra 2:62"],";"],["li","Lord will",["i","cut off"],"the man that doeth this:",["a.scriptureRef",{"href":"/scriptures/ot/mal/2.12"},"Mal. 2:12"],";"]]],["div",{"id":"f3","uri":"/scriptures/tg/excommunication.f3","order":".000.3117"},["ul.index",["li",["i","cut off"],"which trouble you:",["a.scriptureRef",{"href":"/scriptures/nt/gal/5.12"},"Gal. 5:12"],";"],["li",["i","withdraw"],"yourselves from every brother that walketh disorderly:",["a.scriptureRef",{"href":"/scriptures/nt/2-thes/3.6"},"2 Thes. 3:6"],";"]]],["div",{"id":"f4","uri":"/scriptures/tg/excommunication.f4","order":".000.3118"},["ul.index",["li","not confess their sins and repent … names were",["i","blotted out"],":",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/26.36"},"Mosiah 26:36"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/moro/6.7"},"Moro. 6:7"],"; )"],["li","hearts of many were hardened, and their names were",["i","blotted out"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/1.24"},"Alma 1:24"],";"],["li","lifted up in the pride … names were",["i","blotted out"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/6.3"},["span.padWord","Alma"],"6:3"],";"],["li","repent not he shall",["i","not"],"be",["i","numbered"],"among my people:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/18.31"},"3 Ne. 18:31"],";"]]],["div",{"id":"f5","uri":"/scriptures/tg/excommunication.f5","order":".000.3119"},["ul.index",["li","Any member …",["i","transgressing"],"… shall be dealt with:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/20.80"},"D&C 20:80"],";"],["li","receiveth it and doeth it not … shall be",["i","cast out"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/41.5"},["span.padWord","D&C"],"41:5"],";"],["li","sinneth and repenteth not shall be",["i","cast out"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/42.28"},["span.padWord","D&C"],"42:28"],";"],["li","adultery … shall be",["i","cast out"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/42.75"},["span.padWord","D&C"],"42:75"],";"],["li","hypocrites … shall be",["i","cut off"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/50.8"},["span.padWord","D&C"],"50:8"],";"],["li","rebellious shall be",["i","cut off"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/64.35"},["span.padWord","D&C"],"64:35"],";"],["li","no bishop …",["i","condemned"],"for any crime, save it be before the First Presidency:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/68.22"},["span.padWord","D&C"],"68:22"],";"],["li",["i","cut off"],"from the church … not find an inheritance:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/85.11"},["span.padWord","D&C"],"85:11"],";"],["li",["i","cut off"],"for transgression:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/104.9"},["span.padWord","D&C"],"104:9"],";"],["li","can only",["i","excommunicate"],"them from their society:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/134.10"},["span.padWord","D&C"],"134:10"],";"]]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/102.16"},"D&C 102:16"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/107.72"},["span.padWord","D&C"],"107:72"]]]],"refs":null}
