{"id":1150,"parent_id":0,"book_id":7,"content_id":1,"language_id":1,"display_order":1150,"title":"Food","subtitle":"","short_title":"Food","uri":"/scriptures/tg/food","content":[["div",{"id":"t1","uri":"/scriptures/tg/food.t1","order":".000.3614"},[".title",["b","Food"]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/tg/meat"},"Meat"],";",["a.scriptureRef",{"href":"/scriptures/tg/word-of-wisdom"},"Word of Wisdom"]],["div",{"id":"f2","uri":"/scriptures/tg/food.f2","order":".000.3615"},["ul.index",["li","every herb … every tree … to you it shall be for",["i","meat"],":",["a.scriptureRef",{"href":"/scriptures/ot/gen/1.29"},"Gen. 1:29"],";"],["li","to grow every tree that is … good for",["i","food"],":",["a.scriptureRef",{"href":"/scriptures/ot/gen/2.9"},["span.padWord","Gen."],"2:9"],";"],["li","woman saw that the tree was good for",["i","food"],":",["a.scriptureRef",{"href":"/scriptures/ot/gen/3.6"},["span.padWord","Gen."],"3:6"],";"],["li","it shall be for",["i","food"],"for thee:",["a.scriptureRef",{"href":"/scriptures/ot/gen/6.21"},["span.padWord","Gen."],"6:21"],";"],["li","Every moving thing that liveth shall be",["i","meat"],":",["a.scriptureRef",{"href":"/scriptures/ot/gen/9.3"},["span.padWord","Gen."],"9:3"],";"],["li","gathered up all the",["i","food"],"of the seven years:",["a.scriptureRef",{"href":"/scriptures/ot/gen/41.48"},["span.padWord","Gen."],"41:48"],";"],["li",["i","beasts"],"which ye shall eat among all the beasts:",["a.scriptureRef",{"href":"/scriptures/ot/lev/11.2"},"Lev. 11:2"],";"],["li","loveth the stranger, in giving him",["i","food"],":",["a.scriptureRef",{"href":"/scriptures/ot/deut/10.18"},"Deut. 10:18"],";"],["li","thou mayest kill and eat",["i","flesh"],":",["a.scriptureRef",{"href":"/scriptures/ot/deut/12.15"},["span.padWord","Deut."],"12:15"],";"],["li","Cursed … that eateth any",["i","food"],":",["a.scriptureRef",{"href":"/scriptures/ot/1-sam/14.24"},"1 Sam. 14:24"],";"],["li","Man did eat angels’",["i","food"],":",["