{"id":1463,"parent_id":0,"book_id":7,"content_id":1,"language_id":1,"display_order":1463,"title":"Honor","subtitle":"","short_title":"Honor","uri":"/scriptures/tg/honor","content":[["div",{"id":"t1","uri":"/scriptures/tg/honor.t1","order":".000.4787"},[".title",["b","Honor"]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/tg/fame"},"Fame"],";",["a.scriptureRef",{"href":"/scriptures/tg/glory"},"Glory"],";",["a.scriptureRef",{"href":"/scriptures/tg/honorable"},"Honorable"],";",["a.scriptureRef",{"href":"/scriptures/tg/honoring-father-and-mother"},"Honoring Father and Mother"],";",["a.scriptureRef",{"href":"/scriptures/tg/praise"},"Praise"]],["div",{"id":"f2","uri":"/scriptures/tg/honor.f2","order":".000.4788"},["ul.index",["li",["i","honour"],"the face of the old man:",["a.scriptureRef",{"href":"/scriptures/ot/lev/19.32"},"Lev. 19:32"],";"],["li","put some of thine",["i","honour"],"upon him:",["a.scriptureRef",{"href":"/scriptures/ot/num/27.20"},"Num. 27:20"],";"],["li","them that",["i","honour"],"me I will",["i","honour"],":",["a.scriptureRef",{"href":"/scriptures/ot/1-sam/2.30"},"1 Sam. 2:30"],";"],["li","crowned him with glory and",["i","honour"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/8.5"},"Ps. 8:5"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/heb/2.7"},"Heb. 2:7"],"; )"],["li",["i","Honour"],"the Lord with thy substance:",["a.scriptureRef",{"href":"/scriptures/ot/prov/3.9"},"Prov. 3:9"],";"],["li","better than he that",["i","honoureth"],"himself:",["a.scriptureRef",{"href":"/scriptures/ot/prov/12.9"},["span.padWord","Prov."],"12:9"],";"],["li","he that regardeth reproof shall be",["i","honoured"],":",["a.scriptureRef",{"href":"/scriptures/ot/prov/13.18"},["span.padWord","Prov."],"13:18"],";"],["li","before",["i","honour"],"is humility:",["a.scriptureRef",{"href":"/scriptures/ot/prov/15.33"},["span.padWord","Prov."],"15:33"],";"],["li","an",["i","honour"],"for a man to cease from strife:",["a.scriptureRef",{"href":"/scriptures/ot/prov/20.3"},["span.padWord","Prov."],"20:3"],";"],["li","fear of the Lord are riches, and",["i","honour"],", and life:",["a.scriptureRef",{"href":"/scriptures/ot/prov/22.4"},["span.padWord","Prov."],"22:4"],";"],["li",["i","honour"],"is not seemly for a fool:",["a.scriptureRef",{"href":"/scriptures/ot/prov/26.1"},["span.padWord","Prov."],"26:1"],";"],["li","their lips do",["i","honour"],"me:",["a.scriptureRef",{"href":"/scriptures/ot/isa/29.13"},"Isa. 29:13"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/matt/15.8"},"Matt. 15:8"],";",["a.scriptureRef",{"href":"/scriptures/nt/mark/7.6"},"Mark 7:6"],";",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/27.25"},"2 Ne. 27:25"],"; )"],["li","son",["i","honoureth"],"his father … if then I be a father, where is mine",["i","honour"],":",["a.scriptureRef",{"href":"/scriptures/ot/mal/1.6"},"Mal. 1:6"],";"]]],["div",{"id":"f3","uri":"/scriptures/tg/honor.f3","order":".000.4789"},["ul.index",["li","prophet is not without",["i","honour"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/13.57"},"Matt. 13:57"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/mark/6.4"},"Mark 6:4"],";",["a.scriptureRef",{"href":"/scriptures/nt/john/4.44"},"John 4:44"],"; )"],["li",["i","honour"],"the Son, even as they",["i","honour"],"the Father:",["a.scriptureRef",{"href":"/scriptures/nt/john/5.23"},"John 5:23"],";"],["li","I receive not",["i","honour"],"from men:",["a.scriptureRef",{"href":"/scriptures/nt/john/5.41"},["span.padWord","John"],"5:41"],";"],["li","which receive",["i","honour"],"one of another, and seek not the",["i","honour"],"that cometh from God only:",["a.scriptureRef",{"href":"/scriptures/nt/john/5.44"},["span.padWord","John"],"5:44"],";"],["li","I",["i","honour"],"my Father, and ye do dishonour me:",["a.scriptureRef",{"href":"/scriptures/nt/john/8.49"},["span.padWord","John"],"8:49"],";"],["li",["i","honour"],"myself, my",["i","honour"],"is nothing: it is my Father that",["i","honoureth"],"me:",["a.scriptureRef",{"href":"/scriptures/nt/john/8.54"},["span.padWord","John"],"8:54"],";"],["li","if any man serve me, him will my Father",["i","honour"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/12.26"},["span.padWord","John"],"12:26"],";"],["li","Render therefore to all their dues …",["i","honour"],"to whom",["i","honour"],":",["a.scriptureRef",{"href":"/scriptures/nt/rom/13.7"},"Rom. 13:7"],";"],["li",["i","Honour"],"widows that are widows indeed:",["a.scriptureRef",{"href":"/scriptures/nt/1-tim/5.3"},"1 Tim. 5:3"],";"],["li","elders … be counted worthy of double",["i","honour"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-tim/5.17"},["span.padWord","1 Tim."],"5:17"],";"],["li","who hath builded the house hath more",["i","honour"],"than the house:",["a.scriptureRef",{"href":"/scriptures/nt/heb/3.3"},"Heb. 3:3"],";"],["li","no man taketh this",["i","honour"],"unto himself:",["a.scriptureRef",{"href":"/scriptures/nt/heb/5.4"},["span.padWord","Heb."],"5:4"],";"],["li",["i","honour"],"and glory at the appearing of Jesus:",["a.scriptureRef",{"href":"/scriptures/nt/1-pet/1.7"},"1 Pet. 1:7"],";"],["li",["i","Honour"],"all men …",["i","Honour"],"the king:",["a.scriptureRef",{"href":"/scriptures/nt/1-pet/2.17"},["span.padWord","1 Pet."],"2:17"],";"],["li",["i","honour"],"unto the wife, as unto the weaker vessel:",["a.scriptureRef",{"href":"/scriptures/nt/1-pet/3.7"},["span.padWord","1 Pet."],"3:7"],";"],["li","give",["i","honour"],"to him: for the marriage of the Lamb:",["a.scriptureRef",{"href":"/scriptures/nt/rev/19.7"},"Rev. 19:7"],";"],["li","kings … do bring their glory and",["i","honour"],":",["a.scriptureRef",{"href":"/scriptures/nt/rev/21.24"},["span.padWord","Rev."],"21:24"],";"]]],["div",{"id":"f4","uri":"/scriptures/tg/honor.f4","order":".000.4790"},["ul.index",["li","priestcraft … they did for the sake of riches and",["i","honor"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/1.16"},"Alma 1:16"],";"],["li","I seek not for",["i","honor"],"of the world:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/60.36"},["span.padWord","Alma"],"60:36"],";"]]],["div",{"id":"f5","uri":"/scriptures/tg/honor.f5","order":".000.4791"},["ul.index",["li","crowned with",["i","honor"],", and glory, and immortality:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/75.5"},"D&C 75:5"],";"],["li","delight to",["i","honor"],"those who serve me in righteousness:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/76.5"},["span.padWord","D&C"],"76:5"],";"],["li","Glory, and",["i","honor"],", and power, and might, be ascribed to our God:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/84.102"},["span.padWord","D&C"],"84:102"],";"],["li","nations of the earth shall",["i","honor"],"her:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/97.19"},["span.padWord","D&C"],"97:19"],";"],["li","aspire to the",["i","honors"],"of men, that they do not learn:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/121.35"},["span.padWord","D&C"],"121:35"],";"],["li","crown you with",["i","honor"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/124.55"},["span.padWord","D&C"],"124:55"],";"],["li","Herein is glory and",["i","honor"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/128.12"},["span.padWord","D&C"],"128:12"],";"],["li","every man should be",["i","honored"],"in his station:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/134.6"},["span.padWord","D&C"],"134:6"],";"],["li","he might be",["i","honored"],"and the wicked might be condemned:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/136.39"},["span.padWord","D&C"],"136:39"],";"]]],["div",{"id":"f6","uri":"/scriptures/tg/honor.f6","order":".000.4792"},["ul.index",["li","wherefore give me thine",["i","honor"],":",["a.scriptureRef",{"href":"/scriptures/pgp/moses/4.1"},"Moses 4:1"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/29.36"},"D&C 29:36"],"; )"],["li","We believe in …",["i","honoring"],", and sustaining the law:",["a.scriptureRef",{"href":"/scriptures/pgp/a-of-f/1.12"},"A of F 1:12"],";"]]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/nt/2-cor/6.8"},"2 Cor. 6:8"]]]],"refs":null}
