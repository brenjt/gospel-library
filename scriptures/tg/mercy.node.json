t and",["i","mercy"],"with them that love him:",["a.scriptureRef",{"href":"/scriptures/ot/deut/7.9"},["span.padWord","Deut."],"7:9"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/dan/9.4"},"Dan. 9:4"],"; )"],["li","his",["i","mercy"],"endureth for ever:",["a.scriptureRef",{"href":"/scriptures/ot/1-chr/16.34"},"1 Chr. 16:34"],";"],["li","Lord … is gracious and",["i","merciful"],":",["a.scriptureRef",{"href":"/scriptures/ot/2-chr/30.9"},"2 Chr. 30:9"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/neh/9.31"},"Neh. 9:31"],";",["a.scriptureRef",{"href":"/scriptures/ot/jonah/4.2"},"Jonah 4:2"],"; )"],["li","God ready to pardon, gracious and",["i","merciful"],":",["a.scriptureRef",{"href":"/scriptures/ot/neh/9.17"},"Neh. 9:17"],";"],["li","goodness and",["i","mercy"],"shall follow me:",["a.scriptureRef",{"href":"/scriptures/ot/ps/23.6"},"Ps. 23:6"],";"],["li","trusteth in the Lord,",["i","mercy"],"shall compass him:",["a.scriptureRef",{"href":"/scriptures/ot/ps/32.10"},["span.padWord","Ps."],"32:10"],";"],["li","righteous sheweth",["i","mercy"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/37.21"},["span.padWord","Ps."],"37:21"],";"],["li","I trust in the",["i","mercy"],"of God for ever:",["a.scriptureRef",{"href":"/scriptures/ot/ps/52.8"},["span.padWord","Ps."],"52:8"],";"],["li","plenteous in",["i","mercy"],"unto all them that call upon thee:",["a.scriptureRef",{"href":"/scriptures/ot/ps/86.5"},["span.padWord","Ps."],"86:5"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/ps/86.15"},["span.padWord","Ps."],"86:15"],"; )"],["li","Thou shalt arise, and have",["i","mercy"],"upon Zion:",["a.scriptureRef",{"href":"/scriptures/ot/ps/102.13"},["span.padWord","Ps."],"102:13"],";"],["li",["i","merciful"],"man doeth good to his own soul:",["a.scriptureRef",{"href":"/scriptures/ot/prov/11.17"},"Prov. 11:17"],";"],["li","he that hath",["i","mercy"],"on the poor, happy is he:",["a.scriptureRef",{"href":"/scriptures/ot/prov/14.21"},["span.padWord","Prov."],"14:21"],";"],["li","By",["i","mercy"],"and truth iniquity is purged:",["a.scriptureRef",{"href":"/scriptures/ot/prov/16.6"},["span.padWord","Prov."],"16:6"],";"],["li","in",["i","mercy"],"shall the throne be established:",["a.scriptureRef",{"href":"/scriptures/ot/isa/16.5"},"Isa. 16:5"],";"],["li","with great",["i","mercies"],"will I gather thee:",["a.scriptureRef",{"href":"/scriptures/ot/isa/54.7"},["span.padWord","Isa."],"54:7"],";"],["li","desired",["i","mercy"],", and not sacrifice:",["a.scriptureRef",{"href":"/scriptures/ot/hosea/6.6"},"Hosea 6:6"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/matt/9.13"},"Matt. 9:13"],";",["a.scriptureRef",{"href":"/scriptures/nt/matt/12.7"},["span.padWord","Matt."],"12:7"],"; )"],["li","reap in",["i","mercy"],":",["a.scriptureRef",{"href":"/scriptures/ot/hosea/10.12"},["span.padWord","Hosea"],"10:12"],";"],["li","in thee the fatherless findeth",["i","mercy"],":",["a.scriptureRef",{"href":"/scriptures/ot/hosea/14.3"},["span.padWord","Hosea"],"14:3"],";"],["li","to do justly, and to love",["i","mercy"],":",["a.scriptureRef",{"href":"/scriptures/ot/micah/6.8"},"Micah 6:8"],";"],["li","he delighteth in",["i","mercy"],":",["a.scriptureRef",{"href":"/scriptures/ot/micah/7.18"},["span.padWord","Micah"],"7:18"],";"],["li","shew",["i","mercy"],"and compassions:",["a.scriptureRef",{"href":"/scriptures/ot/zech/7.9"},"Zech. 7:9"],";"]]],["div",{"id":"f3","uri":"/scriptures/tg/mercy.f3","order":".000.6598"},["ul.index",["li","Blessed are the",["i","merciful"],": for they shall obtain",["i","mercy"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/5.7"},"Matt. 5:7"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/12.7"},"3 Ne. 12:7"],"; )"],["li","weightier matters of the law, judgment,",["i","mercy"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/23.23"},["span.padWord","Matt."],"23:23"],";"],["li","his",["i","mercy"],"is on them that fear him:",["a.scriptureRef",{"href":"/scriptures/nt/luke/1.50"},"Luke 1:50"],";"],["li","Be ye therefore",["i","merciful"],":",["a.scriptureRef",{"href":"/scriptures/nt/luke/6.36"},["span.padWord","Luke"],"6:36"],";"],["li","Abraham, have",["i","mercy"],"on me, and send Lazarus:",["a.scriptureRef",{"href":"/scriptures/nt/luke/16.24"},["span.padWord","Luke"],"16:24"],";"],["li","Jesus said unto her, Neither do I",["i","condemn"],"thee:",["a.scriptureRef",{"href":"/scriptures/nt/john/8.11"},"John 8:11"],";"],["li","Therefore hath he",["i","mercy"],"on whom he will have",["i","mercy"],":",["a.scriptureRef",{"href":"/scriptures/nt/rom/9.18"},"Rom. 9:18"],";"],["li","might glorify God for his",["i","mercy"],":",["a.scriptureRef",{"href":"/scriptures/nt/rom/15.9"},["span.padWord","Rom."],"15:9"],";"],["li","Father of",["i","mercies"],", and the God of all:",["a.scriptureRef",{"href":"/scriptures/nt/2-cor/1.3"},"2 Cor. 1:3"],";"],["li","God, who is rich in",["i","mercy"],", for his great love:",["a.scriptureRef",{"href":"/scriptures/nt/eph/2.4"},"Eph. 2:4"],";"],["li","Put on therefore, as the elect of God … bowels of",["i","mercies"],":",["a.scriptureRef",{"href":"/scriptures/nt/col/3.12"},"Col. 3:12"],";"],["li","according to his",["i","mercy"],"he saved us:",["a.scriptureRef",{"href":"/scriptures/nt/titus/3.5"},"Titus 3:5"],";"],["li","he might be a",["i","merciful"],"and faithful high priest:",["a.scriptureRef",{"href":"/scriptures/nt/heb/2.17"},"Heb. 2:17"],";"],["li","He that despised Moses’ law died without",["i","mercy"],":",["a.scriptureRef",{"href":"/scriptures/nt/heb/10.28"},["span.padWord","Heb."],"10:28"],";"],["li","judgment without",["i","mercy"],", that hath shewed no",["i","mercy"],":",["a.scriptureRef",{"href":"/scriptures/nt/james/2.13"},"James 2:13"],";"],["li","Lord is very pitiful, and of tender",["i","mercy"],":",["a.scriptureRef",{"href":"/scriptures/nt/james/5.11"},["span.padWord","James"],"5:11"],";"],["li","according to his abundant",["i","mercy"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-pet/1.3"},"1 Pet. 1:3"],";"],["li","had not obtained",["i","mercy"],", but now have obtained",["i","mercy"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-pet/2.10"},["span.padWord","1 Pet."],"2:10"],";"]]],["div",{"id":"f4","uri":"/scriptures/tg/mercy.f4","order":".000.6599"},["ul.index",["li","tender",["i","mercies"],"of the Lord are over all:",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/1.20"},"1 Ne. 1:20"],";"],["li","pray unto the Lord that he would have",["i","mercy"],":",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/8.8"},["span.padWord","1 Ne."],"8:8"],";"],["li","I will be",["i","merciful"],"unto the Gentiles:",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/13.33"},["span.padWord","1 Ne."],"13:33"],";"],["li","how",["i","merciful"],"the Lord had been in warning us:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/1.3"},"2 Ne. 1:3"],";"],["li","because of … his grace and",["i","mercy"],":",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/9.53"},["span.padWord","2 Ne."],"9:53"],";"],["li","Lord shall have no …",["i","mercy"],"on their fatherless:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/19.17"},["span.padWord","2 Ne."],"19:17"],";"],["li",["i","mercy"],"hath no claim on that man:",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/2.39"},"Mosiah 2:39"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/3.26"},["span.padWord","Mosiah"],"3:26"],"; )"],["li","extending the arm of",["i","mercy"],"towards them that put their trust in him:",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/29.20"},["span.padWord","Mosiah"],"29:20"],";"],["li","Lord, have",["i","mercy"],"and spare my life:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/2.30"},"Alma 2:30"],";"],["li","if it had not been for his …",["i","mercy"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/9.11"},["span.padWord","Alma"],"9:11"],";"],["li","then will I have",["i","mercy"],"upon you:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/12.33"},["span.padWord","Alma"],"12:33"],";"],["li","have",["i","mercy"],"on this man:",["a.