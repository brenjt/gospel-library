{"id":265,"parent_id":0,"book_id":7,"content_id":1,"language_id":1,"display_order":265,"title":"Believe","subtitle":"","short_title":"Believe","uri":"/scriptures/tg/believe","content":[["div",{"id":"t1","uri":"/scriptures/tg/believe.t1","order":".000.718"},[".title",["b","Believe"]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/tg/assurance"},"Assurance"],";",["a.scriptureRef",{"href":"/scriptures/tg/baptism-qualifications-for"},"Baptism, Qualifications for"],";",["a.scriptureRef",{"href":"/scriptures/tg/confidence"},"Confidence"],";",["a.scriptureRef",{"href":"/scriptures/tg/faith"},"Faith"],";",["a.scriptureRef",{"href":"/scriptures/tg/trust"},"Trust"],";",["a.scriptureRef",{"href":"/scriptures/tg/trust-in-god"},"Trust in God"],";",["a.scriptureRef",{"href":"/scriptures/tg/unbelief"},"Unbelief"]],["div",{"id":"f2","uri":"/scriptures/tg/believe.f2","order":".000.719"},["ul.index",["li","he",["i","believed"],"in the Lord:",["a.scriptureRef",{"href":"/scriptures/ot/gen/15.6"},"Gen. 15:6"],";"],["li","Moses answered … they will not",["i","believe"],"me, nor hearken:",["a.scriptureRef",{"href":"/scriptures/ot/ex/4.1"},"Ex. 4:1"],";"],["li","people",["i","believed"],"… and worshipped:",["a.scriptureRef",{"href":"/scriptures/ot/ex/4.31"},["span.padWord","Ex."],"4:31"],";"],["li","people …",["i","believed"],"the Lord, and his servant Moses:",["a.scriptureRef",{"href":"/scriptures/ot/ex/14.31"},["span.padWord","Ex."],"14:31"],";"],["li","how long will it be ere they",["i","believe"],"me:",["a.scriptureRef",{"href":"/scriptures/ot/num/14.11"},"Num. 14:11"],";"],["li","ye",["i","believed"],"me not, to sanctify me:",["a.scriptureRef",{"href":"/scriptures/ot/num/20.12"},["span.padWord","Num."],"20:12"],";"],["li","Yet in this thing ye did not",["i","believe"],"the Lord:",["a.scriptureRef",{"href":"/scriptures/ot/deut/1.32"},"Deut. 1:32"],";"],["li","their fathers, that did not",["i","believe"],"in the Lord:",["a.scriptureRef",{"href":"/scriptures/ot/2-kgs/17.14"},"2 Kgs. 17:14"],";"],["li",["i","Believe"],"in the Lord your God …",["i","believe"],"his prophets:",["a.scriptureRef",{"href":"/scriptures/ot/2-chr/20.20"},"2 Chr. 20:20"],";"],["li","I had fainted, unless I had",["i","believed"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/27.13"},"Ps. 27:13"],";"],["li","Because they",["i","believed"],"not in God:",["a.scriptureRef",{"href":"/scriptures/ot/ps/78.22"},["span.padWord","Ps."],"78:22"],";"],["li","I",["i","believed"],", therefore have I spoken:",["a.scriptureRef",{"href":"/scriptures/ot/ps/116.10"},["span.padWord","Ps."],"116:10"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/2-cor/4.13"},"2 Cor. 4:13"],"; )"],["li","The simple",["i","believeth"],"every word:",["a.scriptureRef",{"href":"/scriptures/ot/prov/14.15"},"Prov. 14:15"],";"],["li","he that",["i","believeth"],"shall not make haste:",["a.scriptureRef",{"href":"/scriptures/ot/isa/28.16"},"Isa. 28:16"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/rom/9.33"},"Rom. 9:33"],";",["a.scriptureRef",{"href":"/scriptures/nt/rom/10.11"},["span.padWord","Rom."],"10:11"],";",["a.scriptureRef",{"href":"/scriptures/nt/1-pet/2.6"},"1 Pet. 2:6"],"; )"],["li","ye may know and",["i","believe"],"me:",["a.scriptureRef",{"href":"/scriptures/ot/isa/43.10"},["span.padWord","Isa."],"43:10"],";"],["li","Who hath",["i","believed"],"our report:",["a.scriptureRef",{"href":"/scriptures/ot/isa/53.1"},["span.padWord","Isa."],"53:1"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/john/12.38"},"John 12:38"],";",["a.scriptureRef",{"href":"/scriptures/nt/rom/10.16"},"Rom. 10:16"],";",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/14.1"},"Mosiah 14:1"],"; )"],["li",["i","believe"],"them not, though they speak fair words:",["a.scriptureRef",{"href":"/scriptures/ot/jer/12.6"},"Jer. 12:6"],";"],["li","no … hurt … because he",["i","believed"],"in his God:",["a.scriptureRef",{"href":"/scriptures/ot/dan/6.23"},"Dan. 6:23"],";"],["li","people of Nineveh",["i","believed"],"God:",["a.scriptureRef",{"href":"/scriptures/ot/jonah/3.5"},"Jonah 3:5"],";"],["li","work … which ye will not",["i","believe"],":",["a.scriptureRef",{"href":"/scriptures/ot/hab/1.5"},"Hab. 1:5"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/acts/13.41"},"Acts 13:41"],"; )"]]],["div",{"id":"f3","uri":"/scriptures/tg/believe.f3","order":".000.720"},["ul.index",["li","as thou hast",["i","believed"],", so be it done:",["a.scriptureRef",{"href":"/scriptures/nt/matt/8.13"},"Matt. 8:13"],";"],["li",["i","Believe"],"ye that I am able to do this:",["a.scriptureRef",{"href":"/scriptures/nt/matt/9.28"},["span.padWord","Matt."],"9:28"],";"],["li","ask in prayer,",["i","believing"],", ye shall receive:",["a.scriptureRef",{"href":"/scriptures/nt/matt/21.22"},["span.padWord","Matt."],"21:22"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/mark/11.24"},"Mark 11:24"],"; )"],["li","Why did ye not then",["i","believe"],"him:",["a.scriptureRef",{"href":"/scriptures/nt/matt/21.25"},["span.padWord","Matt."],"21:25"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/mark/11.31"},"Mark 11:31"],";",["a.scriptureRef",{"href":"/scriptures/nt/luke/20.5"},"Luke 20:5"],"; )"],["li","ye",["i","believed"],"him not: but the publicans …",["i","believed"],"him:",["a.scriptureRef",{"href":"/scriptures/nt/matt/21.32"},["span.padWord","Matt."],"21:32"],";"],["li","here is Christ, or there;",["i","believe"],"it not:",["a.scriptureRef",{"href":"/scriptures/nt/matt/24.23"},["span.padWord","Matt."],"24:23"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/mark/13.21"},"Mark 13:21"],";",["a.scriptureRef",{"href":"/scriptures/pgp/js-m/1.21"},"JS—M 1:21"],"; )"],["li","come down from the cross, and we will",["i","believe"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/27.42"},["span.padWord","Matt."],"27:42"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/mark/15.32"},"Mark 15:32"],"; )"],["li","repent ye, and",["i","believe"],"the gospel:",["a.scriptureRef",{"href":"/scriptures/nt/mark/1.15"},"Mark 1:15"],";"],["li","Be not afraid, only",["i","believe"],":",["a.scriptureRef",{"href":"/scriptures/nt/mark/5.36"},["span.padWord","Mark"],"5:36"],";"],["li","all things are possible to him that",["i","believeth"],":",["a.scriptureRef",{"href":"/scriptures/nt/mark/9.23"},["span.padWord","Mark"],"9:23"],";"],["li","Lord, I",["i","believe"],"; help thou mine unbelief:",["a.scriptureRef",{"href":"/scriptures/nt/mark/9.24"},["span.padWord","Mark"],"9:24"],";"],["li","when ye pray,",["i","believe"],"that ye receive:",["a.scriptureRef",{"href":"/scriptures/nt/mark/11.24"},["span.padWord","Mark"],"11:24"],";"],["li","He that",["i","believeth"],"and is baptized shall be saved:",["a.scriptureRef",{"href":"/scriptures/nt/mark/16.16"},["span.padWord","Mark"],"16:16"],";"],["li","things which are most surely",["i","believed"],"among us:",["a.scriptureRef",{"href":"/scriptures/nt/luke/1.1"},"Luke 1:1"],";"],["li","shalt be dumb … because thou",["i","believest"],"not my words:",["a.scriptureRef",{"href":"/scriptures/nt/luke/1.20"},["span.padWord","Luke"],"1:20"],";"],["li","lest they should",["i","believe"],"and be saved:",["a.scriptureRef",{"href":"/scriptures/nt/luke/8.12"},["span.padWord","Luke"],"8:12"],";"],["li",["i","believe"],"only, and she shall be made whole:",["a.scriptureRef",{"href":"/scriptures/nt/luke/8.50"},["span.padWord","Luke"],"8:50"],";"],["li","If I tell you, ye will not",["i","believe"],":",["a.scriptureRef",{"href":"/scriptures/nt/luke/22.67"},["span.padWord","Luke"],"22:67"],";"],["li","idle tales, and they",["i","believed"],"them not:",["a.scriptureRef",{"href":"/scriptures/nt/luke/24.11"},["span.padWord","Luke"],"24:11"],";"],["li","O fools, and slow of heart to",["i","believe"],":",["a.scriptureRef",{"href":"/scriptures/nt/luke/24.25"},["span.padWord","Luke"],"24:25"],";"],["li","all men through him might",["i","believe"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/1.7"},"John 1:7"],";"],["li","even to them that",["i","believe"],"on his name:",["a.scriptureRef",{"href":"/scriptures/nt/john/1.12"},["span.padWord","John"],"1:12"],";"],["li","his disciples",["i","believed"],"on him:",["a.scriptureRef",{"href":"/scriptures/nt/john/2.11"},["span.padWord","John"],"2:11"],";"],["li","they",["i","believed"],"the scripture, and the word:",["a.scriptureRef",{"href":"/scriptures/nt/john/2.22"},["span.padWord","John"],"2:22"],";"],["li","many",["i","believed"],"in his name:",["a.scriptureRef",{"href":"/scriptures/nt/john/2.23"},["span.padWord","John"],"2:23"],";"],["li","earthly things … ye",["i","believe"],"not, how shall ye",["i","believe"],", if I tell you of heavenly things:",["a.scriptureRef",{"href":"/scriptures/nt/john/3.12"},["span.padWord","John"],"3:12"],";"],["li","whosoever",["i","believeth"],"in him should not perish:",["a.scriptureRef",{"href":"/scriptures/nt/john/3.16"},["span.padWord","John"],"3:16"],";"],["li","He that",["i","believeth"],"on him is not condemned:",["a.scriptureRef",{"href":"/scriptures/nt/john/3.18"},["span.padWord","John"],"3:18"],";"],["li","He that",["i","believeth"],"on the Son hath everlasting life:",["a.scriptureRef",{"href":"/scriptures/nt/john/3.36"},["span.padWord","John"],"3:36"],";"],["li","Now we",["i","believe"],", not because of thy saying:",["a.scriptureRef",{"href":"/scriptures/nt/john/4.42"},["span.padWord","John"],"4:42"],";"],["li","Except ye see signs and wonders, ye will not",["i","believe"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/4.48"},["span.padWord","John"],"4:48"],";"],["li","himself",["i","believed"],", and his whole house:",["a.scriptureRef",{"href":"/scriptures/nt/john/4.53"},["span.padWord","John"],"4:53"],";"],["li",["i","believeth"],"on him that sent me, hath everlasting life:",["a.scriptureRef",{"href":"/scriptures/nt/john/5.24"},["span.padWord","John"],"5:24"],";"],["li","had ye",["i","believed"],"Moses, ye would have",["i","believed"],"me:",["a.scriptureRef",{"href":"/scriptures/nt/john/5.46"},["span.padWord","John"],"5:46"],";"],["li","This is the work of God, that ye",["i","believe"],"on him:",["a.scriptureRef",{"href":"/scriptures/nt/john/6.29"},["span.padWord","John"],"6:29"],";"],["li","there are some of you that",["i","believe"],"not:",["a.scriptureRef",{"href":"/scriptures/nt/john/6.64"},["span.padWord","John"],"6:64"],";"],["li","we",["i","believe"],"and are sure that thou art that Christ:",["a.scriptureRef",{"href":"/scriptures/nt/john/6.69"},["span.padWord","John"],"6:69"],";"],["li","neither did his brethren",["i","believe"],"in him:",["a.scriptureRef",{"href":"/scriptures/nt/john/7.5"},["span.padWord","John"],"7:5"],";"],["li","many of the people",["i","believed"],"on him:",["a.scriptureRef",{"href":"/scriptures/nt/john/7.31"},["span.padWord","John"],"7:31"],";"],["li","Have any of the rulers or … Pharisees",["i","believed"],"on him:",["a.scriptureRef",{"href":"/scriptures/nt/john/7.48"},["span.padWord","John"],"7:48"],";"],["li","if ye",["i","believe"],"not that I am he, ye shall die in your sins:",["a.scriptureRef",{"href":"/scriptures/nt/john/8.24"},["span.padWord","John"],"8:24"],";"],["li","As he spake these words, many",["i","believed"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/8.30"},["span.padWord","John"],"8:30"],";"],["li","because I tell you the truth, ye",["i","believe"],"me not:",["a.scriptureRef",{"href":"/scriptures/nt/john/8.45"},["span.padWord","John"],"8:45"],";"],["li","Dost thou",["i","believe"],"on the Son of God:",["a.scriptureRef",{"href":"/scriptures/nt/john/9.35"},["span.padWord","John"],"9:35"],";"],["li","I told you, and ye",["i","believed"],"not:",["a.scriptureRef",{"href":"/scriptures/nt/john/10.25"},["span.padWord","John"],"10:25"],";"],["li","ye",["i","believe"],"not, because ye are not of my sheep:",["a.scriptureRef",{"href":"/scriptures/nt/john/10.26"},["span.padWord","John"],"10:26"],";"],["li","though ye",["i","believe"],"not me,",["i","believe"],"the works:",["a.scriptureRef",{"href":"/scriptures/nt/john/10.38"},["span.padWord","John"],"10:38"],";"],["li","glad … I was not there, to the intent ye may",["i","believe"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/11.15"},["span.padWord","John"],"11:15"],";"],["li","he that",["i","believeth"],"in me, though he were dead:",["a.scriptureRef",{"href":"/scriptures/nt/john/11.25"},["span.padWord","John"],"11:25"],";"],["li","I",["i","believe"],"that thou art the Christ:",["a.scriptureRef",{"href":"/scriptures/nt/john/11.27"},["span.padWord","John"],"11:27"],";"],["li","many of the Jews which came to Mary …",["i","believed"],"on him:",["a.scriptureRef",{"href":"/scriptures/nt/john/11.45"},["span.padWord","John"],"11:45"],";"],["li","If we let him thus alone, all men will",["i","believe"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/11.48"},["span.padWord","John"],"11:48"],";"],["li","many of the Jews went away, and",["i","believed"],"on Jesus:",["a.scriptureRef",{"href":"/scriptures/nt/john/12.11"},["span.padWord","John"],"12:11"],";"],["li","While ye have light,",["i","believe"],"in the light:",["a.scriptureRef",{"href":"/scriptures/nt/john/12.36"},["span.padWord","John"],"12:36"],";"],["li","had done so many miracles … yet they",["i","believed"],"not:",["a.scriptureRef",{"href":"/scriptures/nt/john/12.37"},["span.padWord","John"],"12:37"],";"],["li","among the chief rulers also many",["i","believed"],"on him:",["a.scriptureRef",{"href":"/scriptures/nt/john/12.42"},["span.padWord","John"],"12:42"],";"],["li","He that",["i","believeth"],"on me,",["i","believeth"],"not on me, but on him that sent me:",["a.scriptureRef",{"href":"/scriptures/nt/john/12.44"},["span.padWord","John"],"12:44"],";"],["li","if any man …",["i","believe"],"not, I judge him not:",["a.scriptureRef",{"href":"/scriptures/nt/john/12.47"},["span.padWord","John"],"12:47"],";"],["li","when it is come to pass, ye may",["i","believe"],"that I am he:",["a.scriptureRef",{"href":"/scriptures/nt/john/13.19"},["span.padWord","John"],"13:19"],";"],["li","ye",["i","believe"],"in God,",["i","believe"],"also in me:",["a.scriptureRef",{"href":"/scriptures/nt/john/14.1"},["span.padWord","John"],"14:1"],";"],["li","He that",["i","believeth"],"on me, the works that I do shall he do:",["a.scriptureRef",{"href":"/scriptures/nt/john/14.12"},["span.padWord","John"],"14:12"],";"],["li","Of sin, because they",["i","believe"],"not on me:",["a.scriptureRef",{"href":"/scriptures/nt/john/16.9"},["span.padWord","John"],"16:9"],";"],["li","have",["i","believed"],"that I came out from God:",["a.scriptureRef",{"href":"/scriptures/nt/john/16.27"},["span.padWord","John"],"16:27"],";"],["li","they have",["i","believed"],"that thou didst send me:",["a.scriptureRef",{"href":"/scriptures/nt/john/17.8"},["span.padWord","John"],"17:8"],";"],["li","pray … for them also which shall",["i","believe"],"on me:",["a.scriptureRef",{"href":"/scriptures/nt/john/17.20"},["span.padWord","John"],"17:20"],";"],["li","that the world may",["i","believe"],"that thou hast sent me:",["a.scriptureRef",{"href":"/scriptures/nt/john/17.21"},["span.padWord","John"],"17:21"],";"],["li","he saith true, that ye might",["i","believe"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/19.35"},["span.padWord","John"],"19:35"],";"],["li","that other disciple … saw, and",["i","believed"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/20.8"},["span.padWord","John"],"20:8"],";"],["li","Except I shall see … I will not",["i","believe"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/20.25"},["span.padWord","John"],"20:25"],";"],["li","be not faithless, but",["i","believing"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/20.27"},["span.padWord","John"],"20:27"],";"],["li","because thou hast seen me, thou hast",["i","believed"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/20.29"},["span.padWord","John"],"20:29"],";"],["li","these are written, that ye might",["i","believe"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/20.31"},["span.padWord","John"],"20:31"],";"],["li","many of them which heard the word",["i","believed"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/4.4"},"Acts 4:4"],";"],["li","I",["i","believe"],"that Jesus Christ is the Son:",["a.scriptureRef",{"href":"/scriptures/nt/acts/8.37"},["span.padWord","Acts"],"8:37"],";"],["li",["i","believeth"],"in him shall receive remission of sins:",["a.scriptureRef",{"href":"/scriptures/nt/acts/10.43"},["span.padWord","Acts"],"10:43"],";"],["li","by him all that",["i","believe"],"are justified:",["a.scriptureRef",{"href":"/scriptures/nt/acts/13.39"},["span.padWord","Acts"],"13:39"],";"],["li","as many as were ordained to eternal life",["i","believed"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/13.48"},["span.padWord","Acts"],"13:48"],";"],["li","multitude … of the Jews and … Greeks",["i","believed"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/14.1"},["span.padWord","Acts"],"14:1"],";"],["li","rose up certain … Pharisees which",["i","believed"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/15.5"},["span.padWord","Acts"],"15:5"],";"],["li","certain woman, which was a Jewess, and",["i","believed"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/16.1"},["span.padWord","Acts"],"16:1"],";"],["li","Crispus …",["i","believed"],"on the Lord with all his house:",["a.scriptureRef",{"href":"/scriptures/nt/acts/18.8"},["span.padWord","Acts"],"18:8"],";"],["li","many thousands of Jews there are which",["i","believe"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/21.20"},["span.padWord","Acts"],"21:20"],";"],["li",["i","believing"],"all things which are written in the law:",["a.scriptureRef",{"href":"/scriptures/nt/acts/24.14"},["span.padWord","Acts"],"24:14"],";"],["li","King Agrippa,",["i","believest"],"thou the prophets:",["a.scriptureRef",{"href":"/scriptures/nt/acts/26.27"},["span.padWord","Acts"],"26:27"],";"],["li","I",["i","believe"],"God, that it shall be even as it was told me:",["a.scriptureRef",{"href":"/scriptures/nt/acts/27.25"},["span.padWord","Acts"],"27:25"],";"],["li","unto salvation to every one that",["i","believeth"],":",["a.scriptureRef",{"href":"/scriptures/nt/rom/1.16"},"Rom. 1:16"],";"],["li","justifier of him which",["i","believeth"],"in Jesus:",["a.scriptureRef",{"href":"/scriptures/nt/rom/3.26"},["span.padWord","Rom."],"3:26"],";"],["li","Abraham",["i","believed"],"God:",["a.scriptureRef",{"href":"/scriptures/nt/rom/4.3"},["span.padWord","Rom."],"4:3"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/gen/15.6"},"Gen. 15:6"],";",["a.scriptureRef",{"href":"/scriptures/nt/gal/3.6"},"Gal. 3:6"],";",["a.scriptureRef",{"href":"/scriptures/nt/james/2.23"},"James 2:23"],"; )"],["li","Who against hope",["i","believed"],"in hope:",["a.scriptureRef",{"href":"/scriptures/nt/rom/4.18"},["span.padWord","Rom."],"4:18"],";"],["li",["i","believeth"],"on him shall not be ashamed:",["a.scriptureRef",{"href":"/scriptures/nt/rom/9.33"},["span.padWord","Rom."],"9:33"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/rom/10.11"},["span.padWord","Rom."],"10:11"],"; )"],["li",["i","believe"],"in thine heart that God … raised him:",["a.scriptureRef",{"href":"/scriptures/nt/rom/10.9"},["span.padWord","Rom."],"10:9"],";"],["li","call on him in whom they have not",["i","believed"],":",["a.scriptureRef",{"href":"/scriptures/nt/rom/10.14"},["span.padWord","Rom."],"10:14"],";"],["li","Lord, who hath",["i","believed"],"our report:",["a.scriptureRef",{"href":"/scriptures/nt/rom/10.16"},["span.padWord","Rom."],"10:16"],";"],["li","ye in times past have not",["i","believed"],"God:",["a.scriptureRef",{"href":"/scriptures/nt/rom/11.30"},["span.padWord","Rom."],"11:30"],";"],["li",["i","believeth"],"all things, hopeth all things:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/13.7"},"1 Cor. 13:7"],";"],["li","if all prophesy, and there come in one that",["i","believeth"],"not:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/14.24"},["span.padWord","1 Cor."],"14:24"],";"],["li","god of this world hath blinded the minds of them which",["i","believe"],"not:",["a.scriptureRef",{"href