{"id":512,"parent_id":0,"book_id":7,"content_id":1,"language_id":1,"display_order":512,"title":"Church","subtitle":"","short_title":"Church","uri":"/scriptures/tg/church","content":[["div",{"id":"t1","uri":"/scriptures/tg/church.t1","order":".000.1504"},[".title",["b","Church"]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/tg/assembly-for-worship"},"Assembly for Worship"],";",["a.scriptureRef",{"href":"/scriptures/tg/congregation"},"Congregation"],";",["a.scriptureRef",{"href":"/scriptures/tg/jesus-christ-head-of-the-church"},"Jesus Christ, Head of the Church"],";",["a.scriptureRef",{"href":"/scriptures/tg/kingdom-of-god-on-earth"},"Kingdom of God, on Earth"],";",["a.scriptureRef",{"href":"/scriptures/tg/meetings"},"Meetings"],";",["a.scriptureRef",{"href":"/scriptures/tg/sanctuary"},"Sanctuary"],";",["a.scriptureRef",{"href":"/scriptures/tg/tabernacle"},"Tabernacle"],";",["a.scriptureRef",{"href":"/scriptures/tg/temple"},"Temple"]],["div",{"id":"f2","uri":"/scriptures/tg/church.f2","order":".000.1505"},["ul.index",["li","upon this rock I will build my",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/16.18"},"Matt. 16:18"],";"],["li","if he neglect to hear the",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/18.17"},["span.padWord","Matt."],"18:17"],";"],["li","Lord added to the",["i","church"],"daily:",["a.scriptureRef",{"href":"/scriptures/nt/acts/2.47"},"Acts 2:47"],";"],["li","persecution against the",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/8.1"},["span.padWord","Acts"],"8:1"],";"],["li","Saul, he made havoc of the",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/8.3"},["span.padWord","Acts"],"8:3"],";"],["li","Then had the",["i","churches"],"rest throughout all Judæa:",["a.scriptureRef",{"href":"/scriptures/nt/acts/9.31"},["span.padWord","Acts"],"9:31"],";"],["li","the ears of the",["i","church"],"which was in Jerusalem:",["a.scriptureRef",{"href":"/scriptures/nt/acts/11.22"},["span.padWord","Acts"],"11:22"],";"],["li","they assembled themselves with the",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/11.26"},["span.padWord","Acts"],"11:26"],";"],["li","stretched forth his hands to vex certain of the",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/12.1"},["span.padWord","Acts"],"12:1"],";"],["li","when they were come to Jerusalem, they were received of the",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/15.4"},["span.padWord","Acts"],"15:4"],";"],["li","so were the",["i","churches"],"established in the faith:",["a.scriptureRef",{"href":"/scriptures/nt/acts/16.5"},["span.padWord","Acts"],"16:5"],";"],["li","overseers, to feed the",["i","church"],"of God:",["a.scriptureRef",{"href":"/scriptures/nt/acts/20.28"},["span.padWord","Acts"],"20:28"],";"],["li","we, being many, are one",["i","body"],"in Christ:",["a.scriptureRef",{"href":"/scriptures/nt/rom/12.5"},"Rom. 12:5"],";"],["li","The",["i","churches"],"of Christ salute you:",["a.scriptureRef",{"href":"/scriptures/nt/rom/16.16"},["span.padWord","Rom."],"16:16"],";"],["li","so ordain I in all",["i","churches"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/7.17"},"1 Cor. 7:17"],";"],["li","Give none offence … nor to the",["i","church"],"of God:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/10.32"},["span.padWord","1 Cor."],"10:32"],";"],["li","despise ye the",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/11.22"},["span.padWord","1 Cor."],"11:22"],";"],["li","by one Spirit are we all baptized into one",["i","body"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/12.13"},["span.padWord","1 Cor."],"12:13"],";"],["li","God hath set some in the",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/12.28"},["span.padWord","1 Cor."],"12:28"],";"],["li","he that prophesieth edifieth the",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/14.4"},["span.padWord","1 Cor."],"14:4"],";"],["li","peace, as in all",["i","churches"],"of the saints:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/14.33"},["span.padWord","1 Cor."],"14:33"],";"],["li","a shame for women to speak in the",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/14.35"},["span.padWord","1 Cor."],"14:35"],";"],["li","because I persecuted the",["i","church"],"of God:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/15.9"},["span.padWord","1 Cor."],"15:9"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/gal/1.13"},"Gal. 1:13"],"; )"],["li","the head over all things to the",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/nt/eph/1.22"},"Eph. 1:22"],";"],["li","Unto him be glory in the",["i","church"],"by Christ Jesus:",["a.scriptureRef",{"href":"/scriptures/nt/eph/3.21"},["span.padWord","Eph."],"3:21"],";"],["li","There is one",["i","body"],", and one Spirit:",["a.scriptureRef",{"href":"/scriptures/nt/eph/4.4"},["span.padWord","Eph."],"4:4"],";"],["li","Christ is the head of the",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/nt/eph/5.23"},["span.padWord","Eph."],"5:23"],";"],["li","he is the head of the body, the",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/nt/col/1.18"},"Col. 1:18"],";"],["li","we ourselves glory in you in the",["i","churches"],"of God:",["a.scriptureRef",{"href":"/scriptures/nt/2-thes/1.4"},"2 Thes. 1:4"],";"],["li",["i","church"],"of the living God:",["a.scriptureRef",{"href":"/scriptures/nt/1-tim/3.15"},"1 Tim. 3:15"],";"],["li","general assembly and",["i","church"],"of the firstborn:",["a.scriptureRef",{"href":"/scriptures/nt/heb/12.23"},"Heb. 12:23"],";"],["li","Feed the",["i","flock"],"of God:",["a.scriptureRef",{"href":"/scriptures/nt/1-pet/5.2"},"1 Pet. 5:2"],";"],["li","to the seven",["i","churches"],"which are in Asia:",["a.scriptureRef",{"href":"/scriptures/nt/rev/1.4"},"Rev. 1:4"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/rev/1.11"},["span.padWord","Rev."],"1:11"],"; )"],["li","all the",["i","churches"],"shall know that I am he:",["a.scriptureRef",{"href":"/scriptures/nt/rev/2.23"},["span.padWord","Rev."],"2:23"],";"]]],["div",{"id":"f3","uri":"/scriptures/tg/church.f3","order":".000.1506"},["ul.index",["li","spake of the brethren of the",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/4.26"},"1 Ne. 4:26"],";"],["li","a",["i","church"],"which is most abominable above all other",["i","churches"],":",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/13.5"},["span.padWord","1 Ne."],"13:5"],";"],["li","two",["i","churches"],"only; the one is the",["i","church"],"of the Lamb:",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/14.10"},["span.padWord","1 Ne."],"14:10"],";"],["li","all",["i","churches"],"which are built up to get gain:",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/22.23"},["span.padWord","1 Ne."],"22:23"],";"],["li","them that fight against God and the people of his",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/25.14"},"2 Ne. 25:14"],";"],["li",["i","churches"],"which are built up, and not unto the Lord:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/28.3"},["span.padWord","2 Ne."],"28:3"],";"],["li","called the",["i","church"],"of God, or the",["i","church"],"of Christ:",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/18.17"},"Mosiah 18:17"],";"],["li","Mosiah had given Alma the authority over the",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/26.8"},["span.padWord","Mosiah"],"26:8"],";"],["li","this is my",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/26.22"},["span.padWord","Mosiah"],"26:22"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/27.13"},["span.padWord","Mosiah"],"27:13"],"; )"],["li","did not belong to the",["i","church"],"of God began to persecute:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/1.19"},"Alma 1:19"],";"],["li","establish the",["i","church"],"more fully:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/4.4"},["span.padWord","Alma"],"4:4"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/alma/4.3-6"},["span.padWord","Alma"],"4:3–6"],"; )"],["li","wolves … devour his",["i","flock"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/5.59"},["span.padWord","Alma"],"5:59"],";"],["li","believers of Christ, who belonged to the",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/46.14"},["span.padWord","Alma"],"46:14"],";"],["li","both the Nephites and the Lamanites, did belong to the",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/bofm/hel/11.21"},"Hel. 11:21"],";"],["li","people of my",["i","church"],"… who shall believe and be baptized:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/18.5"},"3 Ne. 18:5"],";"],["li","pray in my",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/18.16"},["span.padWord","3 Ne."],"18:16"],";"],["li","if they will repent … I will establish my",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/21.22"},["span.padWord","3 Ne."],"21:22"],";"],["li","baptized … were called the",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/26.21"},["span.padWord","3 Ne."],"26:21"],";"],["li","call the",["i","church"],"in my name:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/27.7"},["span.padWord","3 Ne."],"27:7"],";"],["li","disciples of Jesus had formed a",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/bofm/4-ne/1.1"},"4 Ne. 1:1"],";"],["li",["i","churches"],"become defiled:",["a.scriptureRef",{"href":"/scriptures/bofm/morm/8.28"},"Morm. 8:28"],";"],["li",["i","churches"],"built up that shall say: Come unto me:",["a.scriptureRef",{"href":"/scriptures/bofm/morm/8.32"},["span.padWord","Morm."],"8:32"],";"],["li","kneel down with the",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/bofm/moro/4.2"},"Moro. 4:2"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/20.76"},"D&C 20:76"],"; )"],["li",["i","church"],"did meet together oft, to fast and to pray:",["a.scriptureRef",{"href":"/scriptures/bofm/moro/6.5"},["span.padWord","Moro."],"6:5"],";"],["li","I would speak unto you that are of the",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/bofm/moro/7.3"},["span.padWord","Moro."],"7:3"],";"]]],["div",{"id":"f4","uri":"/scriptures/tg/church.f4","order":".000.1507"},["ul.index",["li","only true and living",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/1.30"},"D&C 1:30"],";"],["li","coming forth of my",["i","church"],"out of the wilderness:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/5.14"},["span.padWord","D&C"],"5:14"],";"],["li","I will establish my",["i","church"],"among them:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/10.53"},["span.padWord","D&C"],"10:53"],";"],["li","whosoever repenteth and cometh unto me, the same is my",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/10.67"},["span.padWord","D&C"],"10:67"],";"],["li","have my word, my rock, my",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/11.16"},["span.padWord","D&C"],"11:16"],";"],["li","build up my",["i","church"],", upon … my gospel:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/18.5"},["span.padWord","D&C"],"18:5"],";"],["li","Contend against no",["i","church"],", save it be the",["i","church"],"of the devil:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/18.20"},["span.padWord","D&C"],"18:20"],";"],["li","The rise of the",["i","Church"],"of Christ … regularly organized:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/20.1"},["span.padWord","D&C"],"20:1"],";"],["li",["i","church"],"was organized:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/21.3"},["span.padWord","D&C"],"21:3"],";"],["li","by common consent in the",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/26.2"},["span.padWord","D&C"],"26:2"],";"],["li","the great and abominable",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/29.21"},["span.padWord","D&C"],"29:21"],";"],["li","build up my",["i","church"],"among the Lamanites:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/30.6"},["span.padWord","D&C"],"30:6"],";"],["li","called … to build up my",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/39.13"},["span.padWord","D&C"],"39:13"],";"],["li","my law … how to govern my",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/41.3"},["span.padWord","D&C"],"41:3"],";"],["li","repenteth not … ye shall bring before the",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/64.12"},["span.padWord","D&C"],"64:12"],";"],["li","bishops to be set apart unto the",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/68.14"},["span.padWord","D&C"],"68:14"],";"],["li","observe and know concerning my",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/69.3"},["span.padWord","D&C"],"69:3"],";"],["li",["i","body"],"hath need of every member:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/84.110"},["span.padWord","D&C"],"84:110"],";"],["li","the great persecutor of the",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/86.3"},["span.padWord","D&C"],"86:3"],";"],["li","That great",["i","church"],", the mother of abominations:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.94"},["span.padWord","D&C"],"88:94"],";"],["li","That thy",["i","church"],"may come forth:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/109.73"},["span.padWord","D&C"],"109:73"],";"],["li","The",["i","Church"],"of Jesus Christ of Latter-day Saints:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/115.4"},["span.padWord","D&C"],"115:4"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/115.3"},["span.padWord","D&C"],"115:3"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/127.12"},["span.