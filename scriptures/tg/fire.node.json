,["span.padWord","Ex."],"40:38"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/num/9.16"},"Num. 9:16"],"; )"],["li","food of the offering made by",["i","fire"],":",["a.scriptureRef",{"href":"/scriptures/ot/lev/3.11"},"Lev. 3:11"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/lev/21.6"},["span.padWord","Lev."],"21:6"],"; )"],["li","there came a",["i","fire"],"out from before the Lord:",["a.scriptureRef",{"href":"/scriptures/ot/lev/9.24"},["span.padWord","Lev."],"9:24"],";"],["li","went out",["i","fire"],"from the Lord, and devoured them:",["a.scriptureRef",{"href":"/scriptures/ot/lev/10.2"},["span.padWord","Lev."],"10:2"],";"],["li","not let any of thy seed pass through the",["i","fire"],":",["a.scriptureRef",{"href":"/scriptures/ot/lev/18.21"},["span.padWord","Lev."],"18:21"],";"],["li",["i","fire"],"of the Lord burnt among them:",["a.scriptureRef",{"href":"/scriptures/ot/num/11.1"},"Num. 11:1"],";"],["li",["i","fire"],"from the Lord, and consumed the … men:",["a.scriptureRef",{"href":"/scriptures/ot/num/16.35"},["span.padWord","Num."],"16:35"],";"],["li","mountain burned with",["i","fire"],":",["a.scriptureRef",{"href":"/scriptures/ot/deut/4.11"},"Deut. 4:11"],";"],["li","thy God is a consuming",["i","fire"],":",["a.scriptureRef",{"href":"/scriptures/ot/deut/4.24"},["span.padWord","Deut."],"4:24"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/heb/12.29"},"Heb. 12:29"],"; )"],["li","Lord talked … out of the midst of the",["i","fire"],":",["a.scriptureRef",{"href":"/scriptures/ot/deut/5.4"},["span.padWord","Deut."],"5:4"],";"],["li","sons and … daughters they have burnt in the",["i","fire"],":",["a.scriptureRef",{"href":"/scriptures/ot/deut/12.31"},["span.padWord","Deut."],"12:31"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/deut/18.10"},["span.padWord","Deut."],"18:10"],";",["a.scriptureRef",{"href":"/scriptures/ot/2-kgs/16.3"},"2 Kgs. 16:3"],";",["a.scriptureRef",{"href":"/scriptures/ot/2-kgs/17.17"},["span.padWord","2 Kgs."],"17:17"],";",["a.scriptureRef",{"href":"/scriptures/ot/2-kgs/21.6"},["span.padWord","2 Kgs."],"21:6"],";",["a.scriptureRef",{"href":"/scriptures/ot/2-chr/28.3"},"2 Chr. 28:3"],";",["a.scriptureRef",{"href":"/scriptures/ot/2-chr/33.6"},["span.padWord","2 Chr."],"33:6"],";",["a.scriptureRef",{"href":"/scriptures/ot/jer/7.31"},"Jer. 7:31"],";",["a.scriptureRef",{"href":"/scriptures/ot/jer/19.5"},["span.padWord","Jer."],"19:5"],";",["a.scriptureRef",{"href":"/scriptures/ot/jer/32.35"},["span.padWord","Jer."],"32:35"],";",["a.scriptureRef",{"href":"/scriptures/ot/ezek/20.26"},"Ezek. 20:26"],"; )"],["li",["i","fire"],"is kindled in mine anger:",["a.scriptureRef",{"href":"/scriptures/ot/deut/32.22"},["span.padWord","Deut."],"32:22"],";"],["li",["i","fire"],"out of the rock:",["a.scriptureRef",{"href":"/scriptures/ot/judg/6.21"},"Judg. 6:21"],";"],["li","let",["i","fire"],"come out of the bramble:",["a.scriptureRef",{"href":"/scriptures/ot/judg/9.15"},["span.padWord","Judg."],"9:15"],";"],["li",["i","fire"],"out of his mouth devoured:",["a.scriptureRef",{"href":"/scriptures/ot/2-sam/22.9"},"2 Sam. 22:9"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/ps/18.8"},"Ps. 18:8"],"; )"],["li",["i","fire"],"of the Lord fell, and consumed:",["a.scriptureRef",{"href":"/scriptures/ot/1-kgs/18.38"},"1 Kgs. 18:38"],";"],["li","a",["i","fire"],"; but the Lord was not in the",["i","fire"],":",["a.scriptureRef",{"href":"/scriptures/ot/1-kgs/19.12"},["span.padWord","1 Kgs."],"19:12"],";"],["li",["i","fire"],"come down from heaven:",["a.scriptureRef",{"href":"/scriptures/ot/2-kgs/1.10"},"2 Kgs. 1:10"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/2-kgs/1.12"},["span.padWord","2 Kgs."],"1:12"],";",["a.scriptureRef",{"href":"/scriptures/nt/luke/9.54"},"Luke 9:54"],"; )"],["li","appeared a chariot of",["i","fire"],", and horses of",["i","fire"],":",["a.scriptureRef",{"href":"/scriptures/ot/2-kgs/2.11"},["span.padWord","2 Kgs."],"2:11"],";"],["li","answered him from heaven by",["i","fire"],":",["a.scriptureRef",{"href":"/