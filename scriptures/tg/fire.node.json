,["i","fire"],":",["a.scriptureRef",{"href":"/scriptures/nt/rev/20.10"},["span.padWord","Rev."],"20:10"],";"],["li","death and hell were cast into the lake of",["i","fire"],":",["a.scriptureRef",{"href":"/scriptures/nt/rev/20.14"},["span.padWord","Rev."],"20:14"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/rev/21.8"},["span.padWord","Rev."],"21:8"],"; )"]]],["div",{"id":"f4","uri":"/scriptures/tg/fire.f4","order":".000.3472"},["ul.index",["li","there came a pillar of",["i","fire"],":",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/1.6"},"1 Ne. 1:6"],";"],["li","justice of God … like unto the brightness of a flaming",["i","fire"],":",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/15.30"},["span.padWord","1 Ne."],"15:30"],";"],["li","believe not … destroyed, both by",["i","fire"],":",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/6.15"},"2 Ne. 6:15"],";"],["li",["i","fire"],"devoureth the stubble:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/15.24"},["span.padWord","2 Ne."],"15:24"],";"],["li","light of Israel shall be for a",["i","fire"],":",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/20.17"},["span.padWord","2 Ne."],"20:17"],";"],["li",["i","fire"],"of the anger of the Lord shall be kindled:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/26.6"},["span.padWord","2 Ne."],"26:6"],";"],["li","destroy the wicked by",["i","fire"],":",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/30.10"},["span.padWord","2 Ne."],"30:10"],";"],["li","branches that have not … good fruit, and cast them into the",["i","fire"],":",["a.scriptureRef",{"href":"/scriptures/bofm/jacob/5.26"},"Jacob 5:26"],";"],["li","vineyard will I cause to be burned with",["i","fire"],":",["a.scriptureRef",{"href":"/scriptures/bofm/jacob/5.77"},["span.padWord","Jacob"],"5:77"],";"],["li","world shall be burned with",["i","fire"],":",["a.scriptureRef",{"href":"/scriptures/bofm/jacob/6.3"},["span.padWord","Jacob"],"6:3"],";"],["li","ye must go away into that lake of",["i","fire"],"and brims