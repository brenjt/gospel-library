{"id":446,"parent_id":0,"book_id":7,"content_id":1,"language_id":1,"display_order":446,"title":"Capital Punishment","subtitle":"","short_title":"Capital Punishment","uri":"/scriptures/tg/capital-punishment","content":[["div",{"id":"t1","uri":"/scriptures/tg/capital-punishment.t1","order":".000.1302"},[".title",["b","Capital Punishment"]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/tg/blood-shedding-of"},"Blood, Shedding of"],";",["a.scriptureRef",{"href":"/scriptures/tg/murder"},"Murder"]],["div",{"id":"f2","uri":"/scriptures/tg/capital-punishment.f2","order":".000.1303"},["ul.index",["li","Whoso sheddeth man’s blood, by man shall his",["i","blood"],"be shed:",["a.scriptureRef",{"href":"/scriptures/ot/gen/9.6"},"Gen. 9:6"],";"],["li","his",["i","blood"],"is required:",["a.scriptureRef",{"href":"/scriptures/ot/gen/42.22"},["span.padWord","Gen."],"42:22"],";"],["li","so that he die, shall be surely put to",["i","death"],":",["a.scriptureRef",{"href":"/scriptures/ot/ex/21.12"},"Ex. 21:12"],";"],["li","adulteress shall surely be put to",["i","death"],":",["a.scriptureRef",{"href":"/scriptures/ot/lev/20.10"},"Lev. 20:10"],";"],["li","murderer shall surely be put to",["i","death"],":",["a.scriptureRef",{"href":"/scriptures/ot/num/35.16"},"Num. 35:16"],";"],["li","revenger of blood",["i","kill"],"the slayer:",["a.scriptureRef",{"href":"/scriptures/ot/num/35.27"},["span.padWord","Num."],"35:27"],";"],["li","shalt stone them … till they",["i","die"],":",["a.scriptureRef",{"href":"/scriptures/ot/deut/17.5"},"Deut. 17:5"],";"],["li","he that is worthy of death be put to",["i","death"],":",["a.scriptureRef",{"href":"/scriptures/ot/deut/17.6"},["span.padWord","Deut."],"17:6"],";"],["li","stone her with stones that she",["i","die"],":",["a.scriptureRef",{"href":"/scriptures/ot/deut/22.21"},["span.padWord","Deut."],"22:21"],";"],["li","rebel … shall be put to",["i","death"],":",["a.scriptureRef",{"href":"/scriptures/ot/josh/1.18"},"Josh. 1:18"],";"],["li","judg