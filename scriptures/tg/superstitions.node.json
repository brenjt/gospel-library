{"id":3030,"parent_id":0,"book_id":7,"content_id":1,"language_id":1,"display_order":3030,"title":"Superstitions","subtitle":"","short_title":"Superstitions","uri":"/scriptures/tg/superstitions","content":[["div",{"id":"t1","uri":"/scriptures/tg/superstitions.t1","order":".000.10521"},[".title",["b","Superstitions"]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/tg/idolatry"},"Idolatry"],";",["a.scriptureRef",{"href":"/scriptures/tg/sorcery"},"Sorcery"]],["div",{"id":"f2","uri":"/scriptures/tg/superstitions.f2","order":".000.10522"},["ul.index",["li","found",["i","mandrakes"],"in the field:",["a.scriptureRef",{"href":"/scriptures/ot/gen/30.14"},"Gen. 30:14"],";"],["li","flocks conceived before the",["i","rods"],":",["a.scriptureRef",{"href":"/scriptures/ot/gen/30.39"},["span.padWord","Gen."],"30:39"],";"],["li","giveth any of his seed unto",["i","Molech"],":",["a.scriptureRef",{"href":"/scriptures/ot/lev/20.2"},"Lev. 20:2"],";"],["li","maketh his son or his daughter to pass through the",["i","fire"],":",["a.scriptureRef",{"href":"/scriptures/ot/deut/18.10"},"Deut. 18:10"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/2-kgs/21.6"},"2 Kgs. 21:6"],"; )"],["li","Seek me a woman that hath a",["i","familiar spirit"],":",["a.scriptureRef",{"href":"/scriptures/ot/1-sam/28.7"},"1 Sam. 28:7"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/1-chr/10.13"},"1 Chr. 10:13"],"; )"],["li","shall I fall down to the",["i","stock"],"of a tree:",["a.scriptureRef",{"href":"/scriptures/ot/isa/44.19"},"Isa. 44:19"],";"],["li","not sent these",["i","prophets"],", yet they ran:",["a.scriptureRef",{"href":"/scriptures/ot/jer/23.21"},"Jer. 23:21"],";"],["li","behold the wicked",["i","abominations"],"that they do:",["a.scriptureRef",{"href":"/scriptures/ot/ezek/8.9"},"Ezek. 8:9"],";"],["li","have seen vanity and lying",["i","divination"],":",["a.scriptureRef",{"href":"/scriptures/ot/ezek/13.6"},["span.padWord","Ezek."],"13:6"],";"],["li","seeing vanity, and",["i","divining"],