{"id":3358,"parent_id":0,"book_id":7,"content_id":1,"language_id":1,"display_order":3358,"title":"Voice","subtitle":"","short_title":"Voice","uri":"/scriptures/tg/voice","content":[["div",{"id":"t1","uri":"/scriptures/tg/voice.t1","order":".000.11708"},[".title",["b","Voice"]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/tg/noise"},"Noise"],";",["a.scriptureRef",{"href":"/scriptures/tg/sound-noun-verb"},"Sound [",["i","noun, verb"],"]"]],["div",{"id":"f2","uri":"/scriptures/tg/voice.f2","order":".000.11709"},["ul.index",["li","they heard the",["i","voice"],"of the Lord:",["a.scriptureRef",{"href":"/scriptures/ot/gen/3.8"},"Gen. 3:8"],"; (",["a.scriptureRef",{"href":"/scriptures/pgp/moses/4.14"},"Moses 4:14"],"; )"],["li",["i","voice"],"is Jacob’s",["i","voice"],", but the hands are … of Esau:",["a.scriptureRef",{"href":"/scriptures/ot/gen/27.22"},["span.padWord","Gen."],"27:22"],";"],["li","hearken to the",["i","voice"],"of the Lord:",["a.scriptureRef",{"href":"/scriptures/ot/ex/15.26"},"Ex. 15:26"],";"],["li","God answered him by a",["i","voice"],":",["a.scriptureRef",{"href":"/scriptures/ot/ex/19.19"},["span.padWord","Ex."],"19:19"],";"],["li","all the people answered with one",["i","voice"],":",["a.scriptureRef",{"href":"/scriptures/ot/ex/24.3"},["span.padWord","Ex."],"24:3"],";"],["li","Moses … heard the",["i","voice"],"of one speaking:",["a.scriptureRef",{"href":"/scriptures/ot/num/7.89"},"Num. 7:89"],";"],["li","Lord hearkened to the",["i","voice"],"of Israel:",["a.scriptureRef",{"href":"/scriptures/ot/num/21.3"},["span.padWord","Num."],"21:3"],";"],["li","ye heard the",["i","voice"],"of the words:",["a.scriptureRef",{"href":"/scriptures/ot/deut/4.12"},"Deut. 4:12"],";"],["li","Did ever people hear the",["i","voice"],"of God speaking:",["a.scriptureRef",{"href":"/scriptures/ot/deut/4.33"},["span.padWord","Deut."],"4:33"],";"],["li","heard his",["i","voice"],"out of the midst of the fire:",["a.scriptureRef",{"href":"/scriptures/ot/deut/5.24"},["span.padWord","Deut."],"5:24"],";"],["li","after the fire a still small",["i","voice"],":",["a.scriptureRef",{"href":"/scriptures/ot/1-kgs/19.12"},"1 Kgs. 19:12"],";"],["li","To day if ye will hear his",["i","voice"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/95.7"},"Ps. 95:7"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/heb/3.7,15"},"Heb. 3:7, 15"],";",["a.scriptureRef",{"href":"/scriptures/nt/heb/4.7"},["span.padWord","Heb."],"4:7"],"; )"],["li","hearkened not unto the",["i","voice"],"of the Lord:",["a.scriptureRef",{"href":"/scriptures/ot/ps/106.25"},["span.padWord","Ps."],"106:25"],";"],["li","fool’s",["i","voice"],"is known by multitude of words:",["a.scriptureRef",{"href":"/scriptures/ot/eccl/5.3"},"Eccl. 5:3"],";"],["li","I heard the",["i","voice"],"of the Lord:",["a.scriptureRef",{"href":"/scriptures/ot/isa/6.8"},"Isa. 6:8"],";"],["li","Lord shall cause his glorious",["i","voice"],"to be heard:",["a.scriptureRef",{"href":"/scriptures/ot/isa/30.30"},["span.padWord","Isa."],"30:30"],";"],["li",["i","voice"],"of him that crieth in the wilderness:",["a.scriptureRef",{"href":"/scriptures/ot/isa/40.3"},["span.padWord","Isa."],"40:3"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/matt/3.3"},"Matt. 3:3"],";",["a.scriptureRef",{"href":"/scriptures/nt/mark/1.3"},"Mark 1:3"],";",["a.scriptureRef",{"href":"/scriptures/nt/luke/3.4"},"Luke 3:4"],";",["a.scriptureRef",{"href":"/scriptures/nt/john/1.23"},"John 1:23"],";",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/33.13"},"2 Ne. 33:13"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.66"},"D&C 88:66"],"; )"],["li","his",["i","voice"],"to be heard in the street:",["a.scriptureRef",{"href":"/scriptures/ot/isa/42.2"},["span.padWord","Isa."],"42:2"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/matt/12.19"},"Matt. 12:19"],"; )"],["li","obeyeth the",["i","voice"],"of his servant:",["a.scriptureRef",{"href":"/scriptures/ot/isa/50.10"},["span.padWord","Isa."],"50:10"],";"],["li",["i","voice"],"from the temple, a",["i","voice"],"of the Lord:",["a.scriptureRef",{"href":"/scriptures/ot/isa/66.6"},["span.padWord","Isa."],"66:6"],";"],["li","Obey my",["i","voice"],":",["a.scriptureRef",{"href":"/scriptures/ot/jer/7.23"},"Jer. 7:23"],";"],["li",["i","voice"],"of mirth, and the",["i","voice"],"of gladness:",["a.scriptureRef",{"href":"/scriptures/ot/jer/7.34"},["span.padWord","Jer."],"7:34"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/jer/16.9"},["span.padWord","Jer."],"16:9"],";",["a.scriptureRef",{"href":"/scriptures/ot/jer/25.10"},["span.padWord","Jer."],"25:10"],";",["a.scriptureRef",{"href":"/scriptures/nt/rev/18.23"},"Rev. 18:23"],"; )"],["li",["i","voice"],"was heard in Ramah:",["a.scriptureRef",{"href":"/scriptures/ot/jer/31.15"},["span.padWord","Jer."],"31:15"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/matt/2.18"},"Matt. 2:18"],"; )"],["li","we will obey the",["i","voice"],"of the Lord:",["a.scriptureRef",{"href":"/scriptures/ot/jer/42.6"},["span.padWord","Jer."],"42:6"],";"],["li","his",["i","voice"],"was like a noise of many waters:",["a.scriptureRef",{"href":"/scriptures/ot/ezek/43.2"},"Ezek. 43:2"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/rev/1.15"},"Rev. 1:15"],";",["a.scriptureRef",{"href":"/scriptures/nt/rev/14.2"},["span.padWord","Rev."],"14:2"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/110.3"},"D&C 110:3"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/133.22"},["span.padWord","D&C"],"133:22"],"; )"],["li","fell a",["i","voice"],"from heaven:",["a.scriptureRef",{"href":"/scriptures/ot/dan/4.31"},"Dan. 4:31"],";"],["li",["i","voice"],"of his words like the",["i","voice"],"of a multitude:",["a.scriptureRef",{"href":"/scriptures/ot/dan/10.6"},["span.padWord","Dan."],"10:6"],";"],["li","Lord shall utter his",["i","voice"],"before his army:",["a.scriptureRef",{"href":"/scriptures/ot/joel/2.11"},"Joel 2:11"],";"],["li","even the",["i","voice"],"of the day of the Lord:",["a.scriptureRef",{"href":"/scriptures/ot/zeph/1.14"},"Zeph. 1:14"],";"]]],["div",{"id":"f3","uri":"/scriptures/tg/voice.f3","order":".000.11710"},["ul.index",["li",["i","voice"],"from heaven, saying, This is my beloved Son:",["a.scriptureRef",{"href":"/scriptures/nt/matt/3.17"},"Matt. 3:17"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/mark/1.11"},"Mark 1:11"],";",["a.scriptureRef",{"href":"/scriptures/nt/luke/3.22"},"Luke 3:22"],"; )"],["li",["i","voice"],"out of the cloud … This is my beloved Son:",["a.scriptureRef",{"href":"/scriptures/nt/matt/17.5"},["span.padWord","Matt."],"17:5"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/mark/9.7"},"Mark 9:7"],";",["a.scriptureRef",{"href":"/scriptures/nt/luke/9.35"},"Luke 9:35"],"; )"],["li","rejoiceth greatly because of the bridegroom’s",["i","voice"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/3.29"},"John 3:29"],";"],["li","dead shall hear the",["i","voice"],"of the Son:",["a.scriptureRef",{"href":"/scriptures/nt/john/5.25"},["span.padWord","John"],"5:25"],";"],["li","Ye have neither heard his",["i","voice"],"at any time:",["a.scriptureRef",{"href":"/scriptures/nt/john/5.37"},["span.padWord","John"],"5:37"],";"],["li","sheep hear his",["i","voice"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/10.3"},["span.padWord","John"],"10:3"],";"],["li","sheep follow him: for they know his",["i","voice"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/10.4"},["span.padWord","John"],"10:4"],";"],["li","they shall hear my",["i","voice"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/10.16"},["span.padWord","John"],"10:16"],";"],["li","My sheep hear my",["i","voice"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/10.27"},["span.padWord","John"],"10:27"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/26.21"},"Mosiah 26:21"],"; )"],["li","Then came there a",["i","voice"],"from heaven:",["a.scriptureRef",{"href":"/scriptures/nt/john/12.28"},["span.padWord","John"],"12:28"],";"],["li","Every one that is of the truth heareth my",["i","voice"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/18.37"},["span.padWord","John"],"18:37"],";"],["li","they lifted up their",["i","voice"],"to God:",["a.scriptureRef",{"href":"/scriptures/nt/acts/4.24"},"Acts 4:24"],";"],["li",["i","voice"],"of the Lord came unto him:",["a.scriptureRef",{"href":"/scriptures/nt/acts/7.31"},["span.padWord","Acts"],"7:31"],";"],["li","speechless, hearing a",["i","voice"],", but seeing no man:",["a.scriptureRef",{"href":"/scriptures/nt/acts/9.7"},["span.padWord","Acts"],"9:7"],";"],["li","came a",["i","voice"],"to him, Rise, Peter:",["a.scriptureRef",{"href":"/scriptures/nt/acts/10.13"},["span.padWord","Acts"],"10:13"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/acts/11.7"},["span.padWord","Acts"],"11:7"],"; )"],["li",["i","voice"],"saying unto me, Saul, Saul:",["a.scriptureRef",{"href":"/scriptures/nt/acts/22.7"},["span.padWord","Acts"],"22:7"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/acts/26.14"},["span.padWord","Acts"],"26:14"],"; )"],["li","they heard not the",["i","voice"],"of him that spake to me:",["a.scriptureRef",{"href":"/scriptures/nt/acts/22.9"},["span.padWord","Acts"],"22:9"],";"],["li","There are … so many kinds of",["i","voices"],"in the world:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/14.10"},"1 Cor. 14:10"],";"],["li","Lord … with the",["i","voice"],"of the archangel:",["a.scriptureRef",{"href":"/scriptures/nt/1-thes/4.16"},"1 Thes. 4:16"],";"],["li",["i","voice"],"they that heard entreated:",["a.scriptureRef",{"href":"/scriptures/nt/heb/12.19"},"Heb. 12:19"],";"],["li","came such a",["i","voice"],"to him:",["a.scriptureRef",{"href":"/scriptures/nt/2-pet/1.17"},"2 Pet. 1:17"],";"],["li",["i","voice"],"which came from heaven we heard:",["a.scriptureRef",{"href":"/scriptures/nt/2-pet/1.18"},["span.padWord","2 Pet."],"1:18"],";"],["li","dumb ass speaking with man’s",["i","voice"],"forbad … the prophet:",["a.scriptureRef",{"href":"/scriptures/nt/2-pet/2.16"},["span.padWord","2 Pet."],"2:16"],";"],["li","if any man hear my",["i","voice"],", and open the door:",["a.scriptureRef",{"href":"/scriptures/nt/rev/3.20"},"Rev. 3:20"],";"],["li",["i","voices"],", and thunderings, and lightnings:",["a.scriptureRef",{"href":"/scriptures/nt/rev/8.5"},["span.padWord","Rev."],"8:5"],";"],["li","I heard a",["i","voice"],"from heaven:",["a.scriptureRef",{"href":"/scriptures/nt/rev/10.4"},["span.padWord","Rev."],"10:4"],";"],["li",["i","voice"],"saying in heaven, Now is come salvation:",["a.scriptureRef",{"href":"/scriptures/nt/rev/12.10"},["span.padWord","Rev."],"12:10"],";"],["li","I heard a great",["i","voice"],"of much people in heaven:",["a.scriptureRef",{"href":"/scriptures/nt/rev/19.1"},["span.padWord","Rev."],"19:1"],";"]]],["div",{"id":"f4","uri":"/scriptures/tg/voice.f4","order":".000.11711"},["ul.index",["li","I did obey the",["i","voice"],"of the Spirit:",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/4.18"},"1 Ne. 4:18"],";"],["li","ye have heard his",["i","voice"],":",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/17.45"},["span.padWord","1 Ne."],"17:45"],";"],["li",["i","voice"],"of the Son came unto me:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/31.12"},"2 Ne. 31:12"],";"],["li",["i","voice"],"unto me, saying: Enos:",["a.scriptureRef",{"href":"/scriptures/bofm/enos/1.5"},"Enos 1:5"],";"],["li","choose you by the",["i","voice"],"of this people:",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/29.25"},"Mosiah 29:25"],";"],["li","not common that the",["i","voice"],"of the people desireth anything contrary:",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/29.26"},["span.padWord","Mosiah"],"29:26"],";"],["li","if ye will not hearken unto the",["i","voice"],"of the good shepherd:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/5.38"},"Alma 5:38"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/hel/7.18"},"Hel. 7:18"],"; )"],["li","well doth he cry unto this people, by the",["i","voice"],"of his angels:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/10.20"},["span.padWord","Alma"],"10:20"],";"],["li","still",["i","voice"],"of perfect mildness:",["a.scriptureRef",{"href":"/scriptures/bofm/hel/5.30"},"Hel. 5:30"],";"],["li","as he was thus pondering … a",["i","voice"],"came unto him:",["a.scriptureRef",{"href":"/scriptures/bofm/hel/10.3"},["span.padWord","Hel."],"10:3"],";"],["li","at his",["i","voice"],"do the hills and the mountains tremble:",["a.scriptureRef",{"href":"/scriptures/bofm/hel/12.9"},["span.padWord","Hel."],"12:9"],";"],["li","being a small",["i","voice"],"it did pierce them:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/11.3"},"3 Ne. 11:3"],";"],["li","Other sheep … shall hear my",["i","voice"],":",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/15.21"},["span.padWord","3 Ne."],"15:21"],";"]]],["div",{"id":"f5","uri":"/scriptures/tg/voice.f5","order":".000.11712"},["ul.index",["li",["i","voice"],"of the Lord is unto all men:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/1.2"},"D&C 1:2"],";"],["li",["i","voice"],"of warning shall be unto all people:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/1.4"},["span.padWord","D&C"],"1:4"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/63.37"},["span.padWord","D&C"],"63:37"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/112.5"},["span.padWord","D&C"],"112:5"],"; )"],["li","by mine own",["i","voice"],"or by the",["i","voice"],"of my servants:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/1.38"},["span.padWord","D&C"],"1:38"],";"],["li","my",["i","voice"],"which speaketh them unto you:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/18.35"},["span.padWord","D&C"],"18:35"],";"],["li","know that these things are true … by … the",["i","voice"],"of God:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/20.35"},["span.padWord","D&C"],"20:35"],";"],["li","Listen to the",["i","voice"],"of Jesus Christ:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/27.1"},["span.padWord","D&C"],"27:1"],";"],["li","sound of rejoicing, as with the",["i","voice"],"of a trump:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/29.4"},["span.padWord","D&C"],"29:4"],";"],["li","they will hear my",["i","voice"],", and shall see me:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/35.21"},["span.padWord","D&C"],"35:21"],";"],["li","appointed by the",["i","voice"],"of the church:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/38.34"},["span.padWord","D&C"],"38:34"],";"],["li","preaching be the warning",["i","voice"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/38.41"},["span.padWord","D&C"],"38:41"],";"],["li","How oft have I called upon you … by mine own",["i","voice"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/43.25"},["span.padWord","D&C"],"43:25"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.90"},["span.padWord","D&C"],"88:90"],"; )"],["li","give ear to the",["i","voice"],"of the living God:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/50.1"},["span.padWord","D&C"],"50:1"],";"],["li","speak when moved upon by the Holy Ghost … shall be the",["i","voice"],"of the Lord:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/68.4"},["span.padWord","D&C"],"68:4"],";"],["li","who speak even by the",["i","voice"],"of my Spirit:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/75.1"},["span.padWord","D&C"],"75:1"],";"],["li","heard the",["i","voice"],"bearing record:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/76.23"},["span.padWord","D&C"],"76:23"],";"],["li","confirm upon you … by mine own",["i","voice"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/84.42"},["span.padWord","D&C"],"84:42"],";"],["li","receiveth not my",["i","voice"],"is not acquainted with my",["i","voice"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/84.52"},["span.padWord","D&C"],"84:52"],";"],["li","still small",["i","voice"],", which whispereth through:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/85.6"},["span.padWord","D&C"],"85:6"],";"],["li","obeyeth my",["i","voice"],"… shall see my face:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/93.1"},["span.padWord","D&C"],"93:1"],";"],["li","made known to him by the",["i","voice"],"of the Spirit:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/104.36"},["span.padWord","D&C"],"104:36"],";"],["li","decision made by either of these quorums must be by the unanimous",["i","voice"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/107.27"},["span.padWord","D&C"],"107:27"],";"],["li","resist no more my",["i","voice"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/108.2"},["span.padWord","D&C"],"108:2"],";"],["li",["i","voice"],"of the Lord in the wilderness of Fayette:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/128.20"},["span.padWord","D&C"],"128:20"],";"],["li",["i","voice"],"declared to me, while I was praying:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/130.13"},["span.padWord","D&C"],"130:13"],";"],["li","his",["i","voice"],"shall be heard:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/133.50"},["span.padWord","D&C"],"133:50"],";"],["li","Thus came the",["i","voice"],"of the Lord:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/137.7"},["span.padWord","D&C"],"137:7"],";"],["li","among the ungodly … his",["i","voice"],"was not raised:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/138.20"},["span.padWord","D&C"],"138:20"],";"],["li","but few who hearkened to his",["i","voice"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/138.26"},["span.padWord","D&C"],"138:26"],";"]]],["div",{"id":"f6","uri":"/scriptures/tg/voice.f6","order":".000.11713"},["ul.index",["li","heard a",["i","voice"],"from heaven, saying: Enoch:",["a.scriptureRef",{"href":"/scriptures/pgp/moses/6.27"},"Moses 6:27"],";"],["li","Enoch looked upon the earth; and he heard a",["i","voice"],":",["a.scriptureRef",{"href":"/scriptures/pgp/moses/7.48"},["span.padWord","Moses"],"7:48"],";"]]]]],"refs":null}
