,{"href":"/scriptures/pgp/moses/6.7"},"Moses 6:7"],";"],["li","High Priest, holding the",["i","right"],"belonging to the fathers:",["a.scriptureRef",{"href":"/scriptures/pgp/abr/1.2"},"Abr. 1:2"],";"],["li","Noah … cursed him as pertaining to the",["i","Priesthood"],":",["a.scriptureRef",{"href":"/scriptures/pgp/abr/1.26"},["span.padWord","Abr."],"1:26"],";"],["li","in thy",["i","Priesthood"],"… right shall continue:",["a.scriptureRef",{"href":"/scriptures/pgp/abr/2.11"},["span.padWord","Abr."],"2:11"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/gen/12.1-3"},"Gen. 12:1–3"],";",["a.scriptureRef",{"href":"/scriptures/ot/gen/28.14"},["span.padWord","Gen."],"28:14"],"; )"],["li","a messenger from heaven …",["i","ordained"],"us:",["a.scriptureRef",{"href":"/scriptures/pgp/js-h/1.68"},"JS—H 1:68"],";"]]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/ot/gen/9.8-17"},"Gen. 9:8–17"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/20.38-67"},"D&C 20:38–67"],";",["a.scriptureRef",{"href":"/scriptures/pgp/moses/8"},"Moses 8"]]]],"refs":null}
