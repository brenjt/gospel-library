anointed me to",["i","preach"],"good tidings:",["a.scriptureRef",{"href":"/scriptures/ot/isa/61.1"},["span.padWord","Isa."],"61:1"],";"],["li","one of a city, and two of a family, and I will",["i","bring"],"you to Zion:",["a.scriptureRef",{"href":"/scriptures/ot/jer/3.14"},"Jer. 3:14"],";"],["li","I will send for many",["i","fishers"],":",["a.scriptureRef",{"href":"/scriptures/ot/jer/16.16"},["span.padWord","Jer."],"16:16"],";"],["li","I, will both",["i","search"],"my sheep, and seek them out:",["a.scriptureRef",{"href":"/scriptures/ot/ezek/34.11"},"Ezek. 34:11"],";"],["li","go to Nineveh … and",["i","cry"],"against it:",["a.scriptureRef",{"href":"/scriptures/ot/jonah/1.2"},"Jonah 1:2"],";"],["li",["i","preach"],"… the preaching that I bid thee:",["a.scriptureRef",{"href":"/scriptures/ot/jonah/3.2"},["span.padWord","Jonah"],"3:2"],";"]]],["div",{"id":"f3","uri":"/scriptures/tg/missionary-work.f3","order":".000.6745"},["ul.index",["li","I will make you",["i","fishers"],"of men:",["a.scriptureRef",{"href":"/scriptures/nt/matt/4.19"},"Matt. 4:19"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/mark/1.17"},"Mark 1:17"],";",["a.scriptureRef",{"href":"/scriptures/nt/luke/5.10"},"Luke 5:10"],"; )"],["li","whosoever shall do and",["i","teach"],"them:",["a.scriptureRef",{"href":"/scriptures/nt/matt/5.19"},["span.padWord","Matt."],"5:19"],";"],["li","go rather to the",["i","lost"],"sheep of the house of Israel:",["a.scriptureRef",{"href":"/scriptures/nt/matt/10.6"},["span.padWord","Matt."],"10:6"],";"],["li","he departed thence to",["i","teach"],"and to",["i","preach"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/11.1"},["span.padWord","Matt."],"11:1"],";"],["li","gospel … shall be",["i","preached"],"in all the world:",["a.scriptureRef",{"href":"/scriptures/nt/matt/24.14"},["span.padWord","Matt."],"24:14"],";"],["li",["i","teach"],"all nations, baptizing them:",["a.scriptureRef",{"href":"/scriptures/nt/matt/28.19"},["span.padWord","Matt."],"28:19"],";"],["li",["i","preach"],"the baptism of repentance for the remission of sins:",["a.scriptureRef",{"href":"/scriptures/nt/mark/1.4"},"Mark 1:4"],";"],["li","that he might send them forth to",["i","preach"],":",["a.scriptureRef",{"href":"/scriptures/nt/mark/3.14"},["span.padWord","Mark"],"3:14"],";"],["li",["i","preach"],"the gospel to every creature:",["a.scriptureRef",{"href":"/scriptures/nt/mark/16.15"},["span.padWord","Mark"],"16:15"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/morm/9.22"},"Morm. 9:22"],"; )"],["li","sent them to",["i","preach"],"the kingdom of God:",["a.scriptureRef",{"href":"/scriptures/nt/luke/9.2"},"Luke 9:2"],";"],["li",["i","seventy"],"… sent them two and two before his face:",["a.scriptureRef",{"href":"/scriptures/nt/luke/10.1"},["span.padWord","Luke"],"10:1"],";"],["li","when thou art converted,",["i","strengthen"],"thy brethren:",["a.scriptureRef",{"href":"/scriptures/nt/luke/22.32"},["span.padWord","Luke"],"22:32"],";"],["li","ye are",["i","witnesses"],"of these things:",["a.scriptureRef",{"href":"/scriptures/nt/luke/24.48"},["span.padWord","Luke"],"24:48"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/acts/1.8"},"Acts 1:8"],"; )"],["li","the fields … are white already to",["i","harvest"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/4.35"},"John 4:35"],";"],["li","go and bring forth",["i","fruit"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/15.16"},["span.padWord","John"],"15:16"],";"],["li",["i","Feed"],"my sheep:",["a.scriptureRef",{"href":"/scriptures/nt/john/21.17"},["span.padWord","John"],"21:17"],";"],["li","ceased not to",["i","teach"],"and preach Jesus:",["a.scriptureRef",{"href":"/scriptures/nt/acts/5.42"},"Acts 5:42"],";"],["li","believed Philip",["i","preaching"],"the things concerning the kingdom:",["a.scriptureRef",{"href":"/scriptures/nt/acts/8.12"},["span.padWord","Acts"],"8:12"],";"],["li","commanded us to",["i","preach"],"unto the people:",["a.scriptureRef",{"href":"/scriptures/nt/acts/10.42"},["span.padWord","Acts"],"10:42"],";"],["li","Paul …",["i","reasoned"],"with them out of the scriptures:",["a.scriptureRef",{"href":"/scriptures/nt/acts/17.2"},["span.padWord","Acts"],"17:2"],";"],["li","how shall they",["i","preach"],", except they be sent:",["a.scriptureRef",{"href":"/scriptures/nt/rom/10.15"},"Rom. 10:15"],";"],["li","we",["i","preach"],"Christ crucified:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/1.23"},"1 Cor. 1:23"],";"],["li","woe is unto me, if I",["i","preach"],"not the gospel:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/9.16"},["span.padWord","1 Cor."],"9:16"],";"],["li","I",["i","declare"],"unto you the gospel:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/15.1"},["span.padWord","1 Cor."],"15:1"],";"],["li",["i","preach"],"not ourselves, but Christ:",["a.scriptureRef",{"href":"/scriptures/nt/2-cor/4.5"},"2 Cor. 4:5"],";"],["li",["i","Preach"],"the word; be instant in season:",["a.scriptureRef",{"href":"/scriptures/nt/2-tim/4.2"},"2 Tim. 4:2"],";"],["li","another angel … having the everlasting gospel to",["i","preach"],":",["a.scriptureRef",{"href":"/scriptures/nt/rev/14.6"},"Rev. 14:6"],";"]]],["div",{"id":"f4","uri":"/scriptures/tg/missionary-work.f4","order":".000.6746"},["ul.index",["li",["i","teach"],"them the word of God with all diligence:",["a.scriptureRef",{"href":"/scriptures/bofm/jacob/1.19"},"Jacob 1:19"],";"],["li",["i","prophesy"],"unto this my people:",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/12.1"},"Mosiah 12:1"],";"],["li","these are they … who have",["i","published"],"salvation:",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/15.14"},["span.padWord","Mosiah"],"15:14"],";"],["li","stand as",["i","witnesses"],"of God at all times:",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/18.9"},["span.padWord","Mosiah"],"18:9"],";"],["li","bringing many to the",["i","knowledge"],"of the truth:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/17.4"},"Alma 17:4"],";"],["li",["i","expounded"],"unto them the plan of redemption:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/18.39"},["span.padWord","Alma"],"18:39"],";"],["li","Lord doth grant unto all nations … to",["i","teach"],"his word:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/29.8"},["span.padWord","Alma"],"29:8"],";"]]],["div",{"id":"f5","uri":"/scriptures/tg/missionary-work.f5","order":".000.6747"},["ul.index",["li",["i","go"],"forth and none shall stay them:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/1.5"},"D&C 1:5"],";"],["li","gospel might be",["i","proclaimed"],"by the weak and the simple:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/1.23"},["span.padWord","D&C"],"1:23"],";"],["li","marvelous",["i","work"],"is about to come forth:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/4.1"},["span.padWord","D&C"],"4:1"],";"],["li",["i","declare"],"my word, but first seek to obtain my word:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/11.21"},["span.padWord","D&C"],"11:21"],";"],["li","most worth unto you will be to declare",["i","repentance"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/15.6"},["span.padWord","D&C"],"15:6"],";"],["li","bring, save it be one",["i","soul"],"unto me, how great shall be your joy:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/18.15"},["span.padWord","D&C"],"18:15"],";"],["li","mine elect",["i","hear"],"my voice and harden not their hearts:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/29.7"},["span.padWord","D&C"],"29:7"],";"],["li",["i","Open"],"your mouths and they shall be filled:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/33.8"},["span.padWord","D&C"],"33:8"],"; (",["a.scriptureRef",{"href":"/scriptures/pgp/moses/6.32"},"Moses 6:32"],"; )"],["li","none … doeth good except those who are ready to",["i","receive"],"the fulness of my gospel:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/35.12"},["span.padWord","D&C"],"35:12"],";"],["li",["i","ordained"],"and sent forth to preach:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/36.5"},["span.padWord","D&C"],"36:5"],";"],["li","from thence men shall go forth into all",["i","nations"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/39.15"},["span.padWord","D&C"],"39:15"],";"],["li","go forth … preaching my gospel,",["i","two"],"by two:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/42.6"},["span.padWord","D&C"],"42:6"],";"],["li","not … preach my gospel … except he be",["i","ordained"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/42.11"},["span.padWord","D&C"],"42:11"],";"],["li",["i","teach"],"the children of men:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/43.15"},["span.padWord","D&C"],"43:15"],";"],["li","go among this people, and",["i","say"],"unto them:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/49.11"},["span.padWord","D&C"],"49:11"],";"],["li","sent forth to",["i","preach"],"the word of truth:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/50.17"},["span.padWord","D&C"],"50:17"],";"],["li","journey together, or",["i","two"],"by two:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/61.35"},["span.padWord","D&C"],"61:35"],";"],["li",["i","declare"],"glad tidings unto the inhabitants:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/62.5"},["span.padWord","D&C"],"62:5"],";"],["li","those who desire in their hearts … to",["i","warn"],"sinners:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/63.57"},["span.padWord","D&C"],"63:57"],";"],["li","open your mouths in",["i","proclaiming"],"my gospel:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/71.1"},["span.padWord","D&C"],"71:1"],";"],["li",["i","proclaiming"],"the truth according to the revelations:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/75.4"},["span.padWord","D&C"],"75:4"],";"],["li","bearing",["i","testimony"],"to all the world:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/84.61"},["span.padWord","D&C"],"84:61"],";"],["li","send you out to",["i","reprove"],"the world:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/84.87"},["span.padWord","D&C"],"84:87"],";"],["li","every man who hath been warned to",["i","warn"],"his neighbor:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.81"},["span.padWord","D&C"],"88:81"],";"],["li","every man shall hear … the gospel in his own",["i","tongue"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/90.11"},["span.padWord","D&C"],"90:11"],";"],["li","it shall be",["i","given"],"you … what ye shall say:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/100.6"},["span.padWord","D&C"],"100:6"],";"],["li","Seventy are also called to",["i","preach"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/107.25"},["span.padWord","D&C"],"107:25"],";"],["li","kept from the",["i","truth"],"because they know not where to find it:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/123.12"},["span.padWord","D&C"],"123:12"],";"],["li","Send … elders of my church unto the",["i","nations"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/133.8"},["span.padWord","D&C"],"133:8"],";"],["li",["i","servants"],"of God shall go forth:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/133.38"},["span.padWord","D&C"],"133:38"],";"]]],["div",{"id":"f6","uri":"/scriptures/tg/missionary-work.f6","order":".000.6748"},["ul.index",["li","go forth and",["i","declare"],"his Gospel:",["a.scriptureRef",{"href":"/scriptures/pgp/moses/8.19"},"Moses 8:19"],";"],["li","in their hands they shall bear this",["i","ministry"],":",["a.scriptureRef",{"href":"/scriptures/pgp/abr/2.9"},"Abr. 2:9"],";"]]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/ot/gen/12.3"},"Gen. 12:3"],";",["a.scriptureRef",{"href":"/scriptures/ot/ezek/3.17-21"},"Ezek. 3:17–21"],";",["a.scriptureRef",{"href":"/scriptures/ot/dan/2.44"},"Dan. 2:44"],";",["a.scriptureRef",{"href":"/scriptures/nt/luke/15.7"},"Luke 15:7"],";",["a.scriptureRef",{"href":"/sc