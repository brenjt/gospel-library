ust men made",["i","perfect"],":",["a.scriptureRef",{"href":"/scriptures/nt/heb/12.23"},["span.padWord","Heb."],"12:23"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/129.3"},"D&C 129:3"],"; )"],["li","Make you",["i","perfect"],"in every good work:",["a.scriptureRef",{"href":"/scriptures/nt/heb/13.21"},["span.padWord","Heb."],"13:21"],";"],["li","patience have her",["i","perfect"],"work, that ye may be",["i","perfect"],":",["a.scriptureRef",{"href":"/scriptures/nt/james/1.4"},"James 1:4"],";"],["li","every",["i","perfect"],"gift is from above:",["a.scriptureRef",{"href":"/scriptures/nt/james/1.17"},["span.padWord","James"],"1:17"],";"],["li","whoso looketh into the",["i","perfect"],"law of liberty … blessed in his deed:",["a.scriptureRef",{"href":"/scriptures/nt/james/1.25"},["span.padWord","James"],"1:25"],";"],["li","by works was faith made",["i","perfect"],":",["a.scriptureRef",{"href":"/scriptures/nt/james/2.22"},["span.padWord","James"],"2:22"],";"],["li","offend not in word, the same is a",["i","perfect"],"man:",["a.scriptureRef",{"href":"/scriptures/nt/james/3.2"},["span.padWord","James"],"3:2"],";"],["li","God … make you",["i","perfect"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-pet/5.10"},"1 Pet. 5:10"],";"],["li","verily is the love of God",["i","perfected"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-jn/2.5"},"1 Jn. 2:5"],";"],["li","his love is",["i","perfected"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-jn/4.12"},["span.padWord","1 Jn."],"4:12"],";"],["li",["i","perfect"],"love casteth out fear:",["a.scriptureRef",{"href":"/scriptures/nt/1-jn/4.18"},["span.padWord","1 Jn."],"4:18"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/moro/8.16"},"Moro. 8:16"],"; )"]]],["div",{"id":"f4","uri":"/scriptures/tg/perfection.f4","order":".000.7581"},["ul.index",["li","having a",["i","perfect"],"knowledge like unto us:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/9.13"},"2 Ne. 9:13"],";"],["li","press forward … having a",["i","p