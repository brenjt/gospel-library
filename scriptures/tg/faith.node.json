:14"],";"],["li",["i","faith"],", if it hath not works, is dead:",["a.scriptureRef",{"href":"/scriptures/nt/james/2.17"},["span.padWord","James"],"2:17"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/james/2.20"},["span.padWord","James"],"2:20"],"; )"],["li","shew thee my",["i","faith"],"by my works:",["a.scriptureRef",{"href":"/scriptures/nt/james/2.18"},["span.padWord","James"],"2:18"],";"],["li","by works was",["i","faith"],"made perfect:",["a.scriptureRef",{"href":"/scriptures/nt/james/2.22"},["span.padWord","James"],"2:22"],";"],["li","prayer of",["i","faith"],"shall save the sick:",["a.scriptureRef",{"href":"/scriptures/nt/james/5.15"},["span.padWord","James"],"5:15"],";"],["li","trial of your",["i","faith"],", being much more precious than of gold:",["a.scriptureRef",{"href":"/scriptures/nt/1-pet/1.7"},"1 Pet. 1:7"],";"],["li","add to your",["i","faith"],"virtue:",["a.scriptureRef",{"href":"/scriptures/nt/2-pet/1.5"},"2 Pet. 1:5"],";"],["li","earnestly contend for the",["i","faith"],":",["a.scriptureRef",{"href":"/scriptures/nt/jude/1.3"},"Jude 1:3"],";"],["li","patience and the",["i","faith"],"of the saints:",["a.scriptureRef",{"href":"/scriptures/nt/rev/13.10"},"Rev. 13:10"],";"]]],["div",{"id":"f4","uri":"/scriptures/tg/faith.f4","order":".000.3196"},["ul.index",["li","I will go and",["i","do"],"the things which the Lord hath commanded:",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/3.7"},"1 Ne. 3:7"],";"],["li","Lord is able to do all things … if … they exercise",["i","faith"],":",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/7.12"},["span.padWord","1 Ne."],"7:12"],";"],["li","pointers … work according to the",["i","faith"],":",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/16.28"},["span.padWord","1 Ne."],"16:28"],";"],["li","having perfect",["i","faith"],"in the Holy One:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/9.23"},"2 Ne. 9:23"],";"],["li","alive in Christ because of our",["i","faith"],":",["a.scriptureRef",{"href":"/scriptures/bo