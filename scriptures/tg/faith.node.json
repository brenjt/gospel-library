sy according to the proportion of",["i","faith"],":",["a.scriptureRef",{"href":"/scriptures/nt/rom/12.6"},["span.padWord","Rom."],"12:6"],";"],["li","Him that is weak in the",["i","faith"],"receive ye:",["a.scriptureRef",{"href":"/scriptures/nt/rom/14.1"},["span.padWord","Rom."],"14:1"],";"],["li","whatsoever is not of",["i","faith"],"is sin:",["a.scriptureRef",{"href":"/scriptures/nt/rom/14.23"},["span.padWord","Rom."],"14:23"],";"],["li","your",["i","faith"],"should not stand in the wisdom of men:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/2.5"},"1 Cor. 2:5"],";"],["li","To another",["i","faith"],"by the same Spirit:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/12.9"},["span.padWord","1 Cor."],"12:9"],";"],["li","now abideth",["i","faith"],", hope, charity:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/13.13"},["span.padWord","1 Cor."],"13:13"],";"],["li","if Christ be not risen …",["i","faith"],"is also vain:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/15.14"},["span.padWord","1 Cor."],"15:14"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/15.17"},["span.padWord","1 Cor."],"15:17"],"; )"],["li","stand fast in the",["i","faith"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/16.13"},["span.padWord","1 Cor."],"16:13"],";"],["li","we walk by",["i","faith"],", not by sight:",["a.scriptureRef",{"href":"/scriptures/nt/2-cor/5.7"},"2 Cor. 5:7"],";"],["li","having hope, when your",["i","faith"],"is increased:",["a.scriptureRef",{"href":"/scriptures/nt/2-cor/10.15"},["span.padWord","2 Cor."],"10:15"],";"],["li","in the flesh I live by the",["i","faith"],"of the Son:",["a.scriptureRef",{"href":"/scriptures/nt/gal/2.20"},"Gal. 2:20"],";"],["li","Received ye the Spirit … by the hearing of",["i","faith"],":",["a.scriptureRef",{"href":"/scriptures/nt/gal/3.2"},["span.padWord","Gal."],"3:2"],";"],["li","receive the promise of the Spirit through",["i","faith"],":",["a.scriptureRef",{"href":"/scriptures/nt/gal/3.14"},["span.padWord","Gal."],"3:14"],