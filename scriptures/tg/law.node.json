{"id":1760,"parent_id":0,"book_id":7,"content_id":1,"language_id":1,"display_order":1760,"title":"Law","subtitle":"","short_title":"Law","uri":"/scriptures/tg/law","content":[["div",{"id":"t1","uri":"/scriptures/tg/law.t1","order":".000.5869"},[".title",["b","Law"]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/tg/accountability"},"Accountability"],";",["a.scriptureRef",{"href":"/scriptures/tg/citizenship"},"Citizenship"],";",["a.scriptureRef",{"href":"/scriptures/tg/command"},"Command"],";",["a.scriptureRef",{"href":"/scriptures/tg/commandments-of-god"},"Commandments of God"],";",["a.scriptureRef",{"href":"/scriptures/tg/decree"},"Decree"],";",["a.scriptureRef",{"href":"/scriptures/tg/god-law-of"},"God, Law of"],";",["a.scriptureRef",{"href":"/scriptures/tg/god-will-of"},"God, Will of"],";",["a.scriptureRef",{"href":"/scriptures/tg/governments"},"Governments"],";",["a.scriptureRef",{"href":"/scriptures/tg/ignorance"},"Ignorance"],";",["a.scriptureRef",{"href":"/scriptures/tg/law-of-moses"},"Law of Moses"],";",["a.scriptureRef",{"href":"/scriptures/tg/order"},"Order"],";",["a.scriptureRef",{"href":"/scriptures/tg/ordinance"},"Ordinance"],";",["a.scriptureRef",{"href":"/scriptures/tg/precept"},"Precept"],";",["a.scriptureRef",{"href":"/scriptures/tg/statute"},"Statute"]],["div",{"id":"f2","uri":"/scriptures/tg/law.f2","order":".000.5870"},["ul.index",["li","Joseph made it a",["i","law"],"over the land:",["a.scriptureRef",{"href":"/scriptures/ot/gen/47.26"},"Gen. 47:26"],";"],["li","Lord’s",["i","law"],"may be in thy mouth:",["a.scriptureRef",{"href":"/scriptures/ot/ex/13.9"},"Ex. 13:9"],";"],["li","give thee tables of stone, and a",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/ot/ex/24.12"},["span.padWord","Ex."],"24:12"],";"],["li","Ye shall have one manner of",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/ot/lev/24.22"},"Lev. 24:22"],";"],["li","the",["i","law"],"of the Nazarite:",["a.scriptureRef",{"href":"/scriptures/ot/num/6.13"},"Num. 6:13"],";"],["li","began Moses to declare this",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/ot/deut/1.5"},"Deut. 1:5"],";"],["li","judgments so righteous as all this",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/ot/deut/4.8"},["span.padWord","Deut."],"4:8"],";"],["li","Moses wrote this",["i","law"],", and delivered it:",["a.scriptureRef",{"href":"/scriptures/ot/deut/31.9"},["span.padWord","Deut."],"31:9"],";"],["li","book of the",["i","law"],"shall not depart:",["a.scriptureRef",{"href":"/scriptures/ot/josh/1.8"},"Josh. 1:8"],";"],["li","afterward he read all the words of the",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/ot/josh/8.34"},["span.padWord","Josh."],"8:34"],";"],["li","have found the book of the",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/ot/2-kgs/22.8"},"2 Kgs. 22:8"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/2-chr/34.15"},"2 Chr. 34:15"],"; )"],["li","read in the book in the",["i","law"],"of God distinctly:",["a.scriptureRef",{"href":"/scriptures/ot/neh/8.8"},"Neh. 8:8"],";"],["li","oath, to walk in God’s",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/ot/neh/10.29"},["span.padWord","Neh."],"10:29"],";"],["li","in his",["i","law"],"doth he meditate:",["a.scriptureRef",{"href":"/scriptures/ot/ps/1.2"},"Ps. 1:2"],";"],["li",["i","law"],"of the Lord is perfect:",["a.scriptureRef",{"href":"/scriptures/ot/ps/19.7"},["span.padWord","Ps."],"19:7"],";"],["li",["i","law"],"of his God is in his heart:",["a.scriptureRef",{"href":"/scriptures/ot/ps/37.31"},["span.padWord","Ps."],"37:31"],";"],["li","peace have they which love thy",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/119.165"},["span.padWord","Ps."],"119:165"],";"],["li","forsake not the",["i","law"],"of thy mother:",["a.scriptureRef",{"href":"/scriptures/ot/prov/1.8"},"Prov. 1:8"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/prov/6.20"},["span.padWord","Prov."],"6:20"],"; )"],["li",["i","law"],"of the wise is a fountain of life:",["a.scriptureRef",{"href":"/scriptures/ot/prov/13.14"},["span.padWord","Prov."],"13:14"],";"],["li","Whoso keepeth the",["i","law"],"is a wise son:",["a.scriptureRef",{"href":"/scriptures/ot/prov/28.7"},["span.padWord","Prov."],"28:7"],";"],["li","he that keepeth the",["i","law"],", happy is he:",["a.scriptureRef",{"href":"/scriptures/ot/prov/29.18"},["span.padWord","Prov."],"29:18"],";"],["li","out of Zion shall go forth the",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/ot/isa/2.3"},"Isa. 2:3"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/micah/4.2"},"Micah 4:2"],";",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/12.3"},"2 Ne. 12:3"],"; )"],["li","seal the",["i","law"],"among my disciples:",["a.scriptureRef",{"href":"/scriptures/ot/isa/8.16"},["span.padWord","Isa."],"8:16"],";"],["li","magnify the",["i","law"],", and make it honourable:",["a.scriptureRef",{"href":"/scriptures/ot/isa/42.21"},["span.padWord","Isa."],"42:21"],";"],["li","a",["i","law"],"shall proceed from me:",["a.scriptureRef",{"href":"/scriptures/ot/isa/51.4"},["span.padWord","Isa."],"51:4"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/8.4"},"2 Ne. 8:4"],"; )"],["li","people in whose heart is my",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/ot/isa/51.7"},["span.padWord","Isa."],"51:7"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/8.7"},"2 Ne. 8:7"],"; )"],["li","my",["i","law"],"in their inward parts:",["a.scriptureRef",{"href":"/scriptures/ot/jer/31.33"},"Jer. 31:33"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/heb/8.10"},"Heb. 8:10"],";",["a.scriptureRef",{"href":"/scriptures/nt/heb/10.16"},["span.padWord","Heb."],"10:16"],"; )"],["li","thou hast forgotten the",["i","law"],"of thy God:",["a.scriptureRef",{"href":"/scriptures/ot/hosea/4.6"},"Hosea 4:6"],";"],["li","written to him the great things of my",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/ot/hosea/8.12"},["span.padWord","Hosea"],"8:12"],";"],["li","they have despised the",["i","law"],"of the Lord:",["a.scriptureRef",{"href":"/scriptures/ot/amos/2.4"},"Amos 2:4"],";"]]],["div",{"id":"f3","uri":"/scriptures/tg/law.f3","order":".000.5871"},["ul.index",["li","Doth our",["i","law"],"judge any man, before it hear him:",["a.scriptureRef",{"href":"/scriptures/nt/john/7.51"},"John 7:51"],";"],["li","received the",["i","law"],"by the disposition of angels:",["a.scriptureRef",{"href":"/scriptures/nt/acts/7.53"},"Acts 7:53"],";"],["li","it be a question of … your",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/18.15"},["span.padWord","Acts"],"18:15"],";"],["li","what",["i","law"],"? of works? Nay: but by the",["i","law"],"of faith:",["a.scriptureRef",{"href":"/scriptures/nt/rom/3.27"},"Rom. 3:27"],";"],["li",["i","law"],"worketh wrath: for where no",["i","law"],"is, there is no transgression:",["a.scriptureRef",{"href":"/scriptures/nt/rom/4.15"},["span.padWord","Rom."],"4:15"],";"],["li","sin is not imputed when there is no",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/nt/rom/5.13"},["span.padWord","Rom."],"5:13"],";"],["li","without the",["i","law"],"sin was dead:",["a.scriptureRef",{"href":"/scriptures/nt/rom/7.8"},["span.padWord","Rom."],"7:8"],";"],["li",["i","law"],"is spiritual: but I am carnal:",["a.scriptureRef",{"href":"/scriptures/nt/rom/7.14"},["span.padWord","Rom."],"7:14"],";"],["li","delight in the",["i","law"],"of God after the inward man:",["a.scriptureRef",{"href":"/scriptures/nt/rom/7.22"},["span.padWord","Rom."],"7:22"],";"],["li",["i","law"],"of the Spirit … made me free from the",["i","law"],"of sin:",["a.scriptureRef",{"href":"/scriptures/nt/rom/8.2"},["span.padWord","Rom."],"8:2"],";"],["li","Christ is the end of the",["i","law"],"for righteousness:",["a.scriptureRef",{"href":"/scriptures/nt/rom/10.4"},["span.padWord","Rom."],"10:4"],";"],["li","love is the fulfilling of the",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/nt/rom/13.10"},["span.padWord","Rom."],"13:10"],";"],["li","go to",["i","law"],"before the unjust:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/6.1"},"1 Cor. 6:1"],";"],["li","brother goeth to",["i","law"],"with brother:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/6.6"},["span.padWord","1 Cor."],"6:6"],";"],["li","wife is bound by the",["i","law"],"as long as her husband liveth:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/7.39"},["span.padWord","1 Cor."],"7:39"],";"],["li","To them that are without",["i","law"],", as without",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/9.21"},["span.padWord","1 Cor."],"9:21"],";"],["li","strength of sin is the",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/15.56"},["span.padWord","1 Cor."],"15:56"],";"],["li","Bear ye one another’s burdens, and so fulfil the",["i","law"],"of Christ:",["a.scriptureRef",{"href":"/scriptures/nt/gal/6.2"},"Gal. 6:2"],";"],["li","righteousness which is in the",["i","law"],", blameless:",["a.scriptureRef",{"href":"/scriptures/nt/philip/3.6"},"Philip. 3:6"],";"],["li","looketh into the perfect",["i","law"],"of liberty:",["a.scriptureRef",{"href":"/scriptures/nt/james/1.25"},"James 1:25"],";"],["li","keep the whole",["i","law"],", and yet offend in one point:",["a.scriptureRef",{"href":"/scriptures/nt/james/2.10"},["span.padWord","James"],"2:10"],";"],["li","speaketh evil of the",["i","law"],", and judgeth the",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/nt/james/4.11"},["span.padWord","James"],"4:11"],";"],["li","sin is the transgression of the",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-jn/3.4"},"1 Jn. 3:4"],";"]]],["div",{"id":"f4","uri":"/scriptures/tg/law.f4","order":".000.5872"},["ul.index",["li","by the",["i","law"],"no flesh is justified:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/2.5"},"2 Ne. 2:5"],";"],["li","not to be acted upon, save it be by the punishment of the",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/2.26"},["span.padWord","2 Ne."],"2:26"],";"],["li","no",["i","law"],"given there is no punishment:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/9.25"},["span.padWord","2 Ne."],"9:25"],";"],["li","just men to be your kings, who would establish the",["i","laws"],"of God:",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/29.13"},"Mosiah 29:13"],";"],["li","choose … judges, that ye may be judged according to the",["i","laws"],":",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/29.25"},["span.padWord","Mosiah"],"29:25"],";"],["li","How could he sin if there was no",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/42.17"},"Alma 42:17"],";"],["li","How could there be a",["i","law"],"save there was a punishment:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/42.17"},["span.padWord","Alma"],"42:17"],";"],["li","justice claimeth the creature and executeth the",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/42.22"},["span.padWord","Alma"],"42:22"],";"],["li","alive in Christ, and also all they that are without the",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/bofm/moro/8.22"},"Moro. 8:22"],";"],["li","power of redemption cometh on all them that have no",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/bofm/moro/8.22"},["span.padWord","Moro."],"8:22"],";"]]],["div",{"id":"f5","uri":"/scriptures/tg/law.f5","order":".000.5873"},["ul.index",["li","not at any time have I given unto you a",["i","law"],"which was temporal:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/29.34"},"D&C 29:34"],";"],["li","by the prayer of your faith ye shall receive my",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/41.3"},["span.padWord","D&C"],"41:3"],";"],["li","He that receiveth my",["i","law"],"and doeth it, the same is my disciple:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/41.5"},["span.padWord","D&C"],"41:5"],";"],["li","hear and obey the",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/42.2"},["span.padWord","D&C"],"42:2"],";"],["li","given unto thee in my scriptures for a",["i","law"],", to be my",["i","law"],"to govern my church:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/42.59"},["span.padWord","D&C"],"42:59"],";"],["li","they that knew no",["i","law"],"shall have part in the first resurrection:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/45.54"},["span.padWord","D&C"],"45:54"],";"],["li","Let no man break the",["i","laws"],"of the land:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/58.21"},["span.padWord","D&C"],"58:21"],";"],["li","these are they who died without",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/76.72"},["span.padWord","D&C"],"76:72"],";"],["li","they who are not sanctified through the",["i","law"],"… inherit another kingdom:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.21"},["span.padWord","D&C"],"88:21"],";"],["li","that which is governed by",["i","law"],"is also preserved by",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.34"},["span.padWord","D&C"],"88:34"],";"],["li","That which breaketh a",["i","law"],", and abideth not by",["i","law"],", but seeketh to become a",["i","law"],"unto itself … cannot be sanctified by",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.35"},["span.padWord","D&C"],"88:35"],";"],["li","unto every kingdom is given a",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.38"},["span.padWord","D&C"],"88:38"],";"],["li","he hath given a",["i","law"],"unto all things:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.42"},["span.padWord","D&C"],"88:42"],";"],["li","obtain a knowledge of …",["i","laws"],"of God and man:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/93.53"},["span.padWord","D&C"],"93:53"],";"],["li",["i","laws"],"of the land … people should observe:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/98.4"},["span.padWord","D&C"],"98:4"],";"],["li","union required by the",["i","law"],"of the celestial kingdom:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/105.4"},["span.padWord","D&C"],"105:4"],";"],["li","lands … possess them according to the",["i","laws"],"of consecration:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/105.29"},["span.padWord","D&C"],"105:29"],";"],["li","one-tenth of all their interest … a standing",["i","law"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/119.4"},["span.padWord","D&C"],"119:4"],";"],["li","There is a",["i","law"],", irrevocably decreed in heaven:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/130.20"},["span.padWord","D&C"],"130:20"],";"],["li","all who will have a blessing at my hands shall abide the",["i","law"],"… appointed for that blessing:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/132.5"},["span.padWord","D&C"],"132:5"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/132.21,32"},["span.padWord","D&C"],"132:21, 32"],"; )"]]]]],"refs":null}
