{"id":1802,"parent_id":0,"book_id":7,"content_id":1,"language_id":1,"display_order":1802,"title":"Liberty","subtitle":"","short_title":"Liberty","uri":"/scriptures/tg/liberty","content":[["div",{"id":"t1","uri":"/scriptures/tg/liberty.t1","order":".000.6010"},[".title",["b","Liberty"]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/tg/agency"},"Agency"],";",["a.scriptureRef",{"href":"/scriptures/tg/bondage-physical"},"Bondage, Physical"],";",["a.scriptureRef",{"href":"/scriptures/tg/bondage-spiritual"},"Bondage, Spiritual"],";",["a.scriptureRef",{"href":"/scriptures/tg/citizenship"},"Citizenship"],";",["a.scriptureRef",{"href":"/scriptures/tg/deliver"},"Deliver"],";",["a.scriptureRef",{"href":"/scriptures/tg/freedom"},"Freedom"],";",["a.scriptureRef",{"href":"/scriptures/tg/governments"},"Governments"],";",["a.scriptureRef",{"href":"/scriptures/tg/opposition"},"Opposition"]],["div",{"id":"f2","uri":"/scriptures/tg/liberty.f2","order":".000.6011"},["ul.index",["li","in the seventh he shall go out",["i","free"],"for nothing:",["a.scriptureRef",{"href":"/scriptures/ot/ex/21.2"},"Ex. 21:2"],";"],["li","proclaim",["i","liberty"],"throughout all the land:",["a.scriptureRef",{"href":"/scriptures/ot/lev/25.10"},"Lev. 25:10"],";"],["li","I will walk at",["i","liberty"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/119.45"},"Ps. 119:45"],";"],["li","to let the oppressed go",["i","free"],":",["a.scriptureRef",{"href":"/scriptures/ot/isa/58.6"},"Isa. 58:6"],";"],["li","to proclaim",["i","liberty"],"to the captives:",["a.scriptureRef",{"href":"/scriptures/ot/isa/61.1"},["span.padWord","Isa."],"61:1"],";"],["li","made a covenant … to proclaim",["i","liberty"],"unto them:",["a.scriptureRef",{"href":"/scriptures/ot/jer/34.8"},"Jer. 34:8"],";"],["li","I proclaim a",["i","liberty"],"for you:",["a.scriptureRef",{"href":"/scriptures/ot/jer/34.17"},["span.padWord","Jer."],"34:17"],";"],["li","it shall be his to the year of",["i","liberty"],":",["a.scriptureRef",{"href":"/scriptures/ot/ezek/46.17"},"Ezek. 46:17"],";"]]],["div",{"id":"f3","uri":"/scriptures/tg/liberty.f3","order":".000.6012"},["ul.index",["li","to set at",["i","liberty"],"them that are bruised:",["a.scriptureRef",{"href":"/scriptures/nt/luke/4.18"},"Luke 4:18"],";"],["li","know the truth, and the truth shall make you",["i","free"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/8.32"},"John 8:32"],";"],["li","If the Son … make you",["i","free"],", ye shall be",["i","free"],"indeed:",["a.scriptureRef",{"href":"/scriptures/nt/john/8.36"},["span.padWord","John"],"8:36"],";"],["li","glorious",["i","liberty"],"of the children of God:",["a.scriptureRef",{"href":"/scriptures/nt/rom/8.21"},"Rom. 8:21"],";"],["li","she is at",["i","liberty"],"to be married:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/7.39"},"1 Cor. 7:39"],";"],["li","lest … this",["i","liberty"],"of yours become a stumblingblock:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/8.9"},["span.padWord","1 Cor."],"8:9"],";"],["li","is my",["i","liberty"],"judged of another man’s conscience:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/10.29"},["span.padWord","1 Cor."],"10:29"],";"],["li","where the Spirit of the Lord is, there is",["i","liberty"],":",["a.scriptureRef",{"href":"/scriptures/nt/2-cor/3.17"},"2 Cor. 3:17"],";"],["li","our",["i","liberty"],"which we have in Christ Jesus:",["a.scriptureRef",{"href":"/scriptures/nt/gal/2.4"},"Gal. 2:4"],";"],["li","Stand … in the",["i","liberty"],"wherewith Christ hath made us free:",["a.scriptureRef",{"href":"/scriptures/nt/gal/5.1"},["span.padWord","Gal."],"5:1"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/23.13"},"Mosiah 23:13"],";",["a.scriptureRef",{"href":"/scriptures/bofm/alma/58.40"},"Alma 58:40"],";",["a.scriptureRef",{"href":"/scriptures/bofm/alma/61.9"},["span.padWord","Alma"],"61:9"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.86"},"D&C 88:86"],"; )"],["li","ye have been called unto",["i","liberty"],"; only use not",["i","liberty"],":",["a.scriptureRef",{"href":"/scriptures/nt/gal/5.13"},["span.padWord","Gal."],"5:13"],";"],["li","Know ye that … Timothy is set at",["i","liberty"],":",["a.scriptureRef",{"href":"/scriptures/nt/heb/13.23"},"Heb. 13:23"],";"],["li","whoso looketh into the perfect law of",["i","liberty"],":",["a.scriptureRef",{"href":"/scriptures/nt/james/1.25"},"James 1:25"],";"],["li","they that shall be judged by the law of",["i","liberty"],":",["a.scriptureRef",{"href":"/scriptures/nt/james/2.12"},["span.padWord","James"],"2:12"],";"],["li","not using your",["i","liberty"],"for a cloak of maliciousness:",["a.scriptureRef",{"href":"/scriptures/nt/1-pet/2.16"},"1 Pet. 2:16"],";"],["li","they promise them",["i","liberty"],":",["a.scriptureRef",{"href":"/scriptures/nt/2-pet/2.19"},"2 Pet. 2:19"],";"]]],["div",{"id":"f4","uri":"/scriptures/tg/liberty.f4","order":".000.6013"},["ul.index",["li","shall be a land of",["i","liberty"],"unto them:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/1.7"},"2 Ne. 1:7"],";"],["li","men are free … to choose",["i","liberty"],"and eternal life:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/2.27"},["span.padWord","2 Ne."],"2:27"],";"],["li","this land shall be a land of",["i","liberty"],"unto the Gentiles:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/10.11"},["span.padWord","2 Ne."],"10:11"],";"],["li","no other head whereby ye can be made",["i","free"],":",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/5.8"},"Mosiah 5:8"],";"],["li","I desire that this land be a land of",["i","liberty"],":",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/29.32"},["span.padWord","Mosiah"],"29:32"],";"],["li","rejoiced because of the",["i","liberty"],"which had been granted:",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/29.39"},["span.padWord","Mosiah"],"29:39"],";"],["li","study … that they may destroy the",["i","liberty"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/8.17"},"Alma 8:17"],";"],["li","have the",["i","liberty"],"of worshiping the Lord:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/21.22"},["span.padWord","Alma"],"21:22"],";"],["li","that they might preserve their …",["i","liberty"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/43.9"},["span.padWord","Alma"],"43:9"],";"],["li","only desire … their",["i","liberty"],", and their church:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/43.30"},["span.padWord","Alma"],"43:30"],";"],["li","fighting for their homes and their",["i","liberties"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/43.45"},["span.padWord","Alma"],"43:45"],";"],["li","they cried … unto the Lord … for their",["i","liberty"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/43.49"},["span.padWord","Alma"],"43:49"],";"],["li","by that",["i","liberty"],"which binds us to our lands:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/44.5"},["span.padWord","Alma"],"44:5"],";"],["li","to destroy the foundation of",["i","liberty"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/46.10"},["span.padWord","Alma"],"46:10"],";"],["li","let us preserve our",["i","liberty"],"as a remnant of Joseph:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/46.24"},["span.padWord","Alma"],"46:24"],";"],["li","all … were desirous to maintain their",["i","liberty"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/46.28"},["span.padWord","Alma"],"46:28"],";"],["li","he caused the title of",["i","liberty"],"to be hoisted:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/46.36"},["span.padWord","Alma"],"46:36"],";"],["li","he was preparing to support their",["i","liberty"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/48.10"},["span.padWord","Alma"],"48:10"],";"],["li","consequences would lead to the overthrow of their",["i","liberty"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/50.32"},["span.padWord","Alma"],"50:32"],";"],["li","Pahoran and also many of the people of",["i","liberty"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/51.7"},["span.padWord","Alma"],"51:7"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/alma/51.13"},["span.padWord","Alma"],"51:13"],"; )"],["li","should take up arms and support the cause of",["i","liberty"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/51.17"},["span.padWord","Alma"],"51:17"],";"],["li","yielded to the standard of",["i","liberty"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/51.20"},["span.padWord","Alma"],"51:20"],";"],["li","they never would give up their",["i","liberty"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/53.17"},["span.padWord","Alma"],"53:17"],";"],["li","did think more upon the",["i","liberty"],"of their fathers:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/56.47"},["span.padWord","Alma"],"56:47"],";"],["li","our wives, and our children, and the cause of our",["i","liberty"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/58.12"},["span.padWord","Alma"],"58:12"],";"],["li",["i","freedom"],"and welfare of my country:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/60.36"},["span.padWord","Alma"],"60:36"],";"],["li","in the defence of their country and their",["i","freedom"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/61.6"},["span.padWord","Alma"],"61:6"],";"],["li","Spirit of God, which is also the spirit of",["i","freedom"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/61.15"},["span.padWord","Alma"],"61:15"],";"],["li","he did raise the standard of",["i","liberty"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/62.4"},["span.padWord","Alma"],"62:4"],";"],["li","true friend to",["i","liberty"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/62.37"},["span.padWord","Alma"],"62:37"],";"],["li","sought to destroy the",["i","liberty"],"of the people:",["a.scriptureRef",{"href":"/scriptures/bofm/hel/1.8"},"Hel. 1:8"],";"],["li","of their worship, and their freedom and their",["i","liberty"],":",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/2.12"},"3 Ne. 2:12"],";"],["li","in the defence of your",["i","liberty"],":",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/3.2"},["span.padWord","3 Ne."],"3:2"],";"],["li","that they would murder no more were set at",["i","liberty"],":",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/5.4"},["span.padWord","3 Ne."],"5:4"],";"],["li","that the land should no more be at",["i","liberty"],":",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/6.30"},["span.padWord","3 Ne."],"6:30"],";"],["li","this is a choice land …",["i","free"],"from bondage:",["a.scriptureRef",{"href":"/scriptures/bofm/ether/2.12"},"Ether 2:12"],";"],["li","seeketh to overthrow the",["i","freedom"],"of all lands:",["a.scriptureRef",{"href":"/scriptures/bofm/ether/8.25"},["span.padWord","Ether"],"8:25"],";"]]],["div",{"id":"f5","uri":"/scriptures/tg/liberty.f5","order":".000.6014"},["ul.index",["li","follow me, and you shall be a",["i","free"],"people:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/38.22"},"D&C 38:22"],";"],["li","law of the land … supporting that principle of",["i","freedom"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/98.5"},["span.padWord","D&C"],"98:5"],";"],["li","Lord God, make you",["i","free"],", therefore ye are",["i","free"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/98.8"},["span.padWord","D&C"],"98:8"],";"],["li","laws and constitution … maintained for the",["i","rights"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/101.77"},["span.padWord","D&C"],"101:77"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/101.76-79"},["span.padWord","D&C"],"101:76–79"],"; )"],["li","laws … secure to each …",["i","free"],"exercise of conscience:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/134.2"},["span.padWord","D&C"],"134:2"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/134.1-3"},["span.padWord","D&C"],"134:1–3"],"; )"],["li","laws … holding sacred the",["i","freedom"],"of conscience:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/134.5"},["span.padWord","D&C"],"134:5"],";"],["li",["i","liberty"],"to the captives … unto all who would repent:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/138.31"},["span.padWord","D&C"],"138:31"],";"]]]]],"refs":null}
