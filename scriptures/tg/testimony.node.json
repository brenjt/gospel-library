{"id":3113,"parent_id":0,"book_id":7,"content_id":1,"language_id":1,"display_order":3113,"title":"Testimony","subtitle":"","short_title":"Testimony","uri":"/scriptures/tg/testimony","content":[["div",{"id":"t1","uri":"/scriptures/tg/testimony.t1","order":".000.10840"},[".title",["b","Testimony"]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/tg/book-of-mormon"},"Book of Mormon"],";",["a.scriptureRef",{"href":"/scriptures/tg/covenants"},"Covenants"],";",["a.scriptureRef",{"href":"/scriptures/tg/faith"},"Faith"],";",["a.scriptureRef",{"href":"/scriptures/tg/holy-ghost-comforter"},"Holy Ghost, Comforter"],";",["a.scriptureRef",{"href":"/scriptures/tg/holy-ghost-gifts-of"},"Holy Ghost, Gifts of"],";",["a.scriptureRef",{"href":"/scriptures/tg/holy-ghost-mission-of"},"Holy Ghost, Mission of"],";",["a.scriptureRef",{"href":"/scriptures/tg/holy-ghost-source-of-testimony"},"Holy Ghost, Source of Testimony"],";",["a.scriptureRef",{"href":"/scriptures/tg/holy-spirit"},"Holy Spirit"],";",["a.scriptureRef",{"href":"/scriptures/tg/jesus-christ-appearances-antemortal"},"Jesus Christ, Appearances, Antemortal"],";",["a.scriptureRef",{"href":"/scriptures/tg/jesus-christ-appearances-postmortal"},"Jesus Christ, Appearances, Postmortal"],";",["a.scriptureRef",{"href":"/scriptures/tg/martyrdom"},"Martyrdom"],";",["a.scriptureRef",{"href":"/scriptures/tg/preaching"},"Preaching"],";",["a.scriptureRef",{"href":"/scriptures/tg/prophets-mission-of"},"Prophets, Mission of"],";",["a.scriptureRef",{"href":"/scriptures/tg/revelation"},"Revelation"],";",["a.scriptureRef",{"href":"/scriptures/tg/scriptures-value-of"},"Scriptures, Value of"],";",["a.scriptureRef",{"href":"/scriptures/tg/testify"},"Testify"],";",["a.scriptureRef",{"href":"/scriptures/tg/testimony-tables-of"},"Testimony, Tables of"],";",["a.scriptureRef",{"href":"/scriptures/tg/witness"},"Witness"]],["div",{"id":"f2","uri":"/scriptures/tg/testimony.f2","order":".000.10841"},["ul.index",["li","What mean the",["i","testimonies"],":",["a.scriptureRef",{"href":"/scriptures/ot/deut/6.20"},"Deut. 6:20"],";"],["li","I",["i","know"],"that my redeemer liveth:",["a.scriptureRef",{"href":"/scriptures/ot/job/19.25"},"Job 19:25"],";"],["li",["i","testimony"],"of the Lord is sure:",["a.scriptureRef",{"href":"/scriptures/ot/ps/19.7"},"Ps. 19:7"],";"],["li","mine eyes have",["i","seen"],"the King, the Lord:",["a.scriptureRef",{"href":"/scriptures/ot/isa/6.5"},"Isa. 6:5"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/16.5"},"2 Ne. 16:5"],"; )"]]],["div",{"id":"f3","uri":"/scriptures/tg/testimony.f3","order":".000.10842"},["ul.index",["li","offer the gift … for a",["i","testimony"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/8.4"},"Matt. 8:4"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/mark/1.44"},"Mark 1:44"],";",["a.scriptureRef",{"href":"/scriptures/nt/luke/5.14"},"Luke 5:14"],"; )"],["li","brought before governors and kings … for a",["i","testimony"],"against them:",["a.scriptureRef",{"href":"/scriptures/nt/matt/10.18"},["span.padWord","Matt."],"10:18"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/mark/13.9"},"Mark 13:9"],";",["a.scriptureRef",{"href":"/scriptures/nt/luke/21.13"},"Luke 21:13"],"; )"],["li","Thou art the",["i","Christ"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/16.16"},["span.padWord","Matt."],"16:16"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/luke/9.20"},"Luke 9:20"],"; )"],["li","flesh and blood hath not",["i","revealed"],"it unto thee:",["a.scriptureRef",{"href":"/scriptures/nt/matt/16.17"},["span.padWord","Matt."],"16:17"],";"],["li","shake off the dust … for a",["i","testimony"],"against:",["a.scriptureRef",{"href":"/scriptures/nt/mark/6.11"},"Mark 6:11"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/luke/9.5"},"Luke 9:5"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/75.20"},"D&C 75:20"],"; )"],["li","I saw, and bare",["i","record"],"that this is the Son:",["a.scriptureRef",{"href":"/scriptures/nt/john/1.34"},"John 1:34"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/john/1.7,15"},["span.padWord","John"],"1:7, 15"],"; )"],["li","I receive not",["i","testimony"],"from man:",["a.scriptureRef",{"href":"/scriptures/nt/john/5.34"},["span.padWord","John"],"5:34"],";"],["li","do his will … shall",["i","know"],"of the doctrine:",["a.scriptureRef",{"href":"/scriptures/nt/john/7.17"},["span.padWord","John"],"7:17"],";"],["li","law, that the",["i","testimony"],"of two men is true:",["a.scriptureRef",{"href":"/scriptures/nt/john/8.17"},["span.padWord","John"],"8:17"],";"],["li","ye shall",["i","know"],"the truth:",["a.scriptureRef",{"href":"/scriptures/nt/john/8.32"},["span.padWord","John"],"8:32"],";"],["li","life eternal, that they might",["i","know"],"thee the only true God:",["a.scriptureRef",{"href":"/scriptures/nt/john/17.3"},["span.padWord","John"],"17:3"],";"],["li","we know that his",["i","testimony"],"is true:",["a.scriptureRef",{"href":"/scriptures/nt/john/21.24"},["span.padWord","John"],"21:24"],";"],["li","gave",["i","testimony"],"unto the word of his grace:",["a.scriptureRef",{"href":"/scriptures/nt/acts/14.3"},"Acts 14:3"],";"],["li","they will not receive thy",["i","testimony"],"concerning me:",["a.scriptureRef",{"href":"/scriptures/nt/acts/22.18"},["span.padWord","Acts"],"22:18"],";"],["li",["i","testimony"],"of Christ was confirmed in you:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/1.6"},"1 Cor. 1:6"],";"],["li","declaring unto you the",["i","testimony"],"of God:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/2.1"},["span.padWord","1 Cor."],"2:1"],";"],["li",["i","say"],"that Jesus is the Lord, but by the Holy Ghost:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/12.3"},["span.padWord","1 Cor."],"12:3"],";"],["li",["i","testimony"],"of our conscience:",["a.scriptureRef",{"href":"/scriptures/nt/2-cor/1.12"},"2 Cor. 1:12"],";"],["li","received it … by the",["i","revelation"],"of Jesus Christ:",["a.scriptureRef",{"href":"/scriptures/nt/gal/1.12"},"Gal. 1:12"],";"],["li","our",["i","testimony"],"among you was believed:",["a.scriptureRef",{"href":"/scriptures/nt/2-thes/1.10"},"2 Thes. 1:10"],";"],["li","Be not … ashamed of the",["i","testimony"],"of our Lord:",["a.scriptureRef",{"href":"/scriptures/nt/2-tim/1.8"},"2 Tim. 1:8"],";"],["li","before his translation he had this",["i","testimony"],":",["a.scriptureRef",{"href":"/scriptures/nt/heb/11.5"},"Heb. 11:5"],";"],["li","Whosoever shall",["i","confess"],"that Jesus is the Son:",["a.scriptureRef",{"href":"/scriptures/nt/1-jn/4.15"},"1 Jn. 4:15"],";"],["li","He that believeth … hath the",["i","witness"],"in himself:",["a.scriptureRef",{"href":"/scriptures/nt/1-jn/5.10"},["span.padWord","1 Jn."],"5:10"],";"],["li","Who bare record … of the",["i","testimony"],"of Jesus Christ:",["a.scriptureRef",{"href":"/scriptures/nt/rev/1.2"},"Rev. 1:2"],";"],["li","slain … for the",["i","testimony"],"which they held:",["a.scriptureRef",{"href":"/scriptures/nt/rev/6.9"},["span.padWord","Rev."],"6:9"],";"],["li","overcame him … by the word of their",["i","testimony"],":",["a.scriptureRef",{"href":"/scriptures/nt/rev/12.11"},["span.padWord","Rev."],"12:11"],";"],["li","temple of the tabernacle of the",["i","testimony"],":",["a.scriptureRef",{"href":"/scriptures/nt/rev/15.5"},["span.padWord","Rev."],"15:5"],";"],["li",["i","testimony"],"of Jesus is the spirit of prophecy:",["a.scriptureRef",{"href":"/scriptures/nt/rev/19.10"},["span.padWord","Rev."],"19:10"],";"]]],["div",{"id":"f4","uri":"/scriptures/tg/testimony.f4","order":".000.10843"},["ul.index",["li","saw my Redeemer, even as I have",["i","seen"],"him:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/11.2"},"2 Ne. 11:2"],";"],["li","spoken shall stand as a",["i","testimony"],":",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/25.28"},["span.padWord","2 Ne."],"25:28"],";"],["li",["i","testimony"],"of two nations is a witness:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/29.8"},["span.padWord","2 Ne."],"29:8"],";"],["li","know that we",["i","knew"],"of Christ:",["a.scriptureRef",{"href":"/scriptures/bofm/jacob/4.4"},"Jacob 4:4"],";"],["li","stand as a",["i","testimony"],"against you:",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/17.10"},"Mosiah 17:10"],";"],["li","stand as",["i","witnesses"],"of God at all times:",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/18.9"},["span.padWord","Mosiah"],"18:9"],";"],["li","bearing down in pure",["i","testimony"],"against them:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/4.19"},"Alma 4:19"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/alma/4.20"},["span.padWord","Alma"],"4:20"],"; )"],["li","according to the",["i","testimony"],"of Jesus Christ:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/6.8"},["span.padWord","Alma"],"6:8"],";"],["li","this is the",["i","testimony"],"which is in me:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/7.13"},["span.padWord","Alma"],"7:13"],";"],["li","ye also have all things as a",["i","testimony"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/30.41"},["span.padWord","Alma"],"30:41"],";"],["li","whosoever shall believe … unto him will I",["i","confirm"],"all:",["a.scriptureRef",{"href":"/scriptures/bofm/morm/9.25"},"Morm. 9:25"],";"],["li","because of my Spirit he shall",["i","know"],"… things are true:",["a.scriptureRef",{"href":"/scriptures/bofm/ether/4.11"},"Ether 4:11"],";"],["li","no",["i","witness"],"until after the trial of your faith:",["a.scriptureRef",{"href":"/scriptures/bofm/ether/12.6"},["span.padWord","Ether"],"12:6"],";"],["li",["i","confesses"],"by the power of the Holy Ghost that Jesus:",["a.scriptureRef",{"href":"/scriptures/bofm/moro/7.44"},"Moro. 7:44"],";"],["li",["i","know"],"that he is, by the power of the Holy Ghost:",["a.scriptureRef",{"href":"/scriptures/bofm/moro/10.7"},["span.padWord","Moro."],"10:7"],";"]]],["div",{"id":"f5","uri":"/scriptures/tg/testimony.f5","order":".000.10844"},["ul.index",["li","this",["i","testimony"],"shall come to the knowledge of the Lamanites:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/3.18"},"D&C 3:18"],";"],["li","my words … shall be established by the",["i","testimony"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/6.31"},["span.padWord","D&C"],"6:31"],";"],["li","receive a",["i","knowledge"],"of whatsoever … you shall ask:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/8.1"},["span.padWord","D&C"],"8:1"],";"],["li","study it out … if it is right …",["i","burn"],"within you:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/9.8"},["span.padWord","D&C"],"9:8"],";"],["li","Satan thinketh to overpower your",["i","testimony"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/10.33"},["span.padWord","D&C"],"10:33"],";"],["li","ask, thou shalt receive revelation …",["i","knowledge"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/42.61"},["span.padWord","D&C"],"42:61"],";"],["li","given by the Holy Ghost to",["i","know"],"that Jesus:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/46.13"},["span.padWord","D&C"],"46:13"],";"],["li","hearts might be prepared to bear",["i","testimony"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/58.6"},["span.padWord","D&C"],"58:6"],";"],["li",["i","testimony"],"might go forth from Zion:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/58.13"},["span.padWord","D&C"],"58:13"],";"],["li",["i","testimony"],"which ye have borne is recorded:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/62.3"},["span.padWord","D&C"],"62:3"],";"],["li","Lord, give unto you a",["i","testimony"],"of the truth:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/67.4"},["span.padWord","D&C"],"67:4"],";"],["li","this is the",["i","testimony"],"… which we give of him:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/76.22"},["span.padWord","D&C"],"76:22"],";"],["li","this is the",["i","testimony"],"of the gospel of Christ:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/76.50"},["span.padWord","D&C"],"76:50"],";"],["li","received not the",["i","testimony"],"of Jesus in the flesh:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/76.74"},["span.padWord","D&C"],"76:74"],";"],["li","not valiant in the",["i","testimony"],"of Jesus:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/76.79"},["span.padWord","D&C"],"76:79"],";"],["li",["i","testimony"],"may go from you into all the world:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/84.62"},["span.padWord","D&C"],"84:62"],";"],["li","after your",["i","testimony"],"cometh wrath:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.88"},["span.padWord","D&C"],"88:88"],";"],["li","give unto him power to be mighty in",["i","testimony"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/100.10"},["span.padWord","D&C"],"100:10"],";"],["li","Put upon thy servants the",["i","testimony"],"of the covenant:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/109.38"},["span.padWord","D&C"],"109:38"],";"],["li","love which he has to my",["i","testimony"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/124.20"},["span.padWord","D&C"],"124:20"],";"],["li","testators are now dead, and their",["i","testament"],"is in force:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/135.5"},["span.padWord","D&C"],"135:5"],";"],["li","he should seal his",["i","testimony"],"with his blood:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/136.39"},["span.padWord","D&C"],"136:39"],";"],["li","who had been faithful in the",["i","testimony"],"of Jesus:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/138.12"},["span.padWord","D&C"],"138:12"],";"],["li","I bear",["i","record"],", and … this record is true:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/138.60"},["span.padWord","D&C"],"138:60"],";"]]],["div",{"id":"f6","uri":"/scriptures/tg/testimony.f6","order":".000.10845"},["ul.index",["li","Enoch beheld angels … bearing",["i","testimony"],"of the Father:",["a.scriptureRef",{"href":"/scriptures/pgp/moses/7.27"},"Moses 7:27"],";"],["li","truth … to bear",["i","testimony"],"of mine Only Begotten:",["a.scriptureRef",{"href":"/scriptures/pgp/moses/7.62"},["span.padWord","Moses"],"7:62"],";"],["li","I had found the",["i","testimony"],"of James to be true:",["a.scriptureRef",{"href":"/scriptures/pgp/js-h/1.26"},"JS—H 1:26"],";"]]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/1.34"},"D&C 1:34"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/89.19"},["span.padWord","D&C"],"89:19"]]]],"refs":null}
