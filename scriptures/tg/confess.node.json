{"id":582,"parent_id":0,"book_id":7,"content_id":1,"language_id":1,"display_order":582,"title":"Confess","subtitle":"","short_title":"Confess","uri":"/scriptures/tg/confess","content":[["div",{"id":"t1","uri":"/scriptures/tg/confess.t1","order":".000.1752"},[".title",["b","Confess"]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/tg/acknowledge"},"Acknowledge"],";",["a.scriptureRef",{"href":"/scriptures/tg/confession"},"Confession"]],["div",{"id":"f2","uri":"/scriptures/tg/confess.f2","order":".000.1753"},["ul.index",["li","Whosoever therefore shall",["i","confess"],"me before men, him will I",["i","confess"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/10.32"},"Matt. 10:32"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/luke/12.8"},"Luke 12:8"],"; )"],["li","he",["i","confessed"],"… I am not the Christ:",["a.scriptureRef",{"href":"/scriptures/nt/john/1.20"},"John 1:20"],";"],["li","if any man did",["i","confess"],"that he was Christ:",["a.scriptureRef",{"href":"/scriptures/nt/john/9.22"},["span.padWord","John"],"9:22"],";"],["li","because of the Pharisees they did not",["i","confess"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/12.42"},["span.padWord","John"],"12:42"],";"],["li","many that believed came, and",["i","confessed"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/19.18"},"Acts 19:18"],";"],["li",["i","confess"],"with thy mouth the Lord … thou shalt be saved:",["a.scriptureRef",{"href":"/scriptures/nt/rom/10.9"},"Rom. 10:9"],";"],["li","every knee shall bow to me, and every tongue shall",["i","confess"],"to God:",["a.scriptureRef",{"href":"/scriptures/nt/rom/14.11"},["span.padWord","Rom."],"14:11"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/isa/45.23"},"Isa. 45:23"],";",["a.scriptureRef",{"href":"/scriptures/nt/philip/2.10-11"},"Philip. 2:10–11"],";",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/27.31"},"Mosiah 27:31"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/76.110"},"D&C 76:110"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.104"},["span.padWord","D&C"],"88:104"],"; )"],["li","I will",["i","confess"],"to thee among the Gentiles:",["a.scriptureRef",{"href":"/scriptures/nt/rom/15.9"},["span.padWord","Rom."],"15:9"],";"],["li","Every spirit that",["i","confesseth"],"that Jesus Christ is come in the flesh is of God:",["a.scriptureRef",{"href":"/scriptures/nt/1-jn/4.2"},"1 Jn. 4:2"],";"],["li",["i","confess"],"that Jesus is the Son of God:",["a.scriptureRef",{"href":"/scriptures/nt/1-jn/4.15"},["span.padWord","1 Jn."],"4:15"],";"],["li","deceivers … who",["i","confess"],"not that Jesus Christ is come in the flesh:",["a.scriptureRef",{"href":"/scriptures/nt/2-jn/1.7"},"2 Jn. 1:7"],";"],["li","I will",["i","confess"],"his name before my Father:",["a.scriptureRef",{"href":"/scriptures/nt/rev/3.5"},"Rev. 3:5"],";"]]],["div",{"id":"f3","uri":"/scriptures/tg/confess.f3","order":".000.1754"},["ul.index",["li","call on his name and",["i","confess"],"their sins:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/17.4"},"Alma 17:4"],";"],["li",["i","confesses"],"by the power of the Holy Ghost that Jesus is the Christ:",["a.scriptureRef",{"href":"/scriptures/bofm/moro/7.44"},"Moro. 7:44"],";"]]],["div",{"id":"f4","uri":"/scriptures/tg/confess.f4","order":".000.1755"},["ul.index",["li","offend God … those who",["i","confess"],"not his hand:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/59.21"},"D&C 59:21"],";"]]]]],"refs":null}
