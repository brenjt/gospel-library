{"id":1932,"parent_id":0,"book_id":7,"content_id":1,"language_id":1,"display_order":1932,"title":"Martyrdom","subtitle":"","short_title":"Martyrdom","uri":"/scriptures/tg/martyrdom","content":[["div",{"id":"t1","uri":"/scriptures/tg/martyrdom.t1","order":".000.6484"},[".title",["b","Martyrdom"]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/tg/testimony"},"Testimony"]],["div",{"id":"f2","uri":"/scriptures/tg/martyrdom.f2","order":".000.6485"},["ul.index",["li","rose up against Abel his brother, and",["i","slew"],"him:",["a.scriptureRef",{"href":"/scriptures/ot/gen/4.8"},"Gen. 4:8"],"; (",["a.scriptureRef",{"href":"/scriptures/pgp/moses/5.32"},"Moses 5:32"],"; )"],["li","Jezebel",["i","slew"],"the prophets of the Lord:",["a.scriptureRef",{"href":"/scriptures/ot/1-kgs/18.13"},"1 Kgs. 18:13"],";"],["li","conspired against him, and",["i","stoned"],"him:",["a.scriptureRef",{"href":"/scriptures/ot/2-chr/24.21"},"2 Chr. 24:21"],";"],["li","he hath poured out his soul unto",["i","death"],":",["a.scriptureRef",{"href":"/scriptures/ot/isa/53.12"},"Isa. 53:12"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/14.12"},"Mosiah 14:12"],"; )"]]],["div",{"id":"f3","uri":"/scriptures/tg/martyrdom.f3","order":".000.6486"},["ul.index",["li","loseth his",["i","life"],"for my sake shall find it:",["a.scriptureRef",{"href":"/scriptures/nt/matt/10.39"},"Matt. 10:39"],";"],["li","deliver him to the Gentiles … to",["i","crucify"],"him:",["a.scriptureRef",{"href":"/scriptures/nt/matt/20.19"},["span.padWord","Matt."],"20:19"],";"],["li","children of them which",["i","killed"],"the prophets:",["a.scriptureRef",{"href":"/scriptures/nt/matt/23.31"},["span.padWord","Matt."],"23:31"],";"],["li","all the righteous",["i","blood"],"shed upon the earth:",["a.scriptureRef",{"href":"/scriptures/nt/matt/23.35"},["span.padWord","Matt."],"23:35"],";"],["li","deliver you up … and shall",["i","kill"],"you:",["a.scriptureRef",{"href":"/scriptures/nt/matt/24.9"},["span.padWord","Matt."],"24:9"],";"],["li","Son of man is betrayed to be",["i","crucified"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/26.2"},["span.padWord","Matt."],"26:2"],";"],["li","give me … the head of",["i","John"],"the Baptist:",["a.scriptureRef",{"href":"/scriptures/nt/mark/6.25"},"Mark 6:25"],";"],["li","whosoever shall lose his",["i","life"],"for my sake:",["a.scriptureRef",{"href":"/scriptures/nt/mark/8.35"},["span.padWord","Mark"],"8:35"],";"],["li",["i","blood"],"of all the prophets, which was shed:",["a.scriptureRef",{"href":"/scriptures/nt/luke/11.50"},"Luke 11:50"],";"],["li","I lay down my",["i","life"],"for the sheep:",["a.scriptureRef",{"href":"/scriptures/nt/john/10.15"},"John 10:15"],";"],["li","a man lay down his",["i","life"],"for his friends:",["a.scriptureRef",{"href":"/scriptures/nt/john/15.13"},["span.padWord","John"],"15:13"],";"],["li","they stoned",["i","Stephen"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/7.59"},"Acts 7:59"],";"],["li","killed",["i","James"],"the brother of John:",["a.scriptureRef",{"href":"/scriptures/nt/acts/12.2"},["span.padWord","Acts"],"12:2"],";"],["li","blood of thy",["i","martyr"],"Stephen was shed:",["a.scriptureRef",{"href":"/scriptures/nt/acts/22.20"},["span.padWord","Acts"],"22:20"],";"],["li","when they were put to",["i","death"],", I gave my voice:",["a.scriptureRef",{"href":"/scriptures/nt/acts/26.10"},["span.padWord","Acts"],"26:10"],";"],["li","they have",["i","killed"],"thy prophets:",["a.scriptureRef",{"href":"/scriptures/nt/rom/11.3"},"Rom. 11:3"],";"],["li","delivered unto",["i","death"],"for Jesus’ sake:",["a.scriptureRef",{"href":"/scriptures/nt/2-cor/4.11"},"2 Cor. 4:11"],";"],["li",["i","killed"],"the Lord Jesus, and their own prophets:",["a.scriptureRef",{"href":"/scriptures/nt/1-thes/2.15"},"1 Thes. 2:15"],";"],["li","where a testament is …",["i","death"],"of the testator:",["a.scriptureRef",{"href":"/scriptures/nt/heb/9.16"},"Heb. 9:16"],";"],["li","They were",["i","stoned"],", they were sawn a