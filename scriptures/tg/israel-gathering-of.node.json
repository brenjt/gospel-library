m:",["a.scriptureRef",{"href":"/scriptures/ot/jer/3.17"},"Jer. 3:17"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/ezek/22.19"},"Ezek. 22:19"],"; )"],["li","have compassion … and will",["i","bring"],"them:",["a.scriptureRef",{"href":"/scriptures/ot/jer/12.15"},["span.padWord","Jer."],"12:15"],";"],["li",["i","brought"],"… Israel from … all the lands:",["a.scriptureRef",{"href":"/scriptures/ot/jer/16.15"},["span.padWord","Jer."],"16:15"],";"],["li","I will cause them to",["i","return"],"to the land:",["a.scriptureRef",{"href":"/scriptures/ot/jer/30.3"},["span.padWord","Jer."],"30:3"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/22.12"},"1 Ne. 22:12"],";",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/6.11"},"2 Ne. 6:11"],";",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/9.2"},["span.padWord","2 Ne."],"9:2"],"; )"],["li","He that scattered Israel will",["i","gather"],"him:",["a.scriptureRef",{"href":"/scriptures/ot/jer/31.10"},["span.padWord","Jer."],"31:10"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/101.13"},"D&C 101:13"],"; )"],["li","children of Israel shall",["i","come"],":",["a.scriptureRef",{"href":"/scriptures/ot/jer/50.4"},["span.padWord","Jer."],"50:4"],";"],["li","I will",["i","bring"],"Israel again to his habitation:",["a.scriptureRef",{"href":"/scriptures/ot/jer/50.19"},["span.padWord","Jer."],"50:19"],";"],["li","I will even",["i","gather"],"you from the people:",["a.scriptureRef",{"href":"/scriptures/ot/ezek/11.17"},"Ezek. 11:17"],";"],["li",["i","gathered"],"the house of Israel from the people:",["a.scriptureRef",{"href":"/scriptures/ot/ezek/28.25"},["span.padWord","Ezek."],"28:25"],";"],["li","As a shepherd … so will I",["i","seek"],"out my sheep:",["a.scriptureRef",{"href":"/scriptures/ot/ezek/34.12"},["span.padWord","Ezek."],"34:12"],";"],["li",["i","bring"],"you into the land of Israel:",["a.scriptureRef",{"href":"/scriptures/ot/ezek/37.12"},["span.padWord","Ezek."],"37:12"],";"],["li","will",["i","gather"],"them