mmunication"],"."],["div",{"id":"19a","uri":"/scriptures/nt/1-tim/6.19a","order":"03.17.006.22627"},["b","19a"],["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/14.3"},"D&C 14:3"],"."],["div",{"id":"19b","uri":"/scriptures/nt/1-tim/6.19b","order":"03.17.006.22629"},["b","19b"],["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/4.4"},"D&C 4:4"],"."],["div",{"id":"19c","uri":"/scriptures/nt/1-tim/6.19c","order":"03.17.006.22631"},["b","19c"],["span.small","GR"],"for the future."],["div",{"id":"19d","uri":"/scriptures/nt/1-tim/6.19d","order":"03.17.006.22633"},["b","19d"],["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/11.3"},"D&C 11:3"],"."],["div",{"id":"20a","uri":"/scriptures/nt/1-tim/6.20a","order":"03.17.006.22635"},["b","20a"],["a.scriptureRef",{"href":"/scriptures/tg/trustworthiness"},"TG Trustworthiness"],"."],["div",{"id":"20b","uri":"/scriptures/nt/1-tim/6.20b","order":"03.17.006.22637"},["b","20b"],["span.small","GR"],"disputations of what is falsely called knowledge.",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/26.20"},"2 Ne. 26:20"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/1.19"},"D&C 1:19"],"."]]}
