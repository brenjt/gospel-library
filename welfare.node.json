the seven years of famine:",["a.scriptureRef",{"href":"/scriptures/ot/gen/41.36"},"Gen. 41:36"],";"],["li","he asked them of their",["i","welfare"],":",["a.scriptureRef",{"href":"/scriptures/ot/gen/43.27"},["span.padWord","Gen."],"43:27"],";"],["li","Egyptians … said, Give us",["i","bread"],"… for the money faileth:",["a.scriptureRef",{"href":"/scriptures/ot/gen/47.15"},["span.padWord","Gen."],"47:15"],";"],["li","that the",["i","poor"],"of thy people may eat:",["a.scriptureRef",{"href":"/scriptures/ot/ex/23.11"},"Ex. 23:11"],";"],["li","thou shalt not glean … leave them for the",["i","poor"],":",["a.scriptureRef",{"href":"/scriptures/ot/lev/19.10"},"Lev. 19:10"],"; (",["a.scriptureRef",{"href":"/scriptures/ot/lev/23.22"},["span.padWord","Lev."],"23:22"],"; )"],["li","nor shut thine hand from thy",["i","poor"],"brother:",["a.scriptureRef",{"href":"/scriptures/ot/deut/15.7"},"Deut. 15:7"],";"],["li","sheaf in the field … for the fatherless, and for the",["i","widow"],":",["a.scriptureRef",{"href":"/scriptures/ot/deut/24.19"},["span.padWord","Deut."],"24:19"],";"],["li","to seek the",["i","welfare"],"of … Israel:",["a.scriptureRef",{"href":"/scriptures/ot/neh/2.10"},"Neh. 2:10"],";"],["li","my",["i","welfare"],"passeth away as a cloud:",["a.scriptureRef",{"href":"/scriptures/ot/job/30.15"},"Job 30:15"],";"],["li","He that giveth unto the",["i","poor"],"shall not lack:",["a.scriptureRef",{"href":"/scriptures/ot/prov/28.27"},"Prov. 28:27"],";"],["li","bring the",["i","poor"],"that are cast out to thy house:",["a.scriptureRef",{"href":"/scriptures/ot/isa/58.7"},"Isa. 58:7"],";"],["li","this man seeketh not the",["i","welfare"],"of this people:",["a.scriptureRef",{"href":"/scriptures/ot/jer/38.4"},"Jer. 38:4"],";"],["li","Bring ye all the",["i","tithes"],"into the storehouse:",["a.scriptureRef",{"href":"/scriptures/ot/mal/3.10"},"Mal. 3:10"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/24.10"},"3 Ne. 24:10"],"; )"]]],["div",{"id":"f3","uri":"/scriptures/tg/welfare.f3","order":".000.11913"},["ul.index",["li","That thine",["i","alms"],"may be in secret:",["a.scriptureRef",{"href":"/scriptures/nt/matt/6.4"},"Matt. 6:4"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/13.4"},"3 Ne. 13:4"],"; )"],["li","done it unto one of the least of these my",["i","brethren"],", ye have done it unto me:",["a.scriptureRef",{"href":"/scriptures/nt/matt/25.40"},["span.padWord","Matt."],"25:40"],";"],["li","brought him to an inn, and took",["i","care"],"of him:",["a.scriptureRef",{"href":"/scriptures/nt/luke/10.34"},"Luke 10:34"],";"],["li","sold their",["i","possessions"],"… parted them to all men, as every man had need:",["a.scriptureRef",{"href":"/scriptures/nt/acts/2.45"},"Acts 2:45"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/acts/4.35"},["span.padWord","Acts"],"4:35"],"; )"],["li","brought a certain",["i","part"],", and laid it at the apostles’ feet:",["a.scriptureRef",{"href":"/scriptures/nt/acts/5.2"},["span.padWord","Acts"],"5:2"],";"],["li","their widows were",["i","neglected"],"in the daily ministration:",["a.scriptureRef",{"href":"/scriptures/nt/acts/6.1"},["span.padWord","Acts"],"6:1"],";"],["li","send",["i","relief"],"unto the brethren which dwelt in Judæa:",["a.scriptureRef",{"href":"/scriptures/nt/acts/11.29"},["span.padWord","Acts"],"11:29"],";"],["li",["i","contribution"],"for the poor saints:",["a.scriptureRef",{"href":"/scriptures/nt/rom/15.26"},"Rom. 15:26"],";"],["li","bestow all my goods to feed the",["i","poor"],"… and have not charity:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/13.3"},"1 Cor. 13:3"],";"],["li","any … that believeth have widows, let them",["i","relieve"],"them:",["a.scriptureRef",{"href":"/scriptures/nt/1-tim/5.16"},"1 Tim. 5:16"],";"],["li",["i","visit"],"the fatherless and widows in their affliction:",["a.scriptureRef",{"href":"/scriptures/nt/james/1.27"},"James 1:27"],";"],["li","having",["i","compassion"],"one of another:",["a.scriptureRef",{"href":"/scriptures/nt/1-pet/3.8"},"1 Pet. 3:8"],";"]]],["div",{"id":"f4","uri":"/scriptures/tg/welfare.f4","order":".000.11914"},["ul.index",["li","he hath sought … your own eternal",["i","welfare"],":",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/1.25"},"2 Ne. 1:25"],";"],["li","I have none other object save it be the everlasting",["i","welfare"],"of your souls:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/2.30"},["span.padWord","2 Ne."],"2:30"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/jacob/2.3"},"Jacob 2:3"],";",["a.scriptureRef",{"href":"/scriptures/bofm/moro/6.5"},"Moro. 6:5"],"; )"],["li","desirous for the",["i","welfare"],"of your souls:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/6.3"},["span.padWord","2 Ne."],"6:3"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/enos/1.9"},"Enos 1:9"],"; )"],["li","they seek not the",["i","welfare"],"of Zion:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/26.29"},["span.padWord","2 Ne."],"26:29"],";"],["li","thy performance may be for the",["i","welfare"],"of thy soul:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/32.9"},["span.padWord","2 Ne."],"32:9"],";"],["li","Nephi … having labored in all his days for their",["i","welfare"],":",["a.scriptureRef",{"href":"/scriptures/bofm/jacob/1.10"},"Jacob 1:10"],";"],["li","anxiety for the",["i","welfare"],"of your souls:",["a.scriptureRef",{"href":"/scriptures/bofm/jacob/2.3"},["span.padWord","Jacob"],"2:3"],";"],["li","free with your",["i","substance"],", that they may be rich:",["a.scriptureRef",{"href":"/scriptures/bofm/jacob/2.17"},["span.padWord","Jacob"],"2:17"],";"],["li","feel a desire for the",["i","welfare"],"of my brethren:",["a.scriptureRef",{"href":"/scriptures/bofm/enos/1.9"},"Enos 1:9"],";"],["li","administer of your",["i","substance"],"unto him that standeth in need:",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/4.16"},"Mosiah 4:16"],";"],["li",["i","imparting"],"to one another both temporally and spiritually:",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/18.29"},["span.padWord","Mosiah"],"18:29"],";"],["li","filled with pain and anguish for the",["i","welfare"],"of their souls:",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/25.11"},["span.padWord","Mosiah"],"25:11"],";"],["li","fasting and mighty prayer in behalf of the",["i","welfare"],"of the souls of those who knew not God:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/6.6"},"Alma 6:6"],";"],["li","prayer … for your",["i","welfare"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/34.27"},["span.padWord","Alma"],"34:27"],";"],["li","impart of your",["i","substance"],", if ye have:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/34.28"},["span.padWord","Alma"],"34:28"],";"],["li","labor … for the",["i","welfare"],"… of his people:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/48.12"},["span.padWord","Alma"],"48:12"],";"],["li","doing all things for the",["i","welfare"],"and happiness of his people:",["a.scriptureRef",{"href":"/scriptures/bofm/hel/12.2"},"Hel. 12:2"],";"],["li","had all things",["i","common"],"among them:",["a.scriptureRef",{"href":"/scriptures/bofm/4-ne/1.3"},"4 Ne. 1:3"],";"],["li","an eye single to his glory, or the",["i","welfare"],"of the … long dispersed covenant people:",["a.scriptureRef",{"href":"/scriptures/bofm/morm/8.15"},"Morm. 8:15"],";"]]],["div",{"id":"f5","uri":"/scriptures/tg/welfare.f5","order":".000.11915"},["ul.index",["li","they shall … administer to their",["i","relief"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/38.35"},"D&C 38:35"],";"],["li",["i","consecrate"],"of thy properties for their support:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/42.30"},["span.padWord","D&C"],"42:30"],";"],["li",["i","idle"],"shall not eat the bread … of the laborer:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/42.42"},["span.padWord","D&C"],"42:42"],";"],["li","visit the poor and the",["i","needy"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/44.6"},["span.padWord","D&C"],"44:6"],";"],["li","let the bishop appoint a",["i","storehouse"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/51.13"},["span.padWord","D&C"],"51:13"],";"],["li","remember in all things the poor and the",["i","needy"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/52.40"},["span.padWord","D&C"],"52:40"],";"],["li","whose eyes are full of greediness, and who will not",["i","labor"],"with your own hands:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/56.17"},["span.padWord","D&C"],"56:17"],";"],["li","keep the Lord’s",["i","storehouse"],"; to receive the funds:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/72.10"},["span.padWord","D&C"],"72:10"],";"],["li","they have claim upon … Lord’s",["i","storehouse"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/83.5"},["span.padWord","D&C"],"83:5"],";"],["li","needs be done in mine",["i","own way"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/104.16"},["span.padWord","D&C"],"104:16"],";"]]],["div",{"id":"f6","uri":"/scriptures/tg/welfare.f6","order":".000.11916"},["ul.index",["li","Zion … no",["i","poor"],"among them:",["a.scriptureRef",{"href":"/scriptures/pgp/moses/7.18"},"Moses 7:18"],";"]]]]],"refs":null}
