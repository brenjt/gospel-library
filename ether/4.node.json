/2-ne/27.22"},"2 Ne. 27:22"],"."],["div",{"id":"7e","uri":"/scriptures/bofm/ether/4.7e","order":"05.25.004.25086"},["b","7e"],["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/3.8"},"Mosiah 3:8"],"."],["div",{"id":"8a","uri":"/scriptures/bofm/ether/4.8a","order":"05.25.004.25088"},["b","8a"],["a.scriptureRef",{"href":"/scriptures/ot/job/9.3.1-4"},"Job 9:3 (1–4)"],";",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/29.5.1-9"},"3 Ne. 29:5 (1–9)"],";",["a.scriptureRef",{"href":"/scriptures/bofm/morm/8.17"},"Morm. 8:17"],"."],["div",{"id":"8b","uri":"/scriptures/bofm/ether/4.8b","order":"05.25.004.25090"},["b","8b"],["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/27.14"},"2 Ne. 27:14"],";",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/28.29.29-31"},"28:29 (29–31)"],";",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/28.34"},"3 Ne. 28:34"],"."],["div",{"id":"8c","uri":"/scriptures/bofm/ether/4.8c","order":"05.25.004.25092"},["b","8c"],["a.scriptureRef",{"href":"/scriptures/bofm/alma/12.10.10-11"},"Alma 12:10 (10–11)"],";",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/26.10.9-10"},"3 Ne. 26:10 (9–10)"],"."],["div",{"id":"9a","uri":"/scriptures/bofm/ether/4.9a","order":"05.25.004.25094"},["b","9a"],["a.scriptureRef",{"href":"/scriptures/ot/1-kgs/8.35"},"1 Kgs. 8:35"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/77.8"},"D&C 77:8"],"."],["div",{"id":"9b","uri":"/scriptures/bofm/ether/4.9b","order":"05.25.004.25096"},["b","9b"],["a.scriptureRef",{"href":"/scriptures/bofm/hel/12.11.8-18"},"Hel. 12:11 (8–18)"],";",["a.scriptureRef",{"href":"/scriptures/bofm/morm/5.23"},"Morm. 5:23"],"."],["div",{"id":"10a","uri":"/scriptures/bofm/ether/4.10a","order":"05.25.004.25098"},["b","10a"],["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/25.22"},"2 Ne. 25:22"],";",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/33.15.10-15"},"33:15 (10–15)"],";",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/27.25.23-27"},"3 Ne. 27:25 (23–27)"],"."],["div",{"id":"11a","uri":"/scriptures/bofm/ether/4.11a","order":"05.25.004.25100"},["b","11a"],["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/5.16"},"D&C 5:16"],"."],["div",{"id":"11b","uri":"/scriptures/bofm/ether/4.11b","order":"05.25.004.25102"},["b","11b"],["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/32.5"},"2 Ne. 32:5"],";",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/16.6"},"3 Ne. 16:6"],"."],["div",{"id":"11c","uri":"/scriptures/bofm/ether/4.11c","order":"05.25.004.25104"},["b","11c"],["a.scriptureRef",{"href":"/scriptures/tg/testimony"},"TG Testimony"],"."],["div",{"id":"11d","uri":"/scriptures/bofm/ether/4.11d","order":"05.25.004.25106"},["b","11d"],["a.scriptureRef",{"href":"/scriptures/bofm/alma/3.12"},"Alma 3:12"],";",["a.scriptureRef",{"href":"/scriptures/bofm/ether/5.3.1-4"},"Ether 5:3 (1–4)"],";",["a.scriptureRef",{"href":"/scriptures/bofm/moro/10.4.1-5"},"Moro. 10:4 (1–5)"],"."],["div",{"id":"12a","uri":"/scriptures/bofm/ether/4.12a","order":"05.25.004.25108"},["b","12a"],["a.scriptureRef",{"href":"/scriptures/bofm/omni/1.25"},"Omni 1:25"],";",["a.scriptureRef",{"href":"/scriptures/bofm/alma/5.40"},"Alma 5:40"],";",["a.scriptureRef",{"href":"/scriptures/bofm/moro/7.16.12-17"},"Moro. 7:16 (12–17)"],"."],["div",{"id":"12b","uri":"/scriptures/bofm/ether/4.12b","order":"05.25.004.25110"},["b","12b"],["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/11.35"},"3 Ne. 11:35"],";",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/28.34"},"28:34"],"."],["div",{"id":"12c","uri":"/scriptures/bofm/ether/4.12c","order":"05.25.004.25112"},["b","12c"],["a.scriptureRef",{"href":"/scriptures/tg/jesus-christ-light-of-the-world"},"TG Jesus Christ, Light of the World"],"."],["div",{"id":"12d","uri":"/scriptures/bofm/ether/4.12d","order":"05.25.004.25114"},["b","12d"],["a.scriptureRef",{"href":"/scriptures/nt/col/3.4"},"Col. 3:4"],"."],["div",{"id":"12e","uri":"/scriptures/bofm/ether/4.12e","order":"05.25.004.25116"},["b","12e"],["a.scriptureRef",{"href":"/scriptures/bofm/alma/38.9"},"Alma 38:9"],"."],["div",{"id":"13a","uri":"/scriptures/bofm/ether/4.13a","order":"05.25.004.25118"},["b","13a"],["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/12.2.2-3"},"3 Ne. 12:2 (2–3)"],"."],["div",{"id":"14a","uri":"/scriptures/bofm/ether/4.14a","order":"05.25.004.25120"},["b","14a"],["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/121.26.26-29"},"D&C 121:26 (26–29)"],"."],["div",{"id":"15a","uri":"/scriptures/bofm/ether/4.15a","order":"05.25.004.25122"},["b","15a"],["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/27.10"},"2 Ne. 27:10"],"."],["div",{"id":"15b","uri":"/scriptures/bofm/ether/4.15b","order":"05.25.004.25124"},["b","15b"],["a.scriptureRef",{"href":"/scriptures/ot/gen/4.26"},"Gen. 4:26"],";",["a.scriptureRef",{"href":"/scriptures/bofm/moro/2.2"},"Moro. 2:2"],"."],["div",{"id":"16a","uri":"/scriptures/bofm/ether/4.16a","order":"05.25.004.25126"},["b","16a"],["a.scriptureRef",{"href":"/scriptures/nt/rev/1.1"},"Rev. 1:1"],";",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/14.23.18-27"},"1 Ne. 14:23 (18–27)"],"."],["div",{"id":"17a","uri":"/scriptures/bofm/ether/4.17a","order":"05.25.004.25128"},["b","17a"],["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/21.2.1-11,28"},"3 Ne. 21:2 (1–11, 28)"],"."],["div",{"id":"18a","uri":"/scriptures/bofm/ether/4.18a","order":"05.25.004.25130"},["b","18a"],["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/27.20"},"3 Ne. 27:20"],";",["a.scriptureRef",{"href":"/scriptures/bofm/moro/7.34"},"Moro. 7:34"],"."],["div",{"id":"18b","uri":"/scriptures/bofm/ether/4.18b","order":"05.25.004.25132"},["b","18b"],["a.scriptureRef",{"href":"/scriptures/nt/john/3.5.3-5"},"John 3:5 (3–5)"],".",["a.scriptureRef",{"href":"/scriptures/tg/baptism-essential"},"TG Baptism, Essential"],"."],["div",{"id":"18c","uri":"/scriptures/bofm/ether/4.18c","order":"05.25.004.25134"},["b","18c"],["a.scriptureRef",{"href":"/scriptures/tg/holy-ghost-gifts-of"},"TG Holy Ghost, Gifts of"],"."],["div",{"id":"19a","uri":"/scriptures/bofm/ether/4.19a","order":"05.25.004.25136"},["b","19a"],["a.scriptureRef",{"href":"/scriptures/ot/ps/31.23"},"Ps. 31:23"],";",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/2.41"},"Mosiah 2:41"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/6.13"},"D&C 6:13"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/63.47"},"63:47"],".",["a.scriptureRef",{"href":"/scriptures/tg/jesus-christ-taking-the-name-of"},"TG Jesus Christ, Taking the Name of"],"."],["div",{"id":"19b","uri":"/scriptures/bofm/ether/4.19b","order":"05.25.004.25138"},["b","19b"],["a.scriptureRef",{"href":"/scriptures/bofm/morm/2.19"},"Morm. 2:19"],"."],["div",{"id":"19c","uri":"/scriptures/bofm/ether/4.19c","order":"05.25.004.25140"},["b","19c"],["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/9.18"},"2 Ne. 9:18"],";",["a.scriptureRef",{"href":"/scriptures/bofm/alma/42.26"},"Alma 42:26"],";",["a.scriptureRef",{"href":"/scriptures/bofm/ether/3.14"},"Ether 3:14"],"."]]}
