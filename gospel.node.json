{"id":1305,"parent_id":0,"book_id":7,"content_id":1,"language_id":1,"display_order":1305,"title":"Gospel","subtitle":"","short_title":"Gospel","uri":"/scriptures/tg/gospel","content":[["div",{"id":"t1","uri":"/scriptures/tg/gospel.t1","order":".000.4209"},[".title",["b","Gospel"]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/tg/education"},"Education"],";",["a.scriptureRef",{"href":"/scriptures/tg/ensign"},"Ensign"],";",["a.scriptureRef",{"href":"/scriptures/tg/new-and-everlasting-covenant"},"New and Everlasting Covenant"],";",["a.scriptureRef",{"href":"/scriptures/tg/restoration-of-the-gospel"},"Restoration of the Gospel"],";",["a.scriptureRef",{"href":"/scriptures/tg/salvation"},"Salvation"],";",["a.scriptureRef",{"href":"/scriptures/tg/salvation-plan-of"},"Salvation, Plan of"],";",["a.scriptureRef",{"href":"/scriptures/tg/truth"},"Truth"],";",["a.scriptureRef",{"href":"/scriptures/tg/word"},"Word"],";",["a.scriptureRef",{"href":"/scriptures/bd/gospels"},"BD Gospels"]],["div",{"id":"f2","uri":"/scriptures/tg/gospel.f2","order":".000.4210"},["ul.index",["li","O Zion, that bringest",["i","good tidings"],":",["a.scriptureRef",{"href":"/scriptures/ot/isa/40.9"},"Isa. 40:9"],";"],["li","How beautiful upon the mountains are the feet of him that bringeth",["i","good tidings"],":",["a.scriptureRef",{"href":"/scriptures/ot/isa/52.7"},["span.padWord","Isa."],"52:7"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/128.19"},"D&C 128:19"],"; )"],["li","Lord hath anointed me to preach",["i","good tidings"],":",["a.scriptureRef",{"href":"/scriptures/ot/isa/61.1"},["span.padWord","Isa."],"61:1"],";"]]],["div",{"id":"f3","uri":"/scriptures/tg/gospel.f3","order":".000.4211"},["ul.index",["li",["i","gospel"],"of the kingdom shall be preached:",["a.scriptureRef",{"href":"/scriptures/nt/matt/24.14"},"Matt. 24:14"],"; (",["a.scriptureRef",{"href":"/scriptures/pgp/js-m/1.31"},"JS—M 1:31"],"; )"],["li","Wheresoever this",["i","gospel"],"shall be preached:",["a.scriptureRef",{"href":"/scriptures/nt/matt/26.13"},["span.padWord","Matt."],"26:13"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/mark/14.9"},"Mark 14:9"],"; )"],["li","The beginning of the",["i","gospel"],"of Jesus Christ:",["a.scriptureRef",{"href":"/scriptures/nt/mark/1.1"},"Mark 1:1"],";"],["li","Jesus came into Galilee, preaching the",["i","gospel"],":",["a.scriptureRef",{"href":"/scriptures/nt/mark/1.14"},["span.padWord","Mark"],"1:14"],";"],["li",["i","gospel"],"must first be published among all nations:",["a.scriptureRef",{"href":"/scriptures/nt/mark/13.10"},["span.padWord","Mark"],"13:10"],";"],["li","preach the",["i","gospel"],"to every creature:",["a.scriptureRef",{"href":"/scriptures/nt/mark/16.15"},["span.padWord","Mark"],"16:15"],";"],["li","I bring you",["i","good tidings"],"of great joy:",["a.scriptureRef",{"href":"/scriptures/nt/luke/2.10"},"Luke 2:10"],";"],["li","anointed me to preach the",["i","gospel"],"to the poor:",["a.scriptureRef",{"href":"/scriptures/nt/luke/4.18"},["span.padWord","Luke"],"4:18"],";"],["li","went through the towns, preaching the",["i","gospel"],":",["a.scriptureRef",{"href":"/scriptures/nt/luke/9.6"},["span.padWord","Luke"],"9:6"],";"],["li","preached the",["i","gospel"],"in many villages:",["a.scriptureRef",{"href":"/scriptures/nt/acts/8.25"},"Acts 8:25"],";"],["li","Gentiles … should hear the word of the",["i","gospel"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/15.7"},["span.padWord","Acts"],"15:7"],";"],["li","to testify the",["i","gospel"],"of the grace of God:",["a.scriptureRef",{"href":"/scriptures/nt/acts/20.24"},["span.padWord","Acts"],"20:24"],";"],["li","I am not ashamed of the",["i","gospel"],"of Christ:",["a.scriptureRef",{"href":"/scriptures/nt/rom/1.16"},"Rom. 1:16"],";"],["li","God shall judge … according to my",["i","gospel"],":",["a.scriptureRef",{"href":"/scriptures/nt/rom/2.16"},["span.padWord","Rom."],"2:16"],";"],["li","preach the",["i","gospel"],"of peace:",["a.scriptureRef",{"href":"/scriptures/nt/rom/10.15"},["span.padWord","Rom."],"10:15"],";"],["li","I have fully preached the",["i","gospel"],":",["a.scriptureRef",{"href":"/scriptures/nt/rom/15.19"},["span.padWord","Rom."],"15:19"],";"],["li","not to baptize, but to preach the",["i","gospel"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/1.17"},"1 Cor. 1:17"],";"],["li","I have begotten you through the",["i","gospel"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/4.15"},["span.padWord","1 Cor."],"4:15"],";"],["li","they which preach the",["i","gospel"],"should live of the",["i","gospel"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/9.14"},["span.padWord","1 Cor."],"9:14"],";"],["li","though I preach the",["i","gospel"],", I have nothing to glory of:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/9.16"},["span.padWord","1 Cor."],"9:16"],";"],["li","I declare unto you the",["i","gospel"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/15.1"},["span.padWord","1 Cor."],"15:1"],";"],["li",["i","gospel"],"… hid to them that are lost:",["a.scriptureRef",{"href":"/scriptures/nt/2-cor/4.3"},"2 Cor. 4:3"],";"],["li","if ye receive another spirit … or another",["i","gospel"],":",["a.scriptureRef",{"href":"/scriptures/nt/2-cor/11.4"},["span.padWord","2 Cor."],"11:4"],";"],["li","some that … would pervert the",["i","gospel"],":",["a.scriptureRef",{"href":"/scriptures/nt/gal/1.7"},"Gal. 1:7"],";"],["li","though we … preach any other",["i","gospel"],"unto you than … we have preached:",["a.scriptureRef",{"href":"/scriptures/nt/gal/1.8"},["span.padWord","Gal."],"1:8"],";"],["li",["i","gospel"],"which was preached of me is not after man:",["a.scriptureRef",{"href":"/scriptures/nt/gal/1.11"},["span.padWord","Gal."],"1:11"],";"],["li",["i","gospel"],"of the uncircumcision:",["a.scriptureRef",{"href":"/scriptures/nt/gal/2.7"},["span.padWord","Gal."],"2:7"],";"],["li","preached before the",["i","gospel"],"unto Abraham:",["a.scriptureRef",{"href":"/scriptures/nt/gal/3.8"},["span.padWord","Gal."],"3:8"],";"],["li","word of truth, the",["i","gospel"],"of your salvation:",["a.scriptureRef",{"href":"/scriptures/nt/eph/1.13"},"Eph. 1:13"],";"],["li","shod with the preparation of the",["i","gospel"],"of peace:",["a.scriptureRef",{"href":"/scriptures/nt/eph/6.15"},["span.padWord","Eph."],"6:15"],";"],["li","make known the mystery of the",["i","gospel"],":",["a.scriptureRef",{"href":"/scriptures/nt/eph/6.19"},["span.padWord","Eph."],"6:19"],";"],["li","in the defence and confirmation of the",["i","gospel"],", ye all are partakers of my grace:",["a.scriptureRef",{"href":"/scriptures/nt/philip/1.7"},"Philip. 1:7"],";"],["li","hope … heard before in the word of the truth of the",["i","gospel"],":",["a.scriptureRef",{"href":"/scriptures/nt/col/1.5"},"Col. 1:5"],";"],["li",["i","gospel"],"came not unto you in word only:",["a.scriptureRef",{"href":"/scriptures/nt/1-thes/1.5"},"1 Thes. 1:5"],";"],["li","put in trust with the",["i","gospel"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-thes/2.4"},["span.padWord","1 Thes."],"2:4"],";"],["li","that obey not the",["i","gospel"],"of our Lord:",["a.scriptureRef",{"href":"/scriptures/nt/2-thes/1.8"},"2 Thes. 1:8"],";"],["li","called you by our",["i","gospel"],", to the obtaining of the glory:",["a.scriptureRef",{"href":"/scriptures/nt/2-thes/2.14"},["span.padWord","2 Thes."],"2:14"],";"],["li","immortality to light through the",["i","gospel"],":",["a.scriptureRef",{"href":"/scriptures/nt/2-tim/1.10"},"2 Tim. 1:10"],";"],["li","Jesus … raised from the dead according to my",["i","gospel"],":",["a.scriptureRef",{"href":"/scriptures/nt/2-tim/2.8"},["span.padWord","2 Tim."],"2:8"],";"],["li","unto us was the",["i","gospel"],"preached, as well as unto them:",["a.scriptureRef",{"href":"/scriptures/nt/heb/4.2"},"Heb. 4:2"],";"],["li",["i","gospel"],"preached also to them that are dead:",["a.scriptureRef",{"href":"/scriptures/nt/1-pet/4.6"},"1 Pet. 4:6"],";"],["li","angel … having the everlasting",["i","gospel"],"to preach:",["a.scriptureRef",{"href":"/scriptures/nt/rev/14.6"},"Rev. 14:6"],";"]]],["div",{"id":"f4","uri":"/scriptures/tg/gospel.f4","order":".000.4212"},["ul.index",["li","Gentiles had received the fulness of the",["i","Gospel"],":",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/10.14"},"1 Ne. 10:14"],";"],["li","most plain and precious parts of the",["i","gospel"],"… kept back by that abominable church:",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/13.34"},["span.padWord","1 Ne."],"13:34"],";"],["li","fulness of the",["i","gospel"],"of the Messiah:",["a.scriptureRef",{"href":"/scriptures/bofm/1-ne/15.13"},["span.padWord","1 Ne."],"15:13"],";"],["li","these are they … who have brought",["i","good tidings"],":",["a.scriptureRef",{"href":"/scriptures/bofm/mosiah/15.14"},"Mosiah 15:14"],";"],["li","this is the",["i","gospel"],"which I have given unto you:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/27.13"},"3 Ne. 27:13"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/76.40"},"D&C 76:40"],"; )"],["li","I say unto you, this is my",["i","gospel"],":",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/27.21"},["span.padWord","3 Ne."],"27:21"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/33.12"},"D&C 33:12"],";",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/39.6"},["span.padWord","D&C"],"39:6"],"; )"],["li","did preach the",["i","gospel"],"of Christ unto all people:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/28.23"},["span.padWord","3 Ne."],"28:23"],";"],["li","they who rejected the",["i","gospel"],"were called Lamanites:",["a.scriptureRef",{"href":"/scriptures/bofm/4-ne/1.38"},"4 Ne. 1:38"],";"],["li","lay hold upon the",["i","gospel"],"of Christ:",["a.scriptureRef",{"href":"/scriptures/bofm/morm/7.8"},"Morm. 7:8"],";"],["li","denieth these things knoweth not the",["i","gospel"],"of Christ:",["a.scriptureRef",{"href":"/scriptures/bofm/morm/9.8"},["span.padWord","Morm."],"9:8"],";"],["li","believe in my",["i","gospel"],", and be baptized:",["a.scriptureRef",{"href":"/scriptures/bofm/ether/4.18"},"Ether 4:18"],";"]]],["div",{"id":"f5","uri":"/scriptures/tg/gospel.f5","order":".000.4213"},["ul.index",["li","That the fulness of my",["i","gospel"],"might be proclaimed:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/1.23"},"D&C 1:23"],";"],["li","believe in this",["i","gospel"],"… have eternal life:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/10.50"},["span.padWord","D&C"],"10:50"],";"],["li","Build upon my rock, which is my",["i","gospel"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/11.24"},["span.padWord","D&C"],"11:24"],";"],["li","called … to preach my",["i","gospel"],"unto every creature:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/18.28"},["span.padWord","D&C"],"18:28"],";"],["li","contains … fulness of the",["i","gospel"],"of Jesus Christ:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/20.9"},["span.padWord","D&C"],"20:9"],";"],["li","dispensation of the",["i","gospel"],"for the last times:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/27.13"},["span.padWord","D&C"],"27:13"],";"],["li","preaching my",["i","gospel"],", two by two:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/42.6"},["span.padWord","D&C"],"42:6"],";"],["li","in the which is the fulness of the",["i","gospel"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/42.12"},["span.padWord","D&C"],"42:12"],";"],["li","a light shall break forth … fulness of my",["i","gospel"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/45.28"},["span.padWord","D&C"],"45:28"],";"],["li","this is the testimony of the",["i","gospel"],"of Christ:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/76.50"},["span.padWord","D&C"],"76:50"],";"],["li","spirits … in prison, whom the Son visited, and preached the",["i","gospel"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/76.73"},["span.padWord","D&C"],"76:73"],";"],["li","lesser priesthood … holdeth the key of … preparatory",["i","gospel"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/84.26"},["span.padWord","D&C"],"84:26"],";"],["li","committed the dispensation of the",["i","gospel"],"of Abraham:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/110.12"},["span.padWord","D&C"],"110:12"],";"],["li","made perfect without those who have died in the",["i","gospel"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/128.18"},["span.padWord","D&C"],"128:18"],";"],["li","Lord sent forth the fulness of his",["i","gospel"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/133.57"},["span.padWord","D&C"],"133:57"],";"],["li","he preached to them the everlasting",["i","gospel"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/138.19"},["span.padWord","D&C"],"138:19"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/138.25"},["span.padWord","D&C"],"138:25"],"; )"],["li","elders of this dispensation … preaching of the",["i","gospel"],"… spirits of the dead:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/138.57"},["span.padWord","D&C"],"138:57"],";"]]],["div",{"id":"f6","uri":"/scriptures/tg/gospel.f6","order":".000.4214"},["ul.index",["li",["i","Gospel"],"began to be preached, from the beginning:",["a.scriptureRef",{"href":"/scriptures/pgp/moses/5.58"},"Moses 5:58"],";"]]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/nt/acts/4.12"},"Acts 4:12"],";",["a.scriptureRef",{"href":"/scriptures/nt/heb/5.9"},"Heb. 5:9"],";",["a.scriptureRef",{"href":"/scriptures/pgp/moses/6.62"},"Moses 6:62"]]]],"refs":null}
