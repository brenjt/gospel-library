{"id":1247,"parent_id":0,"book_id":7,"content_id":1,"language_id":1,"display_order":1247,"title":"Glory","subtitle":"","short_title":"Glory","uri":"/scriptures/tg/glory","content":[["div",{"id":"t1","uri":"/scriptures/tg/glory.t1","order":".000.3962"},[".title",["b","Glory"]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/tg/celestial-glory"},"Celestial Glory"],";",["a.scriptureRef",{"href":"/scriptures/tg/earth-destiny-of"},"Earth, Destiny of"],";",["a.scriptureRef",{"href":"/scriptures/tg/earth-renewal-of"},"Earth, Renewal of"],";",["a.scriptureRef",{"href":"/scriptures/tg/eternal-life"},"Eternal Life"],";",["a.scriptureRef",{"href":"/scriptures/tg/exaltation"},"Exaltation"],";",["a.scriptureRef",{"href":"/scriptures/tg/glorify"},"Glorify"],";",["a.scriptureRef",{"href":"/scriptures/tg/glorious"},"Glorious"],";",["a.scriptureRef",{"href":"/scriptures/tg/god-glory-of"},"God, Glory of"],";",["a.scriptureRef",{"href":"/scriptures/tg/heaven"},"Heaven"],";",["a.scriptureRef",{"href":"/scriptures/tg/honor"},"Honor"],";",["a.scriptureRef",{"href":"/scriptures/tg/majesty"},"Majesty"],";",["a.scriptureRef",{"href":"/scriptures/tg/man-potential-to-become-like-heavenly-father"},"Man, Potential to Become like Heavenly Father"],";",["a.scriptureRef",{"href":"/scriptures/tg/praise"},"Praise"],";",["a.scriptureRef",{"href":"/scriptures/tg/reward"},"Reward"],";",["a.scriptureRef",{"href":"/scriptures/tg/telestial-glory"},"Telestial Glory"],";",["a.scriptureRef",{"href":"/scriptures/tg/terrestrial-glory"},"Terrestrial Glory"],";",["a.scriptureRef",{"href":"/scriptures/tg/transfiguration"},"Transfiguration"]],["div",{"id":"f2","uri":"/scriptures/tg/glory.f2","order":".000.3963"},["ul.index",["li",["i","glory"],"is departed from Israel:",["a.scriptureRef",{"href":"/scriptures/ot/1-sam/4.21"},"1 Sam. 4:21"],";"],["li","crowned him with",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/8.5"},"Ps. 8:5"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/heb/2.7"},"Heb. 2:7"],"; )"],["li","God is my salvation and my",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/62.7"},["span.padWord","Ps."],"62:7"],";"],["li","Lord will give grace and",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/84.11"},["span.padWord","Ps."],"84:11"],";"],["li","Let the saints be joyful in",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/149.5"},["span.padWord","Ps."],"149:5"],";"],["li","crown of",["i","glory"],"shall she deliver:",["a.scriptureRef",{"href":"/scriptures/ot/prov/4.9"},"Prov. 4:9"],";"],["li",["i","glory"],"of children are their fathers:",["a.scriptureRef",{"href":"/scriptures/ot/prov/17.6"},["span.padWord","Prov."],"17:6"],";"],["li",["i","glory"],"of young men is their strength:",["a.scriptureRef",{"href":"/scriptures/ot/prov/20.29"},["span.padWord","Prov."],"20:29"],";"],["li","for men to search their own",["i","glory"],"is not",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/ot/prov/25.27"},["span.padWord","Prov."],"25:27"],";"],["li","earth is full of his",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/ot/isa/6.3"},"Isa. 6:3"],"; (",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/16.3"},"2 Ne. 16:3"],"; )"],["li","my people have changed their",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/ot/jer/2.11"},"Jer. 2:11"],";"],["li","him that glorieth",["i","glory"],"in this:",["a.scriptureRef",{"href":"/scriptures/ot/jer/9.24"},["span.padWord","Jer."],"9:24"],"; (",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/1.31"},"1 Cor. 1:31"],";",["a.scriptureRef",{"href":"/scriptures/nt/2-cor/10.17"},"2 Cor. 10:17"],"; )"]]],["div",{"id":"f3","uri":"/scriptures/tg/glory.f3","order":".000.3964"},["ul.index",["li","kingdoms of the world, and the",["i","glory"],"of them:",["a.scriptureRef",{"href":"/scriptures/nt/matt/4.8"},"Matt. 4:8"],";"],["li","that they may have",["i","glory"],"of men:",["a.scriptureRef",{"href":"/scriptures/nt/matt/6.2"},["span.padWord","Matt."],"6:2"],";"],["li","thine is the kingdom, and the power, and the",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/nt/matt/6.13"},["span.padWord","Matt."],"6:13"],";"],["li","seeketh his own",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/nt/john/7.18"},"John 7:18"],";"],["li","because he gave not God the",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/nt/acts/12.23"},"Acts 12:23"],";"],["li","let no man",["i","glory"],"in men:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/3.21"},"1 Cor. 3:21"],";"],["li","long hair, it is a",["i","glory"],"to her:",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/11.15"},["span.padWord","1 Cor."],"11:15"],";"],["li","one star differeth from another star in",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-cor/15.41"},["span.padWord","1 Cor."],"15:41"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/76.81,98"},"D&C 76:81, 98"],"; )"],["li","not steadfastly behold the face of Moses for the",["i","glory"],"of his countenance:",["a.scriptureRef",{"href":"/scriptures/nt/2-cor/3.7"},"2 Cor. 3:7"],";"],["li","affliction … worketh for us a far more exceeding and eternal weight of",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/nt/2-cor/4.17"},["span.padWord","2 Cor."],"4:17"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/63.66"},"D&C 63:66"],"; )"],["li","whose",["i","glory"],"is in their shame:",["a.scriptureRef",{"href":"/scriptures/nt/philip/3.19"},"Philip. 3:19"],";"],["li","riches of the",["i","glory"],"of this mystery:",["a.scriptureRef",{"href":"/scriptures/nt/col/1.27"},"Col. 1:27"],";"],["li","ye also appear with him in",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/nt/col/3.4"},["span.padWord","Col."],"3:4"],";"],["li","Nor of men sought we",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-thes/2.6"},"1 Thes. 2:6"],";"],["li","received up into",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-tim/3.16"},"1 Tim. 3:16"],";"],["li",["i","glory"],"not, and lie not against the truth:",["a.scriptureRef",{"href":"/scriptures/nt/james/3.14"},"James 3:14"],";"],["li","rejoice with joy unspeakable and full of",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-pet/1.8"},"1 Pet. 1:8"],";"],["li","all the",["i","glory"],"of man as the flower of grass:",["a.scriptureRef",{"href":"/scriptures/nt/1-pet/1.24"},["span.padWord","1 Pet."],"1:24"],";"],["li","a partaker of the",["i","glory"],"that shall be revealed:",["a.scriptureRef",{"href":"/scriptures/nt/1-pet/5.1"},["span.padWord","1 Pet."],"5:1"],";"],["li","shall receive a crown of",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/nt/1-pet/5.4"},["span.padWord","1 Pet."],"5:4"],";"],["li","hath called us unto his eternal",["i","glory"],"by Christ:",["a.scriptureRef",{"href":"/scriptures/nt/1-pet/5.10"},["span.padWord","1 Pet."],"5:10"],";"],["li","him that hath called us to",["i","glory"],"and virtue:",["a.scriptureRef",{"href":"/scriptures/nt/2-pet/1.3"},"2 Pet. 1:3"],";"],["li","he received from God the Father honour and",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/nt/2-pet/1.17"},["span.padWord","2 Pet."],"1:17"],";"],["li","Fear God, and give",["i","glory"],"to him:",["a.scriptureRef",{"href":"/scriptures/nt/rev/14.7"},"Rev. 14:7"],";"]]],["div",{"id":"f4","uri":"/scriptures/tg/glory.f4","order":".000.3965"},["ul.index",["li","I",["i","glory"],"in plainness; I",["i","glory"],"in truth; I",["i","glory"],"in my Jesus:",["a.scriptureRef",{"href":"/scriptures/bofm/2-ne/33.6"},"2 Ne. 33:6"],";"],["li","Lord receiveth them up unto himself, in",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/14.11"},"Alma 14:11"],";"],["li","we will",["i","glory"],"in the Lord:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/26.16"},["span.padWord","Alma"],"26:16"],";"],["li","this is my",["i","glory"],", that perhaps I may be an instrument:",["a.scriptureRef",{"href":"/scriptures/bofm/alma/29.9"},["span.padWord","Alma"],"29:9"],";"],["li","raise me up … to dwell with him in",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/bofm/alma/36.28"},["span.padWord","Alma"],"36:28"],";"],["li","did cry out with one voice, and gave",["i","glory"],"to Jesus:",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/20.9"},"3 Ne. 20:9"],";"]]],["div",{"id":"f5","uri":"/scriptures/tg/glory.f5","order":".000.3966"},["ul.index",["li","you shall dwell with me in",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/6.30"},"D&C 6:30"],";"],["li","that we may get",["i","glory"],"of the world:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/10.19"},["span.padWord","D&C"],"10:19"],";"],["li","soul delight in thy husband, and the",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/25.14"},["span.padWord","D&C"],"25:14"],";"],["li","mine apostles … shall stand … in",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/29.12"},["span.padWord","D&C"],"29:12"],";"],["li",["i","glory"],"which shall follow after much tribulation:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/58.3"},["span.padWord","D&C"],"58:3"],";"],["li","be made partakers of the",["i","glories"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/66.2"},["span.padWord","D&C"],"66:2"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/133.57"},["span.padWord","D&C"],"133:57"],"; )"],["li","faithful … crowned with honor, and",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/75.5"},["span.padWord","D&C"],"75:5"],";"],["li","eternal shall be their",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/76.6"},["span.padWord","D&C"],"76:6"],";"],["li","received of his fulness, and of his",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/76.56"},["span.padWord","D&C"],"76:56"],";"],["li","let no man",["i","glory"],"in man, but rather let him",["i","glory"],"in God:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/76.61"},["span.padWord","D&C"],"76:61"],";"],["li","celestial, whose",["i","glory"],"is that of the sun:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/76.70"},["span.padWord","D&C"],"76:70"],"; (",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/76.92"},["span.padWord","D&C"],"76:92"],"; )"],["li",["i","glory"],"of the celestial kingdom:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.4"},["span.padWord","D&C"],"88:4"],";"],["li","that it may be prepared for the celestial",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.18"},["span.padWord","D&C"],"88:18"],";"],["li",["i","glory"],"by which your bodies are quickened:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.28"},["span.padWord","D&C"],"88:28"],";"],["li","saints shall be filled with his",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/88.107"},["span.padWord","D&C"],"88:107"],";"],["li","knowledge and",["i","glory"],"may dwell upon all the earth:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/101.25"},["span.padWord","D&C"],"101:25"],";"],["li","crowned with celestial",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/101.65"},["span.padWord","D&C"],"101:65"],";"],["li","promised unto you a crown of",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/104.7"},["span.padWord","D&C"],"104:7"],";"],["li","their",["i","glories"],", laws, and set times, shall be revealed:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/121.31"},["span.padWord","D&C"],"121:31"],";"],["li","crown him with blessings and great",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/124.17"},["span.padWord","D&C"],"124:17"],";"],["li","Herein is",["i","glory"],"and honor, and immortality:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/128.12"},["span.padWord","D&C"],"128:12"],";"],["li","same sociality … will be coupled with eternal",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/130.2"},["span.padWord","D&C"],"130:2"],";"],["li","In the celestial",["i","glory"],"there are three heavens:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/131.1"},["span.padWord","D&C"],"131:1"],";"],["li","shall pass … to their exaltation and",["i","glory"],"in all:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/132.19"},["span.padWord","D&C"],"132:19"],";"],["li","I was with Abraham … unto his exaltation and",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/132.57"},["span.padWord","D&C"],"132:57"],";"],["li","fall down and be crowned with",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/133.32"},["span.padWord","D&C"],"133:32"],";"],["li","prepared to receive the",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/136.31"},["span.padWord","D&C"],"136:31"],";"]]],["div",{"id":"f6","uri":"/scriptures/tg/glory.f6","order":".000.3967"},["ul.index",["li","this is my work and my",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/pgp/moses/1.39"},"Moses 1:39"],";"],["li","thy will be done, and the",["i","glory"],"be thine forever:",["a.scriptureRef",{"href":"/scriptures/pgp/moses/4.2"},["span.padWord","Moses"],"4:2"],";"],["li","eternal life in the world to come, even immortal",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/pgp/moses/6.59"},["span.padWord","Moses"],"6:59"],";"],["li","peaceable things of immortal",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/pgp/moses/6.61"},["span.padWord","Moses"],"6:61"],";"],["li","clothed upon with",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/pgp/moses/7.3"},["span.padWord","Moses"],"7:3"],";"],["li","keep their second estate shall have",["i","glory"],"added upon:",["a.scriptureRef",{"href":"/scriptures/pgp/abr/3.26"},"Abr. 3:26"],";"],["li","earth will be renewed and receive its paradisiacal",["i","glory"],":",["a.scriptureRef",{"href":"/scriptures/pgp/a-of-f/1.10"},"A of F 1:10"],";"]]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/pgp/moses/5.33"},"Moses 5:33"]]]],"refs":null}
