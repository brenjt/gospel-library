ch"],", by much prayer:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/26.2"},["span.padWord","D&C"],"26:2"],";"],["li","bishops to be set apart unto the",["i","church"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/68.14"},["span.padWord","D&C"],"68:14"],";"],["li","the",["i","offices"],"of elder and bishop are necessary:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/84.29"},["span.padWord","D&C"],"84:29"],";"],["li","Therefore, let every man stand in his own",["i","office"],":",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/84.109"},["span.padWord","D&C"],"84:109"],";"],["li",["i","officers"],"belonging to my Priesthood:",["a.scriptureRef",{"href":"/scriptures/dc-testament/dc/124.123"},["span.padWord","D&C"],"124:123"],";"]]],["div",{"id":"f6","uri":"/scriptures/tg/church-organization.f6","order":".000.1524"},["ul.index",["li","We believe in the same",["i","organization"],":",["a.scriptureRef",{"href":"/scriptures/pgp/a-of-f/1.6"},"A of F 1:6"],";"]]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/ot/num/27.17"},"Num. 27:17"],";",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/15.12"},"3 Ne. 15:12"],";",["a.scriptureRef",{"href":"/scriptures/bofm/3-ne/19.20"},["span.padWord","3 Ne."],"19:20"]]]],"refs":null}
