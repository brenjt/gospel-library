{"id":2165,"parent_id":0,"book_id":7,"content_id":1,"language_id":1,"display_order":2165,"title":"Oppression, Oppress","subtitle":"","short_title":"Oppression, Oppress","uri":"/scriptures/tg/oppression","content":[["div",{"id":"t1","uri":"/scriptures/tg/oppression.t1","order":".000.7287"},[".title",["b","Oppression, Oppress"]],[".reference","See also",["a.scriptureRef",{"href":"/scriptures/tg/affliction"},"Affliction"],";",["a.scriptureRef",{"href":"/scriptures/tg/cruelty"},"Cruelty"],";",["a.scriptureRef",{"href":"/scriptures/tg/despise"},"Despise"],";",["a.scriptureRef",{"href":"/scriptures/tg/injustice"},"Injustice"],";",["a.scriptureRef",{"href":"/scriptures/tg/persecution"},"Persecution"],";",["a.scriptureRef",{"href":"/scriptures/tg/tribulation"},"Tribulation"]],["div",{"id":"f2","uri":"/scriptures/tg/oppression.f2","order":".000.7288"},["ul.index",["li","I have also seen the",["i","oppression"],"wherewith the Egyptians:",["a.scriptureRef",{"href":"/scriptures/ot/ex/3.9"},"Ex. 3:9"],";"],["li","neither vex a stranger, nor",["i","oppress"],"him:",["a.scriptureRef",{"href":"/scriptures/ot/ex/22.21"},["span.padWord","Ex."],"22:21"],";"],["li","not therefore",["i","oppress"],"one another:",["a.scriptureRef",{"href":"/scriptures/ot/lev/25.17"},"Lev. 25:17"],";"],["li","the heritage of",["i","oppressors"],", which they shall receive of the Almighty:",["a.scriptureRef",{"href":"/scriptures/ot/job/27.13"},"Job 27:13"],";"],["li","Lord also will be a refuge for the",["i","oppressed"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/9.9"},"Ps. 9:9"],";"],["li","shall break in pieces the",["i","oppressor"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/72.4"},["span.padWord","Ps."],"72:4"],";"],["li","executeth judgment for the",["i","oppressed"],":",["a.scriptureRef",{"href":"/scriptures/ot/ps/146.7"},["span.padWord","Ps."],"146:7"],";"],["li","Envy thou not the",["i","oppressor"],":",["a.scriptureRef",{"href":"/scriptures/ot/prov/3.31"},"Prov. 3:31"],";"],["li","He t